<!-- JavaScript pour les fonctionnalités de la FAQ -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Gestion des toggles de la FAQ
    const toggles = document.querySelectorAll('.faq-toggle');
    
    toggles.forEach(toggle => {
        toggle.addEventListener('click', function() {
            const targetId = this.getAttribute('data-target');
            const target = document.getElementById(targetId);
            const icon = this.querySelector('i');
            
            // Fermer tous les autres éléments ouverts
            document.querySelectorAll('.faq-content').forEach(content => {
                if (content.id !== targetId && !content.classList.contains('hidden')) {
                    content.classList.add('hidden');
                    const toggleBtn = document.querySelector(`[data-target="${content.id}"]`);
                    if (toggleBtn) {
                        toggleBtn.querySelector('i').classList.remove('rotate-180');
                    }
                }
            });
            
            // Basculer l'élément actuel
            target.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        });
    });
    
    // Fonction de recherche
    const searchInput = document.querySelector('input[type="text"]');
    if (searchInput) {
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            
            if (searchTerm.length > 2) {
                document.querySelectorAll('.faq-content').forEach(content => {
                    const question = content.previousElementSibling.querySelector('span').textContent.toLowerCase();
                    const answer = content.textContent.toLowerCase();
                    
                    if (question.includes(searchTerm) || answer.includes(searchTerm)) {
                        content.closest('.p-6').style.display = 'block';
                    } else {
                        content.closest('.p-6').style.display = 'none';
                    }
                });
            } else {
                document.querySelectorAll('.p-6').forEach(item => {
                    item.style.display = 'block';
                });
            }
        });
    }
});
</script>

