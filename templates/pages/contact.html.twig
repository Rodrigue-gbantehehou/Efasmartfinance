{% extends 'base.html.twig' %}

{% block title %}Contact - EFA SMART FINANCE{% endblock %}

{% block body %}
<!-- Hero Section -->
<div class="relative bg-green-700 text-white py-16 md:py-24">
    <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Contactez-nous</h1>
        <p class="text-xl text-gray-100 max-w-3xl mx-auto">Notre équipe est là pour vous aider</p>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-12 bg-white transform translate-y-1/2 rounded-t-3xl"></div>
</div>

<!-- Contact Form -->
<div class="container mx-auto px-4 py-16 md:py-24 -mt-12 relative z-10">
    <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="md:flex">
            <!-- Contact Info -->
            <div class="md:w-1/3 bg-gray-50 p-8 md:p-10">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Informations de contact</h2>
                
                <div class="space-y-6">
                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-green-700/10 p-3 rounded-lg text-green-700">
                            <i class="fas fa-map-marker-alt text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="font-medium text-gray-900">Adresse</h3>
                            <p class="mt-1 text-gray-600">123 Avenue de la Tontine<br>75000 Paris, France</p>
                        </div>
                    </div>

                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-green-700/10 p-3 rounded-lg text-green-700">
                            <i class="fas fa-phone-alt text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="font-medium text-gray-900">Téléphone</h3>
                            <p class="mt-1 text-gray-600">+33 1 23 45 67 89</p>
                            <p class="text-sm text-gray-500">Lundi - Vendredi, 8h - 20h</p>
                        </div>
                    </div>

                    <div class="flex items-start">
                        <div class="flex-shrink-0 bg-green-700/10 p-3 rounded-lg text-green-700">
                            <i class="fas fa-envelope text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <h3 class="font-medium text-gray-900">Email</h3>
                            <p class="mt-1 text-gray-600">contact@efasmartfinance.com</p>
                            <p class="text-sm text-gray-500">Réponse sous 24h</p>
                        </div>
                    </div>
                </div>

                <div class="mt-8">
                    <h3 class="text-lg font-medium text-gray-900 mb-4">Suivez-nous</h3>
                    <div class="flex space-x-4">
                        <a href="#" class="text-gray-400 hover:text-green-700 transition-colors">
                            <i class="fab fa-facebook-f text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-green-700 transition-colors">
                            <i class="fab fa-twitter text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-green-700 transition-colors">
                            <i class="fab fa-linkedin-in text-xl"></i>
                        </a>
                        <a href="#" class="text-gray-400 hover:text-green-700 transition-colors">
                            <i class="fab fa-instagram text-xl"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="md:w-2/3 p-8 md:p-10">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Envoyez-nous un message</h2>
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div>
                        {{ form_label(form.name, 'Votre nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.name, {'attr': {
                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent',
                            'placeholder': 'Votre nom complet'
                        }}) }}
                    </div>

                    <div>
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.email, {'attr': {
                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent',
                            'placeholder': 'votre@email.com'
                        }}) }}
                    </div>

                    <div>
                        {{ form_label(form.phone, 'Téléphone (optionnel)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.phone, {'attr': {
                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent',
                            'placeholder': '+33 6 12 34 56 78'
                        }}) }}
                    </div>

                    <div>
                        {{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.subject, {'attr': {
                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent',
                            'placeholder': 'Sujet de votre message'
                        }}) }}
                    </div>

                    <div>
                        {{ form_label(form.message, 'Message', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.message, {'attr': {
                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-700 focus:border-transparent',
                            'rows': '4',
                            'placeholder': 'Décrivez votre demande en détail...'
                        }}) }}
                    </div>

                    <div class="flex items-center">
                        {{ form_widget(form.agreeTerms, {'attr': {
                            'class': 'h-4 w-4 text-green-700 focus:ring-green-700 border-gray-300 rounded'
                        }}) }}
                        <label for="contact_agreeTerms" class="ml-2 block text-sm text-gray-700">
                            J'accepte la <a href="{{ path('app_cgu') }}" class="text-green-700 hover:underline">politique de confidentialité</a>
                        </label>
                    </div>

                    <div>
                        <button type="submit" class="w-full bg-green-700 hover:bg-green-700/90 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
                            <i class="fas fa-paper-plane mr-2"></i> Envoyer le message
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

