{% extends 'base.html.twig' %}

{% block title %}Erreur {{ status_code is defined ? status_code : '500' }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-green-50 to-green-100 flex items-center justify-center p-4">
    <!-- Main Card -->
    <div class="relative w-full max-w-lg">

        <!-- Decorative Elements -->
        <div
            class="absolute -top-10 -right-10 w-32 h-32 bg-yellow-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob">
        </div>
        <div
            class="absolute -bottom-10 -left-10 w-32 h-32 bg-green-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000">
        </div>

        <div
            class="relative bg-white/80 backdrop-blur-lg rounded-3xl shadow-2xl p-8 md:p-12 text-center border border-white/20">
            <!-- Icon -->
            <div class="w-24 h-24 mx-auto mb-8 relative">
                <div class="absolute inset-0 bg-red-100 rounded-full animate-pulse"></div>
                <div
                    class="relative w-full h-full flex items-center justify-center rounded-full bg-gradient-to-br from-red-500 to-red-600 shadow-lg">
                    <i class="fas fa-exclamation-triangle text-4xl text-white"></i>
                </div>
            </div>

            <!-- Error Code -->
            <h1
                class="text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-green-700 to-green-900 mb-2 font-poppins">
                {{ status_code is defined ? status_code : '500' }}
            </h1>

            <!-- Message -->
            <h2 class="text-2xl font-bold text-gray-900 mb-4">
                Une erreur est survenue
            </h2>

            <p class="text-gray-600 mb-8 leading-relaxed">
                {{ (status_text is defined) ? status_text : 'Nous rencontrons un problème technique. Veuillez réessayer ultérieurement.' }}
            </p>

            <!-- Actions -->
            <div class="space-y-3">
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="{{ path('app_home') }}"
                        class="inline-flex items-center justify-center px-6 py-3 rounded-xl bg-green-700 text-white font-semibold shadow-lg shadow-green-200 hover:bg-green-800 hover:shadow-green-300 transition-all duration-300 transform hover:-translate-y-0.5">
                        <i class="fas fa-home mr-2"></i>
                        Retour à l'accueil
                    </a>

                    {% if app.user %}
                    <a href="{{ path('dashboard') }}"
                        class="inline-flex items-center justify-center px-6 py-3 rounded-xl bg-white text-green-700 border-2 border-green-100 font-semibold hover:bg-green-50 hover:border-green-200 transition-all duration-300">
                        <i class="fas fa-columns mr-2"></i>
                        Tableau de bord
                    </a>
                    {% endif %}
                </div>

                <button onclick="window.history.back()"
                    class="text-sm text-gray-6000 hover:text-green-600 transition-colors mt-4 inline-flex items-center">
                    <i class="fas fa-arrow-left mr-1"></i> Réessayer la page précédente
                </button>
            </div>
        </div>

        <!-- Support Footer -->
        <div class="text-center mt-8 text-sm text-gray-6000">
            Besoin d'aide ? <a href="mailto:support@efasmartfinance.com"
                class="text-green-700 font-semibold hover:underline">Contactez le support</a>
        </div>
    </div>
</div>

<style>
    @keyframes blob {
        0% {
            transform: translate(0px, 0px) scale(1);
        }

        33% {
            transform: translate(30px, -50px) scale(1.1);
        }

        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }

        100% {
            transform: translate(0px, 0px) scale(1);
        }
    }

    .animate-blob {
        animation: blob 7s infinite;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }
</style>
{% endblock %}