{% extends 'base.html.twig' %}

{% block title %}Page non trouvée{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-green-50 to-green-100 flex items-center justify-center p-4">
    <div class="relative w-full max-w-2xl">

        <!-- Interactive Background Elements -->
        <div
            class="absolute -top-20 -right-20 w-64 h-64 bg-yellow-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob">
        </div>
        <div
            class="absolute -bottom-20 -left-20 w-64 h-64 bg-green-200 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000">
        </div>

        <div class="relative bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl p-8 md:p-12 border border-white/40">
            <div class="grid md:grid-cols-2 gap-8 items-center">
                <!-- Left Column: Error Info -->
                <div class="text-center md:text-left">
                    <div class="inline-block p-3 rounded-2xl bg-yellow-50 mb-6">
                        <i class="fas fa-compass text-4xl text-yellow-500 animate-pulse-slow"></i>
                    </div>

                    <h1
                        class="text-8xl font-black text-transparent bg-clip-text bg-gradient-to-r from-green-600 to-green-800 font-poppins mb-2">
                        404
                    </h1>
                    <h2 class="text-2xl font-bold text-gray-900 mb-3">
                        Oups ! Page introuvable
                    </h2>
                    <p class="text-gray-600 mb-8 leading-relaxed">
                        Il semblerait que vous ayez perdu votre chemin. La page que vous recherchez n'existe pas ou a
                        été déplacée.
                    </p>

                    <div class="flex flex-col sm:flex-row gap-3 justify-center md:justify-start">
                        <a href="{{ path('app_home') }}"
                            class="inline-flex items-center justify-center px-6 py-3 rounded-xl bg-green-700 text-white font-semibold shadow-lg shadow-green-200 hover:bg-green-800 hover:shadow-green-300 transition-all duration-300 transform hover:-translate-y-0.5">
                            <i class="fas fa-home mr-2"></i>
                            Accueil
                        </a>
                        <button onclick="window.history.back()"
                            class="inline-flex items-center justify-center px-6 py-3 rounded-xl bg-white text-gray-700 border-2 border-gray-100 font-semibold hover:bg-gray-50 hover:border-gray-200 transition-all duration-300">
                            <i class="fas fa-arrow-left mr-2"></i>
                            Retour
                        </button>
                    </div>
                </div>

                <!-- Right Column: Helpful Links -->
                <div class="bg-gradient-to-br from-green-50 to-white p-6 rounded-2xl border border-green-100">
                    <h3 class="text-sm font-bold text-green-800 uppercase tracking-wider mb-4">
                        Liens utiles
                    </h3>
                    <ul class="space-y-3">
                        {% if app.user %}
                        <li>
                            <a href="{{ path('dashboard') }}"
                                class="flex items-center p-3 rounded-xl bg-white hover:bg-green-50 hover:shadow-md transition-all duration-300 group">
                                <div
                                    class="w-10 h-10 rounded-lg bg-green-100 text-green-600 flex items-center justify-center mr-3 group-hover:scale-110 transition-transform">
                                    <i class="fas fa-columns"></i>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Tableau de bord</div>
                                    <div class="text-xs text-gray-600">Gérez vos tontines</div>
                                </div>
                                <i class="fas fa-chevron-right ml-auto text-gray-300 group-hover:text-green-500"></i>
                            </a>
                        </li>
                        {% endif %}

                        <li>
                            <a href="{{ path('app_tontines')|default('#') }}"
                                class="flex items-center p-3 rounded-xl bg-white hover:bg-green-50 hover:shadow-md transition-all duration-300 group">
                                <div
                                    class="w-10 h-10 rounded-lg bg-yellow-100 text-yellow-600 flex items-center justify-center mr-3 group-hover:scale-110 transition-transform">
                                    <i class="fas fa-piggy-bank"></i>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Mes Tontines</div>
                                    <div class="text-xs text-gray-600">Voir vos investissements</div>
                                </div>
                                <i class="fas fa-chevron-right ml-auto text-gray-300 group-hover:text-green-500"></i>
                            </a>
                        </li>

                        <li>
                            <a href="mailto:support@efasmartfinance.com"
                                class="flex items-center p-3 rounded-xl bg-white hover:bg-green-50 hover:shadow-md transition-all duration-300 group">
                                <div
                                    class="w-10 h-10 rounded-lg bg-green-100 text-green-600 flex items-center justify-center mr-3 group-hover:scale-110 transition-transform">
                                    <i class="fas fa-headset"></i>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">Support</div>
                                    <div class="text-xs text-gray-600">En cas de problème</div>
                                </div>
                                <i class="fas fa-chevron-right ml-auto text-gray-300 group-hover:text-green-500"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="text-center mt-8 text-sm text-gray-600">
            &copy; {{ "now"|date("Y") }} EFA Smart Finance. Tous droits réservés.
        </div>
    </div>
</div>

<style>
    @keyframes blob {
        0% {
            transform: translate(0px, 0px) scale(1);
        }

        33% {
            transform: translate(30px, -50px) scale(1.1);
        }

        66% {
            transform: translate(-20px, 20px) scale(0.9);
        }

        100% {
            transform: translate(0px, 0px) scale(1);
        }
    }

    .animate-blob {
        animation: blob 7s infinite;
    }

    .animation-delay-2000 {
        animation-delay: 2s;
    }

    .animate-pulse-slow {
        animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
</style>
{% endblock %}