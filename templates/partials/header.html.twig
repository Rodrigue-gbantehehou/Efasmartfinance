<script>
document.addEventListener('DOMContentLoaded', function() {
    const mobileMenu = document.getElementById('mobileMenu');
    const mobileMenuOverlay = document.getElementById('mobileMenuOverlay');
    const openMenuBtn = document.getElementById('openMobileMenu');
    const closeMenuBtn = document.getElementById('closeMobileMenu');
    
    // Fonction pour ouvrir le menu
    window.openMobileMenu = function() {
        if (mobileMenu && mobileMenuOverlay) {
            // Afficher l'overlay
            mobileMenuOverlay.classList.remove('hidden');
            
            // Ouvrir le menu
            mobileMenu.classList.remove('translate-x-full');
            
            // Mettre à jour les attributs ARIA
            mobileMenu.setAttribute('aria-hidden', 'false');
            mobileMenuOverlay.setAttribute('aria-hidden', 'false');
            if (openMenuBtn) openMenuBtn.setAttribute('aria-expanded', 'true');
            
            // Bloquer le scroll du body
            document.body.style.overflow = 'hidden';
        }
    };
    
    // Fonction pour fermer le menu
    window.closeMobileMenu = function() {
        if (mobileMenu && mobileMenuOverlay) {
            // Fermer le menu
            mobileMenu.classList.add('translate-x-full');
            
            // Cacher l'overlay
            mobileMenuOverlay.classList.add('hidden');
            
            // Mettre à jour les attributs ARIA
            mobileMenu.setAttribute('aria-hidden', 'true');
            mobileMenuOverlay.setAttribute('aria-hidden', 'true');
            if (openMenuBtn) openMenuBtn.setAttribute('aria-expanded', 'false');
            
            // Rétablir le scroll du body
            document.body.style.overflow = '';
        }
    };
    
    // Ouvrir le menu
    if (openMenuBtn) {
        openMenuBtn.addEventListener('click', window.openMobileMenu);
    }
    
    // Fermer le menu
    if (closeMenuBtn) {
        closeMenuBtn.addEventListener('click', window.closeMobileMenu);
    }
    
    // Fermer en cliquant sur l'overlay
    if (mobileMenuOverlay) {
        mobileMenuOverlay.addEventListener('click', window.closeMobileMenu);
    }
    
    // Fermer avec la touche ESC
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            window.closeMobileMenu();
        }
    });
    
    // Smooth scroll pour les ancres internes
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
            const href = this.getAttribute('href');
            if (href !== '#' && href.startsWith('#')) {
                e.preventDefault();
                const target = document.querySelector(href);
                if (target) {
                    // Fermer le menu mobile
                    window.closeMobileMenu();
                    
                    // Scroll smooth vers la cible
                    setTimeout(() => {
                        window.scrollTo({
                            top: target.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }, 300);
                }
            }
        });
    });
});
</script>

