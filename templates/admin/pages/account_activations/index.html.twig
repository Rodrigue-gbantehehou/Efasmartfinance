{% extends 'admin/base.html.twig' %}

{% block title %}Activations | Efa Smart Finance{% endblock %}

{% block contentadmin %}
<div class="p-6 font-poppins">
    <!-- Header with Stats -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 gap-4">
        <div>
            <h1 class="text-3xl font-bold text-pro-green-900">Demandes d'activation</h1>
            <p class="text-gray-600 mt-1">Gérez les vérifications d'identité en attente</p>
        </div>
        
        <div class="flex items-center gap-4">
            <div class="bg-white px-6 py-3 rounded-2xl shadow-sm border border-pro-green-100 flex items-center gap-4 transition-all hover:shadow-md">
                <div class="w-12 h-12 rounded-full bg-pro-green-100 flex items-center justify-center text-pro-green-600">
                    <i class="fas fa-clock text-xl"></i>
                </div>
                <div>
                    <div class="text-2xl font-bold text-pro-green-900">{{ activations|length }}</div>
                    <div class="text-xs text-gray-600 uppercase tracking-wider font-semibold">En attente</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-3xl shadow-xl shadow-pro-green-900/5 overflow-hidden border border-pro-green-50">
        <div class="p-4 border-b border-pro-green-50 bg-pro-green-50/30 flex items-center justify-between backdrop-blur-sm">
            <div class="flex items-center gap-3">
                <i class="fas fa-list text-pro-green-600"></i>
                <span class="font-semibold text-pro-green-900">Liste des demandes</span>
            </div>
        </div>

        {% if activations|length > 0 %}
            <div class="overflow-x-auto">
                <table id="activationsTable" class="min-w-full divide-y divide-pro-green-50">
                    <thead>
                        <tr class="bg-pro-green-50/20">
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-pro-green-900 uppercase tracking-widest">Utilisateur</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-pro-green-900 uppercase tracking-widest">Contact</th>
                            <th scope="col" class="px-6 py-4 text-left text-xs font-bold text-pro-green-900 uppercase tracking-widest">Date Soumission</th>
                            <th scope="col" class="px-6 py-4 text-center text-xs font-bold text-pro-green-900 uppercase tracking-widest">Selfie</th>
                            <th scope="col" class="px-6 py-4 text-right text-xs font-bold text-pro-green-900 uppercase tracking-widest">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-pro-green-50">
                        {% for verification in activations %}
                            {% set user = verification.user %}
                            <tr class="group hover:bg-pro-green-50/40 transition-all duration-300">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-11 w-11 rounded-xl bg-gradient-to-br from-pro-green-500 to-pro-green-700 flex items-center justify-center text-white font-bold shadow-lg shadow-pro-green-500/20">
                                            {{ user.firstname|first }}{{ user.lastname|first }}
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm font-bold text-pro-green-900 group-hover:text-pro-green-600 transition-colors">{{ user.firstname }} {{ user.lastname }}</div>
                                            <div class="text-xs text-gray-600">ID: #{{ user.id }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-700 font-medium">{{ user.email }}</div>
                                    <div class="text-xs text-gray-600 flex items-center gap-1">
                                        <i class="fas fa-phone-alt text-[10px]"></i>
                                        {{ user.phoneNumber|default('Non renseigné') }}
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex flex-col">
                                        <span class="text-sm text-gray-700 font-medium">{{ verification.submittedAt|date('d M Y') }}</span>
                                        <span class="text-xs text-pro-green-600 font-semibold">{{ verification.submittedAt|date('H:i') }}</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-center">
                                    {% if verification.selfie %}
                                        <div class="relative inline-block group/selfie">
                                            {% set selfieParts = verification.selfie|replace({'/uploads/': '', 'uploads/': ''})|split('/') %}
                                            {% set selfieUrl = path('admin_media_serve', {type: selfieParts[0], filename: selfieParts[1]}) %}
                                            <img src="{{ selfieUrl }}" 
                                                 alt="Selfie" 
                                                 class="h-12 w-12 rounded-xl object-cover ring-2 ring-white shadow-md cursor-pointer transition-transform hover:scale-110 selfie-preview-trigger"
                                                 data-src="{{ selfieUrl }}"
                                                 data-title="Selfie de {{ user.firstname }}">
                                            <div class="absolute -top-1 -right-1 h-4 w-4 bg-pro-gold-500 rounded-full flex items-center justify-center border-2 border-white shadow-sm">
                                                <i class="fas fa-search text-[8px] text-white"></i>
                                            </div>
                                        </div>
                                    {% else %}
                                        <span class="text-xs text-gray-300 italic">Aucun selfie</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right">
                                    <div class="flex justify-end gap-2">
                                        <a href="{{ path('admin_activation_show', {'id': verification.id}) }}" 
                                           class="w-10 h-10 flex items-center justify-center rounded-xl bg-pro-green-50 text-pro-green-600 hover:bg-pro-green-600 hover:text-white transition-all shadow-sm"
                                           title="Détails complets">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        
                                        <form method="post" action="{{ path('admin_approve_activation', {'id': verification.id}) }}" class="inline" onsubmit="return confirm('Approuver ce compte ?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ user.id) }}">
                                            <button type="submit" class="w-10 h-10 flex items-center justify-center rounded-xl bg-emerald-50 text-emerald-600 hover:bg-emerald-600 hover:text-white transition-all shadow-sm group/btn">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                        
                                        <a href="{{ path('admin_activation_show', {'id': verification.id}) }}#reject-section" 
                                           class="w-10 h-10 flex items-center justify-center rounded-xl bg-rose-50 text-rose-600 hover:bg-rose-600 hover:text-white transition-all shadow-sm group/btn">
                                            <i class="fas fa-times"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-20 bg-gradient-to-b from-pro-green-50/20 to-white">
                <div class="w-24 h-24 bg-pro-green-50 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-check-double text-4xl text-pro-green-300"></i>
                </div>
                <h3 class="text-xl font-bold text-pro-green-900">Tout est à jour !</h3>
                <p class="text-gray-600 mt-2">Aucune nouvelle demande d'activation en attente.</p>
            </div>
        {% endif %}
    </div>
</div>

<!-- Preview Modal -->
<div id="previewModal" class="fixed inset-0 z-[100] hidden overflow-hidden transition-opacity duration-300 pointer-events-none" style="background: rgba(6, 78, 59, 0.4); backdrop-filter: blur(8px);">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-[2rem] shadow-2xl max-w-lg w-full transform transition-all scale-90 opacity-0 duration-300 pointer-events-auto overflow-hidden border border-pro-green-100" id="modalContent">
            <div class="p-6 flex items-center justify-between border-b border-pro-green-50">
                <h3 class="font-bold text-pro-green-900" id="modalTitle">Aperçu du Selfie</h3>
                <button onclick="closePreview()" class="w-8 h-8 flex items-center justify-center rounded-full hover:bg-pro-green-50 text-gray-600 hover:text-pro-green-600 transition-colors">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="p-4 bg-pro-green-50/50">
                <div class="rounded-2xl overflow-hidden shadow-inner bg-pro-green-100">
                    <img id="previewImage" src="" alt="Aperçu" class="w-full h-auto max-h-[70vh] object-contain">
                </div>
            </div>
            <div class="p-6 text-center">
                <button onclick="closePreview()" class="px-8 py-3 bg-pro-green-600 text-white rounded-xl font-bold hover:bg-pro-green-700 transition-all shadow-lg shadow-pro-green-600/20">
                    Fermer l'aperçu
                </button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <style>
        .dataTables_wrapper .dataTables_filter input {
            border-radius: 1rem;
            border: 1px solid #d1fae5;
            padding: 0.5rem 1rem;
            margin-left: 0.5rem;
            outline: none;
            transition: all 0.3s;
        }
        .dataTables_wrapper .dataTables_filter input:focus {
            box-shadow: 0 0 0 2px #10b981;
            border-color: #10b981;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: #059669 !important;
            border-color: #059669 !important;
            color: white !important;
            border-radius: 0.5rem;
        }
        .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
            background: #ecfdf5 !important;
            border-color: #10b981 !important;
            color: #059669 !important;
            border-radius: 0.5rem;
        }
    </style>
    <script>
        $(document).ready(function() {
            if ($('#activationsTable').length) {
                $('#activationsTable').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json"
                    },
                    "order": [[2, "desc"]],
                    "pageLength": 10,
                    "drawCallback": function() {
                        $('.dataTables_paginate').addClass('mt-4');
                    }
                });
            }

            $('.selfie-preview-trigger').on('click', function() {
                const src = $(this).data('src');
                const title = $(this).data('title');
                openPreview(src, title);
            });
        });

        function openPreview(src, title) {
            const modal = document.getElementById('previewModal');
            const content = document.getElementById('modalContent');
            const img = document.getElementById('previewImage');
            const titleEl = document.getElementById('modalTitle');

            img.src = src;
            titleEl.textContent = title;
            
            modal.classList.remove('hidden', 'opacity-0');
            modal.style.opacity = '1';
            modal.style.pointerEvents = 'auto';
            
            setTimeout(() => {
                content.classList.remove('scale-90', 'opacity-0');
                content.classList.add('scale-100', 'opacity-100');
            }, 10);
            
            document.body.style.overflow = 'hidden';
        }

        function closePreview() {
            const modal = document.getElementById('previewModal');
            const content = document.getElementById('modalContent');
            
            content.classList.remove('scale-100', 'opacity-100');
            content.classList.add('scale-90', 'opacity-0');
            
            setTimeout(() => {
                modal.classList.add('hidden', 'opacity-0');
                modal.style.opacity = '0';
                modal.style.pointerEvents = 'none';
                document.body.style.overflow = '';
            }, 300);
        }

        // Close on clicking outside
        document.getElementById('previewModal').addEventListener('click', function(e) {
            if (e.target === this) closePreview();
        });
    </script>
{% endblock %}
