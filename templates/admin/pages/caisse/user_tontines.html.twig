{% extends 'admin/base.html.twig' %}

{% block title %}Caisse — Tontines de {{ user.fullName }}{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50 p-6 text-gray-900">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Breadcrumb / Header -->
        <div class="flex items-center justify-between">
            <a href="{{ path('admin_caisse_index') }}" class="flex items-center gap-2 text-sm font-bold text-gray-400 hover:text-emerald-600 transition-colors uppercase tracking-widest">
                <i class="fas fa-arrow-left"></i> Retour recherche
            </a>
            <div class="text-right">
                <h4 class="text-xs font-black text-gray-400 uppercase tracking-widest">Client</h4>
                <p class="text-lg font-bold text-gray-900">{{ user.fullName }}</p>
                <p class="text-xs text-gray-500">{{ user.phoneNumber }}</p>
            </div>
        </div>

        <div class="bg-white rounded-[2.5rem] border border-gray-100 overflow-hidden shadow-sm">
            <div class="px-8 py-6 border-b border-gray-50 flex items-center justify-between bg-gray-50/50">
                <h3 class="text-sm font-bold font-poppins text-gray-900 uppercase tracking-widest">Tontines Actives</h3>
                <span class="px-3 py-1 bg-emerald-100 text-emerald-600 text-[10px] font-black rounded-full uppercase">{{ tontines|length }} Trouvées</span>
            </div>

            <div class="divide-y divide-gray-50">
                {% for tontine in tontines %}
                <div class="p-8 flex flex-col md:flex-row md:items-center justify-between gap-6 hover:bg-gray-50/50 transition-colors group">
                    <div class="flex items-center gap-5">
                        <div class="w-14 h-14 rounded-2xl bg-emerald-50 text-emerald-600 flex items-center justify-center text-xl shadow-inner group-hover:bg-emerald-600 group-hover:text-white transition-all">
                            <i class="fas fa-piggy-bank"></i>
                        </div>
                        <div class="space-y-1">
                            <h4 class="text-lg font-bold text-gray-900">{{ tontine.name }}</h4>
                            <div class="flex items-center gap-3">
                                <span class="text-[10px] font-black text-gray-400 uppercase tracking-wider bg-gray-100 px-2 py-0.5 rounded">Code: {{ tontine.tontineCode }}</span>
                                <span class="text-[10px] font-bold text-emerald-600 uppercase">{{ tontine.amountPerPoint|number_format(0, ',', ' ') }} FCFA / {{ tontine.frequency }}</span>
                                {% if tontine.fraisPreleves %}
                                <span class="text-[10px] font-black text-emerald-500 bg-emerald-50 px-2 py-0.5 rounded uppercase border border-emerald-100"><i class="fas fa-check-circle mr-1"></i> Frais payés</span>
                                {% else %}
                                <span class="text-[10px] font-black text-amber-500 bg-amber-50 px-2 py-0.5 rounded uppercase border border-amber-100"><i class="fas fa-exclamation-circle mr-1"></i> Frais à régler</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="flex items-center gap-4">
                        <div class="text-right hidden sm:block mr-4">
                            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest">Progression</p>
                            <p class="text-sm font-bold text-gray-900">{{ tontine.paidPoints }} / {{ tontine.totalPoints }} Points</p>
                        </div>
                        <div class="flex gap-2">
                            {% if not tontine.fraisPreleves %}
                            <a href="{{ path('admin_caisse_fee_form', {'id': tontine.id}) }}" 
                                class="px-4 py-3 bg-amber-600 text-white rounded-xl text-xs font-black uppercase tracking-widest hover:bg-amber-700 transition-all shadow-lg shadow-amber-200">
                                <i class="fas fa-receipt mr-1"></i> Frais
                            </a>
                            {% endif %}
                            <a href="{{ path('admin_caisse_payment_form', {'id': tontine.id}) }}" 
                                class="px-6 py-3 bg-gray-900 text-white rounded-xl text-xs font-black uppercase tracking-widest hover:bg-emerald-600 transition-all shadow-lg shadow-gray-200">
                                Encaisser <i class="fas fa-plus ml-2 text-[10px]"></i>
                            </a>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="py-20 text-center">
                    <div class="w-20 h-20 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-6">
                        <i class="fas fa-folder-open text-3xl text-gray-200"></i>
                    </div>
                    <p class="text-sm font-bold text-gray-400 uppercase tracking-widest">Aucune tontine active pour ce client</p>
                    <a href="{{ path('admin_caisse_index') }}" class="mt-6 inline-block text-emerald-600 font-bold text-sm">Retourner à la recherche</a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
