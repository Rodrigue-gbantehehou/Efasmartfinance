{% extends 'admin/base.html.twig' %}

{% block title %}Caisse — Règlement des Frais{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50 p-6 text-gray-900">
    <div class="max-w-2xl mx-auto space-y-8">
        <!-- Header -->
        <div class="flex items-center justify-between">
            <a href="{{ path('admin_caisse_user_tontines', {'id': user.id}) }}" class="flex items-center gap-2 text-sm font-bold text-gray-400 hover:text-emerald-600 transition-colors uppercase tracking-widest">
                <i class="fas fa-arrow-left"></i> Choix tontine
            </a>
            <div class="text-right">
                <h4 class="text-xs font-black text-gray-400 uppercase tracking-widest">Règlement des Frais</h4>
                <p class="text-lg font-bold text-gray-900">{{ user.fullName }}</p>
            </div>
        </div>

        <div class="bg-white rounded-[2.5rem] border border-gray-100 overflow-hidden shadow-2xl">
            <!-- Recap Tontine -->
            <div class="p-8 bg-amber-600 text-white relative overflow-hidden">
                <div class="relative z-10 flex flex-col md:flex-row md:items-center justify-between gap-6">
                    <div class="space-y-1">
                        <span class="text-[10px] font-black text-amber-200 uppercase tracking-widest">Tontine sélectionnée</span>
                        <h2 class="text-2xl font-bold font-poppins">{{ tontine.name }}</h2>
                        <p class="text-xs text-amber-100">ID: {{ tontine.tontineCode }} | {{ tontine.frequency|capitalize }}</p>
                    </div>
                    <div class="text-right">
                        <p class="text-xs font-bold text-amber-200 uppercase">Montant des Frais</p>
                        <p class="text-2xl font-black text-white">{{ totalFee|number_format(0, ',', ' ') }} <span class="text-xs font-semibold">FCFA</span></p>
                    </div>
                </div>
                <!-- Decorative elements -->
                <div class="absolute -right-10 -top-10 w-40 h-40 bg-white/10 rounded-full blur-3xl"></div>
                <div class="absolute left-1/2 top-0 -translate-x-1/2 w-full h-full opacity-10 pointer-events-none">
                    <i class="fas fa-file-invoice text-9xl"></i>
                </div>
            </div>

            <!-- Formulaire -->
            <form action="{{ path('admin_caisse_process_fees', {'id': tontine.id}) }}" method="POST" class="p-10 space-y-8">
                <div class="space-y-4">
                    <label class="block text-xs font-black text-gray-400 uppercase tracking-widest ml-1">Montant Encaissé (en espèces)</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-6 flex items-center pointer-events-none">
                            <i class="fas fa-receipt text-amber-500"></i>
                        </div>
                        <input type="number" name="amount" required readonly
                            class="block w-full pl-14 pr-20 py-5 bg-gray-50 border-0 rounded-2xl text-2xl font-bold text-gray-900 focus:ring-0 transition-all font-poppins cursor-not-allowed" 
                            value="{{ totalFee }}">
                        <div class="absolute inset-y-0 right-0 pr-6 flex items-center pointer-events-none">
                            <span class="font-black text-gray-400">FCFA</span>
                        </div>
                    </div>
                    <p class="text-[10px] text-gray-400 italic ml-1">Le montant des frais de service est calculé automatiquement et ne peut être modifié.</p>
                </div>

                <div class="bg-blue-50 rounded-2xl p-6 border border-blue-100">
                    <div class="flex gap-4">
                        <div class="w-10 h-10 rounded-xl bg-blue-100 text-blue-600 flex items-center justify-center shrink-0">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <div class="space-y-1">
                            <p class="text-xs font-bold text-blue-900 uppercase tracking-wide">Facturation</p>
                            <p class="text-xs text-blue-700 leading-relaxed">Une facture officielle sera générée et pourra être téléchargée après la validation de l'encaissement.</p>
                        </div>
                    </div>
                </div>

                <div class="flex items-center gap-4 pt-4">
                    <button type="submit" class="flex-1 py-5 bg-gray-900 text-white rounded-[1.5rem] text-sm font-black uppercase tracking-widest hover:bg-amber-600 transition-all shadow-xl shadow-gray-200">
                        Confirmer l'Encaissement des Frais <i class="fas fa-check-circle ml-2"></i>
                    </button>
                    <a href="{{ path('admin_caisse_user_tontines', {'id': user.id}) }}" class="px-8 py-5 bg-gray-100 text-gray-400 rounded-[1.5rem] text-sm font-bold uppercase tracking-widest hover:bg-gray-200 transition-all text-center">
                        Annuler
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
