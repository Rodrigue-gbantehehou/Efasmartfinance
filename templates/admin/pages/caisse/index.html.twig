{% extends 'admin/base.html.twig' %}

{% block title %}Caisse — Recherche Client{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50 p-6">
    <div class="max-w-4xl mx-auto space-y-8">
        <!-- Header -->
        <div class="text-center space-y-2">
            <h1 class="text-3xl font-bold font-poppins text-gray-900">Guichet de Paiement</h1>
            <p class="text-gray-500">Recherchez un client par téléphone, email ou nom pour enregistrer un versement.</p>
        </div>

        <!-- Barre de Recherche -->
        <div class="relative max-w-2xl mx-auto">
            <div class="absolute inset-y-0 left-0 pl-6 flex items-center pointer-events-none">
                <i class="fas fa-search text-emerald-500"></i>
            </div>
            <input type="text" id="userQuery" 
                class="block w-full pl-14 pr-4 py-6 bg-white border-0 rounded-[2rem] shadow-xl shadow-emerald-500/5 text-gray-900 text-lg focus:ring-2 focus:ring-emerald-500 transition-all font-poppins" 
                placeholder="Entrez le numéro, l'email ou le nom...">
            
            <!-- Résultats de recherche -->
            <div id="searchResults" class="absolute z-20 w-full mt-4 bg-white rounded-3xl shadow-2xl border border-gray-100 overflow-hidden hidden">
                <div class="p-4 text-xs font-black text-gray-400 uppercase tracking-widest border-b border-gray-50">Résultats correspondants</div>
                <div id="resultsList" class="divide-y divide-gray-50 max-h-[400px] overflow-y-auto">
                    <!-- Les résultats seront injectés ici -->
                </div>
            </div>
        </div>

        <!-- Guide rapide -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12">
            <div class="bg-white p-6 rounded-3xl border border-gray-50 text-center space-y-3">
                <div class="w-12 h-12 bg-emerald-50 text-emerald-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-search"></i>
                </div>
                <h3 class="font-bold text-gray-900">1. Rechercher</h3>
                <p class="text-xs text-gray-400">Trouvez le client instantanément</p>
            </div>
            <div class="bg-white p-6 rounded-3xl border border-gray-50 text-center space-y-3">
                <div class="w-12 h-12 bg-emerald-50 text-emerald-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-list-check"></i>
                </div>
                <h3 class="font-bold text-gray-900">2. Choisir</h3>
                <p class="text-xs text-gray-400">Sélectionnez la tontine à créditer</p>
            </div>
            <div class="bg-white p-6 rounded-3xl border border-gray-50 text-center space-y-3">
                <div class="w-12 h-12 bg-emerald-50 text-emerald-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                    <i class="fas fa-receipt"></i>
                </div>
                <h3 class="font-bold text-gray-900">3. Encaisser</h3>
                <p class="text-xs text-gray-400">Saisissez le montant et validez</p>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const input = document.getElementById('userQuery');
    const results = document.getElementById('searchResults');
    const resultsList = document.getElementById('resultsList');
    let debounceTimer;

    input.addEventListener('input', function() {
        clearTimeout(debounceTimer);
        const query = this.value.trim();

        if (query.length < 2) {
            results.classList.add('hidden');
            return;
        }

        debounceTimer = setTimeout(() => {
            fetch(`{{ path('admin_caisse_search_users') }}?q=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(data => {
                    resultsList.innerHTML = '';
                    if (data.length > 0) {
                        data.forEach(user => {
                            const div = document.createElement('div');
                            div.className = 'p-5 hover:bg-emerald-50 cursor-pointer transition-colors group';
                            div.innerHTML = `
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="font-bold text-gray-900 group-hover:text-emerald-700">${user.fullName}</p>
                                        <p class="text-xs text-gray-500">${user.phone || 'Pas de numéro'}</p>
                                    </div>
                                    <i class="fas fa-chevron-right text-gray-300 group-hover:text-emerald-500 transition-colors"></i>
                                </div>
                            `;
                            div.onclick = () => {
                                window.location.href = `/admin/caisse/user/${user.id}/tontines`;
                            };
                            resultsList.appendChild(div);
                        });
                        results.classList.remove('hidden');
                    } else {
                        resultsList.innerHTML = '<div class="p-8 text-center text-gray-400 text-sm">Aucun client trouvé</div>';
                        results.classList.remove('hidden');
                    }
                });
        }, 300);
    });

    // Fermer les résultats si on clique ailleurs
    document.addEventListener('click', function(e) {
        if (!input.contains(e.target) && !results.contains(e.target)) {
            results.classList.add('hidden');
        }
    });
});
</script>
{% endblock %}
