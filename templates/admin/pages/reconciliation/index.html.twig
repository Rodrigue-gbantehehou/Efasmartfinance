{% extends 'admin/base.html.twig' %}

{% block title %}Vérification de Cohérence — Efa Smart Finance{% endblock %}

{% block contentadmin %}
<div class="p-6">
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Vérification de Cohérence</h1>
            <p class="text-slate-500 mt-1">Comparaison entre les soldes des tontines et le cumul des transactions
                réelles.</p>
        </div>
        <div
            class="px-4 py-2 bg-red-50 text-red-700 rounded-full text-xs font-bold border border-red-100 flex items-center gap-2">
            <i class="fas fa-shield-alt"></i>
            Super Admin Only
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        <div class="bg-white p-6 rounded-3xl border border-gray-100 shadow-sm transition-all hover:shadow-md">
            <div class="text-xs font-bold text-slate-400 uppercase tracking-widest mb-1">Tontines Analysées</div>
            <div class="text-3xl font-black text-slate-900">{{ stats.total }}</div>
        </div>
        <div class="bg-white p-6 rounded-3xl border border-gray-100 shadow-sm transition-all hover:shadow-md">
            <div class="text-xs font-bold text-green-500 uppercase tracking-widest mb-1">Cohérentes</div>
            <div class="text-3xl font-black text-green-600">{{ stats.healthy }}</div>
        </div>
        <div class="bg-white p-6 rounded-3xl border border-gray-100 shadow-sm transition-all hover:shadow-md">
            <div class="text-xs font-bold text-red-500 uppercase tracking-widest mb-1">Anomalies</div>
            <div class="text-3xl font-black text-red-600">{{ stats.anomalies }}</div>
        </div>
    </div>

    {% if anomalies is empty %}
    <div class="p-10 bg-green-50 border border-green-100 rounded-3xl text-center">
        <div class="h-16 w-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-check-circle text-3xl"></i>
        </div>
        <h3 class="text-xl font-bold text-green-900">Tout est en ordre !</h3>
        <p class="text-green-700 mt-2">Toutes les tontines sont parfaitement synchronisées avec leurs transactions.</p>
    </div>
    {% else %}
    <div class="bg-white rounded-3xl border border-gray-100 shadow-sm overflow-hidden animate-fade-in-up">
        <div class="p-6 border-b border-gray-50 flex justify-between items-center bg-red-50/30">
            <h3 class="font-bold text-red-900 flex items-center gap-2">
                <i class="fas fa-exclamation-triangle"></i>
                Détail des Anomalies Détectées
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50/50">
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Tontine</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider text-right">Epargne (Pot)</th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider text-right">Frais Service</th>
                        <th class="px-6 py-4 text-xs font-bold text-red-500 uppercase tracking-wider text-right">Statut
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    {% for anomaly in anomalies %}
                    <tr class="hover:bg-gray-50/30 transition-colors">
                        <td class="px-6 py-4">
                            <div class="font-bold text-slate-900">{{ anomaly.tontine.name }}</div>
                            <div class="text-[10px] text-slate-400 font-mono">{{ anomaly.tontine.tontineCode }}</div>
                        </td>
                        <td class="px-6 py-4 text-right font-semibold text-slate-700">
                            <div class="text-[10px] text-slate-400">En base (Net): {{ anomaly.totalPay|number_format(0, ',', ' ') }}</div>
                            <div class="{% if anomaly.diffPot|abs > 0.1 %}text-red-600{% else %}text-green-600{% endif %}">
                                Calculé: {{ anomaly.potTransactionSum|number_format(0, ',', ' ') }}
                            </div>
                        </td>
                        <td class="px-6 py-4 text-right font-semibold text-slate-700">
                            <div class="text-[10px] text-slate-400">En base: {{ anomaly.paidFees|number_format(0, ',', ' ') }}</div>
                            <div class="{% if anomaly.diffFees|abs > 0.1 %}text-red-600{% else %}text-green-600{% endif %}">
                                Calculé: {{ anomaly.feeTransactionSum|number_format(0, ',', ' ') }}
                            </div>
                        </td>
                        <td class="px-6 py-4 text-right">
                            {% if anomaly.diffPot|abs > 0.1 %}
                                <span class="px-2 py-1 bg-red-100 text-red-700 rounded-full text-[10px] font-bold block mb-1">
                                    Écart Pot
                                </span>
                            {% endif %}
                            {% if anomaly.diffFees|abs > 0.1 %}
                                <span class="px-2 py-1 bg-orange-100 text-orange-700 rounded-full text-[10px] font-bold block">
                                    Écart Frais
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <a href="{{ path('admin_reconciliation_show', {id: anomaly.tontine.id}) }}"
                                class="text-blue-500 hover:text-blue-700 font-bold text-sm">
                                Examiner <i class="fas fa-arrow-right ml-1"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}