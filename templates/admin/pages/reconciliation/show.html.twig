{% extends 'admin/base.html.twig' %}

{% block title %}Examen : {{ tontine.name }} — Efa Smart Finance{% endblock %}

{% block contentadmin %}
<div class="p-6">
    <div class="mb-8 flex items-center gap-4">
        <a href="{{ path('admin_reconciliation_index') }}"
            class="h-10 w-10 bg-white border border-gray-100 rounded-full flex items-center justify-center text-slate-400 hover:text-slate-600 shadow-sm transition-all hover:shadow-md">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div class="flex-1">
            <h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Analyse de Traçabilité</h1>
            <p class="text-slate-500 mt-1">{{ tontine.name }} ({{ tontine.tontineCode }})</p>
        </div>
        {% if diffPot|abs > 0.1 or diffFees|abs > 0.1 %}
        <form action="{{ path('admin_reconciliation_sync', {id: tontine.id}) }}" method="POST" onsubmit="return confirm('Attention : Cette action va synchroniser le solde et les frais de la tontine avec l\'historique des transactions. Continuer ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('sync' ~ tontine.id) }}">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-2xl font-bold shadow-lg shadow-blue-200 transition-all flex items-center gap-2">
                <i class="fas fa-sync-alt"></i>
                Réparer / Synchroniser
            </button>
        </form>
        {% endif %}
    </div>

    <!-- Comparison Summary -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-10">
        <!-- Pot Analysis -->
        <div class="bg-white p-6 rounded-3xl border {{ diffPot|abs < 0.1 ? 'border-green-100' : 'border-red-100' }} shadow-sm">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <div class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Analyse du Pot (Net)</div>
                    <div class="text-2xl font-black text-slate-900">{{ totalPay|number_format(0, ',', ' ') }} F</div>
                </div>
                <div class="px-3 py-1 rounded-full text-[10px] font-bold {{ diffPot|abs < 0.1 ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }}">
                    {{ diffPot|abs < 0.1 ? 'COHÉRENT' : 'ÉCART : ' ~ diffPot|number_format(0, ',', ' ') ~ ' F' }}
                </div>
            </div>
            <div class="w-full bg-gray-100 h-1.5 rounded-full overflow-hidden">
                <div class="bg-blue-500 h-full" style="width: {{ totalPay > 0 ? min(potTransactions / totalPay * 100, 100) : 0 }}%"></div>
            </div>
            <div class="mt-2 text-[10px] text-slate-400">Somme des transactions nettes : {{ potTransactions|number_format(0, ',', ' ') }} F</div>
        </div>

        <!-- Fees Analysis -->
        <div class="bg-white p-6 rounded-3xl border {{ diffFees|abs < 0.1 ? 'border-green-100' : 'border-orange-100' }} shadow-sm">
            <div class="flex justify-between items-start mb-4">
                <div>
                    <div class="text-[10px] font-bold text-slate-400 uppercase tracking-widest mb-1">Analyse des Frais</div>
                    <div class="text-2xl font-black text-slate-900">{{ paidFees|number_format(0, ',', ' ') }} F</div>
                </div>
                <div class="px-3 py-1 rounded-full text-[10px] font-bold {{ diffFees|abs < 0.1 ? 'bg-green-100 text-green-700' : 'bg-orange-100 text-orange-700' }}">
                    {{ diffFees|abs < 0.1 ? 'COHÉRENT' : 'ÉCART : ' ~ diffFees|number_format(0, ',', ' ') ~ ' F' }}
                </div>
            </div>
            <div class="w-full bg-gray-100 h-1.5 rounded-full overflow-hidden">
                <div class="bg-orange-500 h-full" style="width: {{ paidFees > 0 ? min(feeTransactions / paidFees * 100, 100) : 0 }}%"></div>
            </div>
            <div class="mt-2 text-[10px] text-slate-400">Total PlatformFees collectés : {{ feeTransactions|number_format(0, ',', ' ') }} F</div>
        </div>
    </div>

    <!-- Transactions Audit Table -->
    <div class="bg-white rounded-3xl border border-gray-100 shadow-sm overflow-hidden animate-fade-in-up">
        <div class="p-6 border-b border-gray-50 flex justify-between items-center">
            <h3 class="font-bold text-slate-900 flex items-center gap-2">
                <i class="fas fa-history text-blue-500"></i>
                Historique Audité (Qui, Quoi, Quand, Où)
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50/50">
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Quand (Date)
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Qui (Acteur)
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Quoi (Détails)
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider">Où (Source / IP)
                        </th>
                        <th class="px-6 py-4 text-xs font-bold text-slate-500 uppercase tracking-wider text-right">
                            Montant</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    {% for tx in transactions %}
                    {% set logs = transactionLogs[tx.id] %}
                    <tr class="hover:bg-gray-50/30 transition-colors">
                        <td class="px-6 py-4">
                            <div class="font-bold text-slate-900 text-sm">{{ tx.createdAt|date('d/m/Y') }}</div>
                            <div class="text-[10px] text-slate-400 font-mono">{{ tx.createdAt|date('H:i:s') }}</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <div
                                    class="h-8 w-8 rounded-full bg-blue-50 text-blue-600 flex items-center justify-center font-bold text-[10px]">
                                    {{ tx.utilisateur ? tx.utilisateur.firstname|first|upper ~
                                    tx.utilisateur.lastname|first|upper : '??' }}
                                </div>
                                <div>
                                    <div class="font-bold text-slate-900 text-xs">{{ tx.utilisateur ?
                                        tx.utilisateur.firstname ~ ' ' ~ tx.utilisateur.lastname : 'Système' }}</div>
                                    <div class="text-[10px] text-slate-400">{{ tx.utilisateur ? tx.utilisateur.email :
                                        'Automate' }}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="max-w-xs">
                                <span
                                    class="px-2 py-0.5 bg-gray-100 text-slate-500 rounded text-[10px] font-bold uppercase mb-1 inline-block">
                                    {{ tx.paymentMethod }} | {{ tx.provider ?: 'N/A' }}
                                </span>
                                {% if logs is not empty %}
                                <div class="text-xs text-slate-600 leading-tight italic">
                                    "{{ logs|first.description|default('Action enregistrée') }}"
                                </div>
                                {% else %}
                                <div class="text-xs text-slate-400 italic">Aucun log détaillé</div>
                                {% endif %}
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            {% if logs is not empty %}
                            <div class="flex flex-col">
                                <span
                                    class="text-xs font-mono text-slate-700 bg-slate-50 px-2 py-1 rounded inline-block w-fit">
                                    <i class="fas fa-network-wired text-slate-300 mr-1"></i> {{ logs|first.ipAdress ?:
                                    'IP Inconnue' }}
                                </span>
                                <span class="text-[9px] text-slate-400 mt-1 truncate max-w-[150px]"
                                    title="{{ logs|first.userAgent }}">
                                    {{ logs|first.userAgent|slice(0, 30) }}...
                                </span>
                            </div>
                            {% else %}
                            <span class="text-xs text-slate-300">Non tracé</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="font-black text-slate-900">{{ tx.amount|number_format(0, ',', ' ') }} F</div>
                            <div class="text-[9px] text-slate-400 font-mono">{{ tx.externalReference|slice(0, 10) }}...
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-12 text-center text-slate-400 italic">
                            Aucune transaction "completed" trouvée.
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Technical Legend -->
    <div class="mt-8 p-6 bg-blue-50 rounded-3xl border border-blue-100 flex gap-4 items-start">
        <div
            class="h-10 w-10 bg-blue-600 text-white rounded-full flex items-center justify-center shrink-0 shadow-lg shadow-blue-200">
            <i class="fas fa-microchip"></i>
        </div>
        <div>
            <h4 class="font-bold text-blue-900 mb-1 leading-none">Intelligence d'Audit</h4>
            <p class="text-blue-700 text-xs leading-relaxed opacity-80">
                Cet outil croise dynamiquement les <span class="font-bold">Transactions</span> financières avec les
                <span class="font-bold">Logs d'Activités</span> système. Il permet de certifier l'origine (IP), l'auteur
                (Utilisateur) et le contexte technique (Browser) de chaque franc crédité sur cette tontine.
            </p>
        </div>
    </div>
</div>
{% endblock %}