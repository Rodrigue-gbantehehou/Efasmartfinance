{% extends 'admin/base.html.twig' %}

{% block title %}Registre d'Audit - Timeline - EFA SMART FINANCE{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50 pb-20">
    <!-- Header Premium -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-30">
        <div class="px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Journal d'Audit</h1>
                    <p class="text-sm text-gray-600">Traçabilité complète des actions système et utilisateurs.</p>
                </div>
                
                <div class="flex items-center gap-3">
                    <div class="relative hidden md:block">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fa-solid fa-magnifying-glass text-gray-600 text-sm"></i>
                        </div>
                        <input type="text" id="logSearch" placeholder="Rechercher une action, entité..." 
                               class="block w-64 pl-10 pr-3 py-2 border border-gray-300 rounded-xl leading-5 bg-white placeholder-gray-50 focus:outline-none focus:ring-1 focus:ring-green-500 focus:border-green-500 sm:text-sm transition-all shadow-sm">
                    </div>
                    <a href="{{ path('admin_audit_logs', {'export': 'csv'}) }}" class="flex items-center gap-2 px-4 py-2 bg-green-700 text-white rounded-xl text-xs font-bold uppercase tracking-wider hover:bg-green-800 transition-all shadow-lg shadow-green-100">
                        <i class="fa-solid fa-file-csv"></i> Exporter
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main class="py-10">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            
            <!-- Filter Bar -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4 mb-10 flex flex-wrap items-center gap-4">
                <div class="flex items-center gap-2">
                    <span class="text-xs font-bold text-gray-600 uppercase ml-2">Filtrer par type :</span>
                    <button class="type-filter active px-4 py-2 text-xs font-bold rounded-xl bg-gray-100 text-gray-600 hover:bg-gray-200 transition-all border border-transparent" data-type="all">Tous</button>
                    <button class="type-filter px-4 py-2 text-xs font-bold rounded-xl bg-white border border-gray-100 text-gray-600 hover:border-green-200 hover:text-green-700 transition-all" data-type="create">Création</button>
                    <button class="type-filter px-4 py-2 text-xs font-bold rounded-xl bg-white border border-gray-100 text-gray-600 hover:border-amber-200 hover:text-amber-700 transition-all" data-type="update">Modif</button>
                    <button class="type-filter px-4 py-2 text-xs font-bold rounded-xl bg-white border border-gray-100 text-gray-600 hover:border-red-200 hover:text-red-700 transition-all" data-type="delete">Suppr</button>
                </div>
                <div class="h-6 w-px bg-gray-100 hidden md:block"></div>
                <div class="flex items-center gap-2">
                    <span class="text-xs font-bold text-gray-600 uppercase">Période :</span>
                    <input type="date" id="dateFilter" class="bg-gray-50 border-none rounded-lg text-xs font-bold text-gray-700 focus:ring-1 focus:ring-green-500">
                </div>
            </div>

            <!-- Timeline Experience -->
            <div class="relative space-y-12" id="timelineContainer">
                {% set lastDate = '' %}
                {% for log in logs %}
                    {% set currentDate = log.createdAt|date('d/m/Y') %}
                    
                    {% if currentDate != lastDate %}
                        {% if not loop.first %}</div></div>{% endif %}
                        <div class="date-group" data-date="{{ log.createdAt|date('Y-m-d') }}">
                            <div class="flex items-center gap-4 mb-8">
                                <div class="px-5 py-2 bg-gray-900 text-white rounded-2xl text-xs font-bold uppercase tracking-[0.2em] shadow-lg">
                                    {{ log.createdAt|date('d F Y') }}
                                </div>
                                <div class="h-px flex-1 bg-gradient-to-r from-gray-200 to-transparent"></div>
                            </div>
                            <div class="ml-4 border-l-2 border-dashed border-gray-200 pl-8 space-y-8 pb-4 relative">
                        {% set lastDate = currentDate %}
                    {% endif %}

                    <div class="log-item relative group" data-type="{{ log.actions|lower }}" data-search="{{ log.description|lower }} {{ log.entityType|lower }} {{ log.utilisateur ? log.utilisateur.fullName|lower : 'système' }}">
                        <!-- Node -->
                        {% set color = 'gray' %}
                        {% if log.actions|lower == 'create' %}{% set color = 'green' %}
                        {% elseif log.actions|lower == 'update' %}{% set color = 'amber' %}
                        {% elseif log.actions|lower == 'delete' %}{% set color = 'red' %}
                        {% elseif log.actions|lower == 'login' %}{% set color = 'green' %}
                        {% endif %}
                        
                        <div class="absolute -left-[41px] top-1 h-6 w-6 rounded-full border-4 border-white shadow-sm ring-2 ring-{{ color }}-100 bg-{{ color }}-500 z-10"></div>
                        
                        <div class="bg-white rounded-3xl p-6 border border-gray-100 shadow-sm hover:shadow-md hover:border-{{ color }}-100 transition-all group-hover:-translate-y-0.5 duration-300">
                            <div class="flex items-start justify-between gap-4">
                                <div class="flex-1">
                                    <div class="flex items-center gap-3 mb-2">
                                        <span class="text-[10px] font-black uppercase tracking-wider text-{{ color }}-600 px-2 py-0.5 bg-{{ color }}-50 rounded-md border border-{{ color }}-100">
                                            {{ log.actions|capitalize }}
                                        </span>
                                        <span class="text-xs font-bold text-gray-600">{{ log.createdAt|date('H:i') }}</span>
                                        {% if log.entityType %}
                                            <span class="text-[10px] font-bold text-gray-300 uppercase">/ {{ log.entityType }}</span>
                                        {% endif %}
                                    </div>
                                    <h4 class="text-sm font-bold text-gray-900 mb-2 leading-relaxed">
                                        {{ log.description }}
                                    </h4>
                                    <div class="flex items-center gap-4">
                                        <div class="flex items-center gap-2">
                                            <div class="h-5 w-5 rounded-full bg-slate-100 flex items-center justify-center text-[8px] font-black text-slate-500">
                                                {{ log.utilisateur ? log.utilisateur.firstName|first|upper : 'S' }}
                                            </div>
                                            <span class="text-xs font-bold text-slate-600">{{ log.utilisateur ? log.utilisateur.fullName : 'Système' }}</span>
                                        </div>
                                        <div class="flex items-center gap-2 text-gray-300">
                                            <i class="fa-solid fa-globe text-[10px]"></i>
                                            <span class="text-[10px] font-mono">{{ log.ipAdress }}</span>
                                        </div>
                                    </div>
                                </div>
                                
                                <a href="{{ path('admin_audit_log_detail', {'id': log.id}) }}" class="h-10 w-10 flex items-center justify-center rounded-xl bg-gray-50 text-gray-600 hover:bg-gray-900 hover:text-white transition-all shadow-inner">
                                    <i class="fa-solid fa-arrow-right-long"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    {% if loop.last %}</div></div>{% endif %}
                {% else %}
                    <div class="py-20 text-center">
                        <div class="h-20 w-20 bg-gray-50 rounded-full flex items-center justify-center mx-auto mb-6">
                            <i class="fa-solid fa-timeline text-gray-200 text-4xl"></i>
                        </div>
                        <h3 class="text-gray-900 font-bold">Aucune trace d'activité</h3>
                        <p class="text-gray-600 text-sm">Le journal est actuellement vide.</p>
                    </div>
                {% endfor %}
            </div>

        </div>
    </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('logSearch');
    const typeFilters = document.querySelectorAll('.type-filter');
    const dateFilter = document.getElementById('dateFilter');
    const logItems = document.querySelectorAll('.log-item');
    const dateGroups = document.querySelectorAll('.date-group');

    function applyFilters() {
        const searchTerm = searchInput.value.toLowerCase();
        const activeType = document.querySelector('.type-filter.active').dataset.type;
        const selectedDate = dateFilter.value; // YYYY-MM-DD

        dateGroups.forEach(group => {
            let hasVisibleItems = false;
            const itemsInGroup = group.querySelectorAll('.log-item');
            
            itemsInGroup.forEach(item => {
                const matchesSearch = item.dataset.search.includes(searchTerm);
                const matchesType = activeType === 'all' || item.dataset.type === activeType;
                const matchesDate = !selectedDate || group.dataset.date === selectedDate;
                
                const isVisible = matchesSearch && matchesType && matchesDate;
                item.style.display = isVisible ? '' : 'none';
                if (isVisible) hasVisibleItems = true;
            });
            
            group.style.display = hasVisibleItems ? '' : 'none';
        });
    }

    searchInput.addEventListener('input', applyFilters);
    dateFilter.addEventListener('change', applyFilters);

    typeFilters.forEach(btn => {
        btn.addEventListener('click', () => {
            typeFilters.forEach(b => {
                b.classList.remove('active', 'bg-gray-100', 'text-gray-600', 'border-transparent');
                b.classList.add('bg-white', 'text-gray-600', 'border-gray-100');
            });
            btn.classList.add('active', 'bg-gray-100', 'text-gray-600', 'border-transparent');
            btn.classList.remove('bg-white', 'text-gray-600', 'border-gray-100');
            applyFilters();
        });
    });
});
</script>

