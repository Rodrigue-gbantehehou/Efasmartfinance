{% extends 'admin/base.html.twig' %}

{% block title %}Détails de l'Entrée #{{ log.id }} — Audit Pro{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50 p-6 lg:p-8">
    <!-- Breadcrumb & Navigation -->
    <div class="mb-8 flex items-center justify-between">
        <a href="{{ path('admin_audit_logs') }}" class="group flex items-center gap-2 text-gray-600 hover:text-emerald-600 transition-colors">
            <div class="w-8 h-8 rounded-lg bg-white border border-gray-100 flex items-center justify-center shadow-sm group-hover:border-emerald-100 group-hover:bg-emerald-50">
                <i class="fas fa-arrow-left text-xs"></i>
            </div>
            <span class="text-[10px] font-bold uppercase tracking-widest">Retour au registre d'audit</span>
        </a>
        <div class="flex items-center gap-2">
            <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-tighter border bg-emerald-50 text-emerald-600 border-emerald-100 italic">
                Séquence Validée
            </span>
        </div>
    </div>

    <!-- Layout Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Analysis Column -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Summary Hero -->
            <div class="bg-gray-900 rounded-[2.5rem] p-8 lg:p-12 text-white relative overflow-hidden shadow-2xl">
                <div class="absolute top-0 right-0 w-64 h-64 bg-emerald-500/10 rounded-full -mr-32 -mt-32 blur-3xl"></div>
                <div class="relative z-10">
                    <p class="text-[10px] font-black text-emerald-500 uppercase tracking-[0.3em] mb-4">Rapport d'incident #{{ log.id }}</p>
                    <h1 class="text-3xl font-bold font-poppins leading-tight mb-8">
                        {{ log.description }}
                    </h1>
                    
                    <div class="flex flex-wrap gap-4">
                        <div class="px-4 py-2 bg-white/5 rounded-xl border border-white/10 flex items-center gap-2">
                            <i class="fas fa-terminal text-[10px] text-emerald-500"></i>
                            <span class="text-[10px] font-bold uppercase tracking-widest">{{ log.actions }}</span>
                        </div>
                        <div class="px-4 py-2 bg-white/5 rounded-xl border border-white/10 flex items-center gap-2">
                            <i class="fas fa-cubes text-[10px] text-emerald-500"></i>
                            <span class="text-[10px] font-bold uppercase tracking-widest">{{ log.entityType|default('Système') }}</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detailed Payload Card -->
            <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm overflow-hidden">
                <div class="p-8 border-b border-gray-50 flex items-center justify-between">
                    <div>
                        <h3 class="text-sm font-bold font-poppins text-gray-900">Données & Métadonnées</h3>
                        <p class="text-[10px] text-gray-600 font-bold uppercase tracking-widest mt-1">Analyse brute du message</p>
                    </div>
                    <div class="w-10 h-10 rounded-xl bg-gray-50 text-gray-600 flex items-center justify-center">
                        <i class="fas fa-code"></i>
                    </div>
                </div>
                <div class="p-8 lg:p-10">
                    <div class="bg-[#1e293b] rounded-2xl p-6 font-mono text-sm text-emerald-400 w-full overflow-x-auto leading-relaxed shadow-inner">
                        {% if log.description %}
                            {{ log.description|nl2br }}
                        {% else %}
                            <span class="opacity-30 italic">Aucune donnée supplémentaire capturée pour cette séquence.</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Diagnostics -->
        <div class="space-y-8">
            <!-- Actor Profile -->
            <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm p-8 group">
                <p class="text-[10px] font-black text-gray-600 uppercase tracking-widest mb-6 border-b border-gray-50 pb-4">Agent Responsable</p>
                <div class="flex items-center gap-4 mb-6">
                    <div class="w-14 h-14 rounded-2xl bg-slate-900 text-white flex items-center justify-center text-xl font-black uppercase shadow-lg shadow-slate-100">
                        {{ log.utilisateur ? log.utilisateur.firstName|slice(0, 1) : 'S' }}
                    </div>
                    <div>
                        <h4 class="text-sm font-bold text-gray-900 font-poppins">{{ log.utilisateur ? (log.utilisateur.firstName ~ ' ' ~ log.utilisateur.lastName)|trim : 'Système Automatisé' }}</h4>
                        <p class="text-[10px] text-emerald-500 font-bold uppercase tracking-widest">{{ log.utilisateur ? 'Administrateur' : 'Processus' }}</p>
                    </div>
                </div>
                {% if log.utilisateur %}
                <ul class="space-y-3 mb-6">
                    <li class="flex items-center gap-3 text-xs text-gray-600 font-medium">
                        <i class="fas fa-at text-[10px] text-gray-300"></i> {{ log.utilisateur.email }}
                    </li>
                </ul>
                <a href="{{ path('admin_users_details', {'id': log.utilisateur.id}) }}" class="flex items-center justify-center gap-2 w-full py-4 bg-gray-50 rounded-xl text-[10px] font-bold uppercase tracking-widest text-gray-600 hover:bg-emerald-600 hover:text-white transition-all shadow-sm">
                    Inspecter le profil <i class="fas fa-external-link-alt text-[8px]"></i>
                </a>
                {% endif %}
            </div>

            <!-- Genesis Card (Time & IP) -->
            <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm p-8">
                <p class="text-[10px] font-black text-gray-600 uppercase tracking-widest mb-6 border-b border-gray-50 pb-4">Origine de la Séquence</p>
                
                <div class="space-y-6">
                    <div class="bg-gray-50 rounded-2xl p-4 border border-gray-100 flex items-center gap-4">
                        <div class="w-10 h-10 rounded-xl bg-white flex items-center justify-center text-emerald-500 shadow-sm">
                            <i class="fas fa-calendar-day"></i>
                        </div>
                        <div>
                            <p class="text-[9px] font-black text-gray-600 uppercase tracking-tight">Date & Heure</p>
                            <p class="text-xs font-bold text-gray-900">{{ log.createdAt ? log.createdAt|date('d F Y') : 'N/A' }}</p>
                            <p class="text-[10px] text-gray-600 font-medium">{{ log.createdAt ? log.createdAt|date('H:i:s') : 'N/A' }}</p>
                        </div>
                    </div>

                    <div class="bg-gray-50 rounded-2xl p-4 border border-gray-100 flex items-center gap-4">
                        <div class="w-10 h-10 rounded-xl bg-white flex items-center justify-center text-emerald-500 shadow-sm">
                            <i class="fas fa-network-wired"></i>
                        </div>
                        <div>
                            <p class="text-[9px] font-black text-gray-600 uppercase tracking-tight">Adresse IP Source</p>
                            <p class="text-xs font-mono font-bold text-gray-900 tracking-wider">{{ log.ipAdress }}</p>
                        </div>
                    </div>

                    {% if log.userAgent %}
                    <div class="bg-slate-900 rounded-2xl p-6 text-white relative h-32 overflow-hidden flex items-end">
                        <i class="fas fa-laptop absolute top-4 left-4 text-3xl opacity-10"></i>
                        <div class="relative z-10">
                            <p class="text-[9px] font-black text-emerald-400 uppercase tracking-widest mb-1">Fingerprint Client</p>
                            <p class="text-[9px] font-medium text-gray-600 italic line-clamp-2" title="{{ log.userAgent }}">
                                {{ log.userAgent }}
                            </p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;900&display=swap');
    .font-poppins { font-family: 'Poppins', sans-serif; }
    .line-clamp-2 { display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
</style>
{% endblock %}
