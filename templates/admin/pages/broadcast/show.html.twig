{% extends 'admin/base.html.twig' %}

{% block title %}Audit Broadcast - {{ broadcast.title }}{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-slate-50 font-poppins text-slate-900 pb-12">
    <div class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
        
        {# Navigation & Header #}
        <div class="mb-8">
            <nav class="flex mb-4" aria-label="Breadcrumb">
                <ol class="flex items-center space-x-2 text-sm text-slate-500">
                    <li><a href="{{ path('admin_broadcast') }}" class="hover:text-emerald-600 transition-colors">Broadcasts</a></li>
                    <li><svg class="h-4 w-4 text-slate-300" fill="currentColor" viewBox="0 0 20 20"><path d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"/></svg></li>
                    <li class="font-semibold text-slate-900 truncate max-w-[200px]">{{ broadcast.title }}</li>
                </ol>
            </nav>

            <div class="md:flex md:items-center md:justify-between gap-6">
                <div class="flex-1 min-w-0">
                    <h1 class="text-2xl font-bold text-slate-900 sm:text-3xl break-words">
                        {{ broadcast.title }}
                    </h1>
                    <div class="mt-2 flex flex-wrap items-center gap-y-2 gap-x-4 text-sm text-slate-500">
                        <span class="flex items-center gap-1.5">
                            <svg class="h-4 w-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg>
                            Par {{ broadcast.createdBy ? broadcast.createdBy.firstname ~ ' ' ~ broadcast.createdBy.lastname : 'Système' }}
                        </span>
                        <span class="flex items-center gap-1.5">
                            <svg class="h-4 w-4 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/></svg>
                            Créé le {{ broadcast.createdAt|date('d/m/Y à H:i') }}
                        </span>
                    </div>
                </div>
                <div class="mt-6 flex flex-col sm:flex-row gap-3 md:mt-0">
                    {% if broadcast.status == 'draft' %}
                        <form method="post" action="{{ path('admin_broadcast_send', {id: broadcast.id}) }}">
                            <input type="hidden" name="_token" value="{{ csrf_token('send' ~ broadcast.id) }}">
                            <button type="submit" 
                                    onclick="return confirm('Lancer l\'envoi immédiat ?')"
                                    class="w-full inline-flex justify-center items-center px-6 py-2.5 border border-transparent rounded-lg shadow-sm text-sm font-bold text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition-all">
                                <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/></svg>
                                Envoyer maintenant
                            </button>
                        </form>
                    {% endif %}
                    
                    <form method="post" action="{{ path('admin_broadcast_delete', {id: broadcast.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ broadcast.id) }}">
                        <button type="submit" 
                                onclick="return confirm('Confirmer la suppression ?')"
                                class="w-full inline-flex justify-center items-center px-6 py-2.5 border border-slate-300 rounded-lg shadow-sm text-sm font-semibold text-rose-600 bg-white hover:bg-rose-50 hover:border-rose-200 focus:outline-none transition-all">
                            <svg class="mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                            Supprimer
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
            {# Left Column: Content #}
            <div class="lg:col-span-2 space-y-8">
                <div class="bg-white shadow-sm border border-slate-200 rounded-xl overflow-hidden">
                    <div class="px-6 py-4 border-b border-slate-100 bg-slate-50 flex items-center justify-between">
                        <h2 class="text-sm font-bold text-slate-700 uppercase tracking-wider">Contenu du message</h2>
                        <span class="text-[10px] font-bold text-slate-400 py-1 px-2 bg-slate-100 rounded border border-slate-200 uppercase">Aperçu HTLM</span>
                    </div>
                    <div class="p-8 sm:p-12">
                        <div class="prose prose-emerald max-w-none text-slate-700 leading-relaxed break-words">
                            {{ broadcast.content|raw }}
                        </div>
                    </div>
                    <div class="px-8 py-4 bg-slate-50 border-t border-slate-100 text-xs text-slate-500 italic">
                        Ce message a été configuré pour être envoyé via : {{ broadcast.type|upper }}
                    </div>
                </div>
            </div>

            {# Right Column: Info & Stats #}
            <div class="space-y-8">
                {# Status & Metadata #}
                <div class="bg-white shadow-sm border border-slate-200 rounded-xl p-6">
                    <h3 class="text-base font-bold text-slate-900 mb-6 border-b border-slate-100 pb-3 italic">Résumé technique</h3>
                    <dl class="space-y-4">
                        <div class="flex justify-between items-center text-sm py-1">
                            <dt class="text-slate-500 font-medium">Statut actuel</dt>
                            <dd>
                                {% if broadcast.status == 'draft' %}
                                    <span class="px-2.5 py-1 bg-slate-100 text-slate-600 rounded-md text-[10px] font-bold uppercase ring-1 ring-inset ring-slate-200">Brouillon</span>
                                {% elseif broadcast.status == 'sent' %}
                                    <span class="px-2.5 py-1 bg-emerald-50 text-emerald-700 rounded-md text-[10px] font-bold uppercase ring-1 ring-inset ring-emerald-600/20">Expédié</span>
                                {% else %}
                                    <span class="px-2.5 py-1 bg-blue-50 text-blue-700 rounded-md text-[10px] font-bold uppercase ring-1 ring-inset ring-blue-600/20">{{ broadcast.status|title }}</span>
                                {% endif %}
                            </dd>
                        </div>
                        <div class="flex justify-between items-center text-sm py-1">
                            <dt class="text-slate-500 font-medium">Cible</dt>
                            <dd class="text-slate-900 font-semibold">{{ broadcast.targetAudience|replace({'_': ' '})|title }}</dd>
                        </div>
                        {% if broadcast.sentAt %}
                        <div class="flex justify-between items-center text-sm py-1">
                            <dt class="text-slate-500 font-medium">Date d'expédition</dt>
                            <dd class="text-slate-900 font-semibold text-right">{{ broadcast.sentAt|date('d/m/Y H:i') }}</dd>
                        </div>
                        {% endif %}
                    </dl>
                </div>

                {# Stats Card #}
                {% if broadcast.stats %}
                <div class="bg-slate-900 shadow-xl rounded-xl p-6 text-white relative overflow-hidden">
                    <div class="absolute -right-4 -top-4 w-24 h-24 bg-emerald-500/10 rounded-full blur-2xl"></div>
                    <h3 class="text-base font-bold mb-6 text-slate-300 uppercase tracking-widest text-[11px]">Indicateurs de performance</h3>
                    
                    <div class="grid grid-cols-2 gap-y-8 gap-x-4">
                        <div>
                            <p class="text-slate-400 text-[10px] font-bold uppercase tracking-tight mb-2">Total Ciblés</p>
                            <p class="text-3xl font-black text-white">{{ broadcast.stats.total_recipients ?? 0 }}</p>
                        </div>
                        <div>
                            <p class="text-slate-400 text-[10px] font-bold uppercase tracking-tight mb-2">Taux de succès</p>
                            <p class="text-3xl font-black text-emerald-400">
                                {{ (broadcast.stats.total_recipients ?? 0) > 0 ? ((broadcast.stats.sent / broadcast.stats.total_recipients) * 100)|round : 0 }}%
                            </p>
                        </div>
                        <div class="pt-4 border-t border-slate-800">
                            <p class="text-slate-500 text-[10px] font-bold uppercase mb-1">Délivrés</p>
                            <p class="text-xl font-bold text-slate-200">{{ broadcast.stats.sent ?? 0 }}</p>
                        </div>
                        <div class="pt-4 border-t border-slate-800">
                            <p class="text-slate-500 text-[10px] font-bold uppercase mb-1">Échecs</p>
                            <p class="text-xl font-bold text-rose-400">{{ broadcast.stats.failed ?? 0 }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}

                {# Quick Actions or History Placeholder #}
                <div class="bg-emerald-50 border border-emerald-100 rounded-xl p-5">
                    <h4 class="text-xs font-bold text-emerald-800 uppercase tracking-wider mb-2">À propos de l'expéditeur</h4>
                    <p class="text-xs text-emerald-700 leading-relaxed">
                        Ce message a été initié depuis le panneau d'administration principal par un utilisateur authentifié avec des droits de communication.
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap');
    .font-poppins { font-family: 'Poppins', sans-serif; }
</style>
{% endblock %}
