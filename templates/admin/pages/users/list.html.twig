{% extends 'admin/base.html.twig' %}

{% block title %}Utilisateurs - Administration{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <!-- Header avec actions -->
    <div class="border-b border-gray-200 bg-white">
        <div class="px-4 md:px-6 py-4">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                <div>
                    <h1 class="text-xl md:text-2xl font-bold text-gray-900">Utilisateurs</h1>
                    <p class="text-gray-600 text-sm mt-1">Gestion des comptes utilisateurs</p>
                </div>
                
                <div class="flex flex-col sm:flex-row items-stretch sm:items-center gap-3">
                  
                    <!-- Bouton nouveau -->
                    <a href="{{ path('admin_user_create') }}" 
                       class="inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-green-700 text-white rounded-xl hover:bg-accent transition-colors text-sm font-medium">
                        <i class="fas fa-plus"></i>
                        Nouveau
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Flash messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mx-4 md:mx-6 mt-4">
                <div class="flash-message p-4 rounded-xl border border-{{ label }}-200 bg-{{ label }}-50 text-{{ label }}-800">
                    <div class="flex items-center gap-3">
                        <i class="fas fa-{% if label == 'success' %}check-circle{% elseif label == 'error' %}exclamation-circle{% else %}info-circle{% endif %}"></i>
                        <span>{{ message }}</span>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Contenu principal -->
    <div class="p-4 md:p-6">
        <!-- Stats résumé -->
        <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="bg-white rounded-xl border border-gray-200 p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600">Total</p>
                        <p class="text-2xl font-bold text-gray-900">{{ users|length }}</p>
                    </div>
                    <div class="h-12 w-12 rounded-full bg-green-50 text-green-600 flex items-center justify-center">
                        <i class="fas fa-users text-xl"></i>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl border border-gray-200 p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600">Actifs</p>
                        <p class="text-2xl font-bold text-gray-900">
                            {{ users|filter(u => u.isActive)|length }}
                        </p>
                    </div>
                    <div class="h-12 w-12 rounded-full bg-emerald-50 text-emerald-600 flex items-center justify-center">
                        <i class="fas fa-user-check text-xl"></i>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl border border-gray-200 p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600">Administrateurs</p>
                        <p class="text-2xl font-bold text-gray-900">
                            {{ users|filter(u => 'ROLE_ADMIN' in u.roles)|length }}
                        </p>
                    </div>
                    <div class="h-12 w-12 rounded-full bg-red-50 text-red-600 flex items-center justify-center">
                        <i class="fas fa-crown text-xl"></i>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-xl border border-gray-200 p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-600">Vérifiés</p>
                        <p class="text-2xl font-bold text-gray-900">
                            {{ users|filter(u => u.isVerified)|length }}
                        </p>
                    </div>
                    <div class="h-12 w-12 rounded-full bg-violet-50 text-violet-600 flex items-center justify-center">
                        <i class="fas fa-shield-alt text-xl"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tableau des utilisateurs -->
        <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden">
            <!-- En-tête du tableau -->
            <div class="px-4 md:px-6 py-4 border-b border-gray-200 bg-gray-50">
                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                    <div>
                        <h3 class="text-lg font-bold text-gray-900">Liste des utilisateurs</h3>
                        <p class="text-gray-600 text-sm mt-1">
                            {{ users|length }} utilisateur{{ users|length > 1 ? 's' : '' }}
                        </p>
                    </div>
                    
                 
                </div>
            </div>

            <!-- Corps du tableau -->
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-4 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
                                <div class="flex items-center gap-2">
                                    <span>Utilisateur</span>
                                    <button class="text-gray-400 hover:text-gray-600">
                                        <i class="fas fa-sort"></i>
                                    </button>
                                </div>
                            </th>
                            <th class="px-4 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
                                <div class="flex items-center gap-2">
                                    <span>Rôle</span>
                                    <button class="text-gray-400 hover:text-gray-600">
                                        <i class="fas fa-sort"></i>
                                    </button>
                                </div>
                            </th>
                            <th class="px-4 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
                                <div class="flex items-center gap-2">
                                    <span>Statut</span>
                                    <button class="text-gray-400 hover:text-gray-600">
                                        <i class="fas fa-sort"></i>
                                    </button>
                                </div>
                            </th>
                            <th class="px-4 md:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
                                <div class="flex items-center gap-2">
                                    <span>Activité</span>
                                    <button class="text-gray-400 hover:text-gray-600">
                                        <i class="fas fa-sort"></i>
                                    </button>
                                </div>
                            </th>
                            <th class="px-4 md:px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider whitespace-nowrap">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    
                    <tbody class="divide-y divide-gray-200">
                        {% for user in users %}
                        <tr class="hover:bg-gray-50 transition-colors">
                            <!-- Colonne utilisateur -->
                            <td class="px-4 md:px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="relative">
                                        <div class="h-10 w-10 rounded-full bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center">
                                            <i class="fas fa-user text-green-600"></i>
                                        </div>
                                        {% if user.isVerified %}
                                        <div class="absolute -bottom-1 -right-1 h-4 w-4 rounded-full bg-emerald-500 border-2 border-white"></div>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <p class="font-medium text-gray-900">{{ user.firstname }} {{ user.lastname }}</p>
                                        <p class="text-sm text-gray-600 truncate max-w-[200px]">{{ user.email }}</p>
                                        <p class="text-xs text-gray-500 mt-0.5">
                                            <i class="fas fa-hashtag mr-1"></i>#{{ user.uuid}}
                                        </p>
                                    </div>
                                </div>
                            </td>
                            
                            <!-- Colonne rôle -->
                            <td class="px-4 md:px-6 py-4">
                                <div class="flex flex-wrap gap-1">
                                    {% for role in user.roles %}
                                    <span class="inline-flex items-center gap-1 px-2 py-1 rounded-md text-xs font-medium 
                                        {% if role == 'ROLE_ADMIN' %}
                                            bg-red-100 text-red-700 border border-red-200
                                        {% elseif role == 'ROLE_MODERATOR' %}
                                            bg-violet-100 text-violet-700 border border-violet-200
                                        {% else %}
                                            bg-green-100 text-green-700 border border-green-200
                                        {% endif %}">
                                        <i class="fas fa-{% if role == 'ROLE_ADMIN' %}crown{% elseif role == 'ROLE_MODERATOR' %}user-shield{% else %}user{% endif %} text-xs"></i>
                                        {{ role|replace({'ROLE_': ''}) }}
                                    </span>
                                    {% endfor %}
                                </div>
                            </td>
                            
                            <!-- Colonne statut -->
                            <td class="px-4 md:px-6 py-4">
                                <div class="flex flex-col gap-1">
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium 
                                        {% if user.isActive %}
                                            bg-emerald-100 text-emerald-700
                                        {% else %}
                                            bg-red-100 text-red-700
                                        {% endif %}">
                                        <i class="fas fa-circle text-[6px]"></i>
                                        {{ user.isActive ? 'Actif' : 'Inactif' }}
                                    </span>
                                    
                                    {% if user.verificationStatut %}
                                    <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium 
                                        {% if user.verificationStatut == 'Vérifié' %}
                                            bg-emerald-100 text-emerald-700
                                        {% elseif user.verificationStatut == 'En attente' %}
                                            bg-amber-100 text-amber-700
                                        {% else %}
                                            bg-gray-100 text-gray-700
                                        {% endif %}">
                                        <i class="fas fa-{% if user.verificationStatut == 'Vérifié' %}check{% elseif user.verificationStatut == 'En attente' %}clock{% else %}times{% endif %} text-xs"></i>
                                        {{ user.verificationStatut }}
                                    </span>
                                    {% endif %}
                                </div>
                            </td>
                            
                            <!-- Colonne activité -->
                            <td class="px-4 md:px-6 py-4">
                                {% if user.lastLoginAt %}
                                <div>
                                    <p class="text-sm font-medium text-gray-900">Dernière connexion</p>
                                    <p class="text-xs text-gray-600">
                                        <i class="fas fa-clock mr-1"></i>
                                        {{ user.lastLoginAt|date('d/m/Y H:i') }}
                                    </p>
                                </div>
                                {% else %}
                                <span class="text-sm text-gray-500">Jamais connecté</span>
                                {% endif %}
                            </td>
                            
                            <!-- Colonne actions -->
                            <td class="px-4 md:px-6 py-4">
                                <div class="flex items-center justify-end gap-2">
                                  
                                    
                                    {% if user.isActive %}
                                    <form method="post" action="{{ path('admin_users_desactivate', {'id': user.id}) }}" 
                                          class="inline"
                                          onsubmit="return confirm('Désactiver cet utilisateur ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('deactivate' ~ user.id) }}">
                                        <button type="submit" 
                                                class="flex items-center gap-2 p-2 text-emerald-600 hover:text-emerald-700 hover:bg-emerald-50 rounded-lg transition-colors"
                                                title="Désactiver">
                                            <i class="fas fa-user-check"></i>
                                            Désactiver
                                        </button>
                                    </form>
                                    {% else %}
                                    <form method="post" action="{{ path('admin_users_activate', {'id': user.id}) }}" 
                                          class="inline"
                                          onsubmit="return confirm('Activer cet utilisateur ?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('activate' ~ user.id) }}">
                                        <button type="submit" 
                                                class=" p-2 text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg transition-colors"
                                                title="Activer">
                                            <i class="fas fa-user-slash"></i>
                                            Activer
                                        </button>
                                    </form>
                                    {% endif %}
                                    <!-- Menu actions -->
                                    <div class="relative">
                                        <button class="user-actions-btn p-2 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        
                                        <!-- Dropdown menu -->
                                        <div class="user-actions-menu absolute right-0 mt-2 w-48 bg-white rounded-xl shadow-lg border border-gray-200 py-1 z-10 hidden">
                                            <a href="{{ path('admin_users_details', {'id': user.id}) }}" 
                                               class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                                <i class="fas fa-eye text-gray-400"></i>
                                                Voir détails
                                            </a>
                                            <a href="{{ path('admin_users_edit', {'id': user.id}) }}" 
                                               class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                                <i class="fas fa-edit text-gray-400"></i>
                                                Modifier
                                            </a>
                                            <!-- Activation/Désactivation -->
                                    
                                    
                                            <!--
                                            <div class="border-t border-gray-200 my-1"></div>
                                            <button onclick="showResetPasswordModal({{ user.id }}, '{{ user.email }}')"
                                                    class="w-full text-left flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                                <i class="fas fa-key text-gray-400"></i>
                                                Réinitialiser MDP
                                            </button>
                                            <button onclick="showEmailModal('{{ user.email }}')"
                                                    class="w-full text-left flex items-center gap-2 px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                                <i class="fas fa-envelope text-gray-400"></i>
                                                Envoyer email
                                            </button>
                                            -->
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="px-6 py-12 text-center">
                                <div class="h-16 w-16 rounded-full bg-gray-100 text-gray-400 flex items-center justify-center mx-auto mb-4">
                                    <i class="fas fa-users text-2xl"></i>
                                </div>
                                <p class="text-gray-500">Aucun utilisateur trouvé</p>
                                <p class="text-sm text-gray-400 mt-1">Commencez par créer un nouvel utilisateur</p>
                                <a href="{{ path('admin_user_create') }}" 
                                   class="inline-flex items-center gap-2 px-4 py-2 mt-4 bg-green-700 text-white rounded-lg hover:bg-accent transition-colors text-sm">
                                    <i class="fas fa-plus"></i>
                                    Ajouter un utilisateur
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if users is defined and users.pagination is defined and users.pagination.totalPages > 1 %}
            <div class="px-4 md:px-6 py-4 border-t border-gray-200">
                <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                    <div class="text-sm text-gray-700">
                        Affichage de 
                        <span class="font-medium">{{ users.pagination.offsetStart }}</span> 
                        à 
                        <span class="font-medium">{{ users.pagination.offsetEnd }}</span> 
                        sur 
                        <span class="font-medium">{{ users.pagination.totalItems }}</span> 
                        utilisateurs
                    </div>
                    
                    <nav class="flex items-center gap-1">
                        <button class="p-2 text-gray-600 hover:text-gray-900 disabled:opacity-50 disabled:cursor-not-allowed rounded-lg">
                            <i class="fas fa-chevron-left"></i>
                        </button>
                        
                        {% for page in 1..users.pagination.totalPages %}
                        <button class="h-8 w-8 text-sm font-medium rounded-lg transition-colors
                            {% if page == users.pagination.currentPage %}
                                bg-green-700 text-white
                            {% else %}
                                text-gray-600 hover:text-gray-900 hover:bg-gray-100
                            {% endif %}">
                            {{ page }}
                        </button>
                        {% endfor %}
                        
                        <button class="p-2 text-gray-600 hover:text-gray-900 disabled:opacity-50 disabled:cursor-not-allowed rounded-lg">
                            <i class="fas fa-chevron-right"></i>
                        </button>
                    </nav>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
    <div class="max-w-7xl mx-auto px-4 py-10 ">
    </div>
</div>

<!-- Modales -->
<div id="resetPasswordModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden items-center justify-center p-4">
    <div class="bg-white rounded-2xl p-6 max-w-md w-full">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-bold text-gray-900">Réinitialiser le mot de passe</h3>
            <button onclick="closeResetPasswordModal()" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times"></i>
            </button>
        </div>
        
        <div class="mb-6">
            <p class="text-gray-600">Un email de réinitialisation sera envoyé à :</p>
            <p class="font-medium text-gray-900 mt-1" id="resetEmail"></p>
        </div>
        
        <div class="flex gap-3">
            <button onclick="closeResetPasswordModal()"
                    class="flex-1 px-4 py-2 text-gray-700 border border-gray-300 rounded-xl hover:bg-gray-50 transition-colors">
                Annuler
            </button>
            <button onclick="submitResetPassword()"
                    class="flex-1 px-4 py-2 bg-green-700 text-white rounded-xl hover:bg-accent transition-colors">
                Confirmer
            </button>
        </div>
    </div>
</div>

<style>
.flash-message {
    animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.user-actions-menu {
    animation: fadeIn 0.2s ease-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-10px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

/* Table responsive */
@media (max-width: 768px) {
    table {
        display: block;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }
    
    .user-actions-btn {
        @apply h-10 w-10;
    }
}

/* Hover effects */
tr:hover {
    @apply bg-gray-50;
}

/* Animation des cartes stats */
.bg-white {
    animation: fadeInUp 0.3s ease-out;
    animation-fill-mode: both;
}

.bg-white:nth-child(1) { animation-delay: 0.1s; }
.bg-white:nth-child(2) { animation-delay: 0.2s; }
.bg-white:nth-child(3) { animation-delay: 0.3s; }
.bg-white:nth-child(4) { animation-delay: 0.4s; }

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>

<script>
// Gestion du menu d'actions
document.querySelectorAll('.user-actions-btn').forEach(btn => {
    btn.addEventListener('click', function(e) {
        e.stopPropagation();
        const menu = this.nextElementSibling;
        const isVisible = menu.classList.contains('hidden');
        
        // Fermer tous les autres menus
        document.querySelectorAll('.user-actions-menu').forEach(m => {
            m.classList.add('hidden');
        });
        
        // Ouvrir/fermer le menu courant
        if (isVisible) {
            menu.classList.remove('hidden');
        }
    });
});

// Fermer les menus en cliquant ailleurs
document.addEventListener('click', function() {
    document.querySelectorAll('.user-actions-menu').forEach(menu => {
        menu.classList.add('hidden');
    });
});

// Variables pour les modales
let currentUserId = null;
let currentUserEmail = null;

function showResetPasswordModal(userId, userEmail) {
    currentUserId = userId;
    currentUserEmail = userEmail;
    document.getElementById('resetEmail').textContent = userEmail;
    document.getElementById('resetPasswordModal').classList.remove('hidden');
    document.getElementById('resetPasswordModal').classList.add('flex');
}

function closeResetPasswordModal() {
    document.getElementById('resetPasswordModal').classList.remove('flex');
    document.getElementById('resetPasswordModal').classList.add('hidden');
}

function submitResetPassword() {
    // Ici, vous implémenterez l'appel API pour réinitialiser le mot de passe
    alert(`Demande de réinitialisation envoyée à ${currentUserEmail}`);
    closeResetPasswordModal();
}

function showEmailModal(email) {
    alert(`Ouvrir l'interface d'envoi d'email à ${email}`);
    // Implémenter l'ouverture de la modale d'email
}

// Fermer les modales en cliquant en dehors
document.getElementById('resetPasswordModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeResetPasswordModal();
    }
});

// Recherche en temps réel (exemple basique)
document.querySelector('input[type="search"]').addEventListener('input', function(e) {
    const searchTerm = e.target.value.toLowerCase();
    const rows = document.querySelectorAll('tbody tr');
    
    rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        if (text.includes(searchTerm)) {
            row.style.display = '';
        } else {
            row.style.display = 'none';
        }
    });
});
</script>
{% endblock %}