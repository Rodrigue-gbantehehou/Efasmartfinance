{% extends 'admin/base.html.twig' %}
{% block contentadmin %}
<div class="min-h-screen bg-green-100/50">
    <!-- Header sophistiqué avec navigation -->
    <div class="bg-white border-b border-gray-100 shadow-sm sticky top-0 z-10">
        <div class="px-6 py-5">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                <div class="flex items-center gap-4">
                    <a href="{{ path('admin_users') }}" 
                       class="w-10 h-10 rounded-xl border border-gray-100 flex items-center justify-center text-gray-600 hover:text-emerald-600 hover:border-emerald-100 hover:bg-emerald-50 transition-all shadow-sm">
                        <i class="fas fa-arrow-left text-sm"></i>
                    </a>
                    <div>
                        <h1 class="text-2xl font-bold font-poppins text-gray-900 tracking-tight">{{ user.firstname }} {{ user.lastname }}</h1>
                        <p class="text-sm font-medium text-gray-600 mt-0.5">Dossier utilisateur exhaustif • #{{ user.id }}</p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" 
                       class="inline-flex items-center justify-center gap-2 px-5 py-2.5 bg-white border border-gray-200 text-gray-700 rounded-xl hover:bg-gray-50 transition-all shadow-sm text-sm font-bold tracking-wide">
                        <i class="fas fa-edit"></i>
                        Modifier le profil
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="p-6 space-y-8">
        <!-- Section supérieure - Profil et statut -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Carte identité Pro -->
            <div class="bg-white rounded-3xl border border-gray-100 p-8 shadow-sm">
                <div class="flex flex-col items-center text-center mb-8">
                    <div class="relative mb-6">
                        <div class="w-24 h-24 rounded-3xl bg-emerald-50 border-2 border-emerald-100 flex items-center justify-center text-emerald-600 font-bold font-poppins text-3xl shadow-lg">
                            {{ user.firstname|first }}{{ user.lastname|first }}
                        </div>
                        {% if user.isVerified %}
                        <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-emerald-500 border-4 border-white rounded-2xl flex items-center justify-center shadow-md">
                            <i class="fas fa-check text-xs text-white"></i>
                        </div>
                        {% endif %}
                    </div>
                    <h3 class="text-xl font-bold font-poppins text-gray-900">{{ user.firstname }} {{ user.lastname }}</h3>
                    <p class="text-sm font-medium text-gray-600 mt-1 lowercase tracking-tight">{{ user.email }}</p>
                    
                    <div class="mt-6 flex flex-wrap justify-center gap-2">
                         <span class="inline-flex items-center px-3 py-1.5 rounded-full text-[10px] font-bold uppercase tracking-wider 
                            {% if user.isActive %} bg-emerald-100 text-emerald-800 {% else %} bg-red-100 text-red-800 {% endif %}">
                            <span class="w-1.5 h-1.5 rounded-full mr-2 {% if user.isActive %}bg-emerald-500 animate-pulse{% else %}bg-red-500{% endif %}"></span>
                            {{ user.isActive ? 'Actif' : 'Banni' }}
                        </span>
                        {% set latestV = user.latestVerification %}
                        {% if latestV %}
                        <span class="inline-flex items-center px-3 py-1.5 rounded-xl text-[10px] font-bold uppercase tracking-wider text-gray-600 border border-gray-100 bg-gray-50 shadow-sm">
                            <i class="fas {% if latestV.status == 'verified' %}fa-circle-check text-emerald-500{% elseif latestV.status == 'pending' %}fa-clock text-amber-500{% else %}fa-circle-xmark text-red-500{% endif %} mr-2"></i>
                            {{ user.verificationStatus }}
                        </span>
                        {% endif %}
                    </div>
                </div>
                
                <div class="space-y-4 border-t border-gray-50 pt-8">
                    <div class="flex items-center justify-between group">
                        <span class="text-[10px] font-bold text-gray-600 uppercase tracking-widest">Téléphone</span>
                        <span class="text-sm font-bold text-gray-900 group-hover:text-emerald-600 transition-colors">{{ user.phoneNumber ?? '—' }}</span>
                    </div>
                    <div class="flex items-center justify-between group">
                        <span class="text-[10px] font-bold text-gray-600 uppercase tracking-widest">Nationalité</span>
                        <span class="text-sm font-bold text-gray-900 group-hover:text-emerald-600 transition-colors">{{ user.nationality ?? '—' }}</span>
                    </div>
                    <div class="flex items-center justify-between group">
                        <span class="text-[10px] font-bold text-gray-600 uppercase tracking-widest">Naissance</span>
                        <span class="text-sm font-bold text-gray-900 group-hover:text-emerald-600 transition-colors">
                            {{ user.birthDate ? user.birthDate|date('d M Y') : '—' }}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Carte État et Sécurité -->
            <div class="bg-white rounded-3xl border border-gray-100 p-8 shadow-sm">
                <h3 class="text-lg font-bold font-poppins text-gray-900 mb-8 border-b border-gray-50 pb-4">Conformité & Sécurité</h3>
                
                <div class="space-y-6">
                    {% if pendingVerification %}
                    <div class="p-6 rounded-2xl bg-amber-50 border border-amber-100 shadow-sm animate-pulse-subtle">
                        <div class="flex items-center gap-4 mb-4">
                            <div class="w-10 h-10 rounded-xl bg-amber-500 text-white flex items-center justify-center shadow-lg shadow-amber-500/20">
                                <i class="fas fa-user-clock text-sm"></i>
                            </div>
                            <div>
                                <p class="text-xs font-black text-amber-900 uppercase tracking-widest">Action Requise</p>
                                <p class="text-[10px] font-bold text-amber-600 uppercase">Dossier en attente</p>
                            </div>
                        </div>
                        <div class="flex flex-col gap-3">
                            <form method="post" action="{{ path('admin_user_verification_approve', {'id': user.id}) }}" class="w-full">
                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ user.id) }}">
                                <button type="submit" class="w-full px-4 py-2.5 bg-emerald-600 text-white rounded-xl text-[10px] font-black uppercase tracking-widest hover:bg-emerald-700 transition-all shadow-lg shadow-emerald-500/20">
                                    Dossier Conforme • Approuver
                                </button>
                            </form>
                            
                            <button onclick="document.getElementById('reject-form-modal').classList.remove('hidden')" class="w-full px-4 py-2.5 bg-red-50 text-red-600 border border-red-100 rounded-xl text-[10px] font-black uppercase tracking-widest hover:bg-red-600 hover:text-white transition-all">
                                Rejeter le dossier
                            </button>
                        </div>
                    </div>
                    {% endif %}

                    <div class="flex items-center justify-between p-4 rounded-2xl bg-gray-50 border border-gray-100">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-xl bg-emerald-500 text-white flex items-center justify-center shadow-lg shadow-emerald-500/20">
                                <i class="fas fa-user-lock text-sm"></i>
                            </div>
                            <div>
                                <p class="text-xs font-bold text-gray-900">Statut Accès</p>
                                <p class="text-[10px] font-bold text-gray-600 uppercase">Autorisations système</p>
                            </div>
                        </div>
                        <span class="text-[10px] font-bold px-3 py-1 rounded-full {% if user.isActive %}bg-emerald-500{% else %}bg-red-500{% endif %} text-white uppercase tracking-widest">
                            {{ user.isActive ? 'Validé' : 'Bloqué' }}
                        </span>
                    </div>
                    
                    <div class="flex items-center justify-between p-4 rounded-2xl bg-gray-50 border border-gray-100">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-xl bg-green-500 text-white flex items-center justify-center shadow-lg shadow-green-500/20">
                                <i class="fas fa-envelope-circle-check text-sm"></i>
                            </div>
                            <div>
                                <p class="text-xs font-bold text-gray-900">Email Vérifié</p>
                                <p class="text-[10px] font-bold text-gray-600 uppercase">Protocole SMTP</p>
                            </div>
                        </div>
                        <span class="text-[10px] font-bold px-3 py-1 rounded-full bg-emerald-50 text-emerald-600 border border-emerald-100 uppercase tracking-widest">
                            {{ user.isVerified ? 'Oui' : 'Non' }}
                        </span>
                    </div>
                    
                    <div class="flex items-center justify-between p-4 rounded-2xl bg-gray-50 border border-gray-100">
                        <div class="flex items-center gap-4">
                            <div class="w-10 h-10 rounded-xl bg-violet-500 text-white flex items-center justify-center shadow-lg shadow-violet-500/20">
                                <i class="fas fa-shield-halved text-sm"></i>
                            </div>
                            <div>
                                <p class="text-xs font-bold text-gray-900">Niveau KYC</p>
                                <p class="text-[10px] font-bold text-gray-600 uppercase">Score de confiance</p>
                            </div>
                        </div>
                        <span class="text-[10px] font-bold px-3 py-1 rounded-full bg-violet-50 text-violet-600 border border-violet-100 uppercase tracking-widest">
                            {{ user.verificationStatus }}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Carte Chronologie -->
            <div class="bg-white rounded-3xl border border-gray-100 p-8 shadow-sm">
                <h3 class="text-lg font-bold font-poppins text-gray-900 mb-8 border-b border-gray-50 pb-4">Historique</h3>
                
                <div class="space-y-8 relative">
                    <div class="absolute left-[19px] top-2 bottom-2 w-0.5 bg-gray-50 border-l border-dashed border-gray-200"></div>
                    
                    <div class="relative flex gap-4">
                        <div class="w-10 h-10 rounded-xl bg-white border border-gray-100 flex items-center justify-center text-gray-600 shrink-0 z-10 shadow-sm">
                            <i class="fas fa-calendar-plus text-xs"></i>
                        </div>
                        <div>
                            <p class="text-xs font-bold text-gray-900">Ouverture du compte</p>
                            <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mt-1">
                                {{ user.createdAt|date('d F Y') }} <span class="mx-1">•</span> {{ user.createdAt|date('H:i') }}
                            </p>
                        </div>
                    </div>
                    
                    <div class="relative flex gap-4">
                        <div class="w-10 h-10 rounded-xl bg-white border border-gray-100 flex items-center justify-center text-emerald-600 shrink-0 z-10 shadow-sm">
                            <i class="fas fa-sign-in-alt text-xs"></i>
                        </div>
                        <div>
                            <p class="text-xs font-bold text-gray-900">Dernière connexion</p>
                            <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mt-1">
                                {% if user.lastLoginAt %}
                                    {{ user.lastLoginAt|date('d F Y') }} <span class="mx-1">•</span> {{ user.lastLoginAt|date('H:i') }}
                                {% else %}
                                    <span class="text-gray-300">Aucune activité</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    
                    <div class="relative flex gap-4">
                        <div class="w-10 h-10 rounded-xl bg-white border border-gray-100 flex items-center justify-center text-violet-600 shrink-0 z-10 shadow-sm">
                            <i class="fas fa-upload text-xs"></i>
                        </div>
                        <div>
                            <p class="text-xs font-bold text-gray-900">Soumission KYC</p>
                            <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mt-1">
                                {{ latestV ? latestV.submittedAt|date('d F Y H:i') : 'En attente' }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section documents et adresse -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Archivage Documentaire -->
            <div class="bg-white rounded-3xl border border-gray-100 p-8 shadow-sm">
                <div class="flex items-center justify-between mb-8 pb-4 border-b border-gray-50">
                    <div>
                        <h3 class="text-lg font-bold font-poppins text-gray-900">Pièces Justificatives</h3>
                        <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mt-0.5">Vérification de l'identité</p>
                    </div>
                    {% if user.verifications|length > 0 %}
                    <span class="text-[10px] font-bold px-3 py-1 rounded-full bg-emerald-50 text-emerald-600 border border-emerald-100 uppercase tracking-widest">
                        {{ latestV and latestV.documentFront and latestV.selfie ? 'Dossier Complet' : 'Dossier Partiel' }}
                    </span>
                    {% endif %}
                </div>
                
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                    <div class="p-6 rounded-2xl bg-gray-50 border border-gray-100 transition-all hover:border-emerald-200 group">
                        <div class="w-12 h-12 rounded-2xl bg-white border border-emerald-100 text-emerald-600 flex items-center justify-center mb-6 shadow-sm group-hover:bg-emerald-600 group-hover:text-white transition-all">
                            <i class="fas fa-id-card text-lg"></i>
                        </div>
                        {% if latestV and latestV.documentFront %}
                            {% set identityData = latestV.identityData|json_decode %}
                            {% if identityData %}
                            <div class="mb-4 p-4 bg-emerald-50/30 rounded-2xl border border-emerald-100/50 backdrop-blur-sm">
                                <div class="flex items-center gap-3 mb-3 pb-3 border-b border-emerald-100/30">
                                    <div class="w-8 h-8 rounded-lg bg-emerald-100 flex items-center justify-center text-emerald-600">
                                        <i class="fas fa-file-invoice text-sm"></i>
                                    </div>
                                    <div>
                                        <p class="text-[9px] font-black text-emerald-800 uppercase tracking-widest leading-none">Type de Document</p>
                                        <p class="text-xs font-bold text-gray-900">{{ identityData.type|default('N/A')|upper }}</p>
                                    </div>
                                </div>
                                <div class="space-y-3">
                                    <div>
                                        <p class="text-[9px] font-black text-emerald-800 uppercase tracking-widest leading-none mb-1 opacity-60">Numéro</p>
                                        <p class="text-xs font-mono font-bold text-gray-900 tracking-wider">{{ identityData.number|default('N/A') }}</p>
                                    </div>
                                </div>
                            </div>
                            {% endif %}

                            <div class="flex flex-col gap-2">
                                {% set docParts = latestV.documentFront|replace({'/uploads/': '', 'uploads/': ''})|split('/') %}
                                {% set docUrl = path('admin_media_serve', {type: docParts[0], filename: docParts[1]}) %}
                                <button onclick="previewImage('{{ docUrl }}', 'Pièce d\'Identité')" class="inline-flex items-center text-[10px] font-bold text-emerald-600 hover:text-emerald-700 uppercase tracking-widest transition-colors">
                                     Consulter l'original
                                </button>
                            </div>
                        {% else %}
                            <p class="text-[10px] font-bold text-gray-300 uppercase mb-4 tracking-tighter">Manquant</p>
                            <span class="text-[10px] font-bold text-gray-300 uppercase tracking-widest opacity-50 italic">Aucune donnée</span>
                        {% endif %}
                    </div>
                    
                    <div class="p-6 rounded-2xl bg-gray-50 border border-gray-100 transition-all hover:border-amber-200 group">
                        <div class="w-12 h-12 rounded-2xl bg-white border border-amber-100 text-amber-600 flex items-center justify-center mb-6 shadow-sm group-hover:bg-amber-600 group-hover:text-white transition-all">
                            <i class="fas fa-camera text-lg"></i>
                        </div>
                        <p class="text-xs font-bold text-gray-900 mb-1">Selfie de Contrôle</p>
                        {% if latestV and latestV.selfie %}
                        <p class="text-[10px] font-bold text-emerald-600 uppercase mb-4 tracking-tighter">Capturé</p>
                        <div class="flex flex-col gap-2">
                            {% set selfieParts = latestV.selfie|replace({'/uploads/': '', 'uploads/': ''})|split('/') %}
                            {% set selfieUrl = path('admin_media_serve', {type: selfieParts[0], filename: selfieParts[1]}) %}
                            <button onclick="previewImage('{{ selfieUrl }}', 'Selfie')" class="inline-flex items-center text-[10px] font-bold text-amber-600 hover:text-amber-700 uppercase tracking-widest transition-colors">
                               Consulter l'original
                            </button>
                        </div>
                        {% else %}
                        <p class="text-[10px] font-bold text-gray-300 uppercase mb-4 tracking-tighter">Néant</p>
                        <span class="text-[10px] font-bold text-gray-300 uppercase tracking-widest opacity-50 italic">En attente</span>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="space-y-8">
                <!-- Localisation & Rôles -->
                <div class="bg-white rounded-3xl border border-gray-100 p-8 shadow-sm">
                    <h3 class="text-lg font-bold font-poppins text-gray-900 mb-6 flex items-center gap-3">
                        <i class="fas fa-map-location-dot text-emerald-600"></i>
                        Localisation
                    </h3>
                    {% if user.address %}
                    <div class="p-6 rounded-2xl border border-gray-100 bg-gray-50/50">
                        <p class="text-sm font-medium text-gray-900 italic leading-relaxed">"{{ user.address }}"</p>
                    </div>
                    {% else %}
                    <div class="p-6 rounded-2xl border border-gray-50 bg-gray-50/30 text-center">
                        <p class="text-[11px] font-bold text-gray-300 uppercase tracking-widest italic">Aucune coordonnée enregistrée</p>
                    </div>
                    {% endif %}
                </div>

                <div class="bg-white rounded-3xl border border-gray-100 p-8 shadow-sm">
                    <h3 class="text-lg font-bold font-poppins text-gray-900 mb-6 flex items-center gap-3">
                        <i class="fas fa-user-shield text-emerald-600"></i>
                        Privilèges Système
                    </h3>
                    <div class="flex flex-wrap gap-3">
                        {% for role in user.roles %}
                        <span class="inline-flex items-center gap-2 px-4 py-2 rounded-xl text-[10px] font-bold uppercase tracking-widest 
                            {% if role == 'ROLE_ADMIN' %} bg-red-600 text-white shadow-lg shadow-red-500/20 {% elseif role == 'ROLE_USER' %} bg-emerald-600 text-white shadow-lg shadow-emerald-500/20 {% else %} bg-gray-900 text-white {% endif %}">
                            <i class="fas {% if role == 'ROLE_ADMIN' %}fa-crown{% elseif role == 'ROLE_USER' %}fa-user{% else %}fa-tag{% endif %} text-[8px]"></i>
                            {{ role|replace({'ROLE_': ''}) }}
                        </span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

      

        <!-- Historique des Vérifications -->
        <div class="bg-white rounded-[2.5rem] border border-gray-100 overflow-hidden shadow-sm mt-8">
            <div class="bg-gray-50/50 px-8 py-6 border-b border-gray-50 flex justify-between items-center">
                <div>
                    <h3 class="text-lg font-bold font-poppins text-gray-900">Historique des Vérifications</h3>
                    <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mt-0.5">Toutes les tentatives de l'utilisateur</p>
                </div>
                <span class="bg-gray-200 text-gray-700 px-3 py-1 rounded-full text-[10px] font-bold uppercase">{{ user.verifications|length }} TENTATIVES</span>
            </div>
            
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-gray-50/30">
                            <th class="px-8 py-4 text-left text-[10px] font-bold text-gray-600 uppercase tracking-widest">Date</th>
                            <th class="px-8 py-4 text-left text-[10px] font-bold text-gray-600 uppercase tracking-widest">Statut</th>
                            <th class="px-8 py-4 text-left text-[10px] font-bold text-gray-600 uppercase tracking-widest">Document</th>
                            <th class="px-8 py-4 text-left text-[10px] font-bold text-gray-600 uppercase tracking-widest">Motif de rejet / Note</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50">
                        {% for v in user.verifications %}
                        <tr class="hover:bg-gray-50/50 transition-colors">
                            <td class="px-8 py-4 text-xs font-medium text-gray-900">{{ v.submittedAt|date('d/m/Y H:i') }}</td>
                            <td class="px-8 py-4">
                                <span class="inline-flex items-center px-2 py-1 rounded-lg text-[9px] font-bold uppercase tracking-wider
                                    {% if v.status == 'verified' %} bg-emerald-50 text-emerald-600 {% elseif v.status == 'pending' %} bg-amber-50 text-amber-600 {% else %} bg-red-50 text-red-600 {% endif %}">
                                    {{ v.status|replace({'verified': 'Validé', 'pending': 'En attente', 'rejected': 'Rejeté'}) }}
                                </span>
                            </td>
                            <td class="px-8 py-4 text-xs font-medium text-gray-600 uppercase">
                                {% set vData = v.identityData|json_decode %}
                                {{ vData.type|default('—') }}
                            </td>
                            <td class="px-8 py-4 text-xs text-gray-600 italic">
                                {{ v.rejectionReason|default('—') }}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
             </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');
    .font-poppins { font-family: 'Poppins', sans-serif; }
    
    .bg-white { animation: fadeInUp 0.5s ease-out both; }
    .bg-white:nth-child(1) { animation-delay: 0.1s; }
    .bg-white:nth-child(2) { animation-delay: 0.2s; }
    .bg-white:nth-child(3) { animation-delay: 0.3s; }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
    <!-- Modal Rejet (Fusionné) -->
    <div id="reject-form-modal" class="fixed inset-0 z-[110] hidden items-center justify-center p-4 bg-black/60 backdrop-blur-sm">
        <div class="bg-white rounded-3xl max-w-md w-full p-8 shadow-2xl animate-in zoom-in duration-300">
            <h4 class="text-xl font-bold font-poppins text-gray-900 mb-2">Motif du rejet</h4>
            <p class="text-xs font-medium text-gray-500 mb-6">Précisez la raison pour laquelle ce dossier n'est pas conforme.</p>
            
            <form method="post" action="{{ path('admin_user_verification_reject', {'id': user.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ user.id) }}">
                <textarea name="rejection_reason" rows="4" required class="w-full rounded-2xl border-gray-100 bg-gray-50 p-4 text-sm focus:ring-2 focus:ring-red-500/20 focus:border-red-500 outline-none transition-all placeholder:text-gray-400 font-medium mb-6" placeholder="Ex: Photo illisible, Document expiré..."></textarea>
                
                <div class="grid grid-cols-2 gap-4">
                    <button type="button" onclick="document.getElementById('reject-form-modal').classList.add('hidden')" class="px-6 py-3 bg-gray-100 text-gray-600 text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-gray-200 transition-all">
                        Annuler
                    </button>
                    <button type="submit" class="px-6 py-3 bg-red-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-red-700 transition-all shadow-lg shadow-red-500/20">
                        Confirmer le rejet
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal de prévisualisation -->
    <div id="imagePreviewModal" class="fixed inset-0 z-[100] hidden items-center justify-center p-4 bg-black/90 backdrop-blur-sm animate-in fade-in duration-300">
        <div class="relative max-w-5xl w-full flex flex-col items-center">
            <div class="w-full flex justify-between items-center mb-4 text-white font-poppins">
                <h4 id="previewTitle" class="text-sm font-bold uppercase tracking-widest">Aperçu du document</h4>
                <button onclick="closePreview()" class="w-10 h-10 rounded-full bg-white/10 hover:bg-white/20 flex items-center justify-center transition-all">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="bg-white p-2 rounded-2xl shadow-2xl overflow-hidden max-h-[80vh] flex items-center justify-center">
                <img id="previewImg" src="" alt="Aperçu" class="max-w-full max-h-full object-contain rounded-xl">
            </div>
            <div class="mt-6">
                <button onclick="closePreview()" class="px-8 py-3 bg-white text-black text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-gray-100 transition-all shadow-xl font-poppins">
                    Fermer l'aperçu
                </button>
            </div>
        </div>
    </div>

    <script>
        function previewImage(src, title) {
            const modal = document.getElementById('imagePreviewModal');
            const modalImg = document.getElementById('previewImg');
            const modalTitle = document.getElementById('previewTitle');
            
            modalImg.src = src;
            modalTitle.textContent = title;
            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden';
        }

        function closePreview() {
            const modal = document.getElementById('imagePreviewModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = '';
        }

        // Fermer au clic extérieur
        document.getElementById('imagePreviewModal').addEventListener('click', function(event) {
            if (event.target === this) {
                closePreview();
            }
        });
    </script>
