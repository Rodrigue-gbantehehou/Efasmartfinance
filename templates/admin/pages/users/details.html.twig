                           class="inline-flex items-center gap-2 text-sm text-green-700 hover:text-accent transition-colors">
                            <i class="fas fa-eye"></i>
                            Voir le selfie
                        </a>
                        {% else %}
                        <p class="text-sm text-gray-500">Selfie non fourni</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Adresse et rôles -->
            <div class="space-y-6">
                <!-- Adresse -->
                <div class="bg-white rounded-2xl border border-gray-200 p-5 md:p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Adresse</h3>
                    {% if user.address %}
                    <div class="flex items-start gap-3">
                        <div class="h-8 w-8 rounded-lg bg-red-50 text-red-600 flex items-center justify-center flex-shrink-0">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <p class="text-sm text-gray-900 whitespace-pre-line">{{ user.address }}</p>
                    </div>
                    {% else %}
                    <p class="text-sm text-gray-500">Aucune adresse renseignée</p>
                    {% endif %}
                </div>

                <!-- Rôles -->
                <div class="bg-white rounded-2xl border border-gray-200 p-5 md:p-6">
                    <h3 class="text-lg font-bold text-gray-900 mb-4">Rôles</h3>
                    <div class="flex flex-wrap gap-2">
                        {% for role in user.roles %}
                        <span class="inline-flex items-center gap-1 px-3 py-1.5 rounded-lg text-sm font-medium 
                            {% if role == 'ROLE_ADMIN' %}
                                bg-red-50 text-red-700 border border-red-200
                            {% elseif role == 'ROLE_USER' %}
                                bg-green-50 text-green-700 border border-green-200
                            {% elseif role == 'ROLE_MODERATOR' %}
                                bg-violet-50 text-violet-700 border border-violet-200
                            {% else %}
                                bg-gray-50 text-gray-700 border border-gray-200
                            {% endif %}">
                            <i class="fas fa-{% if role == 'ROLE_ADMIN' %}crown{% elseif role == 'ROLE_USER' %}user{% else %}user-tag{% endif %}"></i>
                            {{ role }}
                        </span>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden">
            <div class="p-5 md:p-6 border-b border-gray-200">
                <h3 class="text-lg font-bold text-gray-900">Statistiques</h3>
                <p class="text-gray-600 text-sm mt-1">Activité globale de l'utilisateur</p>
            </div>
            
            <div class="p-5 md:p-6">
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
                    {% set statItems = [
                        { icon: 'piggy-bank', color: 'green', label: 'Portefeuilles', value: stats.wallets_count ?? 0 },
                        { icon: 'exchange-alt', color: 'emerald', label: 'Transactions', value: stats.transactions_count ?? 0 },
                        { icon: 'hand-holding-usd', color: 'amber', label: 'Retraits', value: stats.withdrawals_count ?? 0 },
                        { icon: 'users', color: 'violet', label: 'Tontines', value: stats.tontines_count ?? 0 },
                        { icon: 'history', color: 'indigo', label: 'Activités', value: stats.activity_logs_count ?? 0 },
                        { icon: 'shield-alt', color: 'red', label: 'Sécurité', value: stats.security_logs_count ?? 0 }
                    ] %}
                    
                    {% for stat in statItems %}
                    <div class="text-center p-4 rounded-xl bg-gray-50 hover:bg-gray-100 transition-colors">
                        <div class="mb-3">
                            <div class="h-12 w-12 rounded-full bg-{{ stat.color }}-100 text-{{ stat.color }}-600 flex items-center justify-center mx-auto">
                                <i class="fas fa-{{ stat.icon }} text-lg"></i>
                            </div>
                        </div>
                        <div class="text-2xl font-bold text-gray-900">{{ stat.value }}</div>
                        <div class="text-xs text-gray-600 mt-1">{{ stat.label }}</div>
