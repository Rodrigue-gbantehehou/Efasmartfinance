{% extends 'admin/base.html.twig' %}

{% block title %}{{ user.firstname }} {{ user.lastname }} - Détails utilisateur{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
    <!-- Header avec navigation -->
    <div class="bg-white border-b border-gray-200 px-4 md:px-6 py-4">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <div class="flex items-center gap-3">
                <a href="{{ path('admin_users') }}" 
                   class="p-2 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100 transition-colors">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div>
                    <h1 class="text-xl md:text-2xl font-bold text-gray-900">{{ user.firstname }} {{ user.lastname }}</h1>
                    <div class="flex items-center gap-2 mt-1">
                        <span class="text-sm text-gray-600">{{ user.email }}</span>
                        <span class="text-xs px-2 py-0.5 rounded-full bg-gray-100 text-gray-700">
                            ID: #{{ user.id }}
                        </span>
                    </div>
                </div>
            </div>
           
        </div>
    </div>

    <!-- Contenu principal -->
    <div class="p-4 md:p-6 space-y-6">
        <!-- Section supérieure - Profil et statut -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Carte profil -->
            <div class="bg-white rounded-2xl border border-gray-200 p-5 md:p-6">
                <div class="flex items-center gap-4 mb-6">
                    <div class="relative">
                        <div class="h-16 w-16 rounded-full bg-gradient-to-br from-green-100 to-green-200 flex items-center justify-center">
                            <i class="fas fa-user text-2xl text-green-600"></i>
                        </div>
                        {% if user.isVerified %}
                        <div class="absolute -bottom-1 -right-1 h-6 w-6 rounded-full bg-emerald-500 text-white flex items-center justify-center text-xs">
                            <i class="fas fa-check"></i>
                        </div>
                        {% endif %}
                    </div>
                    <div class="flex-1">
                        <h3 class="text-lg font-bold text-gray-900">{{ user.firstname }} {{ user.lastname }}</h3>
                        <p class="text-gray-600 text-sm mt-1">{{ user.email }}</p>
                        <div class="flex items-center gap-2 mt-2">
                            <span class="inline-flex items-center text-xs px-2.5 py-1 rounded-full bg-{{ user.isActive ? 'emerald' : 'red' }}-100 text-{{ user.isActive ? 'emerald' : 'red' }}-700">
                                <i class="fas fa-circle text-[8px] mr-1"></i>
                                {{ user.isActive ? 'Actif' : 'Inactif' }}
                            </span>
                            {% if user.verificationStatut %}
                            <span class="inline-flex items-center text-xs px-2.5 py-1 rounded-full bg-{{ user.verificationStatut == 'Vérifié' ? 'emerald' : (user.verificationStatut == 'En attente' ? 'amber' : 'gray') }}-100 text-{{ user.verificationStatut == 'Vérifié' ? 'emerald' : (user.verificationStatut == 'En attente' ? 'amber' : 'gray') }}-700">
                                {{ user.verificationStatut }}
                            </span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-xs text-gray-500 mb-1">Téléphone</p>
                        <p class="text-sm font-medium text-gray-900">{{ user.phoneNumber ?? 'Non renseigné' }}</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500 mb-1">Nationalité</p>
                        <p class="text-sm font-medium text-gray-900">{{ user.nationality ?? 'Non renseignée' }}</p>
                    </div>
                    <div class="col-span-2">
                        <p class="text-xs text-gray-500 mb-1">Date de naissance</p>
                        <p class="text-sm font-medium text-gray-900">
                            {{ user.birthDate ? user.birthDate|date('d/m/Y') : 'Non renseignée' }}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Carte statut -->
            <div class="bg-white rounded-2xl border border-gray-200 p-5 md:p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-6">État du compte</h3>
                
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="h-10 w-10 rounded-lg bg-emerald-50 text-emerald-600 flex items-center justify-center">
                                <i class="fas fa-user-check"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-900">Compte</p>
                                <p class="text-xs text-gray-500">Activé/Désactivé</p>
                            </div>
                        </div>
                        <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-{{ user.isActive ? 'emerald' : 'red' }}-100 text-{{ user.isActive ? 'emerald' : 'red' }}-700">
                            {{ user.isActive ? 'Activé' : 'Désactivé' }}
                        </span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="h-10 w-10 rounded-lg bg-green-50 text-green-600 flex items-center justify-center">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-900">Email</p>
                                <p class="text-xs text-gray-500">Vérification</p>
                            </div>
                        </div>
                        <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-{{ user.isVerified ? 'emerald' : 'amber' }}-100 text-{{ user.isVerified ? 'emerald' : 'amber' }}-700">
                            {{ user.isVerified ? 'Vérifié' : 'Non vérifié' }}
                        </span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-3">
                            <div class="h-10 w-10 rounded-lg bg-violet-50 text-violet-600 flex items-center justify-center">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <div>
                                <p class="text-sm font-medium text-gray-900">KYC</p>
                                <p class="text-xs text-gray-500">Vérification</p>
                            </div>
                        </div>
                        <span class="text-xs font-medium px-2.5 py-1 rounded-full bg-{{ user.verificationStatut == 'Vérifié' ? 'emerald' : (user.verificationStatut == 'En attente' ? 'amber' : 'red') }}-100 text-{{ user.verificationStatut == 'Vérifié' ? 'emerald' : (user.verificationStatut == 'En attente' ? 'amber' : 'red') }}-700">
                            {{ user.verificationStatut ?? 'Non vérifié' }}
                        </span>
                    </div>
                </div>
            </div>

            <!-- Carte activité -->
            <div class="bg-white rounded-2xl border border-gray-200 p-5 md:p-6">
                <h3 class="text-lg font-bold text-gray-900 mb-6">Activité</h3>
                
                <div class="space-y-4">
                    <div>
                        <p class="text-xs text-gray-500 mb-1">Création du compte</p>
                        <div class="flex items-center gap-2">
                            <i class="fas fa-calendar-plus text-gray-400"></i>
                            <p class="text-sm font-medium text-gray-900">
                                {{ user.createdAt|date('d/m/Y à H:i') }}
                            </p>
                        </div>
                    </div>
                    
                    <div>
                        <p class="text-xs text-gray-500 mb-1">Dernière connexion</p>
                        <div class="flex items-center gap-2">
                            <i class="fas fa-sign-in-alt text-gray-400"></i>
                            <p class="text-sm font-medium text-gray-900">
                                {% if user.lastLoginAt %}
                                    {{ user.lastLoginAt|date('d/m/Y à H:i') }}
                                {% else %}
                                    <span class="text-gray-500">Jamais connecté</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    
                    <div>
                        <p class="text-xs text-gray-500 mb-1">Soumission KYC</p>
                        <div class="flex items-center gap-2">
                            <i class="fas fa-clock text-gray-400"></i>
                            <p class="text-sm font-medium text-gray-900">
                                {{ user.verificationSubmittedAt ? user.verificationSubmittedAt|date('d/m/Y H:i') : 'Non soumis' }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section documents et adresse -->
