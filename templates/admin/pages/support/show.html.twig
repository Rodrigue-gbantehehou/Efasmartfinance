{% extends 'admin/base.html.twig' %}

{% block title %}Ticket #{{ ticket.id }} — Assistance Pro{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50 p-6 lg:p-8">
    <!-- Breadcrumb & Back -->
    <div class="mb-8 flex items-center justify-between">
        <a href="{{ path('admin_support') }}" class="group flex items-center gap-2 text-gray-600 hover:text-emerald-600 transition-colors">
            <div class="w-8 h-8 rounded-lg bg-white border border-gray-100 flex items-center justify-center shadow-sm group-hover:border-emerald-100 group-hover:bg-emerald-50">
                <i class="fas fa-arrow-left text-xs"></i>
            </div>
            <span class="text-[10px] font-bold uppercase tracking-widest">Retour au centre d'aide</span>
        </a>
        <div class="flex items-center gap-2">
            <span class="px-3 py-1 rounded-full text-[10px] font-black uppercase tracking-tighter border
                {{ ticket.isClosed() ? 'bg-gray-100 text-gray-600 border-gray-200' : 'bg-emerald-50 text-emerald-600 border-emerald-100' }}">
                Statut: {{ ticket.isClosed() ? 'Clos' : 'Ouvert' }}
            </span>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Ticket Conversation -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Subject Card -->
            <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm p-8 lg:p-10 relative overflow-hidden">
                <div class="absolute top-0 right-0 w-32 h-32 bg-emerald-50/50 rounded-full -mr-16 -mt-16"></div>
                
                <p class="text-[10px] font-black text-emerald-500 uppercase tracking-[0.2em] mb-4">Sujet de la demande</p>
                <h1 class="text-3xl font-bold font-poppins text-gray-900 leading-tight mb-6">
                    {{ ticket.sujet }}
                </h1>
                
                <div class="p-6 bg-gray-50 rounded-2xl border border-gray-100 text-gray-600 text-sm leading-relaxed whitespace-pre-line font-medium italic">
                    "{{ ticket.description }}"
                </div>

                {% if ticket.fichier %}
                <div class="mt-8 pt-8 border-t border-gray-50">
                    <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mb-4">Pièce jointe</p>
                    <a href="{{ asset('uploads/support/' ~ ticket.fichier) }}" target="_blank" class="inline-flex items-center gap-3 p-4 bg-white border border-gray-100 rounded-xl hover:border-emerald-200 hover:shadow-md transition-all group">
                        <div class="w-10 h-10 rounded-lg bg-emerald-50 text-emerald-600 flex items-center justify-center">
                            <i class="fas fa-file-image"></i>
                        </div>
                        <div class="text-left">
                            <span class="block text-xs font-bold text-gray-900 uppercase">Visualiser le document</span>
                            <span class="block text-[10px] text-gray-600">Cliquez pour ouvrir</span>
                        </div>
                    </a>
                </div>
                {% endif %}
            </div>

            <!-- Admin Response Section -->
            <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm overflow-hidden">
                <div class="p-8 lg:p-10 bg-gray-900 text-white">
                    <div class="flex items-center gap-4 mb-2">
                        <div class="w-10 h-10 rounded-full bg-emerald-500 text-white flex items-center justify-center shadow-lg shadow-emerald-500/20">
                            <i class="fas fa-user-shield text-sm"></i>
                        </div>
                        <div>
                            <h3 class="text-sm font-bold font-poppins tracking-wide">Réponse Officielle</h3>
                            <p class="text-[10px] text-gray-600 uppercase tracking-widest">Support Technique</p>
                        </div>
                    </div>
                </div>
                
                <div class="p-8 lg:p-10">
                    <form action="{{ path('admin_support_ticket_respond', {'id': ticket.id}) }}" method="POST" class="space-y-6">
                        <div class="space-y-2">
                            <label for="response" class="text-[10px] font-bold text-gray-600 uppercase tracking-widest ml-1">Message à l'utilisateur</label>
                            <textarea id="response" name="response" rows="8" placeholder="Rédigez votre réponse ici..." 
                                class="w-full p-6 bg-gray-50 border-none rounded-2xl focus:ring-2 focus:ring-emerald-500/20 text-sm font-medium transition-all min-h-[200px]">{{ ticket.reponse ?? '' }}</textarea>
                        </div>
                        
                        <div class="flex flex-wrap items-center justify-between gap-4 pt-6 border-t border-gray-50">
                            <div class="flex gap-3">
                                <button type="submit" class="h-12 px-8 bg-emerald-600 text-white rounded-xl text-xs font-bold uppercase tracking-widest hover:bg-emerald-700 transition-all flex items-center gap-2 shadow-lg shadow-emerald-100">
                                    <i class="fas fa-paper-plane"></i> {{ ticket.reponse ? 'Actualiser la réponse' : 'Publier la réponse' }}
                                </button>
                                
                                {% if ticket.reponse %}
                                <a href="mailto:{{ ticket.utilisateur ? ticket.utilisateur.email : '' }}" class="h-12 px-6 bg-white border border-gray-100 rounded-xl text-xs font-bold uppercase tracking-widest text-gray-600 hover:bg-gray-50 transition-all flex items-center gap-2 shadow-sm">
                                    <i class="fas fa-envelope-open-text"></i> Email direct
                                </a>
                                {% endif %}
                            </div>

                            {% if ticket.reponse %}
                            <form action="{{ path('admin_support_ticket_close', {'id': ticket.id}) }}" method="POST">
                                <input type="hidden" name="_token" value="{{ csrf_token('close' ~ ticket.id) }}">
                                <button type="submit" class="h-12 px-6 border {{ ticket.isClosed() ? 'bg-emerald-50 border-emerald-100 text-emerald-600 hover:bg-emerald-100' : 'bg-rose-50 border-rose-100 text-rose-600 hover:bg-rose-100' }} rounded-xl text-[10px] font-black uppercase tracking-widest transition-all">
                                    {{ ticket.isClosed() ? 'Rouvrir le dossier' : 'Clore le ticket' }}
                                </button>
                            </form>
                            {% endif %}
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar Info -->
        <div class="space-y-8">
            <!-- User Card -->
            <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm p-8">
                <p class="text-[10px] font-black text-gray-600 uppercase tracking-widest mb-6 border-b border-gray-50 pb-4">Demandeur</p>
                {% if ticket.utilisateur %}
                <div class="text-center">
                    <div class="w-20 h-20 rounded-3xl bg-emerald-50 text-emerald-600 flex items-center justify-center text-2xl font-black uppercase mx-auto mb-4 shadow-inner">
                        {{ ticket.utilisateur.firstname|slice(0, 1) }}{{ ticket.utilisateur.lastname|slice(0, 1) }}
                    </div>
                    <h4 class="text-lg font-bold text-gray-900 font-poppins">{{ ticket.utilisateur.firstname }} {{ ticket.utilisateur.lastname }}</h4>
                    <p class="text-xs text-gray-600 font-medium mb-6">{{ ticket.utilisateur.email }}</p>
                    
                    <a href="{{ path('admin_users_details', {'id': ticket.utilisateur.id}) }}" class="flex items-center justify-center gap-2 w-full py-3 bg-gray-50 rounded-xl text-[10px] font-bold uppercase tracking-widest text-gray-600 hover:bg-emerald-50 hover:text-emerald-600 transition-all border border-transparent hover:border-emerald-100">
                        <i class="fas fa-external-link-alt text-[8px]"></i> Profil Complet
                    </a>
                </div>
                {% else %}
                <div class="text-center py-6">
                    <i class="fas fa-mask text-3xl text-gray-100 mb-4 block"></i>
                    <p class="text-xs font-bold text-gray-600 uppercase">Anonymat Total</p>
                </div>
                {% endif %}
            </div>

            <!-- Stats & Timeline -->
            <div class="bg-[#1e293b] rounded-[2.5rem] p-8 text-white relative overflow-hidden">
                <div class="absolute top-0 right-0 w-32 h-32 bg-white/5 rounded-full -mr-16 -mt-16"></div>
                
                <p class="text-[10px] font-black text-gray-600 uppercase tracking-widest mb-6">Chronologie</p>
                
                <div class="space-y-8 relative before:absolute before:left-3 before:top-2 before:bottom-2 before:w-[2px] before:bg-white/10">
                    <div class="relative pl-10">
                        <div class="absolute left-0 top-0 w-6 h-6 rounded-full bg-emerald-500 flex items-center justify-center ring-4 ring-slate-800">
                            <i class="fas fa-plus text-[8px]"></i>
                        </div>
                        <p class="text-[10px] font-black text-gray-600 uppercase tracking-tighter">Création</p>
                        <p class="text-xs font-bold mt-1 tracking-tight">{{ ticket.createdAt|date('d/m/Y H:i') }}</p>
                    </div>

                    {% if ticket.repliedAt %}
                    <div class="relative pl-10">
                        <div class="absolute left-0 top-0 w-6 h-6 rounded-full bg-amber-500 flex items-center justify-center ring-4 ring-slate-800">
                            <i class="fas fa-reply text-[8px]"></i>
                        </div>
                        <p class="text-[10px] font-black text-gray-600 uppercase tracking-tighter">Réponse</p>
                        <p class="text-xs font-bold mt-1 tracking-tight">{{ ticket.repliedAt|date('d/m/Y H:i') }}</p>
                    </div>
                    {% endif %}

                    {% if ticket.closedAt %}
                    <div class="relative pl-10">
                        <div class="absolute left-0 top-0 w-6 h-6 rounded-full bg-gray-600 flex items-center justify-center ring-4 ring-slate-800">
                            <i class="fas fa-lock text-[8px]"></i>
                        </div>
                        <p class="text-[10px] font-black text-gray-600 uppercase tracking-tighter">Clôture</p>
                        <p class="text-xs font-bold mt-1 tracking-tight">{{ ticket.closedAt|date('d/m/Y H:i') }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;900&display=swap');
    .font-poppins { font-family: 'Poppins', sans-serif; }
</style>
{% endblock %}
