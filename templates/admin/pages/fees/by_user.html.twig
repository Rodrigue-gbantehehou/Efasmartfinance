{% extends 'admin/base.html.twig' %}

{% block title %}Profil Revenue — {{ user.fullName }}{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50 p-6 lg:p-8">
    <!-- Header -->
    <div class="mb-10 flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <a href="{{ path('app_admin_fees') }}" class="group flex items-center justify-center w-10 h-10 rounded-xl bg-white border border-gray-100 text-gray-400 hover:text-emerald-600 hover:border-emerald-100 transition-all shadow-sm">
                    <i class="fas fa-arrow-left text-xs group-hover:-translate-x-0.5 transition-transform"></i>
                </a>
                <span class="text-xs font-bold text-gray-400 uppercase tracking-widest">Retour au Dashboard Revenue</span>
            </div>
            <h1 class="text-3xl font-bold font-poppins text-gray-900 tracking-tight">Audit Portefeuille Utilisateur</h1>
            <p class="text-gray-500 font-medium mt-1">Analyse des prélèvements liés au compte de <span class="text-emerald-600 font-bold underline decoration-emerald-200 underline-offset-4">{{ user.fullName }}</span></p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Table -->
        <div class="lg:col-span-2 space-y-8">
            <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm overflow-hidden">
                <div class="p-8 border-b border-gray-50 bg-gray-50/30 flex items-center justify-between">
                    <div>
                        <h3 class="text-lg font-bold text-gray-900">Activités Commerciales</h3>
                        <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest mt-1">Détails des commissions consommées</p>
                    </div>
                </div>

                {% if fees is not empty %}
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                            <tr class="bg-white border-b border-gray-50">
                                <th class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest">Type d'Opération</th>
                                <th class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest text-right">Montant Cumulé</th>
                                <th class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-widest text-right font-center">Action</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-50">
                            {% for fee in fees %}
                            <tr class="group hover:bg-gray-50 transition-all duration-300">
                                <td class="px-8 py-6">
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 rounded-xl bg-gray-50 flex items-center justify-center text-emerald-600 group-hover:bg-emerald-600 group-hover:text-white transition-all">
                                            <i class="fas fa-receipt text-xs"></i>
                                        </div>
                                        <span class="font-bold text-gray-900 text-sm font-poppins">{{ fee.type|trans }}</span>
                                    </div>
                                </td>
                                <td class="px-8 py-6 text-right font-bold text-gray-900 text-sm">
                                    {{ fee.total|number_format(0, ',', ' ') }} <span class="text-[10px] text-gray-400 font-bold">FCFA</span>
                                </td>
                                <td class="px-8 py-6 text-right">
                                    <button class="h-10 px-4 bg-gray-50 text-[10px] font-bold text-gray-400 uppercase tracking-widest rounded-xl hover:bg-emerald-600 hover:text-white transition-all">Détails</button>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot class="bg-gray-50/50">
                            <tr>
                                <td class="px-8 py-6 text-sm font-bold text-gray-500 uppercase tracking-widest">Valeur Totale Apportée</td>
                                <td class="px-8 py-6 text-right text-xl font-black font-poppins text-emerald-600">
                                    {{ total|number_format(0, ',', ' ') }} <span class="text-xs">FCFA</span>
                                </td>
                                <td class="px-8 py-6"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                {% else %}
                <div class="p-20 text-center">
                    <div class="w-20 h-20 rounded-[2rem] bg-gray-50 text-gray-200 flex items-center justify-center text-3xl mx-auto mb-4">
                        <i class="fas fa-user-slash"></i>
                    </div>
                    <p class="text-gray-400 font-medium">Aucun revenu généré par cet utilisateur.</p>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Sidebar User Card -->
        <div class="space-y-8">
            <div class="bg-white rounded-[2.5rem] p-10 border border-gray-100 shadow-sm relative overflow-hidden">
                <div class="absolute top-0 right-0 p-8 opacity-5">
                    <i class="fas fa-user-tie text-8xl"></i>
                </div>
                <h3 class="text-sm font-bold text-gray-400 uppercase tracking-widest mb-8">Informations Client</h3>
                <div class="flex items-center gap-5 mb-8">
                    <div class="w-16 h-16 rounded-2xl bg-gray-50 flex items-center justify-center text-2xl font-bold text-gray-400 border border-gray-100">
                        {{ user.firstname|first }}{{ user.lastname|first }}
                    </div>
                    <div>
                        <p class="text-lg font-bold text-gray-900 leading-tight">{{ user.fullName }}</p>
                        <p class="text-[10px] font-bold text-emerald-500 uppercase tracking-widest mt-1">Contributeur Actif</p>
                    </div>
                </div>
                <div class="space-y-4 pt-8 border-t border-gray-50 text-xs font-medium text-gray-500">
                    <div class="flex items-center gap-3">
                        <i class="fas fa-envelope w-4"></i>
                        <span>{{ user.email }}</span>
                    </div>
                    <div class="flex items-center gap-3">
                        <i class="fas fa-phone w-4"></i>
                        <span>{{ user.phoneNumber ?: 'Non renseigné' }}</span>
                    </div>
                </div>
                <div class="mt-8">
                    <a href="{{ path('admin_user_details', {'id': user.id}) }}" class="w-full h-14 bg-gray-900 text-white rounded-2xl font-bold flex items-center justify-center hover:bg-emerald-600 transition-all shadow-lg shadow-gray-200">
                        Voir Profil Complet
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;900&display=swap');
    .font-poppins { font-family: 'Poppins', sans-serif; }
</style>
{% endblock %}
