{% extends 'admin/base.html.twig' %}
{% block title %}Frais pour {{ user.fullName }}{% endblock %}

{% block contentadmin %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0">Frais de l'utilisateur</h1>
                <h2 class="h4 text-muted">{{ user.fullName }}</h2>
                <div class="text-muted small">
                    {{ user.email }}
                    {% if user.phoneNumber %}| {{ user.phoneNumber }}{% endif %}
                </div>
            </div>
            <a href="{{ path('app_admin_fees') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> Retour
            </a>
        </div>

        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <span>Détail des frais</span>
                    <span class="badge bg-green-700">{{ fees|length }} types de frais</span>
                </div>
            </div>
            <div class="card-body p-0">
                {% if fees is not empty %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Type de frais</th>
                                    <th class="text-end">Montant</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for fee in fees %}
                                    <tr>
                                        <td>{{ fee.type|trans }}</td>
                                        <td class="text-end">{{ fee.total|number_format(2, ',', ' ') }} FCFA</td>
                                        <td class="text-end">
                                            <a href="#" class="btn btn-sm btn-outline-green-700">
                                                <i class="fas fa-search"></i> Détails
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <th>Total</th>
                                    <th class="text-end">{{ total|number_format(2, ',', ' ') }} FCFA</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                {% else %}
                    <div class="p-4 text-center text-muted">
                        <i class="fas fa-info-circle fa-2x mb-3"></i>
                        <p class="mb-0">Aucun frais enregistré pour cet utilisateur</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
