{% extends 'admin/base.html.twig' %}

{% block title %}Administration — Dashboard Financier{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50/50">
    <!-- Header Streamlined -->
    <div class="bg-white border-b border-gray-100 shadow-sm sticky top-0 z-10">
        <div class="px-6 py-5">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                <div>
                    <h1 class="text-2xl font-bold font-poppins text-gray-900 tracking-tight">Pilotage Financier</h1>
                    <p class="text-sm font-medium text-gray-600 mt-0.5">Analyse des revenus, frais et flux de facturation</p>
                </div>
                <div class="flex items-center gap-3">
                    <button class="px-5 py-2.5 bg-gray-900 text-white rounded-xl text-xs font-bold uppercase tracking-widest hover:bg-emerald-600 transition-all shadow-lg shadow-gray-200 flex items-center gap-2">
                        <i class="fas fa-file-export"></i> Exporter les données
                    </button>
                    <a href="{{ path('admin_invoices') }}" class="px-5 py-2.5 bg-white border border-gray-200 text-gray-700 rounded-xl text-xs font-bold uppercase tracking-widest hover:bg-gray-50 transition-all flex items-center gap-2">
                        <i class="fas fa-file-invoice"></i> Invoices
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu -->
    <div class="p-6 space-y-8">
        
        <!-- Stats Cards Refined (Glassmorphism inspired) -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="group bg-white rounded-[2rem] border border-gray-100 p-6 transition-all duration-300 hover:shadow-xl hover:shadow-emerald-500/5 hover:-translate-y-1">
                <div class="flex items-center justify-between mb-5">
                    <div class="w-12 h-12 rounded-2xl bg-emerald-50 text-emerald-600 flex items-center justify-center transition-colors group-hover:bg-emerald-600 group-hover:text-white">
                        <i class="fas fa-wallet text-lg"></i>
                    </div>
                </div>
                <div class="space-y-1">
                    <h3 class="text-3xl font-bold font-poppins text-gray-900">{{ monthlyRevenue|number_format(0, ',', ' ') }}</h3>
                    <p class="text-[10px] font-black text-gray-600 uppercase tracking-[0.2em]">Revenus du mois (FCFA)</p>
                </div>
            </div>

            <div class="group bg-white rounded-[2rem] border border-gray-100 p-6 transition-all duration-300 hover:shadow-xl hover:shadow-green-500/5 hover:-translate-y-1">
                <div class="flex items-center justify-between mb-5">
                    <div class="w-12 h-12 rounded-2xl bg-green-50 text-green-600 flex items-center justify-center transition-colors group-hover:bg-green-600 group-hover:text-white">
                        <i class="fas fa-percentage text-lg"></i>
                    </div>
                </div>
                <div class="space-y-1">
                    <h3 class="text-3xl font-bold font-poppins text-gray-900">{{ monthlyFees|number_format(0, ',', ' ') }}</h3>
                    <p class="text-[10px] font-black text-gray-600 uppercase tracking-[0.2em]">Frais collectés (FCFA)</p>
                </div>
            </div>

            <div class="group bg-white rounded-[2rem] border border-gray-100 p-6 transition-all duration-300 hover:shadow-xl hover:shadow-amber-500/5 hover:-translate-y-1">
                <div class="flex items-center justify-between mb-5">
                    <div class="w-12 h-12 rounded-2xl bg-amber-50 text-amber-600 flex items-center justify-center transition-colors group-hover:bg-amber-600 group-hover:text-white">
                        <i class="fas fa-file-signature text-lg"></i>
                    </div>
                </div>
                <div class="space-y-1">
                    <h3 class="text-3xl font-bold font-poppins text-gray-900">{{ monthlyInvoices }}</h3>
                    <p class="text-[10px] font-black text-gray-600 uppercase tracking-[0.2em]">Factures émises</p>
                </div>
            </div>

            <div class="group bg-white rounded-[2rem] border border-gray-100 p-6 transition-all duration-300 hover:shadow-xl hover:shadow-red-500/5 hover:-translate-y-1">
                <div class="flex items-center justify-between mb-5">
                    <div class="w-12 h-12 rounded-2xl bg-red-50 text-red-600 flex items-center justify-center transition-colors group-hover:bg-red-600 group-hover:text-white">
                        <i class="fas fa-clock text-lg"></i>
                    </div>
                </div>
                <div class="space-y-1">
                    <h3 class="text-3xl font-bold font-poppins text-gray-900">{{ pendingInvoices }}</h3>
                    <p class="text-[10px] font-black text-gray-600 uppercase tracking-[0.2em]">Factures Impayées</p>
                </div>
            </div>
        </div>

        <!-- Charts and Fees Grid -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Revenue Evolution Chart -->
            <div class="lg:col-span-2 bg-white rounded-[2.5rem] border border-gray-100 p-8 shadow-sm">
                <div class="flex items-center justify-between mb-8">
                    <div>
                        <h2 class="text-lg font-bold font-poppins text-gray-900">Performance Trimestrielle</h2>
                        <p class="text-xs font-semibold text-gray-500 uppercase tracking-widest mt-1">Évolution des revenus (12 mois)</p>
                    </div>
                </div>
                <div class="h-[300px]">
                    <canvas id="revenueChart"></canvas>
                </div>
            </div>

            <!-- Fees Breakdown -->
            <div class="bg-white rounded-[2.5rem] border border-gray-100 p-8 shadow-sm h-full">
                <div class="mb-8">
                    <h2 class="text-lg font-bold font-poppins text-gray-900">Répartition des Frais</h2>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-widest mt-1">Données par catégorie</p>
                </div>
                <div class="space-y-4">
                    {% for fee in feesByType %}
                        <div class="p-4 rounded-2xl bg-gray-50/50 border border-gray-100 hover:border-emerald-200 transition-all group">
                            <div class="flex justify-between items-center mb-1">
                                <span class="text-xs font-bold text-gray-900 uppercase tracking-tight">{{ fee.type|replace({'_': ' '}) }}</span>
                                <span class="text-sm font-bold text-emerald-600">{{ fee.total|number_format(0, ',', ' ') }} <span class="text-[10px]">FCFA</span></span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span class="text-[10px] font-bold text-gray-500 uppercase tracking-widest">{{ fee.count }} Transactions</span>
                                <div class="w-16 h-1 bg-gray-200 rounded-full overflow-hidden">
                                    <div class="h-full bg-emerald-500" style="width: 100%"></div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="py-12 text-center">
                            <i class="fas fa-info-circle text-gray-300 text-3xl mb-3"></i>
                            <p class="text-sm font-bold text-gray-400 italic">Aucune donnée disponible</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Recent Transactions Table -->
        <div class="bg-white rounded-[2.5rem] border border-gray-100 overflow-hidden shadow-sm">
            <div class="px-8 py-6 border-b border-gray-50 flex items-center justify-between">
                <div>
                    <h3 class="text-lg font-bold font-poppins text-gray-900">Dernières Transactions</h3>
                    <p class="text-xs font-semibold text-gray-500 uppercase tracking-widest mt-1">Flux validés en temps réel</p>
                </div>
                <a href="{{ path('admin_transactions') }}" class="px-5 py-2.5 bg-gray-50 text-gray-700 border border-gray-200 rounded-xl text-xs font-bold uppercase tracking-widest hover:bg-gray-100 transition-all flex items-center gap-2">
                    Voir tout <i class="fas fa-arrow-right text-[10px]"></i>
                </a>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full border-collapse">
                    <thead>
                        <tr class="bg-gray-50/50">
                            <th class="py-5 px-8 text-left text-[10px] font-black text-gray-600 uppercase tracking-widest">ID</th>
                            <th class="py-5 px-8 text-left text-[10px] font-black text-gray-600 uppercase tracking-widest">Client</th>
                            <th class="py-5 px-8 text-left text-[10px] font-black text-gray-600 uppercase tracking-widest">Montant</th>
                            <th class="py-5 px-8 text-left text-[10px] font-black text-gray-600 uppercase tracking-widest">Méthode</th>
                            <th class="py-5 px-8 text-left text-[10px] font-black text-gray-600 uppercase tracking-widest">Statut</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50">
                        {% for transaction in recentTransactions %}
                        <tr class="hover:bg-gray-50/50 transition-colors group">
                            <td class="py-5 px-8">
                                <span class="text-xs font-bold font-mono text-gray-400">#{{ transaction.id }}</span>
                            </td>
                            <td class="py-5 px-8">
                                {% if transaction.utilisateur %}
                                    <div class="flex flex-col">
                                        <span class="text-sm font-bold text-gray-900">{{ transaction.utilisateur.firstname }} {{ transaction.utilisateur.lastname }}</span>
                                        <span class="text-[10px] font-bold text-gray-500 uppercase">{{ transaction.utilisateur.email }}</span>
                                    </div>
                                {% else %}
                                    <span class="text-xs font-bold text-gray-400 italic">SYSTÈME</span>
                                {% endif %}
                            </td>
                            <td class="py-5 px-8">
                                <div class="flex flex-col">
                                    <span class="text-sm font-black font-poppins text-gray-900">{{ transaction.amount|number_format(0, ',', ' ') }} FCFA</span>
                                    <span class="text-[10px] font-bold text-gray-500 uppercase tracking-tighter">{{ transaction.createdAt|date('d M Y') }}</span>
                                </div>
                            </td>
                            <td class="py-5 px-8">
                                <span class="px-2.5 py-1 bg-gray-100 text-gray-700 rounded-lg text-[10px] font-bold uppercase tracking-wider">
                                    {{ transaction.paymentMethod|default('N/A') }}
                                </span>
                            </td>
                            <td class="py-5 px-8 text-right">
                                <span class="px-3 py-1.5 bg-emerald-50 text-emerald-700 border border-emerald-100 rounded-xl text-[9px] font-black uppercase tracking-widest">
                                    {{ transaction.statut }}
                                </span>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="py-20 text-center">
                                <div class="flex flex-col items-center">
                                    <div class="w-16 h-16 bg-gray-50 rounded-full flex items-center justify-center mb-4">
                                        <i class="fas fa-layer-group text-gray-300 text-2xl"></i>
                                    </div>
                                    <p class="text-sm font-bold text-gray-400 italic">Aucune transaction disponible pour l'instant</p>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('revenueChart').getContext('2d');

    // Gradient pour le graphique
    const gradient = ctx.createLinearGradient(0, 0, 0, 400);
    gradient.addColorStop(0, 'rgba(16, 185, 129, 0.15)');
    gradient.addColorStop(1, 'rgba(16, 185, 129, 0)');

    new Chart(ctx, {
        type: 'line',
        data: {
            labels: {{ revenueChart.labels|json_encode|raw }},
            datasets: [{
                label: 'Revenus (FCFA)',
                data: {{ revenueChart.data|json_encode|raw }},
                borderColor: '#10b981',
                backgroundColor: gradient,
                borderWidth: 3,
                fill: true,
                tension: 0.4,
                pointBackgroundColor: '#10b981',
                pointBorderColor: '#fff',
                pointBorderWidth: 2,
                pointRadius: 6,
                pointHoverRadius: 8
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { display: false },
                tooltip: {
                    backgroundColor: '#111827',
                    titleColor: '#fff',
                    bodyColor: '#fff',
                    padding: 16,
                    cornerRadius: 12,
                    displayColors: false,
                    callbacks: {
                        label: function(context) {
                            return context.parsed.y.toLocaleString('fr-FR') + ' FCFA';
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        color: '#6b7280',
                        font: { size: 10, weight: 'bold' },
                        callback: function(value) {
                            return (value / 1000) + 'k FCFA';
                        }
                    },
                    grid: { color: 'rgba(243, 244, 246, 1)', borderDash: [5, 5] }
                },
                x: {
                    ticks: {
                        color: '#6b7280',
                        font: { size: 10, weight: 'bold' }
                    },
                    grid: { display: false }
                }
            }
        }
    });
</script>
{% endblock %}
