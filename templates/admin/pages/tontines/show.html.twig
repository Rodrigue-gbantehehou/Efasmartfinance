{% extends 'admin/base.html.twig' %}

{% block title %}Détail Tontine — #{{ tontine.tontinecode }}{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50 p-6 lg:p-8">
    <!-- Header avec navigation -->
    <div class="mb-10 flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <a href="{{ path('admin_tontine_index') }}" class="group flex items-center justify-center w-10 h-10 rounded-xl bg-white border border-gray-100 text-gray-600 hover:text-emerald-600 hover:border-emerald-100 transition-all shadow-sm">
                    <i class="fas fa-chevron-left text-xs group-hover:-translate-x-0.5 transition-transform"></i>
                </a>
                <span class="text-xs font-bold text-gray-600 uppercase tracking-widest">Retour au registre</span>
            </div>
            <h1 class="text-3xl font-bold font-poppins text-gray-900 tracking-tight">Gestion du Tontine</h1>
        </div>
        <div class="flex items-center gap-4">
            <div class="h-14 px-6 bg-white border border-gray-100 rounded-2xl flex items-center gap-3 shadow-sm">
                <div class="w-2 h-2 rounded-full {{ tontine.statut == 'active' ? 'bg-emerald-500 animate-pulse' : 'bg-amber-500' }}"></div>
                <span class="text-xs font-bold text-gray-900 uppercase tracking-widest">{{ tontine.statut|replace({'_': ' '}) }}</span>
            </div>
        </div>
    </div>

    <!-- Carte Hero Sophistiquée -->
    <div class="relative bg-white rounded-[3rem] border border-gray-100 shadow-xl overflow-hidden mb-10 group">
        <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-emerald-50/50 to-transparent pointer-events-none"></div>
        <div class="p-10 relative z-10">
            <div class="flex flex-col lg:flex-row lg:items-center gap-10">
                <div class="w-32 h-32 rounded-[2.5rem] bg-emerald-600 text-white flex items-center justify-center text-4xl shadow-2xl shadow-emerald-200 group-hover:scale-105 transition-transform">
                    <i class="fas fa-vault"></i>
                </div>
                <div class="flex-1">
                    <div class="flex flex-wrap items-center gap-4 mb-3">
                        <h2 class="text-4xl font-bold font-poppins text-gray-900 tracking-tight">{{ tontine.name }}</h2>
                        <span class="px-4 py-1.5 bg-emerald-50 text-emerald-600 rounded-xl text-xs font-bold uppercase tracking-widest border border-emerald-100">#{{ tontine.tontinecode }}</span>
                    </div>
                    <p class="text-gray-600 font-medium max-w-2xl leading-relaxed">Lancé le {{ tontine.createdAt|date('d F Y') }}.</p>
                </div>
                <div class="lg:text-right">
                    <p class="text-[10px] font-bold text-gray-600 uppercase tracking-[0.2em] mb-1">Volume Global du Fonds</p>
                    <p class="text-5xl font-black font-poppins text-emerald-600 tracking-tighter">{{ (tontine.amountPerPoint * tontine.totalPoints)|number_format(0, ',', ' ') }}<span class="text-xl ml-2">FCFA</span></p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2 space-y-8">
            <!-- Monitoring des Flux (Progression) -->
            <div class="bg-white rounded-[2.5rem] p-10 border border-gray-100 shadow-sm">
                <div class="flex items-center justify-between mb-10">
                    <div>
                        <h3 class="text-xl font-bold text-gray-900">Suivi des Cotisations</h3>
                        <p class="text-xs font-bold text-gray-600 uppercase tracking-widest mt-1">Avancement en temps réel</p>
                    </div>
                    {% set progression = ((tontine.paidPoints|default(0) / tontine.totalPoints) * 100)|round %}
                    <div class="h-16 w-16 rounded-full border-4 border-emerald-50 flex items-center justify-center relative">
                        <span class="text-sm font-bold text-emerald-600">{{ progression }}%</span>
                        <svg class="absolute inset-0 w-full h-full -rotate-90">
                            <circle cx="32" cy="32" r="28" fill="transparent" stroke="currentColor" stroke-width="4" class="text-emerald-500" stroke-dasharray="176" stroke-dashoffset="{{ 176 - (176 * progression / 100) }}"/>
                        </svg>
                    </div>
                </div>

                <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
                    <div class="p-6 bg-gray-50 rounded-2xl">
                        <p class="text-[9px] font-bold text-gray-600 uppercase tracking-widest mb-2">Points Validés</p>
                        <p class="text-xl font-bold text-emerald-600">{{ tontine.paidPoints|default(0) }} <span class="text-[10px] text-gray-600">/ {{ tontine.totalPoints }}</span></p>
                    </div>
                    <div class="p-6 bg-gray-50 rounded-2xl">
                        <p class="text-[9px] font-bold text-gray-600 uppercase tracking-widest mb-2">Collecté</p>
                        <p class="text-xl font-bold text-gray-900">{{ (tontine.amountPerPoint * tontine.paidPoints|default(0))|number_format(0, ',', ' ') }} <span class="text-[10px]">FCFA</span></p>
                    </div>
                    <div class="p-6 bg-gray-50 rounded-2xl">
                        <p class="text-[9px] font-bold text-gray-600 uppercase tracking-widest mb-2">Encours</p>
                        <p class="text-xl font-bold text-amber-600">{{ (tontine.amountPerPoint * (tontine.totalPoints - tontine.paidPoints|default(0)))|number_format(0, ',', ' ') }} <span class="text-[10px]">FCFA</span></p>
                    </div>
                    <div class="p-6 bg-emerald-600 rounded-2xl shadow-lg shadow-emerald-100">
                        <p class="text-[9px] font-bold text-emerald-100 uppercase tracking-widest mb-2">Ticket Unitaire</p>
                        <p class="text-xl font-bold text-white">{{ tontine.amountPerPoint|number_format(0, ',', ' ') }} <span class="text-[10px] text-emerald-200">FCFA</span></p>
                    </div>
                </div>

                <!-- Grille de Performance Immobilière/Placements -->
                <div class="grid grid-cols-5 sm:grid-cols-8 lg:grid-cols-10 gap-3">
                    {% set interval = tontine.frequency == 'mensuelle' ? 'month' : (tontine.frequency == 'hebdomadaire' ? 'week' : 'day') %}
                    {% for point in 1..tontine.totalPoints %}
                        {% set isPaid = point <= (tontine.paidPoints|default(0)) %}
                        {% set isCurrent = point == (tontine.paidPoints|default(0)) + 1 %}
                        {% set pointDueDate = tontine.startDate ? tontine.startDate.modify('+' ~ (point-1) ~ ' ' ~ interval) : null %}
                        {% set isMissed = pointDueDate and pointDueDate < date('now') and not isPaid %}

                        <div class="relative group aspect-square">
                            <div class="w-full h-full rounded-xl border flex items-center justify-center font-bold text-xs transition-all duration-300 transform group-hover:-translate-y-1 group-hover:shadow-md
                                {% if isPaid %}bg-emerald-500 border-emerald-500 text-white
                                {% elseif isMissed %}bg-rose-50 border-rose-100 text-rose-500
                                {% elseif isCurrent %}bg-amber-50 border-amber-200 text-amber-600 animate-pulse
                                {% else %}bg-white border-gray-100 text-gray-300{% endif %}">
                                {{ point }}
                            </div>
                            <!-- Pro Tooltip -->
                            <div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-3 px-3 py-2 bg-gray-900 text-white text-[9px] rounded-lg opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none whitespace-nowrap z-50">
                                Point Échéance: {{ pointDueDate ? pointDueDate|date('d/m/Y') : 'N/A' }}
                                <div class="absolute top-full left-1/2 -translate-x-1/2 border-4 border-transparent border-t-gray-900"></div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Paramètres & Configuration -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div class="bg-white rounded-[2.5rem] p-8 border border-gray-100 shadow-sm">
                    <h4 class="text-sm font-bold text-gray-600 uppercase tracking-widest mb-6 border-b border-gray-50 pb-4">Chronologie</h4>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <span class="text-xs font-bold text-gray-600 uppercase tracking-tighter">Lancement effectif</span>
                            <span class="text-sm font-bold text-gray-900">{{ tontine.startDate ? tontine.startDate|date('d M Y') : 'À déterminer' }}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-xs font-bold text-gray-600 uppercase tracking-tighter">Prochaine levée</span>
                            <span class="text-sm font-bold text-emerald-600">{{ tontine.nextDueDate ? tontine.nextDueDate|date('d M Y') : 'Terminé' }}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-xs font-bold text-gray-600 uppercase tracking-tighter">Rythme de collecte</span>
                            <span class="px-3 py-1 bg-gray-100 rounded-lg text-[9px] font-bold text-gray-600 uppercase">{{ tontine.frequency|upper }}</span>
                        </div>
                    </div>
                </div>
                <div class="bg-white rounded-[2.5rem] p-8 border border-gray-100 shadow-sm">
                    <h4 class="text-sm font-bold text-gray-600 uppercase tracking-widest mb-6 border-b border-gray-50 pb-4">Services Actifs</h4>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-lg bg-emerald-50 border border-emerald-100 flex items-center justify-center text-emerald-600 text-xs">
                                    <i class="fas fa-bell"></i>
                                </div>
                                <span class="text-xs font-bold text-gray-900 uppercase tracking-tighter">Rappels Automatiques</span>
                            </div>
                            <div class="w-10 h-5 rounded-full {{ tontine.reminderEnabled ? 'bg-emerald-500' : 'bg-gray-200' }} p-1 relative">
                                <div class="w-3 h-3 bg-white rounded-full absolute {{ tontine.reminderEnabled ? 'right-1' : 'left-1' }}"></div>
                            </div>
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-lg bg-green-50 border border-green-100 flex items-center justify-center text-green-600 text-xs">
                                    <i class="fas fa-money-bill-transfer"></i>
                                </div>
                                <span class="text-xs font-bold text-gray-900 uppercase tracking-tighter">Retrait du Fonds</span>
                            </div>
                             <span class="text-[10px] font-bold {{ tontine.withdrawals|length > 0 ? 'text-emerald-500' : 'text-amber-500' }} uppercase tracking-widest">
                                {{ tontine.withdrawals|length > 0 ? 'Validé' : 'En attente' }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar Actions & Support -->
        <div class="space-y-8">
            <!-- Console d'Administration -->
            <div class="bg-[#1e293b] rounded-[2.5rem] p-10 text-white shadow-2xl">
                <h3 class="text-xl font-bold mb-8">Console Contrôle</h3>
                <div class="space-y-4">
                    {% if tontine.statut != 'active' %}
                    <form action="{{ path('admin_tontine_activate', {'id': tontine.id}) }}" method="post">
                        <button type="submit" class="w-full group px-6 py-5 bg-emerald-600 hover:bg-emerald-500 rounded-2xl font-bold flex items-center justify-between transition-all shadow-lg shadow-emerald-900/40">
                            <span class="text-sm">Activer la Tontine</span>
                            <i class="fas fa-play text-xs group-hover:translate-x-1 transition-transform"></i>
                        </button>
                    </form>
                    {% else %}
                    <form action="{{ path('admin_tontine_deactivate', {'id': tontine.id}) }}" method="post">
                        <button type="submit" class="w-full group px-6 py-5 bg-amber-500 hover:bg-amber-400 text-amber-950 rounded-2xl font-bold flex items-center justify-between transition-all">
                            <span class="text-sm">Suspendre l'Unité</span>
                            <i class="fas fa-pause text-xs"></i>
                        </button>
                    </form>
                    {% endif %}

                  
                </div>
            </div>

            <!-- Informations Administrateur -->
            <div class="bg-white rounded-[2.5rem] p-10 border border-gray-100 shadow-sm relative overflow-hidden">
                <div class="absolute top-0 right-0 p-8 opacity-5">
                    <i class="fas fa-id-card text-8xl"></i>
                </div>
                <h3 class="text-sm font-bold text-gray-600 uppercase tracking-widest mb-8">Administrateur du Tontine</h3>
                <div class="flex items-center gap-5 mb-8">
                    <div class="w-16 h-16 rounded-2xl bg-gray-50 flex items-center justify-center text-2xl font-bold text-gray-600 border border-gray-100">
                        {{ tontine.utilisateur.firstname|first }}
                    </div>
                    <div>
                        <p class="text-lg font-bold text-gray-900 leading-tight">{{ tontine.utilisateur.firstname }} {{ tontine.utilisateur.lastname }}</p>
                        <p class="text-[10px] font-bold text-emerald-500 uppercase tracking-widest mt-1">PROFIL VÉRIFIÉ</p>
                    </div>
                </div>
                <div class="space-y-4 pt-8 border-t border-gray-50">
                    <a href="{{ path('admin_users_details', {'id': tontine.utilisateur.id}) }}" class="flex items-center justify-between p-4 bg-gray-50 rounded-2xl group hover:bg-emerald-50 transition-all border border-transparent hover:border-emerald-100">
                        <span class="text-xs font-bold text-gray-900 lowercase group-hover:text-emerald-600">{{ tontine.utilisateur.email }}</span>
                        <i class="fas fa-arrow-right text-[10px] text-gray-300 group-hover:text-emerald-500 group-hover:translate-x-1 transition-all"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;900&display=swap');
    .font-poppins { font-family: 'Poppins', sans-serif; }
    
    .aspect-square { aspect-ratio: 1 / 1; }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const actionForms = document.querySelectorAll('form[action*="active"], form[action*="deactivate"]');
    actionForms.forEach(form => {
        form.addEventListener('submit', function(e) {
            const isDeactivate = this.action.includes('deactivate');
            const message = isDeactivate 
                ? "ATTENTION: La suspension arrêtera les flux de cotisation. Confirmer ?" 
                : "Confirmer l'activation de ce Tontine financier ?";
            if (!confirm(message)) {
                e.preventDefault();
            }
        });
    });
});
</script>
{% endblock %}
