{% extends 'admin/base.html.twig' %}

{% block title %}Tontines — Administration{% endblock %}

{% block contentadmin %} 
<div class="min-h-screen bg-green-50 p-6 lg:p-8">
    <!-- Header sophistiqué -->
    <div class="mb-10">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
            <div>
                <h1 class="text-3xl font-bold font-poppins text-gray-900 tracking-tight">Tontines</h1>
                <p class="text-sm font-medium text-gray-500 mt-1 uppercase tracking-widest">Gestion du patrimoine et des cercles</p>
            </div>
            <div class="flex items-center gap-3">
                 <div class="h-12 w-12 rounded-2xl bg-white border border-gray-100 flex items-center justify-center text-emerald-600 shadow-sm transition-transform hover:scale-110">
                    <i class="fas fa-circle-nodes text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistiques Pro -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">
        {% set statsConfig = [
            { label: 'Total Tontines', value: tontines|length, icon: 'vault', color: 'emerald' },
            { label: 'Cercles Actifs', value: tontines|filter(t => t.statut == 'active')|length, icon: 'arrows-spin', color: 'blue' },
            { label: 'En Formation', value: tontines|filter(t => t.statut == 'en_attente')|length, icon: 'hourglass-start', color: 'amber' },
            { label: 'Archives', value: tontines|filter(t => t.statut == 'terminee')|length, icon: 'box-archive', color: 'gray' }
        ] %}

        {% for stat in statsConfig %}
        <div class="bg-white rounded-[2rem] p-6 border border-gray-100 shadow-sm hover:shadow-md transition-all group">
            <div class="flex items-center gap-4">
                <div class="w-14 h-14 rounded-2xl bg-{{ stat.color }}-50 text-{{ stat.color }}-600 flex items-center justify-center text-xl shadow-inner group-hover:bg-{{ stat.color }}-600 group-hover:text-white transition-all">
                    <i class="fas fa-{{ stat.icon }}"></i>
                </div>
                <div>
                    <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">{{ stat.label }}</p>
                    <p class="text-2xl font-bold font-poppins text-gray-900">{{ stat.value }}</p>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>

    <!-- Filtres & Table -->
    <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm overflow-hidden">
        <!-- Barre de recherche & Filtres -->
        <div class="p-8 border-b border-gray-50 bg-gray-50/30">
            <div class="flex flex-col lg:flex-row gap-6">
                <div class="relative flex-1 group">
                    <div class="absolute inset-y-0 left-5 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-300 group-focus-within:text-emerald-500 transition-colors"></i>
                    </div>
                    <input type="text" id="search-input" 
                           class="w-full pl-12 pr-6 py-4 bg-white border border-gray-100 rounded-2xl focus:ring-4 focus:ring-emerald-500/5 focus:border-emerald-500 outline-none transition-all text-sm font-medium placeholder:text-gray-300 shadow-sm"
                           placeholder="Rechercher une tontine, un code ou un membre...">
                </div>
                <div class="flex flex-wrap items-center gap-3">
                    <select id="status-filter" class="px-6 py-4 bg-white border border-gray-100 rounded-2xl text-sm font-bold text-gray-600 outline-none focus:border-emerald-500 transition-all cursor-pointer shadow-sm">
                        <option value="">Tous les statuts</option>
                        <option value="en_attente">En formation</option>
                        <option value="active">Active</option>
                        <option value="terminee">Terminée</option>
                    </select>
                    <button id="reset-filters" class="w-14 h-14 bg-white border border-gray-100 rounded-2xl flex items-center justify-center text-gray-400 hover:text-red-500 hover:bg-red-50 transition-all shadow-sm">
                        <i class="fas fa-rotate-right"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Table Sophistiquée -->
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="text-left bg-gray-50/50">
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em]">Identité Cercle</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em]">Volume Global</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em]">Administrateur</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em]">Temporalité</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em]">État</th>
                        <th class="px-8 py-5 text-right text-[10px] font-bold text-gray-400 uppercase tracking-[0.2em]">Action</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    {% for tontine in tontines %}
                    <tr class="group hover:bg-gray-50/80 transition-all duration-300"
                        data-name="{{ tontine.name|lower }}" 
                        data-status="{{ tontine.statut }}"
                        data-owner="{{ (tontine.utilisateur.firstname ~ ' ' ~ tontine.utilisateur.lastname)|lower }}"
                        data-code="{{ tontine.tontinecode|lower }}">
                        <td class="px-8 py-6">
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 rounded-2xl bg-emerald-50 text-emerald-600 flex items-center justify-center font-bold text-sm shadow-sm border border-emerald-100/50 group-hover:scale-110 transition-transform">
                                    {{ tontine.name|first }}
                                </div>
                                <div>
                                    <p class="text-sm font-bold text-gray-900 leading-tight">{{ tontine.name }}</p>
                                    <p class="text-[10px] font-bold text-gray-400 uppercase tracking-tight mt-0.5">#{{ tontine.tontinecode }}</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-8 py-6">
                            <div class="flex flex-col">
                                <span class="text-sm font-bold text-gray-900">{{ (tontine.amountPerPoint * tontine.totalPoints)|number_format(0, ',', ' ') }} FCFA</span>
                                <span class="text-[10px] font-bold text-emerald-500 uppercase tracking-tighter">{{ tontine.totalPoints }} points émis</span>
                            </div>
                        </td>
                        <td class="px-8 py-6">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center text-[10px] font-bold text-gray-500">
                                    {{ tontine.utilisateur.firstname|first }}
                                </div>
                                <div>
                                    <p class="text-xs font-bold text-gray-900">{{ tontine.utilisateur.firstname }} {{ tontine.utilisateur.lastname }}</p>
                                    <p class="text-[9px] font-bold text-gray-400 uppercase tracking-tighter">ID: {{ tontine.utilisateur.uuid|slice(0, 8) }}</p>
                                </div>
                            </div>
                        </td>
                        <td class="px-8 py-6">
                             <div class="flex flex-col">
                                <span class="text-xs font-bold text-gray-700">{{ tontine.startDate ? tontine.startDate|date('d M Y') : 'Non planifiée' }}</span>
                                <span class="text-[10px] font-bold text-gray-400 uppercase tracking-tighter">{{ tontine.frequency == 'monthly' ? 'Cycle Mensuel' : 'Fréquence variable' }}</span>
                            </div>
                        </td>
                        <td class="px-8 py-6">
                            {% set statusConfig = {
                                'en_attente': { class: 'bg-amber-50 text-amber-600 border-amber-100', icon: 'fa-hourglass-half' },
                                'active': { class: 'bg-emerald-50 text-emerald-600 border-emerald-100', icon: 'fa-arrow-trend-up' },
                                'terminee': { class: 'bg-gray-50 text-gray-500 border-gray-100', icon: 'fa-check-double' },
                                'annulee': { class: 'bg-red-50 text-red-600 border-red-100', icon: 'fa-ban' }
                            } %}
                            {% set config = statusConfig[tontine.statut] ?? { class: 'bg-gray-50 text-gray-400', icon: 'fa-question' } %}
                            
                            <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-xl text-[9px] font-bold uppercase tracking-widest border {{ config.class }}">
                                <i class="fas {{ config.icon }} text-[8px]"></i>
                                {{ (tontine.statut ?: 'Indéterminé')|replace({'_': ' '}) }}
                            </span>
                        </td>
                        <td class="px-8 py-6 text-right">
                            <div class="flex justify-end gap-2">
                                <a href="{{ path('admin_tontine_show', {'id': tontine.id}) }}" 
                                   class="w-9 h-9 rounded-xl bg-white border border-gray-100 flex items-center justify-center text-gray-400 hover:text-emerald-600 hover:border-emerald-100 transition-all shadow-sm">
                                    <i class="fas fa-eye text-xs"></i>
                                </a>
                                {% if tontine.statut == 'en_attente' %}
                                <a href="{{ path('admin_tontine_active', {'id': tontine.id}) }}" 
                                   class="w-9 h-9 rounded-xl bg-emerald-50 text-emerald-600 border border-emerald-100 flex items-center justify-center hover:bg-emerald-600 hover:text-white transition-all shadow-sm" title="Activer">
                                    <i class="fas fa-play text-xs"></i>
                                </a>
                                {% elseif tontine.statut == 'active' %}
                                <a href="{{ path('admin_tontine_deactivate', {'id': tontine.id}) }}" 
                                   class="w-9 h-9 rounded-xl bg-amber-50 text-amber-600 border border-amber-100 flex items-center justify-center hover:bg-amber-600 hover:text-white transition-all shadow-sm" title="Suspendre">
                                    <i class="fas fa-pause text-xs"></i>
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="px-8 py-20 text-center">
                            <div class="max-w-xs mx-auto">
                                <div class="w-20 h-20 rounded-[2.5rem] bg-gray-50 border border-gray-100 flex items-center justify-center text-gray-300 text-3xl mx-auto mb-6">
                                    <i class="fas fa-folder-open"></i>
                                </div>
                                <h3 class="text-lg font-bold text-gray-900 leading-tight">Aucun cercle identifié</h3>
                                <p class="text-sm font-medium text-gray-400 mt-2">La plateforme ne contient actuellement aucune tontine.</p>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Footer / Pagination -->
        {% if tontines|length > 10 %}
        <div class="px-8 py-6 bg-gray-50/50 border-t border-gray-50 flex items-center justify-between">
            <p class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">
                Affichage de <span class="text-gray-900">1-10</span> sur <span class="text-gray-900">{{ tontines|length }}</span> unités
            </p>
            <div class="flex gap-2">
                <button class="px-4 py-2 bg-white border border-gray-100 rounded-xl text-[10px] font-bold uppercase tracking-widest text-gray-400 hover:text-emerald-600 transition-all shadow-sm disabled:opacity-50" disabled>Précédent</button>
                <button class="px-4 py-2 bg-white border border-gray-100 rounded-xl text-[10px] font-bold uppercase tracking-widest text-gray-900 hover:border-emerald-200 transition-all shadow-sm">Suivant</button>
            </div>
        </div>
        {% endif %}
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');
    .font-poppins { font-family: 'Poppins', sans-serif; }
    
    tbody tr { animation: rowEntry 0.5s ease-out both; }
    {% for i in 1..20 %}
    tbody tr:nth-child({{ i }}) { animation-delay: {{ i * 0.05 }}s; }
    {% endfor %}

    @keyframes rowEntry {
        from { opacity: 0; transform: translateX(-10px); }
        to { opacity: 1; transform: translateX(0); }
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('search-input');
    const statusFilter = document.getElementById('status-filter');
    const resetBtn = document.getElementById('reset-filters');
    const rows = document.querySelectorAll('tbody tr[data-name]');

    function performFilter() {
        const query = searchInput.value.toLowerCase();
        const status = statusFilter.value;

        rows.forEach(row => {
            const matchesSearch = row.dataset.name.includes(query) || 
                                row.dataset.code.includes(query) || 
                                row.dataset.owner.includes(query);
            const matchesStatus = !status || row.dataset.status === status;

            row.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
        });
    }

    searchInput.addEventListener('input', performFilter);
    statusFilter.addEventListener('change', performFilter);
    resetBtn.addEventListener('click', () => {
        searchInput.value = '';
        statusFilter.value = '';
        performFilter();
    });
});
</script>
{% endblock %}
