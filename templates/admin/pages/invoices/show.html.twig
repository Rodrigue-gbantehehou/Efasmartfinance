{% extends 'admin/base.html.twig' %}

{% block title %}Facture #{{ facture.numero }}{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50/50">
    <!-- Header Streamlined -->
    <div class="bg-white border-b border-gray-100 shadow-sm sticky top-0 z-10">
        <div class="px-6 py-5">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                <div class="flex items-center gap-4">
                    <a href="{{ path('admin_invoices') }}" class="w-10 h-10 rounded-xl bg-gray-50 text-gray-400 flex items-center justify-center hover:bg-emerald-600 hover:text-white transition-all shadow-sm">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div>
                        <h1 class="text-2xl font-bold font-poppins text-gray-900 tracking-tight">Facture #{{ facture.numero }}</h1>
                        <p class="text-sm font-medium text-gray-600 mt-0.5">Détail complet et pilotage</p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <a href="{{ path('admin_invoice_download', {id: facture.id}) }}" class="px-5 py-2.5 bg-gray-900 text-white rounded-xl text-xs font-bold uppercase tracking-widest hover:bg-emerald-600 transition-all shadow-lg shadow-gray-200 flex items-center gap-2">
                        <i class="fas fa-download"></i> Télécharger PDF
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu -->
    <div class="p-6 lg:p-12 max-w-5xl mx-auto space-y-8">
        
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content: Details -->
            <div class="lg:col-span-2 space-y-8">
                <!-- Client Info Section -->
                <div class="bg-white rounded-[2.5rem] border border-gray-100 p-8 shadow-sm">
                    <div class="flex items-center gap-3 mb-8">
                        <div class="w-10 h-10 rounded-xl bg-emerald-50 text-emerald-600 flex items-center justify-center">
                            <i class="fas fa-user-tie"></i>
                        </div>
                        <h3 class="text-sm font-bold font-poppins text-gray-900 uppercase tracking-widest">Informations Client</h3>
                    </div>

                    {% if facture.client %}
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div>
                            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1.5">Nom complet</p>
                            <p class="text-sm font-bold text-gray-900">{{ facture.client.firstname }} {{ facture.client.lastname }}</p>
                        </div>
                        <div>
                            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1.5">Adresse Email</p>
                            <p class="text-sm font-bold text-gray-900">{{ facture.client.email }}</p>
                        </div>
                        <div>
                            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1.5">Téléphone</p>
                            <p class="text-sm font-bold text-gray-900">{{ facture.client.phone|default('NON RENSEIGNÉ') }}</p>
                        </div>
                        <div>
                            <p class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-1.5">Identifiant Unique</p>
                            <p class="text-xs font-mono font-bold text-emerald-600">USR-{{ facture.client.id|upper }}</p>
                        </div>
                    </div>
                    {% else %}
                    <div class="p-4 rounded-2xl bg-gray-50 border border-gray-100 italic text-sm text-gray-500">
                        Aucun client associé à cette facture.
                    </div>
                    {% endif %}
                </div>

                <!-- Description Section -->
                {% if facture.description %}
                <div class="bg-white rounded-[2.5rem] border border-gray-100 p-8 shadow-sm">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="w-10 h-10 rounded-xl bg-blue-50 text-blue-600 flex items-center justify-center">
                            <i class="fas fa-align-left"></i>
                        </div>
                        <h3 class="text-sm font-bold font-poppins text-gray-900 uppercase tracking-widest">Description des prestations</h3>
                    </div>
                    <div class="p-6 rounded-2xl bg-gray-50 text-sm leading-relaxed text-gray-600 font-medium">
                        {{ facture.description }}
                    </div>
                </div>
                {% endif %}

                <!-- Financial Breakdown -->
                <div class="bg-white rounded-[2.5rem] border border-gray-100 p-8 shadow-sm">
                    <div class="flex items-center gap-3 mb-8">
                        <div class="w-10 h-10 rounded-xl bg-violet-50 text-violet-600 flex items-center justify-center">
                            <i class="fas fa-calculator"></i>
                        </div>
                        <h3 class="text-sm font-bold font-poppins text-gray-900 uppercase tracking-widest">Décomposition Financière</h3>
                    </div>

                    <div class="space-y-4">
                        <div class="flex justify-between items-center py-2 border-b border-gray-50">
                            <span class="text-xs font-bold text-gray-500 uppercase">Sous-total HT</span>
                            <span class="text-sm font-bold text-gray-900">{{ facture.montantHT|number_format(0, ',', ' ') }} FCFA</span>
                        </div>
                        <div class="flex justify-between items-center py-2 border-b border-gray-50 text-gray-500">
                            <span class="text-xs font-black uppercase">TVA ({{ facture.tva }}%)</span>
                            <span class="text-sm font-bold">{{ (facture.montantTTC - facture.montantHT)|number_format(0, ',', ' ') }} FCFA</span>
                        </div>
                        <div class="flex justify-between items-center py-6">
                            <div>
                                <h4 class="text-sm font-black text-gray-900 uppercase tracking-tighter italic">Total Net à Payer</h4>
                                <p class="text-[10px] font-bold text-gray-400 mt-0.5 uppercase italic">Toutes taxes comprises</p>
                            </div>
                            <div class="text-right">
                                <p class="text-3xl font-black text-emerald-600">{{ facture.montantTTC|number_format(0, ',', ' ') }} <span class="text-sm">FCFA</span></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar: Status & Actions -->
            <div class="space-y-8">
                <!-- Status Card -->
                <div class="bg-gray-900 rounded-[2.5rem] p-8 text-white relative overflow-hidden shadow-2xl">
                    <div class="relative z-10">
                        <h3 class="text-[10px] font-black text-gray-500 uppercase tracking-widest mb-6 italic">Statut du Document</h3>
                        
                        <div class="flex items-center gap-4 mb-8">
                            {% if facture.statut == 'payee' %}
                            <div class="w-12 h-12 rounded-2xl bg-emerald-500/20 text-emerald-400 flex items-center justify-center">
                                <i class="fas fa-check-double text-xl"></i>
                            </div>
                            <div>
                                <p class="text-xs font-black uppercase text-emerald-400">Règlement Effectué</p>
                                <p class="text-[10px] font-bold text-gray-500 uppercase mt-0.5">Le {{ facture.dateEmission|date('d/m/Y') }}</p>
                            </div>
                            {% else %}
                            <div class="w-12 h-12 rounded-2xl bg-amber-500/20 text-amber-400 flex items-center justify-center animate-pulse">
                                <i class="fas fa-hourglass-half text-xl"></i>
                            </div>
                            <div>
                                <p class="text-xs font-black uppercase text-amber-400">Paiement en Attente</p>
                                <p class="text-[10px] font-bold text-gray-500 uppercase mt-0.5">Traitement requis</p>
                            </div>
                            {% endif %}
                        </div>

                        <div class="space-y-3">
                            <p class="text-[9px] font-black text-gray-500 uppercase tracking-widest">Détails Système</p>
                            <div class="p-4 rounded-2xl bg-white/5 border border-white/5 space-y-2">
                                <div class="flex justify-between items-center text-[10px] font-bold">
                                    <span class="text-gray-500 italic">Identifiant</span>
                                    <span class="uppercase">#{{ facture.id }}</span>
                                </div>
                                <div class="flex justify-between items-center text-[10px] font-bold">
                                    <span class="text-gray-500 italic">Hash</span>
                                    <span class="text-[8px] font-mono text-gray-400 truncate w-32 ml-2">{{ (facture.numero ~ facture.id)|slice(0, 8) }}...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Decoration -->
                    <div class="absolute -right-12 -bottom-12 w-32 h-32 bg-emerald-500/5 rounded-full blur-2xl"></div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-[2.5rem] border border-gray-100 p-8 shadow-sm">
                    <h3 class="text-[10px] font-black text-gray-400 uppercase tracking-widest mb-6">Actions de Gestion</h3>
                    
                    <div class="space-y-3">
                        {% if facture.client %}
                        <form method="post" action="{{ path('admin_invoice_resend', {id: facture.id}) }}" class="block">
                            <input type="hidden" name="_token" value="{{ csrf_token('resend' ~ facture.id) }}">
                            <button type="submit" 
                                    onclick="return confirm('Renvoyer cette facture par email au client ?')"
                                    class="w-full flex items-center justify-center gap-3 py-4 bg-emerald-50 text-emerald-600 rounded-2xl text-[10px] font-black uppercase tracking-widest hover:bg-emerald-600 hover:text-white transition-all">
                                <i class="fas fa-paper-plane"></i> Renvoyer par Email
                            </button>
                        </form>
                        {% endif %}

                        <a href="{{ path('admin_invoice_download', {id: facture.id}) }}" 
                           class="w-full flex items-center justify-center gap-3 py-4 bg-gray-50 text-gray-600 rounded-2xl text-[10px] font-black uppercase tracking-widest hover:bg-gray-900 hover:text-white transition-all mt-2">
                            <i class="fas fa-file-pdf"></i> Générer Archivage
                        </a>

                        <button type="button" class="w-full flex items-center justify-center gap-3 py-4 bg-rose-50 text-rose-400 rounded-2xl text-[10px] font-black uppercase tracking-widest cursor-not-allowed mt-2 opacity-50" disabled>
                            <i class="fas fa-trash-alt"></i> Supprimer (Interdit)
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800;900&display=swap');
    .font-poppins { font-family: 'Poppins', sans-serif; }
</style>
{% endblock %}
