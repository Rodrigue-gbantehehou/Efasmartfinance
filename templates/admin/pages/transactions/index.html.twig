{% extends 'admin/base.html.twig' %}

{% block contentadmin %}
<div class="min-h-screen bg-green-100/50 p-6 lg:p-8">
    <!-- Header Streamlined -->
    <div class="mb-10 flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
            <div class="flex items-center gap-3 mb-2">
                <div class="w-10 h-10 rounded-xl bg-gray-900 text-white flex items-center justify-center shadow-lg">
                    <i class="fas fa-exchange-alt text-sm"></i>
                </div>
                <span class="text-xs font-bold text-gray-600 uppercase tracking-widest">Mouvement des Fonds</span>
            </div>
            <h1 class="text-3xl font-bold font-poppins text-gray-900 tracking-tight">Journal des Transactions</h1>
            <p class="text-gray-600 font-medium mt-1">Supervision globale des flux financiers et des opérations de Tontine.</p>
        </div>
    </div>

    <!-- Quick Insights -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-10">
        <!-- Entrées -->
        <div class="bg-white rounded-[2rem] p-6 border border-gray-100 shadow-sm relative overflow-hidden group">
            <div class="absolute top-0 right-0 w-24 h-24 bg-emerald-50 rounded-full -mr-12 -mt-12 group-hover:scale-110 transition-transform"></div>
            <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mb-4">Entrées Totales</p>
            <div class="flex items-end justify-between">
                <div>
                    <h4 class="text-2xl font-black font-poppins text-gray-900">{{ totalEntrees|number_format(0, ',', ' ') }} <span class="text-xs font-bold text-gray-600">FCFA</span></h4>
                    <p class="text-[10px] text-emerald-600 font-bold mt-1 inline-flex items-center gap-1">
                        <i class="fas fa-arrow-up"></i> +12.5%
                    </p>
                </div>
                <div class="w-10 h-10 rounded-xl bg-emerald-50 text-emerald-600 flex items-center justify-center">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </div>
        </div>

        <!-- Sorties -->
        <div class="bg-white rounded-[2rem] p-6 border border-gray-100 shadow-sm relative overflow-hidden group">
            <div class="absolute top-0 right-0 w-24 h-24 bg-rose-50 rounded-full -mr-12 -mt-12 group-hover:scale-110 transition-transform"></div>
            <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mb-4">Sorties Globales</p>
            <div class="flex items-end justify-between">
                <div>
                    <h4 class="text-2xl font-black font-poppins text-gray-900">{{ totalSorties|number_format(0, ',', ' ') }} <span class="text-xs font-bold text-gray-600">FCFA</span></h4>
                    <p class="text-[10px] text-rose-600 font-bold mt-1 inline-flex items-center gap-1">
                        <i class="fas fa-arrow-down"></i> -3.2%
                    </p>
                </div>
                <div class="w-10 h-10 rounded-xl bg-rose-50 text-rose-600 flex items-center justify-center">
                    <i class="fas fa-arrow-left"></i>
                </div>
            </div>
        </div>

        <!-- Solde -->
        <div class="bg-white rounded-[2rem] p-6 text-white shadow-xl relative overflow-hidden group">
            <div class="absolute top-0 right-0 w-24 h-24 bg-white/5 rounded-full -mr-12 -mt-12 group-hover:scale-110 transition-transform"></div>
            <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mb-4">Solde Plateforme</p>
            <h4 class="text-2xl font-black font-poppins text-gray-900 leading-tight">
                {{ (totalEntrees - totalSorties)|number_format(0, ',', ' ') }} <span class="text-xs text-gray-600">FCFA</span>
            </h4>
            <div class="mt-4 w-full bg-white/5 h-1 rounded-full overflow-hidden">
                <div class="bg-emerald-500 h-full w-[65%]"></div>
            </div>
        </div>

        <!-- Volume Mensuel -->
        <div class="bg-white rounded-[2rem] p-6 border border-gray-100 shadow-sm relative overflow-hidden group">
            <p class="text-[10px] font-bold text-gray-600 uppercase tracking-widest mb-4">Flux Mensuel</p>
            <div class="flex items-center justify-between">
                <div>
                    <h4 class="text-2xl font-black font-poppins text-gray-900">{{ transactionsMois }}</h4>
                    <p class="text-[10px] text-gray-600 font-bold mt-1 uppercase tracking-tighter">Opérations ce mois</p>
                </div>
                <div class="w-12 h-12 rounded-2xl bg-amber-50 text-amber-600 flex items-center justify-center">
                    <i class="fas fa-calendar-check"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Fusion: Frais de Plateforme (Integrated here) -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-10">
        <div class="lg:col-span-1 bg-white rounded-[2.5rem] border border-gray-100 shadow-sm p-8 flex flex-col justify-between overflow-hidden relative group">
            <div class="absolute top-0 right-0 w-32 h-32 bg-emerald-50 rounded-full -mr-16 -mt-16 group-hover:scale-110 transition-transform duration-700 opacity-50"></div>
            <div>
                <div class="flex items-center gap-3 mb-6">
                    <div class="w-10 h-10 rounded-xl bg-emerald-600 text-white flex items-center justify-center shadow-lg shadow-emerald-500/20">
                        <i class="fas fa-percentage text-sm"></i>
                    </div>
                    <h3 class="text-sm font-black text-gray-900 uppercase tracking-widest">Revenus Commissions</h3>
                </div>
                <div class="space-y-4">
                    <div>
                        <p class="text-[10px] font-bold text-gray-500 uppercase tracking-widest leading-none mb-1">Total Historique</p>
                        <h4 class="text-2xl font-black font-poppins text-emerald-600">{{ totalFees|number_format(0, ',', ' ') }} FCFA</h4>
                    </div>
                    <div>
                        <p class="text-[10px] font-bold text-gray-500 uppercase tracking-widest leading-none mb-1">Objectif Mensuel ({{ "now"|date("F") }})</p>
                        <h4 class="text-lg font-bold font-poppins text-gray-900">{{ monthlyFees|number_format(0, ',', ' ') }} FCFA</h4>
                    </div>
                </div>
            </div>
            <div class="mt-8 pt-6 border-t border-gray-50">
                <div class="flex items-center justify-between">
                    <span class="text-[10px] font-bold text-gray-400 uppercase tracking-widest italic">Centralisation Treasury</span>
                    <i class="fas fa-shield-check text-emerald-200"></i>
                </div>
            </div>
        </div>

        <div class="lg:col-span-2 bg-white rounded-[2.5rem] border border-gray-100 shadow-sm overflow-hidden">
            <div class="px-8 py-6 border-b border-gray-50 bg-gray-50/30 flex justify-between items-center">
                <h3 class="text-sm font-black text-gray-900 uppercase tracking-widest">Détail des Frais Collectés</h3>
                <span class="px-3 py-1 bg-emerald-50 text-emerald-600 rounded-full text-[9px] font-black uppercase tracking-widest">{{ fees|length }} Frais</span>
            </div>
            <div class="overflow-y-auto max-h-[300px]">
                <table class="w-full text-left">
                    <thead class="bg-gray-50/20 sticky top-0 z-10 backdrop-blur-sm">
                        <tr>
                            <th class="px-8 py-4 text-[9px] font-bold text-gray-500 uppercase tracking-widest">Date</th>
                            <th class="px-8 py-4 text-[9px] font-bold text-gray-500 uppercase tracking-widest">Type</th>
                            <th class="px-8 py-4 text-[9px] font-bold text-gray-500 uppercase tracking-widest text-right">Montant</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50">
                        {% for fee in fees|slice(0, 50) %}
                        <tr class="hover:bg-green-50/50 transition-colors">
                            <td class="px-8 py-4 text-[10px] font-bold text-gray-900">{{ fee.createdAt|date('d/m/Y H:i') }}</td>
                            <td class="px-8 py-4 text-[10px] font-medium text-gray-600 capitalize">{{ fee.type|replace({'_': ' '}) }}</td>
                            <td class="px-8 py-4 text-[10px] font-black text-emerald-600 text-right">{{ fee.amount|number_format(0, ',', ' ') }} F</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Interface de Filtrage -->
    <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm p-8 mb-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="space-y-2">
                <label class="text-[10px] font-bold text-gray-600 uppercase tracking-widest ml-1">Recherche Rapide</label>
                <div class="relative group">
                    <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-300 group-focus-within:text-emerald-500 transition-colors"></i>
                    <input type="text" id="search-input" placeholder="ID, Réf, Montant..." class="w-full h-12 pl-11 pr-4 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-emerald-500/20 text-sm font-medium transition-all">
                </div>
            </div>

            <div class="space-y-2">
                <label class="text-[10px] font-bold text-gray-600 uppercase tracking-widest ml-1">Nature de l'Action</label>
                <select id="type-filter" class="w-full h-12 px-4 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-emerald-500/20 text-sm font-medium">
                    <option value="">Toutes les natures</option>
                    <option value="depot">Dépôts Entrants</option>
                    <option value="retrait">Retraits Sortants</option>
                    <option value="transfert">Transferts Internes</option>
                    <option value="paiement">Paiements Service</option>
                </select>
            </div>

            <div class="space-y-2">
                <label class="text-[10px] font-bold text-gray-600 uppercase tracking-widest ml-1">État de Validation</label>
                <select id="status-filter" class="w-full h-12 px-4 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-emerald-500/20 text-sm font-medium">
                    <option value="">Tous les états</option>
                    <option value="completed">Success / Validée</option>
                    <option value="pending">In-Progress / Attente</option>
                    <option value="failed">Rejected / Échec</option>
                </select>
            </div>

            <div class="space-y-2">
                <label class="text-[10px] font-bold text-gray-600 uppercase tracking-widest ml-1">Période d'Audit</label>
                <div class="relative group">
                    <i class="fas fa-calendar absolute left-4 top-1/2 -translate-y-1/2 text-gray-300 group-focus-within:text-emerald-500 transition-colors"></i>
                    <input type="text" id="date-range" class="w-full h-12 pl-11 pr-4 bg-gray-50 border-none rounded-xl focus:ring-2 focus:ring-emerald-500/20 text-sm font-medium cursor-pointer">
                </div>
            </div>
        </div>
        <div class="mt-6 flex justify-end gap-3 pt-6 border-t border-gray-50">
            <button id="reset-filters" class="h-10 px-6 text-[10px] font-bold uppercase tracking-widest text-gray-600 hover:text-rose-500 transition-colors">Réinitialiser</button>
            <button id="apply-filters" class="h-10 px-8 bg-gray-900 border border-gray-900 text-white rounded-xl text-[10px] font-bold uppercase tracking-widest hover:bg-emerald-600 hover:border-emerald-600 transition-all">Appliquer les Filtres</button>
        </div>
    </div>

    <!-- Registry Table -->
    <div class="bg-white rounded-[2.5rem] border border-gray-100 shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50/50 border-b border-gray-50">
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-600 uppercase tracking-widest">Référence / Ordre</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-600 uppercase tracking-widest">Type</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-600 uppercase tracking-widest">Volume</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-600 uppercase tracking-widest">Source / Cible</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-600 uppercase tracking-widest text-center">Horodatage</th>
                        <th class="px-8 py-5 text-[10px] font-bold text-gray-600 uppercase tracking-widest text-right">Statut</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-50">
                    {% for transaction in transactions %}
                    <tr class="group hover:bg-emerald-50/30 transition-all duration-300"
                        data-id="{{ transaction.id }}" 
                        data-reference="{{ transaction.externalReference ?? transaction.id }}"
                        data-type="{{ transaction.paymentMethod }}" 
                        data-montant="{{ transaction.amount }}"
                        data-statut="{{ transaction.statut }}"
                        data-date="{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d') : 'N/A' }}"
                        data-source="{{ transaction.utilisateur ? transaction.utilisateur.email : 'Système' }}"
                        data-destinataire="{{ transaction.Tontine ? transaction.Tontine.getName() : 'N/A' }}">
                        
                        <td class="px-8 py-6">
                            <span class="text-xs font-black text-gray-600">#{{ loop.index }}</span>
                            <span class="block text-sm font-bold text-gray-900 mt-1 font-poppins">{{ transaction.externalReference ?: 'TRANS-' ~ transaction.id|slice(0, 8) }}</span>
                        </td>
                        
                        <td class="px-8 py-6">
                            {% set typeIcons = {
                                'depot': 'fa-vault text-emerald-500',
                                'retrait': 'fa-money-bill-transfer text-rose-500',
                                'transfert': 'fa-shuffle text-green-500',
                                'paiement': 'fa-briefcase text-amber-500'
                            } %}
                            <div class="flex items-center gap-2">
                                <i class="fas {{ typeIcons[transaction.paymentMethod]|default('fa-circle text-gray-300') }} text-[10px]"></i>
                                <span class="text-[10px] font-bold uppercase tracking-widest text-gray-600">{{ transaction.paymentMethod|replace({'_': ' '}) }}</span>
                            </div>
                        </td>
                        
                        <td class="px-8 py-6">
                            <span class="text-sm font-black font-poppins {{ transaction.amount >= 0 ? 'text-emerald-600' : 'text-rose-600' }}">
                                {{ transaction.amount|number_format(0, ',', ' ') }} <span class="text-[10px]">FCFA</span>
                            </span>
                        </td>
                        
                        <td class="px-8 py-6">
                            <div class="space-y-1">
                                <div class="flex items-center gap-2">
                                    <span class="text-[9px] font-black text-gray-300 uppercase">DE:</span>
                                    <span class="text-xs font-bold text-gray-600">{{ transaction.utilisateur ? transaction.utilisateur.email : 'SYSTÈME' }}</span>
                                </div>
                                {% if transaction.Tontine %}
                                <div class="flex items-center gap-2">
                                    <span class="text-[9px] font-black text-gray-300 uppercase">À:</span>
                                    <span class="text-xs font-bold text-emerald-600 uppercase">{{ transaction.Tontine.getName() }}</span>
                                </div>
                                {% endif %}
                            </div>
                        </td>
                        
                        <td class="px-8 py-6 text-center">
                            <span class="text-[10px] font-bold text-gray-600">{{ transaction.createdAt ? transaction.createdAt|date('d/m/Y') : '--' }}</span>
                            <span class="block text-[10px] font-medium text-gray-300">{{ transaction.createdAt ? transaction.createdAt|date('H:i') : '--' }}</span>
                        </td>
                        
                        <td class="px-8 py-6 text-right">
                            {% set isSuccess = transaction.statut in ['completed', 'validé', 'success'] %}
                            {% set isPending = transaction.statut in ['pending', 'en attente', 'in_progress'] %}
                            {% set isFailed = transaction.statut in ['failed', 'échoué', 'rejected'] %}
                            
                            <span class="px-3 py-1.5 rounded-lg text-[10px] font-black uppercase tracking-tighter border
                                {{ isSuccess ? 'bg-emerald-50 text-emerald-600 border-emerald-100' : 
                                   isPending ? 'bg-amber-50 text-amber-600 border-amber-100' : 
                                   isFailed ? 'bg-rose-50 text-rose-600 border-rose-100' : 
                                   'bg-gray-50 text-gray-600 border-gray-100' }}">
                                {{ transaction.statut|default('Identifiée') }}
                            </span>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="p-20 text-center">
                            <div class="w-20 h-20 rounded-[2rem] bg-gray-50 text-gray-200 flex items-center justify-center text-3xl mx-auto mb-4">
                                <i class="fas fa-ghost"></i>
                            </div>
                            <h4 class="text-lg font-bold text-gray-900">Vide Sidéral</h4>
                            <p class="text-gray-600 text-sm mt-1">Aucun mouvement de fonds n'a été détecté selon vos critères.</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        
        <!-- Pagination Sophistiquée -->
        <div class="p-8 border-t border-gray-50 bg-gray-50/10 flex flex-col md:flex-row items-center justify-between gap-6">
            <p class="text-xs font-bold text-gray-600 uppercase tracking-widest">
                Affichage de <span class="text-gray-900">1 — 10</span> sur {{ transactions|length }}
            </p>
            <div class="flex items-center gap-1">
                <button class="h-10 w-10 border border-gray-100 rounded-xl flex items-center justify-center text-gray-600 hover:bg-emerald-600 hover:text-white transition-all"><i class="fas fa-chevron-left text-[10px]"></i></button>
                <button class="h-10 w-10 bg-emerald-600 text-white rounded-xl flex items-center justify-center text-xs font-bold shadow-lg shadow-emerald-100">1</button>
                <button class="h-10 w-10 border border-gray-100 rounded-xl flex items-center justify-center text-xs font-bold text-gray-600 hover:border-emerald-200">2</button>
                <button class="h-10 w-10 border border-gray-100 rounded-xl flex items-center justify-center text-xs font-bold text-gray-600 hover:border-emerald-200">3</button>
                <button class="h-10 w-10 border border-gray-100 rounded-xl flex items-center justify-center text-gray-600 hover:bg-emerald-600 hover:text-white transition-all"><i class="fas fa-chevron-right text-[10px]"></i></button>
            </div>
        </div>
    </div>
</div>

<style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;900&display=swap');
    .font-poppins { font-family: 'Poppins', sans-serif; }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialisation Daterange (Supposant que libraries sont chargées via base.html.twig ou liens dashboard)
    if(typeof $ !== 'undefined' && $.fn.daterangepicker) {
        $('input[id="date-range"]').daterangepicker({
            locale: { format: 'DD/MM/YYYY', applyLabel: 'OK', cancelLabel: 'Annuler' }
        });
    }

    const searchInput = document.getElementById('search-input');
    const typeFilter = document.getElementById('type-filter');
    const statusFilter = document.getElementById('status-filter');
    const resetBtn = document.getElementById('reset-filters');
    const applyBtn = document.getElementById('apply-filters');
    const rows = document.querySelectorAll('tbody tr[data-id]');

    function filterData() {
        const query = searchInput.value.toLowerCase();
        const type = typeFilter.value;
        const status = statusFilter.value;

        rows.forEach(row => {
            const rowRef = row.getAttribute('data-reference').toLowerCase();
            const rowType = row.getAttribute('data-type');
            const rowStatus = row.getAttribute('data-statut').toLowerCase();
            const rowSrc = row.getAttribute('data-source').toLowerCase();
            const rowAmt = row.getAttribute('data-montant');

            const matchQuery = !query || rowRef.includes(query) || rowSrc.includes(query) || rowAmt.includes(query);
            const matchType = !type || rowType === type;
            const matchStatus = !status || rowStatus.includes(status.toLowerCase());

            row.style.display = (matchQuery && matchType && matchStatus) ? '' : 'none';
        });
    }

    applyBtn?.addEventListener('click', filterData);
    resetBtn?.addEventListener('click', () => {
        searchInput.value = '';
        typeFilter.value = '';
        statusFilter.value = '';
        filterData();
    });
    
    // Live Search
    searchInput?.addEventListener('input', _.debounce(filterData, 300));
});
</script>
{% endblock %}
