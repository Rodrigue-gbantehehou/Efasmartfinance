<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialisation du sélecteur de date
    $('input[id="date-range"]').daterangepicker({
        locale: {
            format: 'DD/MM/YYYY',
            applyLabel: 'Appliquer',
            cancelLabel: 'Annuler',
            fromLabel: 'Du',
            toLabel: 'Au',
            customRangeLabel: 'Personnalisé',
            daysOfWeek: ['Di', 'Lu', 'Ma', 'Me', 'Je', 'Ve', 'Sa'],
            monthNames: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'],
            firstDay: 1
        },
        startDate: moment().subtract(30, 'days'),
        endDate: moment(),
        ranges: {
           'Aujourd\'hui': [moment(), moment()],
           'Hier': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
           '7 derniers jours': [moment().subtract(6, 'days'), moment()],
           '30 derniers jours': [moment().subtract(29, 'days'), moment()],
           'Ce mois-ci': [moment().startOf('month'), moment().endOf('month')],
           'Mois dernier': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')]
        }
    });

    const searchInput = document.getElementById('search-input');
    const typeFilter = document.getElementById('type-filter');
    const statusFilter = document.getElementById('status-filter');
    const resetFiltersBtn = document.getElementById('reset-filters');
    const applyFiltersBtn = document.getElementById('apply-filters');
    const rows = document.querySelectorAll('tbody tr[data-id]');

    function filterRows() {
        const searchTerm = searchInput.value.toLowerCase();
        const selectedType = typeFilter.value;
        const selectedStatus = statusFilter.value;
        
        // Récupérer la période sélectionnée
        const dateRange = $('input[id="date-range"]').data('daterangepicker');
        const startDate = dateRange ? dateRange.startDate.format('YYYY-MM-DD') : null;
        const endDate = dateRange ? dateRange.endDate.format('YYYY-MM-DD') : null;

        rows.forEach(row => {
            const id = row.getAttribute('data-id').toLowerCase();
            const reference = row.getAttribute('data-reference').toLowerCase();
            const type = row.getAttribute('data-type');
            const status = row.getAttribute('data-statut');
            const date = row.getAttribute('data-date');
            const source = row.getAttribute('data-source').toLowerCase();
            const destinataire = row.getAttribute('data-destinataire').toLowerCase();
            const montant = row.getAttribute('data-montant');
            
            const matchesSearch = searchTerm === '' || 
                                id.includes(searchTerm) || 
                                reference.includes(searchTerm) ||
                                source.includes(searchTerm) ||
                                destinataire.includes(searchTerm) ||
                                montant.includes(searchTerm);
                                
            const matchesType = !selectedType || type === selectedType;
            const matchesStatus = !selectedStatus || status === selectedStatus;
            
            // Vérifier si la date est dans la plage sélectionnée
            let matchesDate = true;
            if (startDate && endDate) {
                const rowDate = new Date(date);
                const start = new Date(startDate);
                const end = new Date(endDate);
                end.setDate(end.getDate() + 1); // Pour inclure le dernier jour
                
                matchesDate = rowDate >= start && rowDate <= end;
            }
            
            if (matchesSearch && matchesType && matchesStatus && matchesDate) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    // Écouteurs d'événements
    searchInput.addEventListener('input', filterRows);
    typeFilter.addEventListener('change', filterRows);
    statusFilter.addEventListener('change', filterRows);
    
    resetFiltersBtn.addEventListener('click', function() {
        searchInput.value = '';
        typeFilter.value = '';
        statusFilter.value = '';
        $('input[id="date-range"]').data('daterangepicker').setStartDate(moment().subtract(30, 'days'));
        $('input[id="date-range"]').data('daterangepicker').setEndDate(moment());
        filterRows();
    });
    
    applyFiltersBtn.addEventListener('click', filterRows);
});
</script>
