{% extends 'admin/base.html.twig' %}

{% block title %}Administration — Tableau de Bord{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50">
    <!-- Header sophistiqué -->
    <div class="bg-white border-b border-gray-100 shadow-sm sticky top-0 z-10">
        <div class="px-6 py-5">
            <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                <div>
                    <h1 class="text-2xl font-bold font-poppins text-gray-900 tracking-tight">Tableau de Bord</h1>
                    <p class="text-sm font-medium text-gray-600 mt-0.5">Vue d'ensemble et pilotage de la plateforme</p>
                </div>
                <div class="flex items-center gap-3">
                    <div class="hidden sm:flex items-center space-x-2 bg-gray-50 p-1 rounded-lg border border-gray-100">
                        <span class="px-3 py-1.5 text-xs font-semibold text-gray-600">Aujourd'hui</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Contenu -->
    <div class="p-6 space-y-8">
        
        <!-- Actions Rapides & Alertes Spécifiques -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Support : Comptes à valider -->
            {% if is_granted('ROLE_SUPPORT') and stats.pending_verifications > 0 %}
            <div class="bg-indigo-50 border border-indigo-100 p-6 rounded-2xl flex items-center justify-between group hover:shadow-lg transition-all">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-xl bg-indigo-600 text-white flex items-center justify-center shadow-lg shadow-indigo-200">
                        <i class="fas fa-user-check text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-xs font-black text-indigo-900 uppercase tracking-widest">Support</h4>
                        <p class="text-sm font-bold text-indigo-700 mt-1"><strong>{{ stats.pending_verifications }}</strong> comptes en attente</p>
                    </div>
                </div>
                <a href="{{ path('admin_users') }}?filter=unverified" class="p-3 bg-white text-indigo-600 rounded-xl group-hover:bg-indigo-600 group-hover:text-white transition-all shadow-sm">
                    <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            {% endif %}

            <!-- Finance : Retraits ou Guichet -->
            {% if is_granted('ROLE_FINANCE') %}
            <div class="bg-emerald-50 border border-emerald-100 p-6 rounded-2xl flex items-center justify-between group hover:shadow-lg transition-all">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-xl bg-emerald-600 text-white flex items-center justify-center shadow-lg shadow-emerald-200">
                        <i class="fas fa-cash-register text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-xs font-black text-emerald-900 uppercase tracking-widest">Caisse</h4>
                        <p class="text-sm font-bold text-emerald-700 mt-1">Nouveau Paiement Physique</p>
                    </div>
                </div>
                <a href="{{ path('admin_caisse_index') }}" class="p-3 bg-white text-emerald-600 rounded-xl group-hover:bg-emerald-600 group-hover:text-white transition-all shadow-sm">
                    <i class="fas fa-plus"></i>
                </a>
            </div>
            {% endif %}

            <!-- Admin : Alertes Sécurité -->
            {% if is_granted('ROLE_ADMIN') and stats.security_alerts > 0 %}
            <div class="bg-rose-50 border border-rose-100 p-6 rounded-2xl flex items-center justify-between group hover:shadow-lg transition-all">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-xl bg-rose-600 text-white flex items-center justify-center shadow-lg shadow-rose-200">
                        <i class="fas fa-shield-virus text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-xs font-black text-rose-900 uppercase tracking-widest">Sécurité</h4>
                        <p class="text-sm font-bold text-rose-700 mt-1"><strong>{{ stats.security_alerts }}</strong> alertes aujourd'hui</p>
                    </div>
                </div>
                <a href="{{ path('admin_audit_logs') }}" class="p-3 bg-white text-rose-600 rounded-xl group-hover:bg-rose-600 group-hover:text-white transition-all shadow-sm">
                    <i class="fas fa-eye"></i>
                </a>
            </div>
            {% endif %}
        </div>
        
        <!-- Alerte Critique: Retraits en attente -->
        {% if stats.pending_withdrawals > 0 %}
        <div class="bg-amber-50 border-l-4 border-amber-400 p-6 rounded-2xl shadow-sm animate-pulse">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="w-12 h-12 rounded-xl bg-amber-100 text-amber-600 flex items-center justify-center">
                        <i class="fas fa-hand-holding-dollar text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-sm font-bold text-amber-900">Demandes de Retrait en Suspens</h4>
                        <p class="text-xs text-amber-700 mt-0.5">Il y a <strong>{{ stats.pending_withdrawals }}</strong> demandes totalisant <strong>{{ stats.pending_withdrawals_amount|number_format(0, ',', ' ') }} FCFA</strong> à traiter.</p>
                    </div>
                </div>
                <a href="{{ path('admin_withdrawals') }}" class="px-5 py-2.5 bg-amber-600 text-white rounded-xl text-xs font-bold uppercase tracking-widest hover:bg-amber-700 transition-all shadow-lg shadow-amber-200">
                    Traiter maintenant
                </a>
            </div>
        </div>
        {% endif %}

        <!-- Cartes de Statistiques -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Utilisateurs (Restylé) - Seul Admin -->
            {% if is_granted('ROLE_ADMIN') %}
            <div class="group bg-white rounded-[2rem] border border-gray-100 p-6 transition-all duration-300 hover:shadow-xl hover:shadow-emerald-500/5 hover:-translate-y-1">
                <div class="flex items-center justify-between mb-5">
                    <div class="w-12 h-12 rounded-2xl bg-emerald-50 text-emerald-600 flex items-center justify-center transition-colors group-hover:bg-emerald-600 group-hover:text-white">
                        <i class="fas fa-hand-holding-dollar text-lg"></i>
                    </div>
                </div>
                <div class="space-y-1">
                    <h3 class="text-3xl font-bold font-poppins text-gray-900">{{ stats.total_withdrawals_amount|default(0)|number_format(0, ',', ' ') }} <span class="text-sm font-semibold">FCFA</span></h3>
                    <p class="text-[10px] font-black text-gray-600 uppercase tracking-[0.2em]">Total des retraits</p>
                </div>
                <div class="mt-6 pt-5 border-t border-gray-50 flex items-center justify-between">
                    <span class="text-[10px] font-bold text-gray-600 uppercase">
                        +{{ stats.new_users_today|default(0) }} <span class="text-emerald-500">Aujourd'hui</span>
                    </span>
                    <a href="{{ path('admin_withdrawals') }}" class="text-gray-300 hover:text-emerald-600 transition-colors">
                        <i class="fas fa-arrow-right-long"></i>
                    </a>
                </div>
            </div>
            {% endif %}

            <!-- Tontines -->
            <div class="group bg-white rounded-[2rem] border border-gray-100 p-6 transition-all duration-300 hover:shadow-xl hover:shadow-green-500/5 hover:-translate-y-1">
                <div class="flex items-center justify-between mb-5">
                    <div class="w-12 h-12 rounded-2xl bg-green-50 text-green-600 flex items-center justify-center transition-colors group-hover:bg-green-600 group-hover:text-white">
                        <i class="fas fa-piggy-bank text-lg"></i>
                    </div>
                </div>
                <div class="space-y-1">
                    <h3 class="text-3xl font-bold font-poppins text-gray-900">{{ stats.active_tontines|default(0) }}</h3>
                    <p class="text-[10px] font-black text-gray-600 uppercase tracking-[0.2em]">Tontines Actives</p>
                </div>
                <div class="mt-6 pt-5 border-t border-gray-50 flex items-center justify-between">
                    <span class="text-[10px] font-bold text-gray-600 uppercase italic">
                        {{ stats.tontines_today|default(0) }} nouvelles
                    </span>
                    <a href="{{ path('admin_tontine_index') }}" class="text-gray-300 hover:text-green-600 transition-colors">
                        <i class="fas fa-arrow-right-long"></i>
                    </a>
                </div>
            </div>

            <!-- Transactions -->
            <div class="group bg-white rounded-[2rem] border border-gray-100 p-6 transition-all duration-300 hover:shadow-xl hover:shadow-violet-500/5 hover:-translate-y-1">
                <div class="flex items-center justify-between mb-5">
                    <div class="w-12 h-12 rounded-2xl bg-violet-50 text-violet-600 flex items-center justify-center transition-colors group-hover:bg-violet-600 group-hover:text-white">
                        <i class="fas fa-bolt-lightning text-lg"></i>
                    </div>
                    {% if stats.success_rate is defined %}
                    <span class="text-[9px] font-black text-violet-600 bg-violet-50 px-2.5 py-1 rounded-full border border-violet-100 uppercase tracking-tighter">
                         {{ stats.success_rate }}% Succès
                    </span>
                    {% endif %}
                </div>
                <div class="space-y-1">
                    <h3 class="text-3xl font-bold font-poppins text-gray-900">{{ stats.today_transactions|default(0) }}</h3>
                    <p class="text-[10px] font-black text-gray-600 uppercase tracking-[0.2em]">flux aujourd'hui</p>
                </div>
                <div class="mt-6 pt-5 border-t border-gray-50 flex items-center justify-between">
                    <span class="text-[10px] font-bold text-gray-600 uppercase">
                        Total: {{ stats.total_transactions|default(0)|number_format(0, ',', ' ') }}
                    </span>
                    <a href="{{ path('admin_transactions') }}" class="text-gray-300 hover:text-violet-600 transition-colors">
                        <i class="fas fa-arrow-right-long"></i>
                    </a>
                </div>
            </div>

            <!-- Commissions (Masqué pour tous sauf Admin) -->
            {% if is_granted('ROLE_ADMIN') %}
            <div class="group bg-white rounded-[2rem] border border-gray-100 p-6 transition-all duration-300 hover:shadow-xl hover:shadow-amber-500/5 hover:-translate-y-1">
                <div class="flex items-center justify-between mb-5">
                    <div class="w-12 h-12 rounded-2xl bg-amber-50 text-amber-600 flex items-center justify-center transition-colors group-hover:bg-amber-600 group-hover:text-white">
                        <i class="fas fa-receipt text-lg"></i>
                    </div>
                    {% if stats.revenue_growth is defined %}
                    <span class="text-[10px] font-black text-amber-600 bg-amber-50 px-2.5 py-1 rounded-full border border-amber-100 uppercase italic">
                        +{{ stats.revenue_growth }}%
                    </span>
                    {% endif %}
                </div>
                <div class="space-y-1">
                    <h3 class="text-3xl font-bold font-poppins text-gray-900">{{ stats.total_revenue|default(0)|number_format(0, ',', ' ') }} <span class="text-sm font-semibold">FCFA</span></h3>
                    <p class="text-[10px] font-black text-gray-600 uppercase tracking-[0.2em]">Total des Entrées</p>
                </div>
                <div class="mt-6 pt-5 border-t border-gray-50 flex items-center justify-between">
                    <span class="text-[10px] font-bold text-gray-600 uppercase">
                        Moy: {{ stats.avg_transaction|default(0)|number_format(0, ',', ' ') }} / t
                    </span>
                    <a href="{{ path('admin_financial_dashboard') }}" class="text-gray-300 hover:text-amber-600 transition-colors">
                        <i class="fas fa-arrow-right-long"></i>
                    </a>
                </div>
            </div>
            {% endif %}
        </div>

        <!-- Graphiques et Activités -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Performance (Seul Admin) -->
            <div class="lg:col-span-2 space-y-8">
                {% if is_granted('ROLE_ADMIN') %}
                <div class="bg-white rounded-[2.5rem] border border-gray-100 p-8 shadow-sm">
                    <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6 mb-10">
                        <div>
                            <h3 class="text-xl font-bold font-poppins text-gray-900">Flux Commissionnel</h3>
                            <p class="text-xs font-bold text-gray-600 uppercase tracking-widest mt-1">Séquençage hebdomadaire</p>
                        </div>
                        <div class="flex items-center bg-gray-50 p-1 rounded-xl border border-gray-100">
                            <button class="px-5 py-2 text-[10px] font-black uppercase tracking-widest rounded-lg transition-all bg-white shadow-sm text-emerald-600">7 Jours</button>
                            <button class="px-5 py-2 text-[10px] font-black uppercase tracking-widest text-gray-600 rounded-lg hover:text-gray-700">30 Jours</button>
                        </div>
                    </div>
                    <div class="h-[350px]">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>

                <!-- Journal d'Événements (Restreint aux Admins uniquement) -->
                <div class="bg-white rounded-[2.5rem] border border-gray-100 overflow-hidden shadow-sm">
                    <div class="px-8 py-6 border-b border-gray-50 flex items-center justify-between bg-gray-50/30">
                        <div class="flex items-center gap-3">
                            <i class="fas fa-stream text-gray-600 text-xs"></i>
                            <h3 class="text-sm font-bold font-poppins text-gray-900 uppercase tracking-widest">Journal d'Événements</h3>
                        </div>
                        <a href="{{ path('admin_audit_logs') }}" class="text-[10px] font-black text-emerald-600 hover:text-emerald-700 uppercase tracking-widest flex items-center gap-2">
                             Full Log <i class="fas fa-chevron-right text-[8px]"></i>
                        </a>
                    </div>
                    <div class="divide-y divide-gray-50">
                        {% for activity in recent_activities|default([]) %}
                        <div class="flex items-center gap-4 px-8 py-5 hover:bg-gray-50/50 transition-colors group">
                            <div class="w-10 h-10 rounded-xl flex items-center justify-center shrink-0 transition-transform group-hover:scale-110 {% if activity.actions == 'create' %}bg-green-50 text-green-500{% elseif activity.actions == 'delete' %}bg-rose-50 text-rose-500{% else %}bg-amber-50 text-amber-500{% endif %}">
                                <i class="fas {% if activity.actions == 'create' %}fa-plus{% elseif activity.actions == 'delete' %}fa-trash{% else %}fa-pen{% endif %} text-xs"></i>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-xs font-bold text-gray-900 truncate">{{ activity.description }}</p>
                                <div class="flex items-center gap-2 mt-1">
                                    <span class="text-[10px] font-bold text-gray-600 uppercase">{{ activity.createdAt|date('H:i') }}</span>
                                    <span class="w-1 h-1 rounded-full bg-gray-200"></span>
                                    <span class="text-[10px] font-bold text-emerald-600 uppercase">{{ activity.utilisateur ? activity.utilisateur.fullName : 'System' }}</span>
                                </div>
                            </div>
                            <a href="{{ path('admin_audit_detail', {'id': activity.id}) }}" class="w-8 h-8 rounded-lg bg-gray-50 flex items-center justify-center text-gray-300 opacity-0 group-hover:opacity-100 transition-all hover:text-emerald-600">
                                <i class="fas fa-eye text-xs"></i>
                            </a>
                        </div>
                        {% else %}
                        <div class="text-center py-16">
                            <p class="text-xs font-bold text-gray-600 uppercase tracking-widest">Aucune activité récente</p>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                {% else %}
                <!-- Vue Opérationnelle pour Manager / Superviseur -->
                <div class="bg-white rounded-[2.5rem] border border-gray-100 overflow-hidden shadow-sm">
                    <div class="px-8 py-6 border-b border-gray-50 flex items-center justify-between bg-gray-50/30">
                        <div class="flex items-center gap-3">
                            <i class="fas fa-piggy-bank text-gray-600 text-xs"></i>
                            <h3 class="text-sm font-bold font-poppins text-gray-900 uppercase tracking-widest">Dernières Tontines</h3>
                        </div>
                    </div>
                    <div class="divide-y divide-gray-50">
                        {% for tontine in recent_tontines|default([]) %}
                        <div class="flex items-center gap-4 px-8 py-4 hover:bg-gray-50/50 transition-colors">
                            <div class="w-10 h-10 rounded-xl bg-green-50 text-green-600 flex items-center justify-center">
                                <i class="fas fa-piggy-bank text-xs"></i>
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-xs font-bold text-gray-900 truncate">{{ tontine.frequency|capitalize }} - {{ tontine.amount|number_format(0, ',', ' ') }} FCFA</p>
                                <p class="text-[10px] text-gray-500">{{ tontine.utilisateur ? tontine.utilisateur.fullName : 'N/A' }}</p>
                            </div>
                            <span class="text-[10px] font-bold text-gray-400 capitalize">{{ tontine.statut }}</span>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <div class="bg-white rounded-[2.5rem] border border-gray-100 overflow-hidden shadow-sm">
                    <div class="px-8 py-6 border-b border-gray-50 flex items-center justify-between bg-gray-50/30">
                        <div class="flex items-center gap-3">
                            <i class="fas fa-users text-gray-600 text-xs"></i>
                            <h3 class="text-sm font-bold font-poppins text-gray-900 uppercase tracking-widest">Nouveaux Inscrits</h3>
                        </div>
                        <a href="{{ path('admin_users', {'group': 'clients'}) }}" class="text-[10px] font-black text-emerald-600 hover:text-emerald-700 uppercase tracking-widest">Full List</a>
                    </div>
                    <div class="divide-y divide-gray-50">
                        {% for user in recent_users|default([]) %}
                        <div class="flex items-center gap-4 px-8 py-4 hover:bg-gray-50/50 transition-colors">
                            <div class="w-10 h-10 rounded-xl bg-emerald-50 text-emerald-600 flex items-center justify-center font-bold text-xs">
                                {{ user.firstname|first }}{{ user.lastname|first }}
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-xs font-bold text-gray-900 truncate">{{ user.fullName }}</p>
                                <p class="text-[10px] text-gray-500">{{ user.email }}</p>
                            </div>
                            <span class="text-[10px] text-gray-400">{{ user.createdAt|date('d/m/Y') }}</span>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- Sidebar (Santé Système & Broadcasts) -->
            <div class="space-y-8">
                <!-- Santé Système (Super Admin ou Admin) -->
                {% if is_granted('VIEW_MODULE', 'maintenance') or is_granted('ROLE_ADMIN') %}
                <div class="bg-gray-900 rounded-[2.5rem] p-8 text-white relative overflow-hidden shadow-2xl">
                    <div class="relative ">
                        <div class="flex items-center justify-between mb-8">
                            <h3 class="text-sm font-bold font-poppins uppercase tracking-widest">Santé Système</h3>
                            <div class="flex items-center gap-2">
                                <div class="w-2 h-2 rounded-full bg-emerald-500 animate-ping"></div>
                                <span class="text-[10px] font-bold text-emerald-500 uppercase">Live</span>
                            </div>
                        </div>
                        
                        <div class="space-y-6">
                            {% set resources = [
                                { label: 'CPU Load', value: system_status.server.load|split(' ')[0]|default('2%'), icon: 'fa-microchip', color: 'green' },
                                { label: 'Memory', value: system_status.memory.percent|default(45) ~ '%', icon: 'fa-memory', color: 'emerald' },
                                { label: 'Storage', value: system_status.disk.percent|default(12) ~ '%', icon: 'fa-hard-drive', color: 'amber' }
                            ] %}

                            {% for res in resources %}
                            <div class="space-y-2">
                                <div class="flex justify-between items-center text-[10px] font-bold uppercase tracking-widest text-gray-600">
                                    <div class="flex items-center gap-2">
                                        <i class="fas {{ res.icon }} text-[9px]"></i>
                                        <span>{{ res.label }}</span>
                                    </div>
                                    <span class="text-white">{{ res.value }}</span>
                                </div>
                                <div class="h-1 w-full bg-white/5 rounded-full overflow-hidden">
                                    <div class="h-full bg-{{ res.color }}-500 rounded-full transition-all duration-1000" style="width: {{ res.value|replace({'%': ''})|trim }}%"></div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>

                        <div class="mt-8 pt-6 border-t border-white/5 grid grid-cols-2 gap-4">
                            <div>
                                <p class="text-[9px] font-black text-gray-600 uppercase italic">Database</p>
                                <p class="text-[10px] font-bold text-emerald-400">Stable</p>
                            </div>
                            <div>
                                <p class="text-[9px] font-black text-gray-600 uppercase italic">PHP Version</p>
                                <p class="text-[10px] font-bold text-white">{{ system_status.php.version|default('8.1') }}</p>
                            </div>
                        </div>
                    </div>
                    <!-- Décoration -->
                    <div class="absolute -right-20 -bottom-20 w-48 h-48 bg-emerald-500/10 rounded-full blur-3xl"></div>
                </div>
                {% endif %}

                <!-- Notifications Plateforme (Annonces - Restreint) -->
                {% if is_granted('VIEW_MODULE', 'broadcast') %}
                <div class="bg-white rounded-[2.5rem] border border-gray-100 p-8 shadow-sm">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-sm font-bold font-poppins text-gray-900 uppercase tracking-widest">Annonces</h3>
                        <a href="{{ path('admin_broadcast') }}" class="w-8 h-8 rounded-xl bg-gray-50 text-gray-600 flex items-center justify-center hover:bg-emerald-600 hover:text-white transition-all">
                            <i class="fas fa-bullhorn text-xs"></i>
                        </a>
                    </div>
                    
                    <div class="space-y-4">
                        {% for broadcast in recent_broadcasts|default([]) %}
                        <div class="p-4 rounded-2xl bg-gray-50 border border-gray-100 group hover:border-emerald-100 transition-all">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-[9px] font-black uppercase text-emerald-600 px-2 py-0.5 bg-emerald-50 rounded-md">
                                    {{ broadcast.type|default('Info') }}
                                </span>
                                <span class="text-[9px] font-bold text-gray-600">{{ broadcast.createdAt|date('d M') }}</span>
                            </div>
                            <p class="text-xs font-bold text-gray-900 line-clamp-2 leading-relaxed">
                                {{ broadcast.title }}
                            </p>
                        </div>
                        {% else %}
                        <div class="py-6 text-center border-2 border-dashed border-gray-50 rounded-2xl">
                            <p class="text-[10px] font-bold text-gray-300 uppercase">Aucune annonce active</p>
                        </div>
                        {% endfor %}
                    </div>
                    
                    <a href="{{ path('admin_broadcast_create') }}" class="mt-6 flex items-center justify-center gap-2 w-full py-4 bg-gray-900 text-white rounded-2xl text-[10px] font-black uppercase tracking-[0.2em] shadow-lg shadow-gray-200 hover:bg-emerald-600 transition-all">
                        Diffuser <i class="fas fa-paper-plane text-[9px]"></i>
                    </a>
                </div>
                {% endif %}

               
            </div>
        </div>
    </div>
</div>

<script>
    let chartData = { labels: [], data: [] };
    {% if stats.revenue_chart is defined %}
    chartData = {
        labels: {{ stats.revenue_chart.labels|json_encode|raw }},
        data: {{ stats.revenue_chart.data|json_encode|raw }}
    };
    {% endif %}

    document.addEventListener('DOMContentLoaded', function() {
        const revenueCtx = document.getElementById('revenueChart');
        if (revenueCtx) {
            new Chart(revenueCtx.getContext('2d'), {
                type: 'line',
                data: {
                    labels: chartData.labels,
                    datasets: [{
                        label: 'Commission (FCFA)',
                        data: chartData.data,
                        borderColor: '#10b981',
                        borderWidth: 3,
                        backgroundColor: 'rgba(16, 185, 129, 0.03)',
                        fill: true,
                        tension: 0.45,
                        pointRadius: 0,
                        pointHitRadius: 50,
                        pointHoverRadius: 6,
                        pointHoverBackgroundColor: '#10b981',
