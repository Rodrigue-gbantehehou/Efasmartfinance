{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des retraits - EFA SMART FINANCE{% endblock %}

{% block contentadmin %}
<div class="min-h-screen bg-green-50-gray-50/50">
    <!-- Header Premium -->
    <header class="bg-white border-b border-gray-200 sticky top-0 z-30">
        <div class="px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-20">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Gestion des Retraits</h1>
                    <p class="text-sm text-gray-600">Validez et suivez les demandes de retrait des utilisateurs.</p>
                </div>
                
                <div class="flex items-center gap-3">
                    <div class="relative hidden md:block">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fa-solid fa-magnifying-glass text-gray-600 text-sm"></i>
                        </div>
                        <input type="text" id="withdrawalSearch" placeholder="Rechercher un utilisateur ou ID..." 
                               class="block w-64 pl-10 pr-3 py-2 border border-gray-300 rounded-xl leading-5 bg-white placeholder-gray-50 focus:outline-none focus:ring-1 focus:ring-green-500 focus:border-green-500 sm:text-sm">
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="py-10">
        <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Stats Grid -->
            <div class="grid grid-cols-1 gap-6 mb-10 sm:grid-cols-2 lg:grid-cols-4">
                <!-- Pending Card -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 p-3 bg-yellow-50 rounded-xl">
                            <i class="fa-solid fa-clock-rotate-left text-yellow-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">En attente</p>
                            <h3 class="text-xl font-bold text-gray-900">{{ stats.pending_count }} demande(s)</h3>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center text-sm">
                        <span class="text-yellow-600 font-semibold">{{ stats.pending_amount|number_format(0, ',', ' ') }} FCFA</span>
                        <span class="text-gray-600 ml-2">à traiter</span>
                    </div>
                </div>

                <!-- Approved Card -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 p-3 bg-green-50 rounded-xl">
                            <i class="fa-solid fa-check-double text-green-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Total versé</p>
                            <h3 class="text-xl font-bold text-gray-900">{{ stats.total_approved|number_format(0, ',', ' ') }} FCFA</h3>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center text-sm">
                        <span class="text-green-600 font-medium">Fonds décaissés avec succès</span>
                    </div>
                </div>

                <!-- Volume Card -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 p-3 bg-green-50 rounded-xl">
                            <i class="fa-solid fa-chart-line text-green-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Volume Total</p>
                            <h3 class="text-xl font-bold text-gray-900">{{ stats.total_count }}</h3>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center text-sm">
                        <span class="text-gray-600">Nombre de demandes historiques</span>
                    </div>
                </div>

                <!-- Efficiency Card -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <div class="flex items-center">
                        <div class="flex-shrink-0 p-3 bg-green-50 rounded-xl">
                            <i class="fa-solid fa-bolt text-green-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Taux de succès</p>
                            <h3 class="text-xl font-bold text-gray-900">{{ stats.success_rate|number_format(1, '.', ' ') }}%</h3>
                        </div>
                    </div>
                    <div class="mt-4 flex items-center text-sm">
                        <span class="text-green-600 font-medium">Traitement rapide actif</span>
                    </div>
                </div>
            </div>

            <!-- Table Card -->
            <div class="bg-white rounded-[2rem] shadow-sm border border-gray-100 overflow-hidden">
                <div class="px-8 py-6 border-b border-gray-50 flex items-center justify-between bg-gray-50/30">
                    <h2 class="text-lg font-bold text-gray-900">Dernières demandes</h2>
                    <div class="flex items-center gap-2">
                         <button class="filter-btn active px-4 py-2 text-sm font-medium bg-white border border-gray-200 rounded-xl shadow-sm hover:bg-gray-50 transition-all text-green-700 border-green-200" data-statut="all">Tout</button>
                         <button class="filter-btn px-4 py-2 text-sm font-medium bg-white border border-gray-200 rounded-xl shadow-sm hover:bg-gray-50 transition-all text-gray-600" data-statut="pending">En attente</button>
                         <button class="filter-btn px-4 py-2 text-sm font-medium bg-white border border-gray-200 rounded-xl shadow-sm hover:bg-gray-50 transition-all text-gray-600" data-statut="approved">Approuvés</button>
                    </div>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-100">
                        <thead class="bg-gray-50/50">
                            <tr>
                                <th class="px-8 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Référence</th>
                                <th class="px-8 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Utilisateur</th>
                                <th class="px-8 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Montant</th>
                                <th class="px-8 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Net à payer</th>
                                <th class="px-8 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Statut</th>
                                <th class="px-8 py-4 text-left text-xs font-bold text-gray-600 uppercase tracking-wider">Date</th>
                                <th class="px-8 py-4 text-right text-xs font-bold text-gray-600 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-50" id="withdrawalsBody">
                            {% for withdrawal in withdrawals %}
                            <tr class="withdrawal-row hover:bg-gray-50/50 transition-colors" data-statut="{{ withdrawal.statut }}" data-search="{{ withdrawal.utilisateur.fullName|lower }} {{ withdrawal.utilisateur.email|lower }} #{{ withdrawal.id }}">
                                <td class="px-8 py-5 whitespace-nowrap text-sm font-bold text-gray-900">#{{ withdrawal.id }}</td>
                                <td class="px-8 py-5 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="h-10 w-10 rounded-full bg-green-100 flex items-center justify-center text-green-700 font-bold text-xs">
                                            {{ withdrawal.utilisateur.firstname|first|upper }}{{ withdrawal.utilisateur.lastname|first|upper }}
                                        </div>
                                        <div class="ml-3">
                                            <div class="text-sm font-bold text-gray-900">{{ withdrawal.utilisateur.fullName }}</div>
                                            <div class="text-xs text-gray-600">{{ withdrawal.utilisateur.email }}</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-8 py-5 whitespace-nowrap">
                                    <div class="text-sm font-bold text-gray-900">{{ withdrawal.totalAmount|number_format(0, ',', ' ') }} FCFA</div>
                                    <div class="text-xs text-gray-600">Total retrait</div>
                                </td>
                                <td class="px-8 py-5 whitespace-nowrap">
                                    <div class="text-sm font-bold text-green-700">{{ withdrawal.amount|number_format(0, ',', ' ') }} FCFA</div>
                                    <div class="text-xs text-gray-600">Frais déduits</div>
                                </td>
                                <td class="px-8 py-5 whitespace-nowrap">
                                    {% if withdrawal.statut == 'approved' %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-green-100 text-green-700">
                                            <i class="fa-solid fa-check-circle mr-1.5"></i> Approuvé
                                        </span>
                                    {% elseif withdrawal.statut == 'rejected' %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-red-100 text-red-700">
                                            <i class="fa-solid fa-circle-xmark mr-1.5"></i> Rejeté
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-yellow-100 text-yellow-700">
                                            <i class="fa-solid fa-clock-rotate-left mr-1.5"></i> En attente
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="px-8 py-5 whitespace-nowrap text-sm text-gray-600">
                                    {{ withdrawal.requestedAt ? withdrawal.requestedAt|date('d/m/Y H:i') : 'N/A' }}
                                </td>
                                <td class="px-8 py-5 whitespace-nowrap text-right text-sm font-medium">
                                    <div class="flex justify-end gap-2">
                                        <a href="{{ path('admin_withdrawal_show', {'id': withdrawal.id}) }}" 
                                           class="p-2 text-gray-600 hover:text-green-600 transition-colors" title="Détails">
                                            <i class="fa-solid fa-eye text-lg"></i>
                                        </a>
                                        {% if withdrawal.statut == 'pending' %}
                                            <form method="post" action="{{ path('admin_withdrawal_approve', {'id': withdrawal.id}) }}" class="inline" onsubmit="return confirm('Approuver ce paiement ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ withdrawal.id) }}">
                                                <button type="submit" class="p-2 text-gray-600 hover:text-green-700 transition-colors" title="Approuver">
                                                    <i class="fa-solid fa-circle-check text-lg"></i>
                                                </button>
                                            </form>
                                            <form method="post" action="{{ path('admin_withdrawal_reject', {'id': withdrawal.id}) }}" class="inline" onsubmit="return confirm('Rejeter cette demande ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ withdrawal.id) }}">
                                                <button type="submit" class="p-2 text-gray-600 hover:text-red-600 transition-colors" title="Rejeter">
                                                    <i class="fa-solid fa-circle-xmark text-lg"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            {% else %}
                            <tr>
                                <td colspan="7" class="px-8 py-20 text-center">
                                    <div class="flex flex-col items-center">
                                        <div class="h-16 w-16 bg-gray-50 rounded-full flex items-center justify-center mb-4">
                                            <i class="fa-solid fa-money-bill-transfer text-gray-300 text-3xl"></i>
                                        </div>
                                        <h3 class="text-gray-900 font-bold">Aucun retrait trouvé</h3>
                                        <p class="text-gray-600 text-sm">Les demandes apparaîtront ici dès qu'elles seront soumises.</p>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('withdrawalSearch');
    const filterBtns = document.querySelectorAll('.filter-btn');
    const rows = document.querySelectorAll('.withdrawal-row');

    function applyFilters() {
        const searchTerm = searchInput.value.toLowerCase();
        const activeStatut = document.querySelector('.filter-btn.active').dataset.statut;

        rows.forEach(row => {
            const matchesSearch = row.dataset.search.includes(searchTerm);
            const matchesStatut = activeStatut === 'all' || row.dataset.statut === activeStatut;
            
            row.style.display = (matchesSearch && matchesStatut) ? '' : 'none';
        });
    }

    searchInput.addEventListener('input', applyFilters);

    filterBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            filterBtns.forEach(b => {
                b.classList.remove('active', 'text-green-700', 'border-green-200');
                b.classList.add('text-gray-600');
            });
            btn.classList.add('active', 'text-green-700', 'border-green-200');
            applyFilters();
        });
    });
});
</script>
{% endblock %}
