        }

        .info-box p {
            color: #555;
            margin-bottom: 10px;
        }

        .info-box p:last-child {
            margin-bottom: 0;
        }

        .footer {
            color: #999;
            font-size: 14px;
            margin-top: 40px;
        }

        .spinner {
            display: inline-block;
            width: 50px;
            height: 50px;
            border: 5px solid #f3f3f3;
            border-top: 5px solid #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .contact {
            margin-top: 30px;
            padding: 20px;
            background: #e8eaf6;
            border-radius: 15px;
        }

        .contact a {
            color: #667eea;
            text-decoration: none;
            font-weight: bold;
        }

        .contact a:hover {
