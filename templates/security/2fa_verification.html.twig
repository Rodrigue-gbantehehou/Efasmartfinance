{% extends 'base.html.twig' %}

{% block title %}Vérification à Deux Facteurs{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .two-factor-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .two-factor-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        max-width: 450px;
        width: 100%;
    }
    
    .two-factor-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem;
        text-align: center;
    }
    
    .code-input {
        font-size: 2rem;
        letter-spacing: 0.5rem;
        text-align: center;
        font-weight: bold;
        border: 2px solid #e9ecef;
        border-radius: 10px;
        padding: 1rem;
        transition: all 0.3s ease;
    }
    
    .code-input:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }
    
    .btn-verify {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 1rem 2rem;
        font-weight: bold;
        border-radius: 10px;
        transition: all 0.3s ease;
    }
    
    .btn-verify:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
    }
    
    .btn-verify:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }
    
    .alert-custom {
        border-radius: 10px;
        border: none;
    }
    
    .user-info {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .countdown {
        font-size: 0.9rem;
        color: #6c757d;
        text-align: center;
        margin-top: 1rem;
    }
</style>
{% endblock %}

{% block body %}
<div class="two-factor-container">
    <div class="two-factor-card">
        <div class="two-factor-header">
            <i class="fas fa-shield-alt fa-3x mb-3"></i>
            <h2 class="mb-0">Vérification à Deux Facteurs</h2>
            <p class="mb-0 mt-2">Entrez votre code de sécurité</p>
        </div>
        
        <div class="card-body p-4">
            {% if user %}
                <div class="user-info">
                    <div class="d-flex align-items-center">
                        <div class="me-3">
                            <i class="fas fa-user-circle fa-2x text-muted"></i>
                        </div>
                        <div>
                            <strong>{{ user.firstname }} {{ user.lastname }}</strong><br>
                            <small class="text-muted">{{ user.email ?: user.uuid }}</small>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if error %}
                <div class="alert alert-danger alert-custom mb-3">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    {{ error }}
                </div>
            {% endif %}

            <form id="2faForm">
                <div class="mb-4">
                    <label for="verificationCode" class="form-label text-center d-block mb-3">
                        <i class="fas fa-key me-2"></i>
                        Code à 6 chiffres
                    </label>
                    <input type="text" 
                           class="form-control code-input" 
                           id="verificationCode" 
                           name="code" 
                           maxlength="6" 
                           pattern="[0-9]{6}" 
                           required
                           placeholder="000000"
                           autocomplete="one-time-code"
                           autofocus>
                    <div class="form-text text-center mt-2">
                        Ouvrez votre application d'authentification et entrez le code affiché
                    </div>
                </div>
                
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-verify" id="verifyBtn">
                        <i class="fas fa-check me-2"></i>
                        Vérifier
                    </button>
                    
                    <a href="{{ path('app_2fa_cancel') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>
                        Retour à la connexion
                    </a>
                </div>
            </form>
            
            <div class="mt-4 text-center">
                <small class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    Vous pouvez également utiliser un code de sauvegarde si vous n'avez pas accès à votre application
                </small>
            </div>
            
            <div class="countdown" id="countdown">
                Le code se rafraîchit dans <span id="timer">30</span> secondes
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
let countdownInterval;
let timeLeft = 30;

function startCountdown() {
    timeLeft = 30;
    document.getElementById('timer').textContent = timeLeft;
    
    countdownInterval = setInterval(() => {
        timeLeft--;
        document.getElementById('timer').textContent = timeLeft;
        
        if (timeLeft <= 0) {
            clearInterval(countdownInterval);
            timeLeft = 30;
            startCountdown();
        }
    }, 1000);
}

document.getElementById('2faForm')?.addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const verifyBtn = document.getElementById('verifyBtn');
    const codeInput = document.getElementById('verificationCode');
    
    // Désactiver le bouton et montrer le chargement
    verifyBtn.disabled = true;
    verifyBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Vérification...';
    codeInput.disabled = true;
    
    try {
        const response = await fetch('{{ path('app_2fa_verify') }}', {
            method: 'POST',
            body: formData,
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        });
        
        const data = await response.json();
        
        if (data.success) {
            // Rediriger vers la page cible
            window.location.href = data.redirect;
        } else {
            // Afficher l'erreur
            const errorDiv = document.createElement('div');
            errorDiv.className = 'alert alert-danger alert-custom mb-3';
            errorDiv.innerHTML = `<i class="fas fa-exclamation-circle me-2"></i>${data.message}`;
            
            // Insérer l'erreur avant le formulaire
            const form = document.getElementById('2faForm');
            form.parentNode.insertBefore(errorDiv, form);
            
            // Réactiver le formulaire
            verifyBtn.disabled = false;
            verifyBtn.innerHTML = '<i class="fas fa-check me-2"></i>Vérifier';
            codeInput.disabled = false;
            codeInput.value = '';
            codeInput.focus();
            
            // Supprimer l'erreur après 5 secondes
            setTimeout(() => {
                errorDiv.remove();
            }, 5000);
        }
    } catch (error) {
        console.error('Erreur:', error);
        
        // Afficher une erreur générique
        const errorDiv = document.createElement('div');
        errorDiv.className = 'alert alert-danger alert-custom mb-3';
        errorDiv.innerHTML = '<i class="fas fa-exclamation-circle me-2"></i>Une erreur est survenue. Veuillez réessayer.';
        
        const form = document.getElementById('2faForm');
        form.parentNode.insertBefore(errorDiv, form);
        
        // Réactiver le formulaire
        verifyBtn.disabled = false;
        verifyBtn.innerHTML = '<i class="fas fa-check me-2"></i>Vérifier';
        codeInput.disabled = false;
        codeInput.focus();
        
        setTimeout(() => {
            errorDiv.remove();
        }, 5000);
    }
});

// Formater le code automatiquement (uniquement les chiffres)
document.getElementById('verificationCode')?.addEventListener('input', function(e) {
    this.value = this.value.replace(/[^0-9]/g, '');
    
    // Soumettre automatiquement quand 6 chiffres sont entrés
    if (this.value.length === 6) {
        document.getElementById('2faForm').dispatchEvent(new Event('submit'));
    }
});

// Focus automatique sur le champ de code
document.getElementById('verificationCode')?.focus();

// Démarrer le compte à rebours
startCountdown();

// Nettoyer l'intervalle lors du déchargement de la page
window.addEventListener('beforeunload', () => {
    if (countdownInterval) {
        clearInterval(countdownInterval);
    }
});
</script>
{% endblock %}
