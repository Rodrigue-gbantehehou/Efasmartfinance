{% extends 'base.html.twig' %}

{% block title %}Vérification Sécurisée — Efa Smart Finance{% endblock %}

{# Disable header and footer for total focus #}
{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
<div class="min-h-screen bg-green-900 flex items-center justify-center p-4 relative overflow-hidden font-poppins">
    <!-- Animated background elements -->
    <div
        class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] bg-green-900/20 rounded-full blur-[120px] animate-pulse-slow">
    </div>
    <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] bg-yellow-900/10 rounded-full blur-[120px] animate-pulse-slow"
        style="animation-delay: 2s;"></div>

    <div
        class="w-full max-w-[360px] bg-white/5 backdrop-blur-2xl border border-white/10 rounded-[2rem] shadow-2xl p-5 md:p-8 relative z-10 animate-fade-in-up mx-auto my-auto">
        <!-- Logo & Header -->
        <div class="text-center mb-4 md:mb-2">
            <div
                class="inline-flex items-center justify-center mb-3 md:mb-4">
                <img src="{{ asset('images/estm.png') }}" alt="Logo"
                    class="w-14 md:w-20">
            </div>
            <h1 class="text-lg md:text-2xl font-bold text-white mb-1">Code PIN</h1>
            <p class="text-white/70 text-[10px] md:text-sm px-2 leading-tight">
                {% if must_change_pin %}
                Définissez votre nouveau code secret.
                {% else %}
                Saisissez votre code à 5 chiffres.
                {% endif %}
            </p>
        </div>

        {% for message in app.flashes('error') %}
        <div
            class="mb-4 p-3 bg-red-500/10 border border-red-500/20 rounded-xl text-red-400 text-xs flex items-center gap-2 animate-scale-in">
            <i class="fas fa-circle-exclamation text-base"></i>
            <span>{{ message }}</span>
        </div>
        {% endfor %}

        <form method="post" action="{{ path('pin_check') }}" id="pinForm" class="space-y-4 md:space-y-6">
            <!-- PIN Dots Display -->
            <div class="flex justify-center gap-2 md:gap-4 py-1">
                {% for i in 1..5 %}
                <div id="dot-{{ i }}"
                    class="w-3 h-3 md:w-4 md:h-4 rounded-full border-2 border-white/20 transition-all duration-300"></div>
                {% endfor %}
            </div>

            <!-- Hidden Input -->
            <input type="password" id="pin" name="pin" maxlength="5" class="sr-only" autocomplete="off" required
                autofocus>

            <!-- Virtual Keypad (Ultra Compact) -->
            <div class="grid grid-cols-3 gap-3 md:gap-4">
                {% for num in ['1', '2', '3', '4', '5', '6', '7', '8', '9'] %}
                <button type="button" onclick="appendPin('{{ num }}')"
                    class="h-11 md:h-12 rounded-xl md:rounded-2xl bg-white/5 border border-white/5 hover:bg-green-700/40 hover:border-green-500 text-white text-lg md:text-xl font-semibold transition-all duration-200 active:scale-90 flex items-center justify-center shadow-lg backdrop-blur-sm">
                    {{ num }}
                </button>
                {% endfor %}
                <button type="button" onclick="clearPin()"
                    class="h-11 md:h-12 rounded-xl md:rounded-2xl bg-white/5 border border-white/5 hover:bg-red-500/20 hover:border-red-500 text-red-400 text-lg md:text-xl transition-all duration-200 active:scale-90 flex items-center justify-center">
                    <i class="fas fa-delete-left"></i>
                </button>
                <button type="button" onclick="appendPin('0')"
                    class="h-11 md:h-12 rounded-xl md:rounded-2xl bg-white/5 border border-white/5 hover:bg-green-700/40 hover:border-green-500 text-white text-lg md:text-xl font-semibold transition-all duration-200 active:scale-90 flex items-center justify-center">
                    0
                </button>
                <button type="submit" id="submitBtn"
                    class="h-11 md:h-12 rounded-xl md:rounded-2xl bg-green-600 border border-green-500 hover:bg-green-500 text-white text-lg md:text-xl font-semibold transition-all duration-200 active:scale-90 flex items-center justify-center disabled:opacity-30 disabled:grayscale disabled:cursor-not-allowed">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </form>

        <div class="mt-4 md:mt-8 text-center space-y-3">
            <div class="text-[9px] md:text-xs text-white/40 flex items-center justify-center gap-1.5">
                <i class="fas fa-lock text-[8px]"></i>
                {{ remaining_attempts }} tentatives restantes
            </div>

            <a href="{{ path('app_logout') }}"
                class="inline-block text-slate-500 hover:text-white text-[10px] md:text-sm transition-colors border-b border-transparent hover:border-white/20">
                <i class="fas fa-power-off mr-1 text-[8px]"></i>Déconnexion
            </a>
        </div>
    </div>
</div>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .dot-filled {
        background-color: #4ade80 !important;
        /* green-400 */
        border-color: #4ade80 !important;
        box-shadow: 0 0 15px rgba(74, 222, 128, 0.5);
        transform: scale(1.1);
    }
</style>

<script>
    const pinInput = document.getElementById('pin');
    const dots = [
        document.getElementById('dot-1'),
        document.getElementById('dot-2'),
        document.getElementById('dot-3'),
        document.getElementById('dot-4'),
        document.getElementById('dot-5')
    ];
    const form = document.getElementById('pinForm');
    const submitBtn = document.getElementById('submitBtn');

    function updateDots() {
        const val = pinInput.value;
        dots.forEach((dot, index) => {
            if (index < val.length) {
                dot.classList.add('dot-filled');
            } else {
                dot.classList.remove('dot-filled');
            }
        });

        submitBtn.disabled = val.length !== 5;
    }

    function appendPin(num) {
        if (pinInput.value.length < 5) {
            pinInput.value += num;
            updateDots();

            if (pinInput.value.length === 5) {
                setTimeout(() => {
                    form.submit();
                }, 400);
            }
        }
    }

    function clearPin() {
        pinInput.value = pinInput.value.slice(0, -1);
        updateDots();
    }

    // Support keyboard input too
    document.addEventListener('keydown', (e) => {
        if (e.key >= '0' && e.key <= '9') {
            appendPin(e.key);
        } else if (e.key === 'Backspace') {
            clearPin();
        } else if (e.key === 'Enter' && pinInput.value.length === 5) {
            form.submit();
        }
    });

    // Initial state
    updateDots();
</script>
{% endblock %}