{% extends 'base.html.twig' %}

{% block title %}Sécurisez votre compte — EFA SMART FINANCE{% endblock %}

{% block body %}
<div class="min-h-screen bg-green-50-slate-50 flex items-center justify-center p-4 py-12 px-4 sm:px-6 lg:px-8 font-poppins">
    <!-- Decorative background -->
    <div class="fixed top-0 left-0 w-full h-1 bg-green-600"></div>

    <div
        class="max-w-md w-full space-y-8 bg-white p-10 rounded-[2.5rem] shadow-xl border border-gray-100 animate-fade-in">
        <div class="text-center">
            <div
                class="mx-auto h-16 w-16 bg-green-100 rounded-2xl flex items-center justify-center text-green-600 mb-6">
                <i class="fas fa-shield-heart text-3xl"></i>
            </div>
            <h2 class="text-3xl font-extrabold text-slate-900 tracking-tight">
                Sécurisez votre compte
            </h2>
            <p class="mt-3 text-slate-500 text-sm">
                Définissez votre code PIN à 5 chiffres pour activer la protection renforcée de votre compte.
            </p>
        </div>

        {% for message in app.flashes('error') %}
        <div class="p-4 bg-red-50 border-l-4 border-red-400 text-red-700 text-sm rounded-r-lg flex items-center gap-3">
            <i class="fas fa-circle-exclamation"></i>
            <span>{{ message }}</span>
        </div>
        {% endfor %}

        <form class="mt-8 space-y-6" method="POST" action="{{ path('pin_setup') }}">
            <div class="space-y-5">
                <div>
                    <label for="pin" class="block text-sm font-semibold text-slate-700 mb-2">Nouveau Code PIN</label>
                    <div class="relative group">
                        <div
                            class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-green-600 transition-colors">
                            <i class="fas fa-key text-sm"></i>
                        </div>
                        <input id="pin" name="pin" type="password" required
                            class="block w-full pl-11 pr-4 py-4 border-2 border-slate-100 rounded-2xl text-slate-900 placeholder-slate-400 focus:outline-none focus:border-green-500 focus:ring-4 focus:ring-green-500/10 transition-all text-center text-2xl tracking-[1em] font-bold"
                            placeholder="•••••" maxlength="5" pattern="\d{5}" inputmode="numeric">
                    </div>
                </div>

                <div>
                    <label for="pin_confirm" class="block text-sm font-semibold text-slate-700 mb-2">Confirmez le Code
                        PIN</label>
                    <div class="relative group">
                        <div
                            class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none text-slate-400 group-focus-within:text-green-600 transition-colors">
                            <i class="fas fa-check-double text-sm"></i>
                        </div>
                        <input id="pin_confirm" name="pin_confirm" type="password" required
                            class="block w-full pl-11 pr-4 py-4 border-2 border-slate-100 rounded-2xl text-slate-900 placeholder-slate-400 focus:outline-none focus:border-green-500 focus:ring-4 focus:ring-green-500/10 transition-all text-center text-2xl tracking-[1em] font-bold"
                            placeholder="•••••" maxlength="5" pattern="\d{5}" inputmode="numeric">
                    </div>
                </div>
            </div>

            <div class="bg-blue-50/50 p-4 rounded-2xl border border-blue-100/50">
                <div class="flex gap-3">
                    <i class="fas fa-lightbulb text-blue-500 mt-1"></i>
                    <div class="text-xs text-blue-700 leading-relaxed">
                        <strong>Conseil :</strong> Choisissez un code dont vous vous souviendrez facilement, mais évitez
                        les suites évidentes comme "12345" ou votre date de naissance.
                    </div>
                </div>
            </div>

            <button type="submit"
                class="group relative w-full flex justify-center py-4 px-4 border border-transparent text-lg font-bold rounded-2xl text-white bg-green-700 hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all shadow-lg shadow-green-900/10 active:scale-[0.98]">
                <span class="absolute left-0 inset-y-0 flex items-center pl-4">
                    <i class="fas fa-lock text-green-400 group-hover:text-green-300 transition-colors"></i>
                </span>
                Activer mon Code PIN
            </button>
        </form>
    </div>
</div>

<script>
    document.querySelectorAll('input[type="password"]').forEach(input => {
        input.addEventListener('input', function (e) {
            this.value = this.value.replace(/[^\d]/g, '');
        });
    });
</script>
{% endblock %}