{% extends "dashboard/base.html.twig" %}

{% block title %}Mes Tontines{% endblock %}

{% block contentdashboard %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 via-white to-gray-50/50">
    <!-- Header Minimaliste -->
    <header class="sticky top-0 z-40 bg-white/80 backdrop-blur-lg border-b border-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <!-- Logo/Brand -->
                <div class="flex items-center gap-3">
                    <div class="relative">
                        <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                            <i class="fa-solid fa-piggy-bank text-primary text-lg"></i>
                        </div>
                        <div class="absolute -top-1 -right-1 w-4 h-4 bg-emerald-400 rounded-full border-2 border-white"></div>
                    </div>
                    <h1 class="text-xl font-bold bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
                        Mes Tontines
                    </h1>
                </div>

                <!-- Actions -->
                <div class="flex items-center gap-3">
                    <!-- Search (Desktop) -->
                    <div class="hidden md:block relative group">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fa-solid fa-search text-gray-400 text-sm"></i>
                        </div>
                        <input type="text" 
                               placeholder="Rechercher..."
                               class="pl-9 pr-4 py-2 w-56 bg-gray-100/80 border border-gray-200 rounded-xl focus:bg-white focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all duration-200 text-sm">
                    </div>

                    <!-- Add Button -->
                    <a href="{{ path('app_tontine_create') }}" 
                       class="relative group">
                        <div class="absolute inset-0 bg-gradient-to-r from-primary to-primary-dark rounded-xl blur opacity-75 group-hover:opacity-100 transition-opacity"></div>
                        <div class="relative px-4 py-2.5 bg-white rounded-xl border border-gray-200 group-hover:border-transparent transition-all duration-200">
                            <span class="bg-gradient-to-r from-primary to-primary-dark bg-clip-text text-transparent font-semibold text-sm flex items-center gap-2">
                                <i class="fa-solid fa-plus"></i>
                                <span class="hidden sm:inline">Nouvelle</span>
                            </span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Quick Filters -->
        <div class="mb-8">
            <div class="inline-flex items-center bg-white/80 backdrop-blur-sm rounded-2xl border border-gray-100 p-1 shadow-sm">
                <button class="px-5 py-2.5 bg-primary text-white rounded-xl text-sm font-medium transition-all duration-200 hover:shadow-md">
                    Toutes
                    <span class="ml-2 px-1.5 py-0.5 bg-white/20 rounded-md text-xs">{{ tontines|length }}</span>
                </button>
                <button class="px-5 py-2.5 text-gray-600 hover:text-gray-900 rounded-xl text-sm font-medium transition-colors flex items-center gap-2">
                    <div class="w-2 h-2 bg-emerald-500 rounded-full"></div>
                    Actives
                </button>
                <button class="px-5 py-2.5 text-gray-600 hover:text-gray-900 rounded-xl text-sm font-medium transition-colors flex items-center gap-2">
                    <div class="w-2 h-2 bg-gray-400 rounded-full"></div>
                    Terminées
                </button>
            </div>
        </div>

        <!-- Tontines Grid - Nouveau Design -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for tontine in tontines %}
                {% set savedAmount = tontine.amountPerPoint * (tontine.paidPoints|default(0)) %}
                {% set totalAmount = tontine.amountPerPoint * tontine.totalPoints %}
                {% set progress = tontine.progress|default(0) %}
                {% set isActive = tontine.statut == 'active' %}
                
                <div class="group relative">
                    <!-- Background Gradient Effect -->
                    <div class="absolute inset-0 bg-gradient-to-br from-white to-gray-50 rounded-3xl border border-gray-100 shadow-sm transition-all duration-300 group-hover:shadow-xl group-hover:border-primary/20 group-hover:scale-[1.02]"></div>
                    
                    <!-- Card Content -->
                    <div class="relative p-6 h-full flex flex-col">
                        <!-- Status Badge -->
                        <div class="absolute top-4 right-4">
                            <span class="px-3 py-1.5 rounded-full text-xs font-medium {{ isActive ? 'bg-emerald-50 text-emerald-700 border border-emerald-200' : 'bg-gray-100 text-gray-700 border border-gray-200' }} flex items-center gap-1.5">
                                <div class="w-1.5 h-1.5 rounded-full {{ isActive ? 'bg-emerald-500 animate-pulse' : 'bg-gray-400' }}"></div>
                                {{ isActive ? 'Active' : 'Terminée' }}
                            </span>
                        </div>

                        <!-- Tontine Icon & Name -->
                        <div class="mb-6">
                            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br {{ isActive ? 'from-primary/10 to-primary/5' : 'from-gray-100 to-gray-50' }} flex items-center justify-center mb-4">
                                <i class="fa-solid {{ isActive ? 'fa-wallet text-primary' : 'fa-check-circle text-gray-400' }} text-xl"></i>
                            </div>
                            <h3 class="font-bold text-lg text-gray-900 mb-1 group-hover:text-primary transition-colors">{{ tontine.name }}</h3>
                            <p class="text-sm text-gray-500">{{ tontine.tontineCode }}</p>
                        </div>

                        <!-- Visual Progress Circle -->
                        <div class="mb-6 relative flex justify-center">
                            <div class="relative w-24 h-24">
                                <!-- Background Circle -->
                                <svg class="w-full h-full transform -rotate-90">
                                    <circle cx="48" cy="48" r="40" stroke-width="4" 
                                            stroke="#f3f4f6" fill="none"/>
                                    <!-- Progress Circle -->
                                    <circle cx="48" cy="48" r="40" stroke-width="4" 
                                            stroke="{{ isActive ? '#10b981' : '#9ca3af' }}" 
                                            stroke-linecap="round"
                                            fill="none"
                                            stroke-dasharray="251.2"
                                            stroke-dashoffset="{{ 251.2 * (1 - progress / 100) }}"/>
                                </svg>
                                <!-- Percentage -->
                                <div class="absolute inset-0 flex flex-col items-center justify-center">
                                    <span class="text-2xl font-bold {{ isActive ? 'text-primary' : 'text-gray-700' }}">{{ progress }}%</span>
                                    <span class="text-xs text-gray-500 mt-0.5">complété</span>
                                </div>
                            </div>
                        </div>

                        <!-- Key Metrics -->
                        <div class="space-y-3 mb-6">
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-gray-600">Versement</span>
                                <span class="font-semibold text-gray-900">{{ tontine.amountPerPoint|number_format(0, ',', ' ') }} FCFA</span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-gray-600">Épargné</span>
                                <span class="font-semibold text-emerald-600">{{ savedAmount|number_format(0, ',', ' ') }} FCFA</span>
                            </div>
                            <div class="flex items-center justify-between">
                                <span class="text-sm text-gray-600">Fréquence</span>
                                <span class="font-semibold text-gray-900">
                                    {% if tontine.frequency == 'daily' %}Quotidienne
                                    {% elseif tontine.frequency == 'weekly' %}Hebdomadaire
                                    {% elseif tontine.frequency == 'monthly' %}Mensuelle
                                    {% else %}{{ tontine.frequency }}
                                    {% endif %}
                                </span>
                            </div>
                        </div>

                        <!-- Next Payment / Status -->
                        {% if isActive %}
                            <div class="mb-6 p-3 rounded-xl bg-gradient-to-r from-blue-50 to-blue-100/50 border border-blue-200/50">
                                <div class="flex items-center justify-between">
                                    <div>
                                        <p class="text-xs text-blue-600 font-medium mb-0.5">Prochain paiement</p>
                                        <p class="text-sm font-semibold text-gray-900">{{ tontine.nextDueDate|date('d/m/Y') }}</p>
                                    </div>
                                    {% set daysLeft = tontine.daysUntilNextPayment|default(0) %}
                                    <span class="px-2.5 py-1 rounded-lg text-xs font-medium {{ daysLeft <= 3 ? 'bg-red-100 text-red-700' : 'bg-blue-100 text-blue-700' }}">
                                        {{ daysLeft <= 0 ? '⚠️ En retard' : daysLeft ~ ' jours' }}
                                    </span>
                                </div>
                            </div>
                        {% endif %}

                        <!-- Action Buttons -->
                        <div class="mt-auto flex gap-2">
                            <a href="{{ path('app_tontines_show', {'id': tontine.id}) }}" 
                               class="flex-1 px-4 py-2.5 bg-gradient-to-r from-gray-900 to-gray-800 text-white rounded-xl text-sm font-medium hover:shadow-md transition-all duration-200 text-center group/btn">
                                <i class="fa-solid fa-arrow-right mr-2 group-hover/btn:translate-x-1 transition-transform"></i>
                                Ouvrir
                            </a>
                            
                            {% if isActive %}
                                <a href="{{ path('app_tontine_payment', {'id': tontine.id}) }}"
                                   class="px-4 py-2.5 bg-white border border-gray-300 text-gray-700 rounded-xl text-sm font-medium hover:border-primary hover:bg-primary/5 hover:text-primary transition-all duration-200 flex items-center justify-center">
                                    <i class="fa-solid fa-credit-card"></i>
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}

            <!-- Add New Tontine Card -->
            <a href="{{ path('app_tontine_create') }}" 
               class="group relative">
                <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-gray-100/50 rounded-3xl border-2 border-dashed border-gray-300 group-hover:border-primary group-hover:bg-primary/5 transition-all duration-300"></div>
                
                <div class="relative p-6 h-full flex flex-col items-center justify-center min-h-[400px]">
                    <div class="w-20 h-20 rounded-2xl bg-gradient-to-br from-primary/10 to-primary/5 group-hover:from-primary/20 group-hover:to-primary/10 transition-all duration-300 flex items-center justify-center mb-4">
                        <i class="fa-solid fa-plus text-primary text-2xl group-hover:scale-110 transition-transform"></i>
                    </div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2 group-hover:text-primary transition-colors">
                        Nouvelle tontine
                    </h3>
                    <p class="text-sm text-gray-500 text-center mb-6">
                        Créez une nouvelle tontine pour commencer à épargner
                    </p>
                    <span class="px-4 py-2 bg-gradient-to-r from-primary to-primary-dark text-white rounded-xl text-sm font-medium shadow-sm group-hover:shadow-md transition-all">
                        Commencer
                    </span>
                </div>
            </a>
        </div>

        {% if tontines|length == 0 %}
            <!-- Empty State -->
            <div class="text-center py-16">
                <div class="w-32 h-32 mx-auto mb-8 relative">
                    <!-- Animated Background -->
                    <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-primary/5 rounded-full animate-pulse"></div>
                    <!-- Icon -->
                    <div class="relative w-full h-full rounded-full bg-gradient-to-br from-white to-gray-50 border border-gray-200 flex items-center justify-center">
                        <i class="fa-solid fa-piggy-bank text-primary text-4xl"></i>
                    </div>
                </div>
                
                <h3 class="text-2xl font-bold text-gray-900 mb-3">
                    Aucune tontine pour le moment
                </h3>
                <p class="text-gray-600 max-w-md mx-auto mb-8">
                    Créez votre première tontine pour commencer votre voyage d'épargne
                </p>
                
                <a href="{{ path('app_tontine_create') }}" 
                   class="inline-flex items-center gap-3 px-8 py-3.5 bg-gradient-to-r from-primary to-primary-dark text-white rounded-xl hover:shadow-lg hover:scale-[1.02] transition-all duration-200 font-semibold shadow-md">
                    <i class="fa-solid fa-plus"></i>
                    Créer ma première tontine
                </a>
            </div>
        {% endif %}

        <!-- View Toggle (Optional) -->
        <div class="fixed bottom-6 right-6 z-30">
            <div class="flex items-center bg-white rounded-xl border border-gray-200 shadow-lg p-1">
                <button class="p-2 text-gray-600 hover:text-primary rounded-lg">
                    <i class="fa-solid fa-grid-2 text-lg"></i>
                </button>
                <button class="p-2 text-primary bg-primary/5 rounded-lg">
                    <i class="fa-solid fa-list text-lg"></i>
                </button>
            </div>
        </div>
    </main>
</div>

<style>
/* Custom Animations */
@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
}

@keyframes shimmer {
    0% { background-position: -200% center; }
    100% { background-position: 200% center; }
}

/* Progress Circle Animation */
circle[stroke="#10b981"] {
    animation: progress-fill 1s ease-out;
}

@keyframes progress-fill {
    from { stroke-dashoffset: 251.2; }
}

/* Hover Effects */
.group:hover .group-hover\:animate-float {
    animation: float 2s ease-in-out infinite;
}

/* Gradient Text */
.gradient-text {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: shimmer 3s linear infinite;
}

/* Smooth Scrolling */
html {
    scroll-behavior: smooth;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 4px;
}

::-webkit-scrollbar-thumb {
    background: linear-gradient(to bottom, #10b981, #059669);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(to bottom, #059669, #047857);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add hover effects to cards
    const cards = document.querySelectorAll('.group');
    
    cards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            const bg = this.querySelector('[class*="absolute inset-0"]');
            if (bg) {
                bg.style.transform = 'scale(1.02)';
            }
        });
        
        card.addEventListener('mouseleave', function() {
            const bg = this.querySelector('[class*="absolute inset-0"]');
            if (bg) {
                bg.style.transform = 'scale(1)';
            }
        });
    });

    // Animate progress circles on scroll
    const observerOptions = {
        threshold: 0.3,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const progressCircle = entry.target.querySelector('circle[stroke="#10b981"], circle[stroke="#9ca3af"]');
                if (progressCircle) {
                    progressCircle.style.animation = 'progress-fill 1s ease-out';
                }
            }
        });
    }, observerOptions);

    // Observe all tontine cards
    document.querySelectorAll('.group.relative').forEach(card => {
        observer.observe(card);
    });

    // View toggle functionality
    const viewButtons = document.querySelectorAll('.fixed button');
    const gridContainer = document.querySelector('.grid');
    
    viewButtons.forEach((button, index) => {
        button.addEventListener('click', function() {
            // Update active state
            viewButtons.forEach(btn => {
                btn.classList.remove('text-primary', 'bg-primary/5');
                btn.classList.add('text-gray-600');
            });
            this.classList.add('text-primary', 'bg-primary/5');
            this.classList.remove('text-gray-600');
            
            // Change layout (simplified example)
            if (index === 0) {
                gridContainer.classList.remove('grid-cols-1');
                gridContainer.classList.add('md:grid-cols-2', 'lg:grid-cols-3');
            } else {
                gridContainer.classList.remove('md:grid-cols-2', 'lg:grid-cols-3');
                gridContainer.classList.add('grid-cols-1');
            }
        });
    });
});
</script>
{% endblock %}