<script>
  // Données
  var data = {
    type: null,
    amount: null,
    duration: 1,
    startDate: new Date().toISOString().split('T')[0],
    name: ''
  };

  var step = 1;

  // Informations des types de tontines
  var tontineTypes = {
    daily: {
      name: 'Tontine Journalière',
      icon: '',
      color: 'green',
      minDuration: 1,
      maxDuration: 12,
      description: 'Versement chaque jour',
      pointsPerMonth: 31
    },
    weekly: {
      name: 'Tontine Hebdomadaire',
      icon: '',
      color: 'green',
      minDuration: 1,
      maxDuration: 12,
      description: 'Versement chaque semaine',
      pointsPerMonth: 4
    },
    monthly: {
      name: 'Tontine Mensuelle',
      icon: '',
      color: 'green',
      minDuration: 1,
      maxDuration: 12,
      description: 'Versement une fois par mois',
      pointsPerMonth: 1
    }
  };

  // Formater la monnaie
  function formatCurrency(amount) {
    if (!amount) return '--';
    return new Intl.NumberFormat('fr-FR').format(amount) + ' FCFA';
  }

  // Calculer les points selon le type
  function calculatePoints() {
    if (!data.type || !data.duration) return 0;
    var type = tontineTypes[data.type];
    return data.duration * type.pointsPerMonth;
  }

  // Mettre à jour l'interface étape 2
  function updateStep2() {
    try {
      if (!data.type) return;
      var type = tontineTypes[data.type];
      if (!type) return;

      // Mettre à jour la description
      var typeDescription = document.getElementById('typeDescription');
      if (typeDescription) {
        typeDescription.textContent = type.description || '';
      }

      // Mettre à jour le slider/input de durée
      var durationInput = document.getElementById('duration');
      if (durationInput) {
        durationInput.min = type.minDuration || 1;
        durationInput.max = type.maxDuration || 12;

        // Ajuster la valeur si hors limites
        var minVal = parseInt(durationInput.min);
        var maxVal = parseInt(durationInput.max);
        if (data.duration < minVal) {
          data.duration = minVal;
          durationInput.value = minVal;
        } else if (data.duration > maxVal) {
          data.duration = maxVal;
          durationInput.value = maxVal;
        }
      }

      // Info durée
      var durationInfo = document.getElementById('durationInfo');
      if (durationInfo) {
        if (data.type === 'monthly') {
          durationInfo.innerHTML = '<i class="fas fa-exclamation-triangle mr-2 text-yellow-600"></i> La tontine a une durée minimale de 1  à 12 mois)';
          durationInfo.className = 'text-xs text-yellow-600 mt-3 font-bold flex items-center';
        } else {
          durationInfo.innerHTML = '<i class="fas fa-info-circle mr-2 text-yellow-500"></i> La durée de la tontine est limitée entre 1 et 12 mois.';
          durationInfo.className = 'text-xs text-slate-400 mt-3 font-medium flex items-center';
        }
      }
    } catch (e) {
      console.error("Error in updateStep2:", e);
    }
  }

  // Mettre à jour la prévisualisation
  function updatePreview() {
    try {
      var preview = document.getElementById('preview');
      if (!preview) return;

      if (data.amount >= 100 && data.type) {
        preview.classList.remove('hidden');
        var points = calculatePoints();
        var total = points * data.amount;
        var fees = Math.round(calculateFees());
        var net = (data.type === 'daily') ? total - fees : total;

        var pPoints = document.getElementById('previewPoints');
        var pTotal = document.getElementById('previewTotal');
        var pFees = document.getElementById('previewFees');
        var pNet = document.getElementById('previewNet');

        if (pPoints) pPoints.textContent = points;
        if (pTotal) pTotal.textContent = formatCurrency(total) + ' FCFA';
        if (pFees) {
          var monthlyFees = data.duration > 0 ? (fees / data.duration) : 0;
          pFees.textContent = formatCurrency(Math.round(monthlyFees)) + ' FCFA';
        }
        if (pNet) pNet.textContent = formatCurrency(net) + ' FCFA';
      } else {
        preview.classList.add('hidden');
      }
    } catch (e) {
      console.error("Error in updatePreview:", e);
    }
  }

  function calculateFees() {
    if (!data.type || !data.amount || !data.duration) return 0;
    var amount = data.amount;
    var duration = data.duration;
    switch (data.type) {
      case 'daily': return amount * duration;
      case 'weekly': return (amount * 4 / 30) * duration;
      case 'monthly': return (amount / 30) * duration;
      default: return 0;
    }
  }

  // Mettre à jour le récapitulatif final
  function updateSummary() {
    if (!data.type) return;
    var type = tontineTypes[data.type];
    var points = calculatePoints();
    var total = points * data.amount;
    var fees = Math.round(calculateFees());
    var net = (data.type === 'daily') ? total - fees : total;
    

    var cType = document.getElementById('confirmType');
    var cDuration = document.getElementById('confirmDuration');
    var cPoints = document.getElementById('confirmPoints');
    var cTotal = document.getElementById('confirmTotal');
    var cFees = document.getElementById('confirmFees');
    var cNet = document.getElementById('confirmNet');

    if (cType) cType.textContent = type.name;
    if (cDuration) cDuration.textContent = data.duration + ' mois';
    if (cPoints) cPoints.textContent = points + ' ';
    if (cTotal) cTotal.textContent = formatCurrency(total);
    if (cFees) {
      var monthlyFees = data.duration > 0 ? (fees / data.duration) : 0;
      cFees.textContent = formatCurrency(Math.round(monthlyFees)) + ' / mois';
    }
    if (cNet) cNet.textContent = formatCurrency(net);
  }

  // Mettre à jour l'interface
  // VERSION: 2026-02-12-10:40 - RENAMED TO AVOID CONFLICT
  function updateTontineFormUI() {
    try {
      console.log('=== updateTontineFormUI START ===', 'step:', step, 'data.type:', data.type);
      
      var progress = document.getElementById('progress');
      if (progress) progress.style.width = (step * 33) + '%';

      var stepNumLabel = document.getElementById('stepNum');
      if (stepNumLabel) stepNumLabel.textContent = step;

      var steps = document.querySelectorAll('.step');
      for (var i = 0; i < steps.length; i++) {
        steps[i].classList.add('hidden');
        steps[i].classList.remove('active');
      }

      var currentStep = document.getElementById('step' + step);
      if (currentStep) {
        currentStep.classList.remove('hidden');
        currentStep.classList.add('active');
      }

      var bBack = document.getElementById('btnBack');
      var bNext = document.getElementById('btnNext');
      var bCreate = document.getElementById('btnCreate');

      console.log('=== Buttons found ===', 'bBack:', !!bBack, 'bNext:', !!bNext, 'bCreate:', !!bCreate);

      if (bBack) {
         if (step === 1) bBack.classList.add('hidden');
         else bBack.classList.remove('hidden');
      }
      if (bNext) {
         if (step === 3) bNext.classList.add('hidden');
         else bNext.classList.remove('hidden');
      }
      if (bCreate) {
         if (step === 3) bCreate.classList.remove('hidden');
         else bCreate.classList.add('hidden');
      }

      var hStep = document.getElementById('headerStep');
      var hStepLabel = document.getElementById('headerStepLabel');
      if (hStep) hStep.textContent = step;
      if (hStepLabel) {
        var labels = ['Selection de la formule', 'Paramétrage', 'Confirmation'];
        hStepLabel.textContent = labels[step - 1];
      }

      if (step === 1) {
        console.log('=== Step 1 Logic ===', 'data.type:', data.type, 'bNext exists:', !!bNext);
        if (bNext) {
          bNext.disabled = !data.type;
          console.log('=== Continue button state ===', 'disabled:', bNext.disabled);
        }
      } else if (step === 2) {
        var t = data.type ? tontineTypes[data.type] : null;
        var vDur = t && data.duration >= t.minDuration && data.duration <= t.maxDuration;
        if (bNext) bNext.disabled = !(data.amount >= 100 && vDur);
      } else if (step === 3) {
        var nVal = data.name && data.name.trim().length > 0;
        var tCheck = document.getElementById('terms') ? document.getElementById('terms').checked : false;
        if (bCreate) bCreate.disabled = !(nVal && tCheck);
      }
      
      console.log('=== updateUI END ===');
    } catch (error) {
      console.error('ERROR in updateUI:', error);
    }
  }

  function setupTontineCards() {
    var cards = document.querySelectorAll('.tontine-type-card');
    cards.forEach(function(card) {
      var radio = card.querySelector('input[type="radio"]');
      var cardDiv = card.querySelector('.tontine-card');
      card.addEventListener('click', function() {
        if (radio) {
          radio.checked = true;
          data.type = radio.value;
          console.log('Card clicked, data.type set to:', data.type);
          document.querySelectorAll('.tontine-card').forEach(function(div) {
            div.classList.remove('active');
            div.classList.remove('border-green-700/30');
            div.classList.add('border-green-200');
          });
          if (cardDiv) {
            cardDiv.classList.add('active');
            cardDiv.classList.add('border-green-700/30');
            cardDiv.classList.remove('border-green-200');
          }
          console.log('About to call updateTontineFormUI, step:', step, 'data.type:', data.type);
          updateTontineFormUI();
          if (step === 1) {
            updateStep2();
            updatePreview();
          }
        }
      });
    });
  }

  document.addEventListener('DOMContentLoaded', function () {
    setupTontineCards();

    document.querySelectorAll('.amount-btn').forEach(function(btn) {
      btn.addEventListener('click', function () {
        var amt = parseInt(this.dataset.amount);
        var amtInput = document.getElementById('amount');
        if (amtInput) {
          amtInput.value = amt;
          data.amount = amt;
          updateTontineFormUI();
          updatePreview();
        }
      });
    });

    var amtInput = document.getElementById('amount');
    if (amtInput) {
      amtInput.addEventListener('input', function () {
        data.amount = parseInt(this.value) || 0;
        updateTontineFormUI();
        updatePreview();
      });
    }

    var durInput = document.getElementById('duration');
    if (durInput) {
      durInput.addEventListener('input', function () {
        var val = parseInt(this.value);
        if (val > 12) { val = 12; this.value = 12; }
        else if (val < 1) { val = isNaN(val) ? 1 : val; }
        data.duration = val;
        updateTontineFormUI();
        updatePreview();
      });
      durInput.addEventListener('blur', function () {
        var val = parseInt(this.value);
        if (isNaN(val) || val < 1) { this.value = 1; data.duration = 1; }
        else if (val > 12) { this.value = 12; data.duration = 12; }
        updateTontineFormUI();
        updatePreview();
      });
    }

    var startInput = document.getElementById('startDate');
    if (startInput) {
      var tdy = new Date().toISOString().split('T')[0];
      startInput.min = tdy;
      startInput.value = tdy;
      startInput.addEventListener('change', function () { data.startDate = this.value; });
    }

    var nInput = document.getElementById('name');
    var cCount = document.getElementById('charCount');
    if (nInput && cCount) {
      nInput.addEventListener('input', function () {
        data.name = this.value;
        cCount.textContent = this.value.length + '/30';
        updateTontineFormUI();
      });
    }

    var pSelect = document.getElementById('projectSelect');
    var cNameCont = document.getElementById('customNameContainer');
    if (pSelect) {
      pSelect.addEventListener('change', function () {
        if (this.value === 'other') {
          if (cNameCont) cNameCont.classList.remove('hidden');
          if (nInput) nInput.value = '';
          data.name = '';
        } else {
          if (cNameCont) cNameCont.classList.add('hidden');
          data.name = this.value;
          if (nInput) nInput.value = this.value;
        }
        updateTontineFormUI();
      });
    }

    var termsCb = document.getElementById('terms');
    if (termsCb) termsCb.addEventListener('change', updateTontineFormUI);

    var bNext = document.getElementById('btnNext');
    if (bNext) {
      bNext.addEventListener('click', function () {
        if (step === 1 && !data.type) return;
        if (step === 2) {
          var ty = tontineTypes[data.type];
          if (!data.amount || data.amount < 100) return;
          if (data.duration < ty.minDuration || data.duration > ty.maxDuration) return;
        }
        step++;
        if (step === 2) { updateStep2(); updatePreview(); }
        else if (step === 3) { updateSummary(); }
        updateTontineFormUI();
      });
    }

    var bBack = document.getElementById('btnBack');
    if (bBack) {
      bBack.addEventListener('click', function () {
        step--;
        updateTontineFormUI();
      });
    }

    var bCreate = document.getElementById('btnCreate');
    if (bCreate) {
      bCreate.addEventListener('click', async function () {
        var nInputVal = document.getElementById('name') ? document.getElementById('name').value : '';
        var termsCheckedFlg = document.getElementById('terms') ? document.getElementById('terms').checked : false;
        if (!nInputVal.trim() || !termsCheckedFlg) return;

        try {
          var resCount = await fetch('{{ path("app_tontine_count") }}');
          var countRes = await resCount.json();
          if (countRes.count >= 3) {
            alert('Vous avez atteint le nombre maximum de tontines actives (3).');
            return;
          }
        } catch (e) { console.error(e); }

        var originalTxt = this.innerHTML;
        this.innerHTML = '<span class="animate-pulse">Création en cours...</span>';
        this.disabled = true;

        var loadModal = document.getElementById('loadingModal');
        if (loadModal) loadModal.classList.remove('hidden');

        try {
          var cToken = document.getElementById('tontine_csrf') ? document.getElementById('tontine_csrf').value : '';
          if (!cToken) throw new Error('Token de sécurité manquant');

          var reqData = {
            name: data.name,
            amount: parseFloat(data.amount),
            period: data.type,
            duration: parseInt(data.duration),
            startDate: data.startDate || new Date().toISOString().split('T')[0],
            _token: cToken
          };

          var response = await fetch('{{ path("app_tontine_create") }}', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
              'X-Requested-With': 'XMLHttpRequest',
              'X-CSRF-TOKEN': cToken
            },
            credentials: 'same-origin',
            body: JSON.stringify(reqData)
          });

          var result = await response.json();
          if (loadModal) loadModal.classList.add('hidden');

          if (response.ok && result.success) {
            var succModal = document.getElementById('successModal');
            if (succModal) {
              succModal.classList.remove('hidden');
              setTimeout(function() { window.location.href = '{{ path("app_dashboard") }}'; }, 3000);
            } else {
              window.location.href = '{{ path("app_dashboard") }}';
            }
          } else {
            alert(result.message || 'Une erreur est survenue.');
            this.innerHTML = originalTxt;
            this.disabled = false;
          }
        } catch (err) {
          console.error(err);
          if (loadModal) loadModal.classList.add('hidden');
          alert(err.message || 'Erreur de connexion.');
          this.innerHTML = originalTxt;
          this.disabled = false;
        }
      });
    }
    updateTontineFormUI();
  });

</script>

