<!-- Script KKiaPay selon la documentation -->
<script>
// Variables globales
let isSubmitting = false;
let currentWithdrawalId = null;

// Fonction pour afficher les erreurs
function showError(title, message) {
    const errorAlert = document.getElementById('error-alert');
    const errorTitle = document.getElementById('error-title');
    const errorMessage = document.getElementById('error-message');
    
    errorTitle.textContent = title;
    errorMessage.textContent = message;
    errorAlert.classList.remove('hidden');
    
    setTimeout(() => {
        errorAlert.classList.add('hidden');
    }, 5000);
}

function hideError() {
    document.getElementById('error-alert').classList.add('hidden');
}

// Fonction pour g√©rer l'√©tat du formulaire
function setFormState(submitting) {
    const submitBtn = document.getElementById('submit-btn');
    const submitText = document.getElementById('submit-text');
    const submitSpinner = document.getElementById('submit-spinner');
    
    isSubmitting = submitting;
    
    if (submitting) {
        submitBtn.disabled = true;
        submitBtn.classList.add('opacity-75', 'cursor-not-allowed');
        submitText.textContent = 'Traitement en cours...';
        submitSpinner.classList.remove('hidden');
    } else {
        submitBtn.disabled = false;
        submitBtn.classList.remove('opacity-75', 'cursor-not-allowed');
        submitText.textContent = 'Valider la demande de retrait';
        submitSpinner.classList.add('hidden');
    }
}

// Fonction pour charger KKiaPay dynamiquement
function loadKKiaPayScript() {
    return new Promise((resolve, reject) => {
        if (window.openKkiapayWidget) {
            resolve();
            return;
        }
        
        const script = document.createElement('script');
        script.src = 'https://cdn.kkiapay.me/k.js';
        script.async = true;
        
        script.onload = () => {
            if (window.openKkiapayWidget) {
                console.log('‚úÖ SDK KKiaPay charg√©');
                resolve();
            } else {
                reject(new Error('SDK KKiaPay non disponible'));
            }
        };
        
        script.onerror = () => {
            reject(new Error('√âchec du chargement du SDK KKiaPay'));
        };
        
        document.head.appendChild(script);
        
        setTimeout(() => {
            if (!window.openKkiapayWidget) {
                reject(new Error('Timeout du chargement de KKiaPay'));
            }
        }, 10000);
    });
}

// Initialisation
document.addEventListener('DOMContentLoaded', async () => {
    console.log('üöÄ Initialisation du formulaire de retrait');
    
    // Tenter de charger KKiaPay
    try {
        await loadKKiaPayScript();
        
        // Ajouter les listeners pour les √©v√©nements KKiaPay
        if (window.addSuccessListener) {
            window.addSuccessListener(response => {
                console.log('‚úÖ Paiement r√©ussi:', response);
            });
        }
        
        if (window.addFailedListener) {
            window.addFailedListener(error => {
                console.error('‚ùå Paiement √©chou√©:', error);
                showError('Paiement √©chou√©', 'Le paiement a √©chou√©. Veuillez r√©essayer.');
                setFormState(false);
            });
        }
    } catch (error) {
        console.warn('‚ö†Ô∏è KKiaPay non disponible:', error.message);
        // D√©sactiver l'option de paiement en ligne
        disableOnlinePayment();
    }
    
    // Gestion des options de paiement
    const paymentOptions = document.querySelectorAll('.payment-method-option');
    paymentOptions.forEach(option => {
        const radio = option.querySelector('input[type="radio"]');
        
        option.addEventListener('click', () => {
            paymentOptions.forEach(opt => opt.classList.remove('selected'));
            option.classList.add('selected');
            radio.checked = true;
            radio.dispatchEvent(new Event('change'));
        });
        
        radio.addEventListener('change', () => {
            if (radio.checked) {
                paymentOptions.forEach(opt => opt.classList.remove('selected'));
                option.classList.add('selected');
            }
        });
    });
    
    // Gestion de l'affichage conditionnel
    const customAmountContainer = document.getElementById('custom-amount-container');
    const phoneContainer = document.getElementById('phone-container');
    
    function toggleCustomAmount() {
        const selected = document.querySelector('input[name="withdrawal_request[withdrawal_type]"]:checked');
        if (selected && selected.value === 'custom') {
            customAmountContainer.classList.remove('hidden');
        } else {
            customAmountContainer.classList.add('hidden');
        }
    }
    
    function togglePhone() {
        const selected = document.querySelector('input[name="withdrawal_request[withdrawal_method]"]:checked');
        if (selected && selected.value === 'mobile_money') {
            phoneContainer.classList.remove('hidden');
        } else {
            phoneContainer.classList.add('hidden');
        }
    }
    
    // Fonction pour d√©sactiver le paiement en ligne
    function disableOnlinePayment() {
        const onlinePaymentOption = document.querySelector('input[value="online"]');
        if (onlinePaymentOption) {
            onlinePaymentOption.disabled = true;
            onlinePaymentOption.parentElement.parentElement.classList.add('opacity-50', 'cursor-not-allowed');
            onlinePaymentOption.parentElement.parentElement.querySelector('p').textContent += ' (Indisponible)';
            
            // Forcer la s√©lection de "agence" si "online" √©tait s√©lectionn√©
            if (onlinePaymentOption.checked) {
                const agencyOption = document.querySelector('input[value="agence"]');
                if (agencyOption) {
                    agencyOption.checked = true;
                    agencyOption.dispatchEvent(new Event('change'));
                }
            }
        }
    }
    
    // √âcouteurs d'√©v√©nements
    document.querySelectorAll('input[name="withdrawal_request[withdrawal_type]"]').forEach(radio => {
        radio.addEventListener('change', toggleCustomAmount);
    });
    
    document.querySelectorAll('input[name="withdrawal_request[withdrawal_method]"]').forEach(radio => {
        radio.addEventListener('change', togglePhone);
    });
    
    // Initialiser l'√©tat
    toggleCustomAmount();
    togglePhone();
    
    // Gestion de la soumission du formulaire
    const form = document.getElementById('withdrawal-form');
    
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        if (isSubmitting) return;
        
        // Validation du montant personnalis√©
        const customAmountInput = document.getElementById('withdrawal_request_custom_amount');
        if (customAmountInput && !customAmountInput.closest('.hidden')) {
            const customAmount = parseFloat(customAmountInput.value) || 0;
            const maxAmount = {{ tontine.availableWithdrawalAmount }};
            
            if (customAmount <= 0) {
                showError('Montant invalide', 'Veuillez entrer un montant valide sup√©rieur √† 0.');
                customAmountInput.focus();
                return;
            }
            
            if (customAmount > maxAmount) {
                showError('Montant trop √©lev√©', `Le montant ne peut pas d√©passer ${maxAmount.toLocaleString()} FCFA.`);
                customAmountInput.focus();
                return;
            }
        }
        
        // Validation du num√©ro de t√©l√©phone
        const phoneInput = document.getElementById('withdrawal_request_phone_number');
        if (phoneInput && !phoneInput.closest('.hidden')) {
            const phoneNumber = phoneInput.value.trim();
            if (!phoneNumber || !/^\d{8,10}$/.test(phoneNumber.replace(/\s/g, ''))) {
                showError('Num√©ro invalide', 'Veuillez entrer un num√©ro de t√©l√©phone valide.');
                phoneInput.focus();
                return;
            }
        }
        
        setFormState(true);
        
        try {
            // V√©rifier le mode de paiement des frais
            const feePaymentMethod = document.querySelector('input[name="withdrawal_request[fee_payment_method]"]:checked');
            const requiresOnlinePayment = feePaymentMethod && feePaymentMethod.value === 'online';
            
            // Pr√©parer les donn√©es du formulaire
            const formData = new FormData(form);
            formData.append('tontine_id', '{{ tontine.id }}');
            
            // Envoyer la requ√™te de pr√©paration
            const response = await fetch('{{ path("app_withdrawal_prepare") }}', {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            });
            
            const data = await response.json();
            
            if (!data.success) {
                throw new Error(data.message || 'Erreur lors de la pr√©paration du retrait');
            }
            
            // Sauvegarder l'ID du retrait
            currentWithdrawalId = data.withdrawal_id;
            
            // Si paiement en ligne requis
            if (requiresOnlinePayment && data.requires_payment) {
                if (!window.openKkiapayWidget) {
                    throw new Error('Le service de paiement n\'est pas disponible. Veuillez choisir "En agence".');
                }
                
                // Ouvrir le widget KKiaPay
                openKKiaPayWidget(data);
                
            } else {
                // Paiement en agence, rediriger vers la page de succ√®s
                window.location.href = '{{ path("app_withdrawal_success", {"id": "PLACEHOLDER"}) }}'.replace('PLACEHOLDER', data.withdrawal_id);
            }
            
        } catch (error) {
            console.error('‚ùå Erreur:', error);
            showError('Erreur', error.message || 'Une erreur est survenue. Veuillez r√©essayer.');
            setFormState(false);
        }
    });
});

// Fonction pour ouvrir le widget KKiaPay
function openKKiaPayWidget(data) {
    if (!window.openKkiapayWidget) {
        showError('Erreur', 'Service de paiement non disponible');
        setFormState(false);
        return;
    }
    
    // R√©cup√©rer le num√©ro de t√©l√©phone si disponible
    const phoneInput = document.getElementById('withdrawal_request_phone_number');
    const phone = phoneInput && !phoneInput.closest('.hidden') ? phoneInput.value.trim() : '';
    
    // D√©finir le callback URL
    const callbackUrl = new URL('{{ path("app_withdrawal_verify_fee", {"id": "PLACEHOLDER"}) }}'.replace('PLACEHOLDER', currentWithdrawalId), window.location.origin);
    
    // Ouvrir le widget KKiaPay selon la documentation
    window.openKkiapayWidget({
        amount: data.fees.toString(),
        key: '{{ kkiapay_public_key|default("sandbox") }}',
        position: "center",
        sandbox: {{ app.environment == 'dev' ? 'true' : 'false' }},
        data: JSON.stringify({
            withdrawal_id: currentWithdrawalId,
            tontine_id: '{{ tontine.id }}',
            user_id: '{{ app.user.id }}'
        }),
        phone: phone,
        callback: callbackUrl.toString(),
        theme: "#10b981",
        name: '{{ app.user.firstName|default("Client") }}',
        email: '{{ app.user.email|default("") }}'
    });
    
    // √âcouter les √©v√©nements KKiaPay
    if (window.addSuccessListener) {
        window.addSuccessListener(async (response) => {
            console.log('‚úÖ Paiement KKiaPay r√©ussi:', response);
            
            try {
                // Confirmer le paiement c√¥t√© serveur
                const confirmResponse = await fetch('{{ path("app_withdrawal_confirm_fee") }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify({
                        withdrawal_id: currentWithdrawalId,
                        transaction_id: response.transactionId
                    })
                });
                
                const result = await confirmResponse.json();
                
                if (result.success) {
                    // Rediriger vers la page de succ√®s
                    window.location.href = '{{ path("app_withdrawal_success", {"id": "PLACEHOLDER"}) }}'.replace('PLACEHOLDER', currentWithdrawalId);
                } else {
                    throw new Error(result.message || 'Erreur de confirmation');
                }
            } catch (error) {
                console.error('‚ùå Erreur de confirmation:', error);
                showError('Erreur', 'Le paiement a √©t√© effectu√© mais une erreur est survenue lors de la confirmation.');
                setFormState(false);
            }
        });
    }
    
    if (window.addFailedListener) {
