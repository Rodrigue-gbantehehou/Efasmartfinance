{% extends 'dashboard/base.html.twig' %}

{% block title %}Demande de retrait - {{ tontine.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .payment-method-option {
            border: 2px solid #e5e7eb;
            border-radius: 0.5rem;
            padding: 1rem;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .payment-method-option:hover {
            border-color: #008040;
            background-color: #f0fdf4;
        }
        
        .payment-method-option.selected {
            border-color: #008040;
            background-color: #f0fdf4;
        }
        
        .payment-method-option input[type="radio"] {
            margin-right: 0.5rem;
        }
        
        .hidden {
            display: none;
        }
        
        .loading-spinner {
            display: inline-block;
            width: 1rem;
            height: 1rem;
            border: 2px solid rgba(255,255,255,0.3);
            border-radius: 50%;
            border-top-color: #fff;
            animation: spin 1s ease-in-out infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .error-message {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    </style>
{% endblock %}

{% block contentdashboard %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <!-- En-tête -->
        <div class="mb-6">
            <div class="flex items-center mb-4">
                <a href="{{ path('app_tontines_show', {id: tontine.id}) }}" 
                   class="text-gray-600 hover:text-gray-700 mr-4 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                </a>
                <h1 class="text-2xl font-bold text-gray-800">Demande de retrait</h1>
            </div>
            
            <div class="bg-gradient-to-r from-green-700 to-green-800 rounded-xl p-5 border border-green-100">
                <div class="flex items-center mb-3">
                    <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3">
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div>
                        <h2 class="font-semibold text-white">{{ tontine.name }}</h2>
                        <p class="text-sm text-white">Tontine active</p>
                    </div>
                </div>
                <!--
                <div class="grid grid-cols-2 gap-4 mt-4">
                    <div class="bg-white rounded-lg p-3 border border-gray-100">
                        <p class="text-sm text-gray-600 mb-1">Montant cotisé</p>
                        <p class="text-xl font-bold text-gray-800">
                            {{ (tontine.totalPay - tontine.getWithdrawnAmount())|number_format(0, ',', ' ') }} FCFA
                        </p>
                    </div>
                    <div class="bg-white rounded-lg p-3 border border-gray-100">
                        <p class="text-sm text-gray-600 mb-1">Frais dus à ce jour</p>
                        <p class="text-xl font-bold text-yellow-600">
                            {{ tontine.getFeesDue()|number_format(0, ',', ' ') }} FCFA
                        </p>
                    </div>
                </div>-->
                <div class="mt-4 bg-green-900/20 rounded-lg p-3 border border-green-700/30">
                    <div class="flex justify-between items-center">
                        <p class="text-sm text-green-100 italic">Montant disponible pour retrait</p>
                        <p class="text-lg font-black text-white">
                            {{ tontine.availableWithdrawalAmount|number_format(0, ',', ' ') }} FCFA
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulaire -->
        <div class="bg-white rounded-xl shadow-lg p-6">
            <!-- Information PIN -->
            <div class="mb-6 bg-green-50 border border-green-400 rounded-xl p-4 flex items-start gap-3">
                <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0 mt-1">
                    <i class="fas fa-shield-halved text-green-600"></i>
                </div>
                <div>
                    <h4 class="text-sm font-semibold text-green-800">Vérification de sécurité</h4>
                    <p class="text-xs text-green-700 mt-1">
                        Par mesure de sécurité, la validation de votre code PIN sera requise à l'étape suivante pour confirmer ce retrait.
                    </p>
                </div>
            </div>

            {{ form_start(form, {attr: {id: 'withdrawal-form', class: 'space-y-6'}}) }}

            <!-- Type de retrait -->
            <div>
                <label class="block text-sm font-bold text-green-700 mb-3 uppercase">
                    Type de retrait
                </label>
                <div class="grid grid-cols-2 gap-4">
                    {% for child in form.withdrawal_type %}
                        <label class="payment-method-option {% if loop.first %}selected{% endif %}" 
                               data-target="{{ child.vars.value }}">
                            <div class="flex items-center border border-gray-200 rounded-lg p-3">
                                {{ form_widget(child, {attr: {class: 'mr-3 text-green-600 accent-green-600 focus:ring-green-500 w-4 h-4'}}) }}
                                <div >
                                    <span class="font-medium">
                                        {{ child.vars.label|trans }}
                                    </span>
                                    
                                </div>
                            </div>
                        </label>
                    {% endfor %}
                </div>
                {{ form_errors(form.withdrawal_type) }}
            </div>

            <!-- Montant personnalisé -->
            <div id="custom-amount-container" class="bg-gray-50 rounded-lg p-4 hidden">
                <div class="relative">
                    {{ form_label(form.custom_amount, null, {label_attr: {class: 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    <div class="relative">
                        {{ form_widget(form.custom_amount, {attr: {
                            class: 'block w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors',
                            placeholder: 'Entrez le montant'
                        }}) }}
                        <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                            <span class="text-gray-600">FCFA</span>
                        </div>
                    </div>
                    {{ form_errors(form.custom_amount) }}
                    <p class="text-sm text-gray-600 mt-2">
                        Maximum: {{ tontine.availableWithdrawalAmount|number_format(0, ',', ' ') }} FCFA
                    </p>
                </div>
            </div>

            <!-- Mode de retrait -->
            <div>
                <label class="block text-sm font-bold text-green-700 mb-3 uppercase">
                    Mode de retrait
                </label>
                <div class="grid grid-cols-2 gap-4">
                    {% for child in form.withdrawal_method %}
                        <label class="payment-method-option {% if loop.first %}selected{% endif %}" 
                               data-target="{{ child.vars.value }}">
                            <div class="flex items-center">
                                {{ form_widget(child, {attr: {class: 'mr-3 text-green-600 accent-green-600 focus:ring-green-500 w-4 h-4'}}) }}
                                <div>
                                    <span class="font-medium">
                                        {{ child.vars.label|trans }}
                                    </span>
                                   
                                </div>
                            </div>
                        </label>
                    {% endfor %}
                </div>
                {{ form_errors(form.withdrawal_method) }}
            </div>

            <!-- Numéro de téléphone -->
            <div id="phone-container" class="hidden bg-gray-50 rounded-lg p-4">
                <div class="relative">
                    {{ form_label(form.phone_number, null, {label_attr: {class: 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    
                        {{ form_widget(form.phone_number, {attr: {
                            class: 'block w-full  px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-colors',
                            placeholder: '+229 00 00 00 00'
                        }}) }}
                    {{ form_errors(form.phone_number) }}
                </div>
            </div>

            <!-- Bouton de soumission -->
            <div class="pt-4">
                <button type="submit" 
                        id="submit-btn"
                        class="w-full bg-gradient-to-r from-green-600 to-emerald-600 text-white font-semibold py-4 px-6 rounded-xl hover:from-green-700 hover:to-emerald-700 focus:outline-none focus:ring-4 focus:ring-green-500 focus:ring-opacity-50 transition-all duration-200 flex items-center justify-center">
                    <span id="submit-text">Valider la demande de retrait</span>
                    <div id="submit-spinner" class="hidden ml-2">
                        <div class="loading-spinner"></div>
                    </div>
                </button>
                
                <p class="text-sm text-gray-600 text-center mt-3">
                    En soumettant cette demande, vous acceptez les conditions de retrait
                </p>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<!-- Zone pour les messages d'erreur -->
<div id="error-alert" class="hidden fixed top-4 right-4 max-w-sm w-full bg-red-50 border border-red-200 rounded-xl p-4 shadow-lg z-50">
    <div class="flex items-start">
        <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
        </div>
        <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800" id="error-title"></h3>
            <p class="text-sm text-red-700 mt-1" id="error-message"></p>
        </div>
        <button type="button" onclick="hideError()" class="ml-auto -mx-1.5 -my-1.5 rounded-lg p-1.5 inline-flex h-8 w-8 text-red-500 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-red-400">
            <span class="sr-only">Fermer</span>
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>

    <script>
    // Variables globales
    const FEES_DUE = Number('{{ tontine.getFeesDue() }}');
    let isSubmitting = false;
    const form = document.getElementById('withdrawal-form');
    const customAmountContainer = document.getElementById('custom-amount-container');
    const phoneContainer = document.getElementById('phone-container');

    // Fonction pour afficher les erreurs
    function showError(title, message) {
        const errorAlert = document.getElementById('error-alert');
        const errorTitle = document.getElementById('error-title');
        const errorMessage = document.getElementById('error-message');
        
        errorTitle.textContent = title;
        errorMessage.textContent = message;
        errorAlert.classList.remove('hidden');
        
        setTimeout(() => {
            errorAlert.classList.add('hidden');
        }, 5000);
    }

    function hideError() {
        document.getElementById('error-alert').classList.add('hidden');
    }

    // Gestion des options de paiement
    function toggleCustomAmount() {
        const selectedType = document.querySelector('input[name="withdrawal_request[withdrawal_type]"]:checked');
        if (selectedType && selectedType.value === 'custom') {
            customAmountContainer.classList.remove('hidden');
        } else {
            customAmountContainer.classList.add('hidden');
        }
    }

    function togglePhone() {
        const selectedMethod = document.querySelector('input[name="withdrawal_request[withdrawal_method]"]:checked');
        if (selectedMethod && selectedMethod.value === 'mobile_money') {
            phoneContainer.classList.remove('hidden');
        } else {
            phoneContainer.classList.add('hidden');
        }
    }

    // Initialisation au chargement de la page
    document.addEventListener('DOMContentLoaded', () => {
        // Gestion des clics sur les options de paiement
        const paymentOptions = document.querySelectorAll('.payment-method-option');
        paymentOptions.forEach(option => {
            option.addEventListener('click', () => {
                const radio = option.querySelector('input[type="radio"]');
                if (radio) {
                    radio.checked = true;
                    paymentOptions.forEach(opt => opt.classList.remove('selected'));
                    option.classList.add('selected');
                    
                    // Mettre à jour l'affichage en fonction de la sélection
                    toggleCustomAmount();
                    togglePhone();
                }
            });
        });

        // Écouteurs pour les changements de type de retrait
        document.querySelectorAll('input[name="withdrawal_request[withdrawal_type]"]').forEach(input => {
            input.addEventListener('change', toggleCustomAmount);
        });

        // Écouteurs pour les changements de mode de retrait
        document.querySelectorAll('input[name="withdrawal_request[withdrawal_method]"]').forEach(input => {
            input.addEventListener('change', togglePhone);
        });

        // Gestion de la soumission du formulaire
        if (form) {
            form.addEventListener('submit', function(e) {
                if (isSubmitting) {
                    e.preventDefault();
                    return false;
                }

                // Désactiver le bouton de soumission
                const submitBtn = document.getElementById('submit-btn');
                const submitText = document.getElementById('submit-text');
                const submitSpinner = document.getElementById('submit-spinner');
                
                if (submitBtn && submitText && submitSpinner) {
                    isSubmitting = true;
                    submitBtn.disabled = true;
                    submitText.textContent = 'Traitement en cours...';
                    submitSpinner.classList.remove('hidden');
                }

                // Validation supplémentaire si nécessaire
                const selectedType = document.querySelector('input[name="withdrawal_request[withdrawal_type]"]:checked');
                if (selectedType && selectedType.value === 'custom') {
                    const customAmount = document.querySelector('input[name="withdrawal_request[custom_amount]"]');
                    if (customAmount && (!customAmount.value || parseFloat(customAmount.value) <= 0)) {
                        showError('Erreur', 'Veuillez entrer un montant valide');
                        e.preventDefault();
                        isSubmitting = false;
                        if (submitBtn && submitText && submitSpinner) {
                            submitBtn.disabled = false;
                            submitText.textContent = 'Valider la demande de retrait';
                            submitSpinner.classList.add('hidden');
                        }
                        return false;
                    }
                }

                return true;
            });
        }


        // Initialiser l'affichage
        toggleCustomAmount();
        togglePhone();

        const TONTINE_FREQUENCY = '{{ tontine.frequency }}';
        // Afficher le modal de frais si nécessaire
        if (typeof FEES_DUE !== 'undefined' && FEES_DUE > 0 && TONTINE_FREQUENCY !== 'daily') {
            document.getElementById('feeChoiceModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }
    });

    function closeFeeModal() {
        document.getElementById('feeChoiceModal').classList.add('hidden');
        document.body.style.overflow = '';
    }

    function choosePayFeesNow() {
        closeFeeModal();
        // Rediriger vers la page dédiée au paiement des frais
        window.location.href = "{{ path('app_tontine_pay_fees_page', {'id': tontine.id}) }}";
    }

    function chooseDeductFees() {
        closeFeeModal();
        // L'utilisateur reste sur cette page pour remplir le formulaire
    }
    </script>

    <!-- Modal Frais de Retrait (Premium Edition) -->
    <div id="feeChoiceModal" class="fixed inset-0 bg-slate-900/60 backdrop-blur-md z-[100] hidden flex items-center justify-center p-4 transition-all duration-500">
        <div class="bg-white rounded-[2.5rem] max-w-lg w-full shadow-[0_20px_50px_rgba(0,0,0,0.2)] transform transition-all overflow-hidden border border-white/20">
            <!-- Header Design -->
            <div class="bg-gradient-to-br from-emerald-600 via-green-600 to-emerald-800 text-white p-8 relative overflow-hidden">
                <div class="absolute top-0 right-0 -mr-8 -mt-8 w-32 h-32 bg-white/10 rounded-full blur-3xl"></div>
                <div class="absolute bottom-0 left-0 -ml-8 -mb-8 w-24 h-24 bg-white/5 rounded-full blur-2xl"></div>
                
                <div class="relative z-10 flex flex-col items-center text-center">
                    <div class="h-16 w-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mb-4 shadow-inner">
                        <i class="fas fa-wallet text-3xl"></i>
                    </div>
                    <h3 class="text-2xl font-black tracking-tight">Option de Retrait</h3>
                    <p class="text-emerald-50/80 text-sm font-medium mt-1 uppercase tracking-widest">Gestion des frais de service</p>
                </div>
            </div>

            <!-- Financial Breakdown Card -->
            <div class="p-8 space-y-8">
                <div class="bg-slate-50 rounded-3xl p-6 border border-slate-100 shadow-sm transition-hover hover:border-emerald-200 duration-300">
                    <h4 class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4 flex items-center gap-2">
                        <i class="fas fa-chart-pie text-emerald-500"></i>
                        Récapitulatif Financier
                    </h4>
                    
                    <div class="space-y-4">
                        <!-- 
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-slate-600 font-medium">Épargne brute</span>
                            <span class="font-bold text-slate-900">{{ (tontine.totalPay - tontine.getWithdrawnAmount())|number_format(0, ',', ' ') }} FCFA</span>
                        </div>
                        <div class="flex justify-between items-center text-sm">
                            <span class="text-slate-600 font-medium">Frais de service {{ tontine.frequency == 'daily' ? '(total)' : '(prorata)' }}</span>
                            <span class="font-bold text-rose-500">- {{ tontine.getFeesDue()|number_format(0, ',', ' ') }} FCFA</span>
                        </div>
                        -->
                        <div class="pt-4 border-t border-slate-200 flex justify-between items-center">
                            <span class="text-slate-900 font-black">Net à recevoir</span>
                            <span class="text-xl font-black text-emerald-600 tracking-tight">{{ tontine.getAvailableWithdrawalAmount()|number_format(0, ',', ' ') }} FCFA</span>
                        </div>
                    </div>
                </div>

                <p class="text-slate-500 text-center text-sm px-4 leading-relaxed">
                    Souhaitez-vous régler vos frais maintenant ou préférez-vous qu'ils soient déduits de votre retrait ?
                </p>

                <!-- Interactive Options -->
                <div class="space-y-4">
                    <!-- Option 1 : Déduire -->
                    <button onclick="chooseDeductFees()" 
                            class="w-full group relative bg-white hover:bg-slate-50 text-slate-900 rounded-2xl p-4 transition-all border-2 border-slate-200 hover:border-emerald-500 active:scale-[0.97] duration-300 overflow-hidden shadow-sm">
                        <div class="flex items-center gap-4 relative z-10">
                            <div class="h-12 w-12 rounded-xl bg-slate-100 flex items-center justify-center text-slate-400 group-hover:bg-emerald-100 group-hover:text-emerald-600 transition-colors">
                                <i class="fas fa-scissors text-lg"></i>
                            </div>
                            <div class="text-left flex-1">
                                <span class="block font-black text-slate-800 tracking-tight">Déduire du montant</span>
                                <span class="block text-[10px] text-slate-500 mt-1 uppercase font-bold tracking-wider group-hover:text-emerald-600">Rester sur cette page</span>
                            </div>
                            <i class="fas fa-chevron-right text-slate-300 group-hover:text-emerald-500 group-hover:translate-x-1 transition-all"></i>
                        </div>
                    </button>

                    <!-- Option 2 : Payer -->
                    <button onclick="choosePayFeesNow()" 
                            class="w-full group relative bg-emerald-600 hover:bg-emerald-700 text-white rounded-2xl p-4 transition-all shadow-[0_10px_20px_-5px_rgba(16,185,129,0.4)] hover:shadow-[0_15px_30px_-5px_rgba(16,185,129,0.5)] active:scale-[0.97] duration-300 overflow-hidden">
                        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:animate-[shimmer_2s_infinite]"></div>
                        <div class="flex items-center gap-4 relative z-10">
                            <div class="h-12 w-12 rounded-xl bg-white/20 flex items-center justify-center shadow-inner">
                                <i class="fas fa-credit-card text-lg text-white"></i>
                            </div>
                            <div class="text-left flex-1">
                                <span class="block font-black text-white tracking-tight">Payer maintenant</span>
                                <span class="block text-[10px] text-emerald-100/80 mt-1 uppercase font-bold tracking-wider">Redirection paiement</span>
                            </div>
                            <i class="fas fa-arrow-right group-hover:translate-x-1 transition-transform"></i>
                        </div>
                    </button>
                </div>
            </div>

            <div class="px-8 pb-8">
                <button onclick="closeFeeModal()" class="w-full text-slate-400 hover:text-slate-600 py-2 text-xs font-bold uppercase tracking-widest transition-colors">
                    Continuer sans changement
                </button>
            </div>
        </div>
    </div>

    <style>
    @keyframes shimmer {
        100% { transform: translateX(100%); }
    }
    </style>

    <script>
        // FEES_DUE est déjà défini en haut
    </script>{% endblock %}