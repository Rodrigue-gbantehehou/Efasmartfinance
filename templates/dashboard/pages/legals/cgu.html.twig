<script>
document.addEventListener('DOMContentLoaded', function() {
    // Navigation fluide
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        });
    });
    
    // Gestion des checkboxes d'acceptation
    const acceptCheckbox = document.getElementById('acceptCheckbox');
    const privacyCheckbox = document.getElementById('privacyCheckbox');
    const confirmBtn = document.getElementById('confirmBtn');
    
    function updateConfirmButton() {
        if (acceptCheckbox.checked && privacyCheckbox.checked) {
            confirmBtn.disabled = false;
            confirmBtn.className = 'flex-1 px-4 py-2.5 bg-green-700 text-white rounded-lg hover:bg-green-700 transition-colors font-medium';
        } else {
            confirmBtn.disabled = true;
            confirmBtn.className = 'flex-1 px-4 py-2.5 bg-gray-300 text-gray-6000 rounded-lg font-medium cursor-not-allowed';
        }
    }
    
    if (acceptCheckbox && privacyCheckbox && confirmBtn) {
        acceptCheckbox.addEventListener('change', updateConfirmButton);
        privacyCheckbox.addEventListener('change', updateConfirmButton);
    }
    
    // Marquer les articles comme lus
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const articleId = entry.target.id;
                localStorage.setItem(`cgu_${articleId}_read`, 'true');
            }
        });
    }, { threshold: 0.5 });
    
    // Observer tous les articles
    for (let i = 1; i <= 12; i++) {
        const article = document.getElementById(`article${i}`);
        if (article) observer.observe(article);
    }
    
    // Vérifier la progression de lecture
    updateReadingProgress();
});

function showAcceptanceModal() {
    document.getElementById('acceptanceModal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
}

function closeAcceptanceModal() {
    document.getElementById('acceptanceModal').classList.add('hidden');
    document.body.style.overflow = 'auto';
    
    // Réinitialiser les checkboxes
    const acceptCheckbox = document.getElementById('acceptCheckbox');
    const privacyCheckbox = document.getElementById('privacyCheckbox');
    if (acceptCheckbox) acceptCheckbox.checked = false;
    if (privacyCheckbox) privacyCheckbox.checked = false;
    
    updateConfirmButton();
}

function confirmAcceptance() {
    const acceptCheckbox = document.getElementById('acceptCheckbox');
    const privacyCheckbox = document.getElementById('privacyCheckbox');
    
    if (!acceptCheckbox.checked || !privacyCheckbox.checked) {
        showNotification('Veuillez accepter toutes les conditions', 'error');
        return;
    }
    
    // Simuler l'enregistrement de l'acceptation
    showNotification('Acceptation enregistrée avec succès', 'success');
    
    setTimeout(() => {
        closeAcceptanceModal();
        
        // Rediriger vers le tableau de bord ou la page précédente
        const returnUrl = localStorage.getItem('returnAfterCGU') || '/dashboard';
        window.location.href = returnUrl;
    }, 1500);
    
    // Enregistrer l'acceptation (dans un cas réel, envoyer au serveur)
    localStorage.setItem('cgu_accepted', new Date().toISOString());
    localStorage.setItem('cgu_version', '2.0');
}

function printPage() {
    window.print();
}

function downloadPDF() {
    showNotification('Génération du PDF en cours...', 'info');
    
    // Simulation de génération PDF
    setTimeout(() => {
        showNotification('PDF prêt ! Téléchargement automatique', 'success');
        
        // Dans un cas réel, vous généreriez et téléchargeriez un vrai PDF
        // Pour l'instant, on simule
        const link = document.createElement('a');
        link.href = '#';
        link.download = `CGU_EFA_SMART_FINANCE_${new Date().toISOString().slice(0,10)}.pdf`;
        link.click();
    }, 2000);
}

function updateReadingProgress() {
    let readArticles = 0;
    for (let i = 1; i <= 12; i++) {
        if (localStorage.getItem(`cgu_article${i}_read`) === 'true') {
            readArticles++;
        }
    }
    
    const progress = Math.round((readArticles / 12) * 100);
    console.log(`Progression de lecture des CGU : ${progress}%`);
    
    // Vous pouvez afficher une barre de progression si nécessaire
    // showProgressBar(progress);
}

function showNotification(message, type = 'info') {
    // Supprimer les notifications existantes
    document.querySelectorAll('.notification-toast').forEach(el => el.remove());
    
    const notification = document.createElement('div');
    notification.className = `notification-toast fixed top-4 right-4 z-50 px-4 py-3 rounded-lg shadow-lg flex items-center transform translate-x-full transition-transform duration-300 ${
        type === 'success' ? 'bg-emerald-500 text-white' :
        type === 'error' ? 'bg-red-500 text-white' :
        type === 'info' ? 'bg-green-500 text-white' :
        'bg-gray-800 text-white'
    }`;
    
    const icon = type === 'success' ? 'fa-check-circle' :
                 type === 'error' ? 'fa-times-circle' :
                 type === 'info' ? 'fa-info-circle' :
                 'fa-bell';
    
    notification.innerHTML = `
        <i class="fa-solid ${icon} mr-2"></i>
        <span>${message}</span>
        <button onclick="this.parentElement.remove()" class="ml-4 text-white/80 hover:text-white">
            <i class="fa-solid fa-times"></i>
        </button>
    `;
    
    document.body.appendChild(notification);
    
    // Animation d'entrée
    setTimeout(() => {
        notification.style.transform = 'translateX(0)';
    }, 10);
    
    // Auto-suppression
    setTimeout(() => {
        notification.style.transform = 'translateX(100%)';
        setTimeout(() => notification.remove(), 300);
    }, 5000);
}

