<script>
    // Fonction pour l'impression
    function printPage() {
        window.print();
    }

    // Fonction pour télécharger en PDF
    function downloadPDF() {
        // Simuler un téléchargement
        const element = document.createElement('a');
        element.setAttribute('href', '#');
        element.setAttribute('download', 'mentions-legales-efa-smart-finance-benin.pdf');
        document.body.appendChild(element);
        element.click();
        document.body.removeChild(element);
        
        // Afficher une notification
        alert('La version PDF sera générée et téléchargée.');
    }

    // Navigation fluide
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            const targetId = this.getAttribute('href');
            if(targetId === '#') return;
            
            const targetElement = document.querySelector(targetId);
            if(targetElement) {
                window.scrollTo({
                    top: targetElement.offsetTop - 100,
                    behavior: 'smooth'
                });
            }
        });
    });

    // Initialisation
    document.addEventListener('DOMContentLoaded', function() {
        // Ajout de l'impression par Ctrl+P
        document.addEventListener('keydown', function(e) {
            if((e.ctrlKey || e.metaKey) && e.key === 'p') {
                e.preventDefault();
                printPage();
            }
        });
    });
</script>

