{% extends 'dashboard/base.html.twig' %}

{% block contentdashboard %}
<div class="min-h-screen bg-green-50-gray-50 flex items-center justify-center">
    <div class="max-w-md w-full bg-white rounded-xl shadow-lg p-6 text-center">
        <div class="animate-spin rounded-full h-16 w-16 border-b-2 border-green-700 mx-auto mb-4"></div>
        
        <h1 class="text-2xl font-bold text-gray-900 mb-2">Traitement en cours...</h1>
        <p class="text-gray-600 mb-4">
            Nous vérifions votre paiement. Veuillez patienter.
        </p>
        
        <div class="bg-gray-50 rounded-lg p-4 mb-6 text-left text-sm">
            <div class="grid grid-cols-2 gap-2">
                <div class="text-gray-6000">ID Transaction:</div>
                <div class="font-mono text-gray-900">{{ transaction_id }}</div>
                
                {% if status %}
                <div class="text-gray-6000">Statut:</div>
                <div class="font-semibold {{ status == 'approved' ? 'text-green-600' : 'text-yellow-600' }}">
                    {{ status|upper }}
                </div>
                {% endif %}
                
                {% if reference %}
                <div class="text-gray-6000">Référence:</div>
                <div class="font-mono text-gray-900">{{ reference }}</div>
                {% endif %}
            </div>
        </div>
        
        <div id="processing-message" class="text-sm text-gray-6000 mb-4">
            Vérification du paiement...
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const transactionId = '{{ transaction_id }}';
    const paymentId = '{{ app.request.query.get('payment_id')|e('js') }}';
    
    if (transactionId) {
        // Attendre 2 secondes puis vérifier
        setTimeout(() => {
            verifyPayment(transactionId);
        }, 2000);
    } else {
        // Rediriger après 3 secondes si pas d'ID
        setTimeout(() => {
            window.location.href = '{{ path('app_tontines_index') }}';
        }, 3000);
    }
    
    function verifyPayment(transactionId) {
        document.getElementById('processing-message').textContent = 'Vérification en cours...';
        
        fetch('{{ path('app_callback_process') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({
                transaction_id: transactionId,
                payment_id: paymentId,
                method: '{{ app.request.query.get('method', 'kkiapay') }}'
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                document.getElementById('processing-message').textContent = '✅ Paiement confirmé ! Redirection...';
                setTimeout(() => {
                    if (data.redirect_url) {
                        window.location.href = data.redirect_url;
                    } else {
                        window.location.href = '{{ path('app_tontines_index') }}';
                    }
                }, 1500);
            } else {
                document.getElementById('processing-message').textContent = '❌ ' + (data.message || 'Erreur de vérification');
                setTimeout(() => {
                    window.location.href = '{{ path('app_tontines_index') }}';
                }, 3000);
            }
        })
        .catch(error => {
            document.getElementById('processing-message').textContent = '❌ Erreur de connexion';
            console.error('Erreur:', error);
            setTimeout(() => {
                window.location.href = '{{ path('app_tontines_index') }}';
            }, 3000);
        });
    }
});
</script>
{% endblock %}