{% extends "dashboard/base.html.twig" %}

{% block title %}Mes Notifications - Efa Smart Finance{% endblock %}

{% block contentdashboard %}
<div class="min-h-screen bg-green-50 from-green-50 via-white to-green-50/30">
    <!-- Header Premium -->
    <header class="sticky top-0 z-40 bg-gradient-to-r from-green-700 via-green-600 to-green-700 shadow-lg">
        <div class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between py-3 md:py-4 min-h-[60px] md:min-h-[80px]">
                <!-- Logo/Brand -->
                <div class="flex items-center gap-3 md:gap-4 min-w-0 flex-1">
                    <div class="flex flex-col min-w-0">
                        <h1 class="text-base md:text-xl font-bold text-white truncate">Mes Notifications</h1>
                        <p class="text-green-100 text-xs md:text-sm truncate">{{ notifications|length }} message(s)</p>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex items-center gap-2 md:gap-4 flex-shrink-0">
                    <!-- Search -->
                    <div class="relative hidden lg:block">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <i class="fa-solid fa-search text-green-200 text-sm"></i>
                        </div>
                        <input type="text" 
                               id="notificationSearch"
                               placeholder="Filtrer..."
                               class="pl-10 pr-4 py-2.5 w-48 xl:w-64 bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl text-white placeholder-green-200 focus:bg-white/20 focus:border-white/30 focus:ring-2 focus:ring-white/20 outline-none transition-all duration-200 text-sm">
                    </div>

                    {% if notifications|filter(n => not n.isRead)|length > 0 %}
                    <form action="{{ path('app_notifications_mark_all_read') }}" method="POST">
                         <button type="submit" class="relative group overflow-hidden touch-target">
                            <div class="absolute inset-0 bg-gradient-to-r from-green-500 to-emerald-500 blur-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                            <div class="relative px-3 md:px-5 py-2 md:py-2.5 bg-white rounded-lg md:rounded-xl shadow-lg group-hover:shadow-xl transition-all duration-300">
                                <span class="bg-gradient-to-r from-green-700 to-green-800 bg-clip-text text-transparent font-semibold text-xs md:text-sm flex items-center gap-1 md:gap-2">
                                    <i class="fa-solid fa-check-double text-xs md:text-sm"></i>
                                    <span class="hidden md:inline">Tout marquer</span>
                                </span>
                            </div>
                        </button>
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-[1400px] mx-auto px-4 sm:px-6 lg:px-8 py-4 md:py-8">
        <!-- Status Filters -->
        <div class="mb-4 md:mb-8 overflow-x-auto scrollbar-hide">
            <div class="flex items-center gap-2 md:gap-3 min-w-max">
                <button data-filter="all" class="filter-btn px-4 md:px-6 py-2 md:py-2.5 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg md:rounded-xl text-xs md:text-sm font-medium transition-all duration-200 shadow-md touch-target">
                    Tout
                </button>
                <button data-filter="unread" class="filter-btn px-4 md:px-6 py-2 md:py-2.5 bg-white text-gray-600 border border-green-100 rounded-lg md:rounded-xl text-xs md:text-sm font-medium hover:bg-green-50 transition-all flex items-center gap-1 md:gap-2 touch-target">
                    Non lus
                    <span class="px-1.5 md:px-2 py-0.5 bg-warning text-white text-[9px] md:text-[10px] rounded-full">
                        {{ notifications|filter(n => not n.isRead)|length }}
                    </span>
                </button>
                <button data-filter="read" class="filter-btn px-4 md:px-6 py-2 md:py-2.5 bg-white text-gray-600 border border-green-100 rounded-lg md:rounded-xl text-xs md:text-sm font-medium hover:bg-green-50 transition-all touch-target">
                    Lus
                </button>
            </div>
        </div>

        <div class="space-y-2 md:space-y-3" id="notificationsList">
            {% for notification in notifications %}
                <div class="notification-item group relative bg-white rounded-lg md:rounded-xl border {{ not notification.isRead ? 'border-green-200 bg-green-50/30' : 'border-gray-200' }} overflow-hidden transition-all duration-200 hover:shadow-md cursor-pointer touch-target" 
                     data-is-read="{{ notification.isRead ? 'true' : 'false' }}"
                     data-title="{{ notification.title|lower }}"
                     data-message="{{ notification.message|lower }}"
                     data-url="{{ path('app_notifications_show', {id: notification.id}) }}">
                    
                    <!-- Unread indicator dot -->
                    {% if not notification.isRead %}
                    <div class="absolute left-2 md:left-3 top-1/2 -translate-y-1/2 w-2 md:w-2.5 h-2 md:h-2.5 bg-green-600 rounded-full"></div>
                    {% endif %}
                    
                    <div class="flex items-start gap-2 md:gap-3 p-3 md:p-4 {{ not notification.isRead ? 'pl-6 md:pl-8' : '' }}">
                        <!-- Avatar/Icon -->
                        <div class="relative flex-shrink-0">
                            <div class="h-10 w-10 md:h-14 md:w-14 rounded-full flex items-center justify-center text-white font-bold text-sm md:text-lg shadow-sm
                                {% if 'tontine' in notification.title|lower or 'tontine' in notification.message|lower %}
                                    bg-gradient-to-br from-green-500 to-green-600
                                {% elseif 'portefeuille' in notification.title|lower or 'wallet' in notification.message|lower or 'dépôt' in notification.title|lower %}
                                    bg-gradient-to-br from-green-500 to-green-600
                                {% elseif 'retrait' in notification.title|lower %}
                                    bg-gradient-to-br from-orange-500 to-orange-600
                                {% elseif 'transaction' in notification.title|lower %}
                                    bg-gradient-to-br from-cyan-500 to-cyan-600
                                {% elseif 'système' in notification.title|lower or 'compte' in notification.title|lower %}
                                    bg-gradient-to-br from-gray-50 to-gray-600
                                {% else %}
                                    bg-gradient-to-br from-green-500 to-green-600
                                {% endif %}">
                                <i class="fa-solid 
                                    {% if 'tontine' in notification.title|lower or 'tontine' in notification.message|lower %}fa-piggy-bank
                                    {% elseif 'portefeuille' in notification.title|lower or 'wallet' in notification.message|lower or 'dépôt' in notification.title|lower %}fa-wallet
                                    {% elseif 'retrait' in notification.title|lower %}fa-hand-holding-dollar
                                    {% elseif 'transaction' in notification.title|lower %}fa-exchange-alt
                                    {% elseif 'système' in notification.title|lower or 'compte' in notification.title|lower %}fa-cog
                                    {% else %}fa-bell
                                    {% endif %}">
                                </i>
                            </div>
                            
                            <!-- Status badge on avatar -->
                            <div class="absolute -bottom-0.5 -right-0.5 h-5 w-5 rounded-full border-2 border-white flex items-center justify-center
                                {% if notification.type == 'success' %}bg-green-500
                                {% elseif notification.type == 'warning' %}bg-yellow-500
                                {% elseif notification.type == 'danger' %}bg-red-500
                                {% else %}bg-green-500{% endif %}">
                                <i class="fa-solid text-white text-[8px]
                                    {% if notification.type == 'success' %}fa-check
                                    {% elseif notification.type == 'warning' %}fa-exclamation
                                    {% elseif notification.type == 'danger' %}fa-times
                                    {% else %}fa-info{% endif %}">
                                </i>
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="flex-1 min-w-0">
                            <!-- Title with source badge -->
                            <div class="flex items-start justify-between gap-2 mb-1">
                                <div class="flex-1 min-w-0">
                                    <h3 class="font-semibold text-gray-900 text-sm leading-tight mb-0.5 line-clamp-2">
                                        {{ notification.title }}
                                    </h3>
                                    <div class="flex items-center gap-2 flex-wrap">
                                        <span class="inline-flex items-center px-2 py-0.5 rounded-md text-[11px] font-medium
                                            {% if notification.source %}
                                                bg-emerald-100 text-emerald-700
                                            {% elseif 'tontine' in notification.title|lower or 'tontine' in notification.message|lower %}
                                                bg-green-100 text-green-700
                                            {% elseif 'portefeuille' in notification.title|lower or 'wallet' in notification.message|lower or 'dépôt' in notification.title|lower %}
                                                bg-green-100 text-green-700
                                            {% elseif 'retrait' in notification.title|lower %}
                                                bg-orange-100 text-orange-700
                                            {% elseif 'transaction' in notification.title|lower %}
                                                bg-cyan-100 text-cyan-700
                                            {% elseif 'système' in notification.title|lower or 'compte' in notification.title|lower %}
                                                bg-gray-100 text-gray-700
                                            {% else %}
                                                bg-green-100 text-green-700
                                            {% endif %}">
                                            {% if notification.source %}
                                                {{ notification.source }}
                                            {% elseif 'tontine' in notification.title|lower or 'tontine' in notification.message|lower %}
                                                Tontine
                                            {% elseif 'portefeuille' in notification.title|lower or 'wallet' in notification.message|lower or 'dépôt' in notification.title|lower %}
                                                Portefeuille
                                            {% elseif 'retrait' in notification.title|lower %}
                                                Retrait
                                            {% elseif 'transaction' in notification.title|lower %}
                                                Transaction
                                            {% elseif 'système' in notification.title|lower or 'compte' in notification.title|lower %}
                                                Système
                                            {% else %}
                                                Notification
                                            {% endif %}
                                        </span>
                                        <span class="text-[11px] text-gray-600 font-medium">
                                            <i class="fa-regular fa-clock mr-0.5"></i>
                                            <span class="relative-time" data-timestamp="{{ notification.createdAt|date('U') }}">
                                                {{ notification.createdAt|date('d/m/Y à H:i') }}
                                            </span>
                                        </span>
                                    </div>
                                </div>
                                
                                <!-- Quick actions menu -->
                                <div class="flex items-center gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <button onclick="event.stopPropagation(); toggleMenu(this)" class="p-1.5 text-gray-600 hover:text-gray-600 hover:bg-gray-100 rounded-lg transition-colors" title="Plus d'options">
                                        <i class="fa-solid fa-ellipsis-h text-sm"></i>
                                    </button>
                                    
                                    <!-- Dropdown menu -->
                                    <div class="hidden absolute right-4 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-10">
                                        {% if not notification.isRead %}
                                        <form action="{{ path('app_notifications_mark_read', {id: notification.id}) }}" method="POST" onclick="event.stopPropagation()">
                                            <button type="submit" class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 flex items-center gap-2">
                                                <i class="fa-solid fa-check w-4"></i>
                                                Marquer comme lu
                                            </button>
                                        </form>
                                        {% endif %}
                                        <form action="{{ path('app_notifications_delete', {id: notification.id}) }}" method="POST" onclick="event.stopPropagation()" onsubmit="return confirm('Supprimer cette notification ?');">
                                            <button type="submit" class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 flex items-center gap-2">
                                                <i class="fa-solid fa-trash-can w-4"></i>
                                                Supprimer
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Message preview -->
                            <p class="text-gray-600 text-[13px] leading-relaxed mb-2 line-clamp-2">
                                {{ notification.message|raw|striptags }}
                            </p>

                            <!-- Action buttons (Facebook-style) -->
                            <div class="flex items-center gap-2 mt-2">
                                <a href="{{ path('app_notifications_show', {id: notification.id}) }}" 
                                   onclick="event.stopPropagation()"
                                   class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg text-xs font-semibold transition-colors">
                                    <i class="fa-solid fa-eye text-[10px]"></i>
                                    Voir
                                </a>
                                
                                {% if not notification.isRead %}
                                <form action="{{ path('app_notifications_mark_read', {id: notification.id}) }}" method="POST" onclick="event.stopPropagation()" class="inline">
                                    <button type="submit" class="inline-flex items-center gap-1.5 px-3 py-1.5 bg-green-100 hover:bg-green-200 text-green-700 rounded-lg text-xs font-semibold transition-colors">
                                        <i class="fa-solid fa-check text-[10px]"></i>
                                        Marquer lu
                                    </button>
                                </form>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="flex flex-col items-center justify-center py-20 bg-white rounded-2xl border-2 border-dashed border-gray-200">
                    <div class="h-20 w-20 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                        <i class="fa-solid fa-bell-slash text-gray-600 text-3xl"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-2">Aucune notification</h3>
                    <p class="text-gray-600 mb-6 text-center max-w-sm">Vous n'avez pas de nouvelles notifications pour le moment.</p>
                    <a href="{{ path('app_dashboard') }}" class="px-6 py-2.5 bg-green-600 text-white rounded-lg font-semibold hover:bg-green-700 transition-colors">
                        Retour au dashboard
                    </a>
                </div>
            {% endfor %}
        </div>
    </main>
</div>

<style>
/* Smooth transitions */
.notification-item {
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.notification-item:hover {
    transform: translateY(-1px);
}

.scrollbar-hide::-webkit-scrollbar {
    display: none;
}
.scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
}

/* Line clamp for text truncation */
.line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('notificationSearch');
    const filterBtns = document.querySelectorAll('.filter-btn');
    const items = document.querySelectorAll('.notification-item');
    
    // Click handler for notification cards
    items.forEach(item => {
        item.addEventListener('click', function(e) {
            // Don't navigate if clicking on a button or link
            if (e.target.closest('button') || e.target.closest('a') || e.target.closest('form')) {
                return;
            }
            const url = this.dataset.url;
            if (url) {
                window.location.href = url;
            }
        });
    });
    
    // Convert timestamps to relative time (Facebook-style)
    function updateRelativeTimes() {
        document.querySelectorAll('.relative-time').forEach(el => {
            const timestamp = parseInt(el.dataset.timestamp);
            const now = Math.floor(Date.now() / 1000);
            const diff = now - timestamp;
            
            let relativeTime;
            if (diff < 60) {
                relativeTime = 'À l\'instant';
            } else if (diff < 3600) {
                const minutes = Math.floor(diff / 60);
                relativeTime = `Il y a ${minutes} min`;
            } else if (diff < 86400) {
                const hours = Math.floor(diff / 3600);
                relativeTime = `Il y a ${hours}h`;
            } else if (diff < 604800) {
                const days = Math.floor(diff / 86400);
                relativeTime = `Il y a ${days}j`;
            } else {
                const date = new Date(timestamp * 1000);
                relativeTime = date.toLocaleDateString('fr-FR', { day: 'numeric', month: 'short' });
            }
            
            el.textContent = relativeTime;
        });
    }
    
    // Update times immediately and every minute
    updateRelativeTimes();
    setInterval(updateRelativeTimes, 60000);
    
    // Search function
    if (searchInput) {
        searchInput.addEventListener('input', function(e) {
            const term = e.target.value.toLowerCase();
            items.forEach(item => {
                const title = item.dataset.title;
                const message = item.dataset.message;
                if (title.includes(term) || message.includes(term)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    }

    // Filter function
    filterBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            // UI Update
            filterBtns.forEach(b => {
                b.classList.remove('bg-gradient-to-r', 'from-green-600', 'to-green-700', 'text-white', 'shadow-md');
                b.classList.add('bg-white', 'text-gray-600', 'border', 'border-green-100');
            });
            this.classList.add('bg-gradient-to-r', 'from-green-600', 'to-green-700', 'text-white', 'shadow-md');
            this.classList.remove('bg-white', 'text-gray-600', 'border', 'border-green-100');

            const filter = this.dataset.filter;
            items.forEach(item => {
                const isRead = item.dataset.isRead === 'true';
                if (filter === 'all') {
                    item.style.display = 'block';
                } else if (filter === 'unread' && !isRead) {
                    item.style.display = 'block';
                } else if (filter === 'read' && isRead) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    });
});

// Toggle dropdown menu
function toggleMenu(button) {
    const menu = button.nextElementSibling;
    const allMenus = document.querySelectorAll('.notification-item .hidden');
    
    // Close all other menus
    allMenus.forEach(m => {
        if (m !== menu) m.classList.add('hidden');
    });
    
    // Toggle current menu
    menu.classList.toggle('hidden');
}

// Close menus when clicking outside
document.addEventListener('click', function(e) {
    if (!e.target.closest('.notification-item')) {
        document.querySelectorAll('.notification-item .hidden').forEach(m => {
            m.classList.add('hidden');
        });
    }
});
</script>
{% endblock %}
