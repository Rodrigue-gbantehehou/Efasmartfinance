{% extends 'dashboard/base.html.twig' %}

{% block title %}Gestion des Transactions - Administration{% endblock %}

{% block contentdashboard %}
<div class="space-y-6 p-6 ">
    <!-- Fil d'Ariane -->
    <nav class="mb-6" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
            <li class="inline-flex items-center">
                <a href="{{ path('admin_dashboard') }}" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-green-600 transition-colors duration-200">
                    <svg class="w-3 h-3 me-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L4 10.414V18a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h2a1 1 0 0 0 1-1v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                    </svg>
                    Tableau de bord
                </a>
            </li>
            <li aria-current="page">
                <div class="flex items-center">
                    <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                    </svg>
                    <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2">Transactions</span>
                </div>
            </li>
        </ol>
    </nav>

    <!-- En-tête avec titre et actions -->
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
        <div>
            <h2 class="text-2xl font-bold text-gray-900">Gestion des Transactions</h2>
            <p class="mt-2 text-sm text-gray-600">Suivez et gérez toutes les transactions financières de la plateforme</p>
        </div>
       
    </div>

    <!-- Cartes de statistiques -->
    <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Entrées -->
        <div class="bg-gradient-to-br from-green-50 to-green-100 border border-green-200 rounded-xl shadow-sm p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-lg bg-green-100 border border-green-200">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-green-700">Total des entrées</p>
                    <p class="text-2xl font-bold text-gray-900 mt-1">{{ totalEntrees|number_format(0, ',', ' ') }} FCFA</p>
                    <p class="text-xs text-green-600 mt-1">
                        <span class="inline-flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                            </svg>
                            +12% ce mois
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Sorties -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 border border-red-200 rounded-xl shadow-sm p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-lg bg-red-100 border border-red-200">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-red-700">Total des sorties</p>
                    <p class="text-2xl font-bold text-gray-900 mt-1">{{ totalSorties|number_format(0, ',', ' ') }} FCFA</p>
                    <p class="text-xs text-red-600 mt-1">
                        <span class="inline-flex items-center">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                            +8% ce mois
                        </span>
                    </p>
                </div>
            </div>
        </div>

        <!-- Solde -->
        <div class="bg-gradient-to-br from-green-50 to-green-100 border border-green-200 rounded-xl shadow-sm p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-lg bg-green-100 border border-green-200">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-green-700">Solde total</p>
                    <p class="text-2xl font-bold text-gray-900 mt-1">{{ (totalEntrees - totalSorties)|number_format(0, ',', ' ') }} FCFA</p>
                    <p class="text-xs {{ (totalEntrees - totalSorties) >= 0 ? 'text-green-600' : 'text-red-600' }} mt-1">
                        {% set difference = totalEntrees - totalSorties %}
                        {% set pourcentage = totalEntrees > 0 ? (difference / totalEntrees * 100)|round : 0 %}
                        {% if difference >= 0 %}
                            <span class="inline-flex items-center">
                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L11 7.414V15a1 1 0 11-2 0V7.414L6.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                </svg>
                                Bénéfice: {{ pourcentage }}%
                            </span>
                        {% else %}
                            <span class="inline-flex items-center">
                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L9 12.586V5a1 1 0 012 0v7.586l2.293-2.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                </svg>
                                Déficit: {{ pourcentage|abs }}%
                            </span>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>

        <!-- Transactions du mois -->
        <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 border border-yellow-200 rounded-xl shadow-sm p-6">
            <div class="flex items-center">
                <div class="p-3 rounded-lg bg-yellow-100 border border-yellow-200">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-yellow-600">Transactions ce mois</p>
                    <p class="text-2xl font-bold text-gray-900 mt-1">{{ transactionsMois|length }}</p>
                    <div class="flex items-center mt-1">
                        <div class="w-full bg-yellow-200 rounded-full h-1.5">
                            <div class="bg-yellow-600 h-1.5 rounded-full" style="width: 75%"></div>
                        </div>
                        <span class="text-xs text-yellow-600 ml-2">75% du mois</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtres avancés -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-6">
        <div class="flex items-center justify-between mb-4">
            <h3 class="text-lg font-bold text-gray-900">Filtres avancés</h3>
            <button type="button" id="toggle-filters" class="inline-flex items-center text-sm text-green-600 hover:text-green-800">
                <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
                Afficher les filtres
            </button>
        </div>

        <div id="filters-container" class="hidden space-y-4">
            <!-- Barre de recherche -->
            <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                    </svg>
                </div>
                <input type="text" id="search-input" class="block w-full pl-10 pr-3 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200" placeholder="Rechercher par ID, référence, utilisateur...">
            </div>

            <!-- Filtres en ligne -->
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                <!-- Type -->
                <div>
                    <label for="type-filter" class="block text-sm font-medium text-gray-700 mb-1">Type de transaction</label>
                    <select id="type-filter" class="block w-full pl-3 pr-10 py-2.5 text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200">
                        <option value="">Tous les types</option>
                        <option value="depot">Dépôt</option>
                        <option value="retrait">Retrait</option>
                        <option value="transfert">Transfert</option>
                        <option value="paiement">Paiement</option>
                        <option value="remboursement">Remboursement</option>
                        <option value="frais">Frais</option>
                    </select>
                </div>

                <!-- Statut -->
                <div>
                    <label for="status-filter" class="block text-sm font-medium text-gray-700 mb-1">Statut</label>
                    <select id="status-filter" class="block w-full pl-3 pr-10 py-2.5 text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200">
                        <option value="">Tous les statuts</option>
                        <option value="completed">Complétée</option>
                        <option value="pending">En attente</option>
                        <option value="failed">Échouée</option>
                        <option value="cancelled">Annulée</option>
                        <option value="refunded">Remboursée</option>
                    </select>
                </div>

                <!-- Montant -->
                <div>
                    <label for="amount-range" class="block text-sm font-medium text-gray-700 mb-1">Montant</label>
                    <select id="amount-range" class="block w-full pl-3 pr-10 py-2.5 text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200">
                        <option value="">Tous les montants</option>
                        <option value="0-10000">0 - 10,000 FCFA</option>
                        <option value="10000-50000">10,000 - 50,000 FCFA</option>
                        <option value="50000-200000">50,000 - 200,000 FCFA</option>
                        <option value="200000-500000">200,000 - 500,000 FCFA</option>
                        <option value="500000+">500,000 FCFA+</option>
                    </select>
                </div>

                <!-- Date -->
                <div>
                    <label for="date-filter" class="block text-sm font-medium text-gray-700 mb-1">Période</label>
                    <select id="date-filter" class="block w-full pl-3 pr-10 py-2.5 text-base border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-green-500 transition-all duration-200">
                        <option value="">Toute période</option>
                        <option value="today">Aujourd'hui</option>
                        <option value="yesterday">Hier</option>
                        <option value="week">7 derniers jours</option>
                        <option value="month">30 derniers jours</option>
                        <option value="quarter">Ce trimestre</option>
                        <option value="year">Cette année</option>
                    </select>
                </div>
            </div>

            <!-- Boutons d'action -->
            <div class="flex flex-wrap justify-end gap-3 pt-4 border-t border-gray-200">
                <button type="button" id="clear-filters" class="inline-flex items-center px-4 py-2.5 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    Tout effacer
                </button>
                <button type="button" id="apply-filters" class="inline-flex items-center px-5 py-2.5 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 shadow-md">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    Appliquer les filtres
                </button>
            </div>
        </div>
    </div>

    <!-- Tableau des transactions -->
    <div class="bg-white rounded-xl shadow-lg border border-gray-100 overflow-hidden">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                            <div class="flex items-center">
                                Transaction
                                <button type="button" class="ml-1 text-gray-400 hover:text-gray-600">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16V4m0 0L3 8m4-4l4 4m6 0v12m0 0l4-4m-4 4l-4-4" />
                                    </svg>
                                </button>
                            </div>
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Type</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Montant</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Parties</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Date</th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Statut</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-100">
                    {% for transaction in transactions %}
                    <tr class="hover:bg-gray-50 transition-colors duration-150"
                        data-id="{{ transaction.id }}"
                        data-reference="{{ transaction.externalReference ?? transaction.id }}"
                        data-type="{{ transaction.paymentMethod }}"
                        data-amount="{{ transaction.amount }}"
                        data-status="{{ transaction.statut ?? 'unknown' }}"
                        data-date="{{ transaction.createdAt ? transaction.createdAt|date('Y-m-d') : '' }}"
                        data-user="{{ transaction.utilisateur ? transaction.utilisateur.email : '' }}"
                        data-tontine="{{ transaction.Tontine ? transaction.Tontine.getName() : '' }}">
                        
                        <!-- ID / Référence -->
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-9 w-9 rounded-lg bg-gradient-to-br from-green-100 to-green-50 flex items-center justify-center border border-green-200">
                                    <svg class="h-5 w-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.801 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.801 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-semibold text-gray-900">
                                        #{{ loop.index }}
                                    </div>
                                    <div class="text-xs text-gray-500">
                                        {% if transaction.externalReference %}
                                            {{ transaction.externalReference|slice(0, 20) }}...
                                        {% else %}
                                            TRANS{{ transaction.id }}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </td>
                        
                        <!-- Type -->
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% set typeConfig = {
                                'depot': { class: 'bg-green-100 text-green-800 border-green-200', icon: 'download' },
                                'retrait': { class: 'bg-yellow-100 text-yellow-800 border-yellow-200', icon: 'upload' },
                                'transfert': { class: 'bg-indigo-100 text-indigo-800 border-indigo-200', icon: 'switch-horizontal' },
                                'paiement': { class: 'bg-green-100 text-green-800 border-green-200', icon: 'currency-dollar' },
                                'remboursement': { class: 'bg-yellow-100 text-yellow-800 border-yellow-200', icon: 'refresh' },
                                'frais': { class: 'bg-red-100 text-red-800 border-red-200', icon: 'receipt-tax' }
                            } %}
                            
                            {% set config = typeConfig[transaction.paymentMethod] ?? { class: 'bg-gray-100 text-gray-800 border-gray-200', icon: 'question-mark' } %}
                            
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold border {{ config.class }}">
                                <svg class="w-3 h-3 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    {% if config.icon == 'download' %}
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                                    {% elseif config.icon == 'upload' %}
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                                    {% elseif config.icon == 'switch-horizontal' %}
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                                    {% elseif config.icon == 'currency-dollar' %}
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    {% elseif config.icon == 'refresh' %}
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                                    {% elseif config.icon == 'receipt-tax' %}
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 14l6-6m-5.5.5h.01m4.99 5h.01M19 14V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14l3.5-2 3.5 2 3.5-2 3.5 2z" />
                                    {% else %}
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    {% endif %}
                                </svg>
                                {{ transaction.paymentMethod|replace({'_': ' '})|title }}
                            </span>
                        </td>
                        
                        <!-- Montant -->
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-bold {{ transaction.amount >= 0 ? 'text-green-700' : 'text-red-700' }}">
                                {% if transaction.amount >= 0 %}+{% else %}-{% endif %}
                                {{ transaction.amount|abs|number_format(0, ',', ' ') }} FCFA
                            </div>
                               
                        </td>
                        
                        <!-- Parties -->
                        <td class="px-6 py-4">
                            <div class="space-y-1">
                                <div class="flex items-center text-sm text-gray-900">
                                    <svg class="w-4 h-4 mr-1.5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                    </svg>
                                    {{ transaction.utilisateur ? transaction.utilisateur.email : 'Système'|slice(0, 20) }}...
                                </div>
