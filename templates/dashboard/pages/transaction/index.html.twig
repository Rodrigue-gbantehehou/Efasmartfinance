<!-- Script pour la recherche et le filtrage -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Variables
    const searchInput = document.getElementById('search-input');
    const typeFilter = document.getElementById('type-filter');
    const statusFilter = document.getElementById('status-filter');
    const amountFilter = document.getElementById('amount-range');
    const dateFilter = document.getElementById('date-filter');
    const clearFiltersBtn = document.getElementById('clear-filters');
    const applyFiltersBtn = document.getElementById('apply-filters');
    const toggleFiltersBtn = document.getElementById('toggle-filters');
    const filtersContainer = document.getElementById('filters-container');
    const rows = document.querySelectorAll('tbody tr[data-id]');

    // Toggle des filtres
    toggleFiltersBtn.addEventListener('click', function() {
        const isVisible = filtersContainer.classList.toggle('hidden');
        this.innerHTML = isVisible ? 
            '<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>Afficher les filtres' :
            '<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 15l7-7 7 7" /></svg>Masquer les filtres';
    });

    // Fonction de filtrage
    function filterRows() {
        const searchTerm = searchInput.value.toLowerCase();
        const selectedType = typeFilter.value;
        const selectedStatus = statusFilter.value;
        const selectedAmount = amountFilter.value;
        const selectedDate = dateFilter.value;

        // Calculer la date de début selon la période sélectionnée
        let startDate = null;
        const today = new Date();
        
        if (selectedDate) {
            switch(selectedDate) {
                case 'today':
                    startDate = new Date(today);
                    break;
                case 'yesterday':
                    startDate = new Date(today);
                    startDate.setDate(today.getDate() - 1);
                    break;
                case 'week':
                    startDate = new Date(today);
                    startDate.setDate(today.getDate() - 7);
                    break;
                case 'month':
                    startDate = new Date(today);
                    startDate.setDate(today.getDate() - 30);
                    break;
                case 'quarter':
                    startDate = new Date(today);
                    startDate.setMonth(today.getMonth() - 3);
                    break;
                case 'year':
                    startDate = new Date(today);
                    startDate.setFullYear(today.getFullYear() - 1);
                    break;
            }
        }

        let visibleCount = 0;

        rows.forEach(row => {
            const id = row.getAttribute('data-id').toLowerCase();
            const reference = row.getAttribute('data-reference').toLowerCase();
            const type = row.getAttribute('data-type');
            const status = row.getAttribute('data-status');
            const amount = parseFloat(row.getAttribute('data-amount'));
            const dateStr = row.getAttribute('data-date');
            const user = row.getAttribute('data-user').toLowerCase();
            const tontine = row.getAttribute('data-tontine').toLowerCase();

            // Vérifier la recherche
            const matchesSearch = !searchTerm || 
                id.includes(searchTerm) || 
                reference.includes(searchTerm) ||
                user.includes(searchTerm) ||
                tontine.includes(searchTerm);

            // Vérifier le type
            const matchesType = !selectedType || type === selectedType;

            // Vérifier le statut
            const matchesStatus = !selectedStatus || status === selectedStatus;

            // Vérifier le montant
            let matchesAmount = true;
            if (selectedAmount) {
                const [min, max] = selectedAmount.split('-').map(val => {
                    if (val.endsWith('+')) {
                        return { min: parseFloat(val), max: Infinity };
                    }
                    return parseFloat(val);
                });
                
                if (typeof min === 'object') { // Pour les valeurs avec "+"
                    matchesAmount = amount >= min.min;
                } else if (typeof max === 'number') {
                    matchesAmount = amount >= min && amount <= max;
                }
            }

            // Vérifier la date
            let matchesDate = true;
            if (startDate && dateStr) {
                const rowDate = new Date(dateStr);
                matchesDate = rowDate >= startDate;
            }

            // Appliquer tous les filtres
            if (matchesSearch && matchesType && matchesStatus && matchesAmount && matchesDate) {
                row.style.display = '';
                visibleCount++;
                
                // Animation d'apparition
                row.style.opacity = '0';
                row.style.transform = 'translateY(10px)';
                setTimeout(() => {
                    row.style.transition = 'all 0.3s ease';
                    row.style.opacity = '1';
                    row.style.transform = 'translateY(0)';
                }, 50);
            } else {
                row.style.display = 'none';
            }
        });

        // Afficher un message si aucun résultat
        const noResultsRow = document.querySelector('tbody tr:not([data-id])');
        if (visibleCount === 0 && !noResultsRow) {
            const tbody = document.querySelector('tbody');
            const noResults = `
                <tr id="no-results">
                    <td colspan="7" class="px-6 py-12 text-center">
                        <div class="flex flex-col items-center justify-center">
                            <svg class="w-16 h-16 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9 5.25h.008v.008H12v-.008z" />
                            </svg>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun résultat</h3>
                            <p class="text-gray-500">Aucune transaction ne correspond à vos critères de recherche.</p>
                            <button type="button" id="clear-filters-no-results" class="mt-4 inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200">
                                Réinitialiser les filtres
                            </button>
                        </div>
                    </td>
                </tr>
            `;
            tbody.insertAdjacentHTML('beforeend', noResults);
            
            // Ajouter un écouteur d'événement au bouton de réinitialisation
            document.getElementById('clear-filters-no-results').addEventListener('click', function() {
                clearFilters();
                this.closest('tr').remove();
            });
        } else if (visibleCount > 0) {
            const noResultsRow = document.getElementById('no-results');
            if (noResultsRow) {
                noResultsRow.remove();
            }
        }
    }

    // Fonction pour effacer tous les filtres
    function clearFilters() {
        searchInput.value = '';
        typeFilter.value = '';
        statusFilter.value = '';
        amountFilter.value = '';
        dateFilter.value = '';
        filterRows();
    }

    // Écouteurs d'événements
    searchInput.addEventListener('input', filterRows);
    typeFilter.addEventListener('change', filterRows);
    statusFilter.addEventListener('change', filterRows);
    amountFilter.addEventListener('change', filterRows);
    dateFilter.addEventListener('change', filterRows);
    
    clearFiltersBtn.addEventListener('click', clearFilters);
    applyFiltersBtn.addEventListener('click', filterRows);

    // Initialiser le filtrage
    filterRows();
});
</script>
