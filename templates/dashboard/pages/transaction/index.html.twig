{% extends 'dashboard/base.html.twig' %}

{% block title %}Mes Transactions - EFA Smart Finance{% endblock %}

{% block contentdashboard %}
    <!-- Content Wrapper -->
    <div class="flex-1 min-w-0 flex flex-col h-full bg-gradient-to-b from-green-50/20 to-white">
        <!-- Desktop Topbar -->
        <header class="hidden md:block bg-gradient-to-r from-green-700 via-green-600 to-green-700 text-white sticky top-0 z-30 flex-shrink-0 shadow-lg">
            <div class="max-w-[1400px] mx-auto px-6 py-3">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <a href="{{ path('app_dashboard') }}" class="inline-flex items-center gap-2 px-3 py-1 rounded-lg bg-white/10 hover:bg-white/20 transition-colors backdrop-blur-sm">
                            <span class="text-sm font-medium">Tableau de bord</span>
                        </a>
                        <i class="fa-solid fa-chevron-right text-xs text-white/60"></i>
                        <span class="px-3 py-1 rounded-lg bg-white/20 backdrop-blur-sm text-sm font-semibold">
                            Historique des transactions
                        </span>
                    </div>
                </div>
            </div>
        </header>

        <!-- Content Area -->
        <div class="flex-1 overflow-y-auto h-0 min-h-0">
            <div class="max-w-[1400px] mx-auto px-4 md:px-6 py-6 space-y-6">
                <!-- En-tête de la page -->
                <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                    <div>
                        <h1 class="text-xl md:text-2xl font-black text-gray-900 tracking-tight">Mes Transactions</h1>
                        <p class="text-sm text-gray-500 font-medium">Consultez l'historique complet de vos opérations</p>
                    </div>
                    <a href="{{ path('app_transaction_export', app.request.query.all) }}" class="flex items-center justify-center gap-2 px-5 py-3 bg-green-600 border border-green-100 rounded-2xl text-xs font-black uppercase tracking-widest text-white shadow-sm hover:bg-green-500 transition-all active:scale-95 group">
                        <i class="fas fa-file-excel text-white group-hover:scale-110 transition-transform"></i>
                        Exporter
                    </a>
                </div>

                <!-- Barre de Recherche et Filtres -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-4 space-y-4">
                    <div class="flex flex-col lg:flex-row items-stretch lg:items-center gap-4">
                        <div class="relative flex-1">
                            <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400 text-sm"></i>
                            <input type="text" id="search-input" placeholder="Référence, montant, type..." 
                                   class="w-full pl-10 pr-4 py-2.5 bg-gray-50 border-none rounded-xl text-sm font-bold focus:ring-2 focus:ring-green-500 transition-all">
                        </div>

                        <div class="flex items-center p-1 bg-green-50 rounded-xl overflow-x-auto whitespace-nowrap scrollbar-hide gap-1">
                            <button data-type="" class="quick-filter-btn px-4 py-2 rounded-lg text-xs font-bold transition-all bg-green-600 text-white shadow-sm">Tous</button>
                            <button data-type="completed" class="quick-filter-btn px-4 py-2 rounded-lg text-xs font-bold transition-all text-green-700 hover:bg-green-100">Succès</button>
                            <button data-type="pending" class="quick-filter-btn px-4 py-2 rounded-lg text-xs font-bold transition-all text-green-700 hover:bg-green-100">En attente</button>
                            <button data-type="failed" class="quick-filter-btn px-4 py-2 rounded-lg text-xs font-bold transition-all text-green-700 hover:bg-green-100">Échec</button>
                        </div>

                       
                    </div>
                </div>

                <!-- Liste des transactions -->
                <div class="space-y-4">
                    <!-- Desktop Table -->
                    <div class="hidden md:block bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
                        <table class="min-w-full divide-y divide-gray-100">
                            <thead class="bg-gray-50/50">
                                <tr>
                                    <th class="px-6 py-4 text-left text-[10px] font-black text-gray-400 uppercase tracking-widest">
                                        {{ knp_pagination_sortable(transactions, 'Référence', 't.id') }}
                                    </th>
                                    <th class="px-6 py-4 text-left text-[10px] font-black text-gray-400 uppercase tracking-widest">
                                        Méthode
                                    </th>
                                    <th class="px-6 py-4 text-left text-[10px] font-black text-gray-400 uppercase tracking-widest">
                                        {{ knp_pagination_sortable(transactions, 'Montant', 't.amount') }}
                                    </th>
                                    <th class="px-6 py-4 text-left text-[10px] font-black text-gray-400 uppercase tracking-widest">
                                        {{ knp_pagination_sortable(transactions, 'Date', 't.createdAt') }}
                                    </th>
                                    <th class="px-6 py-4 text-center text-[10px] font-black text-gray-400 uppercase tracking-widest">
                                        {{ knp_pagination_sortable(transactions, 'Statut', 't.statut') }}
                                    </th>
                                    <th class="px-6 py-4 text-right text-[10px] font-black text-gray-400 uppercase tracking-widest">Action</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-50">
                                {% for transaction in transactions %}
                                <tr class="transaction-item hover:bg-green-50/50 transition-colors"
                                    data-id="{{ transaction.id }}"
                                    data-reference="{{ transaction.externalReference ?? transaction.id }}"
                                    data-type="{{ transaction.type }}"
                                    data-status="{{ transaction.statut }}"
                                    data-search="{{ transaction.externalReference }} {{ transaction.amount }} {{ transaction.type }}">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center gap-2">
                                            <div class="flex flex-col">
                                                <div class="text-xs font-bold text-gray-900">{{ transaction.externalReference ?? transaction.id }}</div>
                                                <div class="text-[10px] text-gray-400 font-medium">Réf. transaction</div>
                                            </div>
                                            <button type="button" class="copy-btn text-gray-400 hover:text-green-600 transition-colors" data-copy="{{ transaction.externalReference ?? transaction.id }}">
                                                <i class="fas fa-copy text-xs"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-xs font-bold text-gray-900 uppercase">{{ transaction.paymentMethod|replace({'_': ' '}) }}</div>
                                        <div class="text-[10px] text-gray-400 font-medium">{{ transaction.Tontine ? transaction.Tontine.getName() : 'Global' }}</div>
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="text-sm font-black text-gray-900">{{ transaction.amount|format_currency('XOF', locale='fr') }}</div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="text-xs font-bold text-gray-900">{{ transaction.createdAt|date('d/m/Y') }}</div>
                                        <div class="text-[10px] text-gray-400 font-medium">{{ transaction.createdAt|date('H:i') }}</div>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                         {% set sStyles = {
                                            'completed': 'bg-green-100 text-green-700',
                                            'pending': 'bg-amber-100 text-amber-700',
                                            'failed': 'bg-red-100 text-red-700'
                                        } %}
                                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-[10px] font-black uppercase tracking-wider {{ sStyles[transaction.statut] ?? 'bg-gray-100 text-gray-600' }}">
                                            {{ transaction.statut|capitalize }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <button onclick="showTransactionDetails({{ transaction.id }})" class="p-2 text-gray-400 hover:text-green-600 transition-colors">
                                            <i class="fas fa-eye text-sm"></i>
                                        </button>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <!-- Mobile Cards Optimisées avec En-têtes colorées -->
                    <div id="mobile-cards-container" class="md:hidden space-y-4">
                        {% for transaction in transactions %}
                             {% set statusConfig = {
                                'completed': {
                                    'header': 'bg-green-600',
                                    'badge': 'bg-green-500/20 text-white',
                                    'icon': 'fa-check-circle'
                                },
                                'pending': {
                                    'header': 'bg-amber-500',
                                    'badge': 'bg-amber-400/20 text-white',
                                    'icon': 'fa-clock'
                                },
                                'failed': {
                                    'header': 'bg-red-600',
                                    'badge': 'bg-red-500/20 text-white',
                                    'icon': 'fa-exclamation-circle'
                                }
                            } %}
                            {% set cfg = statusConfig[transaction.statut] ?? {'header': 'bg-gray-600', 'badge': 'bg-gray-500/20 text-white', 'icon': 'fa-question-circle'} %}

                            <div class="transaction-item bg-white rounded-3xl overflow-hidden shadow-sm border border-gray-100 flex flex-col"
                                 data-id="{{ transaction.id }}"
                                 data-status="{{ transaction.statut }}"
                                 data-type="{{ transaction.type }}"
                                 data-search="{{ transaction.externalReference }} {{ transaction.amount }} {{ transaction.type }}">
                                
                                <div class="{{ cfg.header }} p-4 relative overflow-hidden">
                                     <div class="absolute -right-4 -top-4 w-24 h-24 bg-white/10 rounded-full blur-2xl"></div>
                                     <div class="flex items-center justify-between relative z-10">
                                        <div class="flex items-center gap-3">
                                            <div class="h-10 w-10 rounded-xl bg-white/20 backdrop-blur-md flex items-center justify-center text-white border border-white/30">
                                                <i class="fas {{ cfg.icon }}"></i>
                                            </div>
                                            <div>
                                                <div class="text-[10px] text-white/70 font-bold uppercase tracking-wider">{{ transaction.createdAt|date('d/m/Y • H:i') }}</div>
                                                <div class="text-sm font-black text-white">{{ transaction.amount|format_currency('XOF', locale='fr') }}</div>
                                            </div>
                                        </div>
                                        <span class="px-2.5 py-1 rounded-lg text-[10px] font-black uppercase tracking-wider {{ cfg.badge }} border border-white/20 backdrop-blur-sm">
                                            {{ transaction.statut|capitalize }}
                                        </span>
                                     </div>
                                </div>

                                <div class="p-4 space-y-4">
                                     <div class="grid grid-cols-2 gap-3">
                                        <div class="p-3 bg-gray-50 rounded-2xl border border-gray-100">
                                            <div class="text-[8px] text-gray-400 uppercase font-black tracking-widest mb-1.5">Type</div>
                                            <div class="text-xs font-bold text-gray-900 truncate uppercase">{{ transaction.paymentMethod|replace({'_': ' '}) }}</div>
                                        </div>
                                        <div class="p-3 bg-gray-50 rounded-2xl border border-gray-100">
                                            <div class="text-[8px] text-gray-400 uppercase font-black tracking-widest mb-1.5">Tontine</div>
                                            <div class="text-xs font-bold text-gray-900 truncate">{{ transaction.Tontine ? transaction.Tontine.getName() : 'Global' }}</div>
                                        </div>
                                    </div>
                                    
                                    <div class="flex items-center justify-between px-1">
                                        <div class="flex flex-col">
                                            <span class="text-[8px] text-gray-400 uppercase font-black tracking-widest mb-1">Référence</span>
                                            <div class="flex items-center gap-2">
                                                <span class="text-[10px] font-mono font-bold text-gray-600">
                                                    {{ transaction.externalReference ? transaction.externalReference|slice(0, 12) : 'TRANS' ~ transaction.id }}...
                                                </span>
                                                <button type="button" class="copy-btn text-gray-400 hover:text-green-600 transition-colors" data-copy="{{ transaction.externalReference ?? transaction.id }}">
                                                    <i class="fas fa-copy text-[10px]"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <button onclick="showTransactionDetails({{ transaction.id }})" class="h-10 w-10 bg-green-50 text-green-600 rounded-xl flex items-center justify-center hover:bg-green-600 hover:text-white transition-all">
                                            <i class="fas fa-arrow-right"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Pagination -->
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 px-6 py-2">
                    {{ knp_pagination_render(transactions, 'dashboard/partials/_pagination.html.twig') }}
                </div>
            </div>
        </div>
    </div>

    <!-- Modal pour les détails -->
    <div id="transactionModal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-md z-50 p-4 transition-all flex items-center justify-center">
        <div class="bg-white rounded-[2.5rem] w-full max-w-md p-6 relative shadow-2xl overflow-hidden scale-90 opacity-0 transition-all duration-300" id="modal-content">
             <div class="p-2 space-y-6" id="modal-body-content">
                 <!-- Dynamique -->
             </div>
             <button onclick="closeTransactionModal()" class="mt-8 w-full py-4 bg-gray-900 text-white rounded-2xl font-black uppercase tracking-widest text-xs hover:bg-black transition-all">Fermer</button>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Fonction universelle de copie
        async function copyToClipboard(text, btnElement = null) {
            try {
                if (navigator.clipboard && window.isSecureContext) {
                    await navigator.clipboard.writeText(text);
                } else {
                    const textArea = document.createElement("textarea");
                    textArea.value = text;
                    textArea.style.position = "fixed";
                    textArea.style.left = "-9999px";
                    document.body.appendChild(textArea);
                    textArea.focus();
                    textArea.select();
                    document.execCommand('copy');
                    document.body.removeChild(textArea);
                }
                
                if (btnElement) {
                    const icon = btnElement.querySelector('i');
                    const originalClass = icon.className;
                    icon.className = 'fas fa-check text-green-600';
                    btnElement.classList.add('scale-110');
                    setTimeout(() => {
                        icon.className = originalClass;
                        btnElement.classList.remove('scale-110');
                    }, 2000);
                }
                return true;
            } catch (err) {
                console.error("Copy failed", err);
                return false;
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('search-input');
            const quickFilterBtns = document.querySelectorAll('.quick-filter-btn');
            const transactionItems = document.querySelectorAll('.transaction-item');

            // Délégation pour les boutons de copie
            document.addEventListener('click', function(e) {
                const btn = e.target.closest('.copy-btn');
                if (btn) {
                    const text = btn.dataset.copy;
                    if (text) copyToClipboard(text, btn);
                }
            });

            function performFilter() {
                const term = searchInput.value.toLowerCase();
                // On récupère le statut via le bouton actif (le snippet utilise data-type pour stocker le statut)
                const activeBtn = Array.from(quickFilterBtns).find(b => b.classList.contains('bg-green-600'));
                const statusFromBtn = activeBtn ? activeBtn.dataset.type : '';

                transactionItems.forEach(item => {
                    const itemStatus = item.dataset.status || '';
                    const itemSearch = (item.dataset.search || '').toLowerCase();

                    const matchesSearch = itemSearch.includes(term);
                    const matchesStatus = !statusFromBtn || itemStatus === statusFromBtn;

                    item.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
                });
            }

            searchInput.addEventListener('input', performFilter);
            
            quickFilterBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    quickFilterBtns.forEach(b => {
                        b.classList.remove('bg-green-600', 'text-white', 'shadow-sm');
                        b.classList.add('text-green-700', 'hover:bg-green-100');
                    });
                    this.classList.add('bg-green-600', 'text-white', 'shadow-sm');
                    this.classList.remove('text-green-700', 'hover:bg-green-100');
                    performFilter();
                });
            });
        });

        function showTransactionDetails(id) {
            const modal = document.getElementById('transactionModal');
            const content = document.getElementById('modal-content');
            const body = document.getElementById('modal-body-content');
            
            modal.classList.remove('hidden');
            body.innerHTML = '<div class="flex justify-center py-10"><i class="fas fa-circle-notch fa-spin text-3xl text-green-500"></i></div>';
            
            setTimeout(() => {
                content.classList.remove('scale-90', 'opacity-0');
            }, 10);

            fetch(`/dashboard/transaction/${id}/details`)
                .then(r => r.text())
                .then(html => {
                    body.innerHTML = html;
                })
                .catch(() => {
                    body.innerHTML = '<p class="text-center text-red-500 font-bold">Erreur de chargement</p>';
                });
        }

        function closeTransactionModal() {
             const modal = document.getElementById('transactionModal');
             const content = document.getElementById('modal-content');
             content.classList.add('scale-90', 'opacity-0');
             setTimeout(() => {
                 modal.classList.add('hidden');
             }, 300);
        }
    </script>

    <style>
        .scrollbar-hide::-webkit-scrollbar { display: none; }
        .scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
        .transaction-item { transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1); }
    </style>
{% endblock %}