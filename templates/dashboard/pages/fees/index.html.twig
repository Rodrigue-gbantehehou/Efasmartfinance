{% extends '@!dashboard/layout/dashboard.html.twig' %}

{% block title %}Rapport des frais{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            margin-bottom: 1.5rem;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: none;
            border-radius: 0.5rem;
        }
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
            font-weight: 600;
        }
        .fee-item {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 1.25rem;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }
        .fee-item:last-child {
            border-bottom: none;
        }
        .fee-amount {
            font-weight: 600;
            color: #2e7d32;
        }
        .period-title {
            color: #495057;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Rapport des frais</h1>
            <div class="text-muted">
                {{ currentDate|date('d/m/Y H:i') }}
            </div>
        </div>

        <div class="row">
            <!-- Frais du jour -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Aujourd'hui</span>
                        <span class="badge bg-green-700">{{ dailyFees|length }} types de frais</span>
                    </div>
                    <div class="card-body p-0">
                        {% if dailyFees is not empty %}
                            {% for fee in dailyFees %}
                                <div class="fee-item">
                                    <span>{{ fee.type|trans }}</span>
                                    <span class="fee-amount">{{ fee.total|number_format(2, ',', ' ') }} FCFA</span>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="p-3 text-center text-muted">
                                Aucun frais enregistré aujourd'hui
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-footer text-muted text-end">
                        Total: <strong>{{ dailyFees|reduce((total, fee) => total + fee.total, 0)|number_format(2, ',', ' ') }} FCFA</strong>
                    </div>
                </div>
            </div>

            <!-- Frais du mois -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Ce mois-ci</span>
                        <span class="badge bg-info">{{ monthlyFees|length }} types de frais</span>
                    </div>
                    <div class="card-body p-0">
                        {% if monthlyFees is not empty %}
                            {% for fee in monthlyFees %}
                                <div class="fee-item">
                                    <span>{{ fee.type|trans }}</span>
                                    <span class="fee-amount">{{ fee.total|number_format(2, ',', ' ') }} FCFA</span>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="p-3 text-center text-muted">
                                Aucun frais enregistré ce mois-ci
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-footer text-muted text-end">
                        Total: <strong>{{ monthlyFees|reduce((total, fee) => total + fee.total, 0)|number_format(2, ',', ' ') }} FCFA</strong>
                    </div>
                </div>
            </div>

            <!-- Frais de l'année -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span>Cette année ({{ currentDate|date('Y') }})</span>
                        <span class="badge bg-success">{{ annualFees|length }} types de frais</span>
                    </div>
                    <div class="card-body p-0">
                        {% if annualFees is not empty %}
                            {% for fee in annualFees %}
                                <div class="fee-item">
                                    <span>{{ fee.type|trans }}</span>
                                    <span class="fee-amount">{{ fee.total|number_format(2, ',', ' ') }} FCFA</span>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="p-3 text-center text-muted">
                                Aucun frais enregistré cette année
                            </div>
                        {% endif %}
                    </div>
                    <div class="card-footer text-muted text-end">
                        Total: <strong>{{ annualFees|reduce((total, fee) => total + fee.total, 0)|number_format(2, ',', ' ') }} FCFA</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Rafraîchir la page toutes les 5 minutes pour les mises à jour en temps réel
        setTimeout(function() {
            window.location.reload();
        }, 5 * 60 * 1000);
    </script>
{% endblock %}
