<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialiser la recherche
    const searchInput = document.getElementById('help-search');
    const faqItems = document.querySelectorAll('.faq-item');
    
    if (searchInput) {
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase().trim();
            
            // 1. Filtrer les items individuels
            faqItems.forEach(item => {
                const searchData = item.getAttribute('data-search').toLowerCase();
                if (searchTerm === '' || searchData.includes(searchTerm)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });

            // 2. Gérer l'affichage des sections parentes
            const faqSections = document.querySelectorAll('[id^="faq-content-"]');
            
            faqSections.forEach(section => {
                const visibleItems = section.querySelectorAll('.faq-item[style="display: block"]');
                const parentCard = section.closest('.bg-white'); // La carte complète
                
                if (visibleItems.length > 0) {
                    // S'il y a des résultats dans cette section
                    if (parentCard) parentCard.style.display = 'block';
                    
                    // Si on recherche quelque chose, on ouvre l'accordéon
                    if (searchTerm !== '') {
                        section.classList.remove('hidden');
                        const iconId = section.id.replace('content', 'icon');
                        const icon = document.getElementById(iconId);
                        if (icon) icon.classList.add('rotate-180');
                    } else {
                        // Si recherche vide, on remet l'état par défaut (fermé)
                        section.classList.add('hidden');
                        const iconId = section.id.replace('content', 'icon');
                        const icon = document.getElementById(iconId);
                        if (icon) icon.classList.remove('rotate-180');
                    }
                } else {
                    // Aucun résultat dans cette section
                    if (parentCard) {
                        // Si recherche vide, on affiche tout. Sinon on cache la carte vide.
                        parentCard.style.display = searchTerm === '' ? 'block' : 'none';
                    }
                }
            });
        });
        
        // Focus sur la recherche au chargement
        searchInput.focus();
    }
});

// Gestion des FAQ
function toggleFAQ(id) {
    const content = document.getElementById('faq-content-' + id);
    const icon = document.getElementById('faq-icon-' + id);
    
    if (content.classList.contains('hidden')) {
        content.classList.remove('hidden');
        icon.classList.add('rotate-180');
    } else {
        content.classList.add('hidden');
        icon.classList.remove('rotate-180');
    }
}

function openFAQ(id) {
    const content = document.getElementById('faq-content-' + id);
    const icon = document.getElementById('faq-icon-' + id);
    
    content.classList.remove('hidden');
    icon.classList.add('rotate-180');
}

