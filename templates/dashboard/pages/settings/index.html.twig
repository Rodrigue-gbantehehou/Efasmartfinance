{% extends 'dashboard/base.html.twig' %}

{% block title %}Paramètres - Efa Smart Finance{% endblock %}

{% block contentdashboard %}
<div class="min-h-screen bg-green-50/20">
    <!-- Header Mobile Premium -->
    <header class="md:hidden bg-gradient-to-r from-green-700 via-green-600 to-green-700 text-white sticky top-0 z-30 flex-shrink-0 shadow-lg">
        <div class="px-4 py-3 flex items-center justify-between">
            <div class="flex items-center gap-3">
                <a href="{{ path('app_dashboard') }}" class="h-9 w-9 flex items-center justify-center rounded-xl bg-white/20 backdrop-blur-md border border-white/30">
                    <i class="fa-solid fa-chevron-left text-sm"></i>
                </a>
                <div>
                    <h1 class="text-sm font-black uppercase tracking-wider">Paramètres</h1>
                    <p class="text-[10px] text-white/70 font-medium">Gérez votre compte</p>
                </div>
            </div>
            <div class="h-10 w-10 rounded-full bg-white/20 backdrop-blur-md border border-white/30 flex items-center justify-center text-xs font-bold">
                {{ app.user.firstname|first|upper }}{{ app.user.lastname|first|upper }}
            </div>
        </div>
    </header>

    <!-- Desktop Header -->
    <header class="hidden md:block bg-gradient-to-r from-green-700 via-green-600 to-green-700 text-white sticky top-0 z-30 flex-shrink-0 shadow-lg">
        <div class="max-w-[1400px] mx-auto px-6 py-3">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                    <a href="{{ path('app_dashboard') }}" class="inline-flex items-center gap-2 px-3 py-1 rounded-lg bg-white/10 hover:bg-white/20 transition-colors backdrop-blur-sm">
                        <span class="text-sm font-medium">Tableau de bord</span>
                    </a>
                    <i class="fa-solid fa-chevron-right text-xs text-white/60"></i>
                    <span class="px-3 py-1 rounded-lg bg-white/20 backdrop-blur-sm text-sm font-semibold">
                        Paramètres
                    </span>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="max-w-[1400px] mx-auto px-4 md:px-6 py-6 transition-all duration-300">
        <!-- Navigation mobile optimisée -->
        <div class="md:hidden mb-6 sticky top-[68px] z-20 bg-green-50/20 py-2 -mx-4 px-4 backdrop-blur-md">
            <div class="flex items-center p-1 bg-white rounded-2xl shadow-sm border border-gray-100 overflow-x-auto whitespace-nowrap scrollbar-hide gap-1">
                <button onclick="showSection('profil')" data-section-btn="profil"
                        class="px-5 py-2.5 rounded-xl text-xs font-bold transition-all bg-green-600 text-white shadow-sm shadow-green-200">
                    <i class="fa-solid fa-user-circle mr-2"></i>Profil
                </button>
                <button onclick="showSection('securite')" data-section-btn="securite"
                        class="px-5 py-2.5 rounded-xl text-xs font-bold transition-all text-green-700 hover:bg-green-50">
                    <i class="fa-solid fa-shield-alt mr-2"></i>Sécurité
                </button>
                <button onclick="showSection('notifications')" data-section-btn="notifications"
                        class="px-5 py-2.5 rounded-xl text-xs font-bold transition-all text-green-700 hover:bg-green-50">
                    <i class="fa-solid fa-bell mr-2"></i>Notifications
                </button>
            </div>
        </div>

        <div class="md:flex md:space-x-8">
            <!-- Navigation latérale (Desktop) -->
            <aside class="hidden md:block md:w-72 flex-shrink-0">
                <div class="bg-white rounded-3xl shadow-sm border border-gray-100 p-5 sticky top-24">
                    <h3 class="text-[10px] font-black text-gray-900 uppercase tracking-widest mb-6 px-4">Menu Paramètres</h3>
                    <nav class="space-y-2">
                        <button onclick="showSection('profil')" data-section-btn="profil"
                                class="w-full flex items-center px-4 py-3.5 text-sm font-bold text-white bg-green-600 rounded-2xl shadow-lg shadow-green-100 transition-all">
                            <i class="fa-solid fa-user-circle mr-3 text-lg"></i>
                            Profil
                        </button>
                        <button onclick="showSection('securite')" data-section-btn="securite"
                                class="w-full flex items-center px-4 py-3.5 text-sm font-bold text-gray-500 hover:bg-green-50 hover:text-green-700 rounded-2xl transition-all">
                            <i class="fa-solid fa-shield-alt mr-3 text-lg opacity-60"></i>
                            Sécurité
                        </button>
                        <!-- 
                        <button onclick="showSection('notifications')" data-section-btn="notifications"
                                class="w-full flex items-center px-4 py-3.5 text-sm font-bold text-gray-500 hover:bg-green-50 hover:text-green-700 rounded-2xl transition-all">
                            <i class="fa-solid fa-bell mr-3 text-lg opacity-60"></i>
                            Notifications
                        </button>
                        -->
                    </nav>
                </div>
            </aside>

            <!-- Sections de contenu -->
            <div class="flex-1 space-y-6">
                <!-- Section Profil -->
                <section id="profil-section" class="section-content active">
                    <div class="bg-white rounded-[2.5rem] shadow-sm border border-gray-100 p-6 md:p-10">
                        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
                            <div class="flex items-center gap-6">
                                <div class="relative group">
                                    <div class="w-24 h-24 md:w-32 md:h-32 rounded-3xl bg-gradient-to-br from-green-600 to-green-400 flex items-center justify-center text-white text-3xl md:text-5xl font-black shadow-2xl shadow-green-200">
                                        {{ app.user.firstname|first|upper }}{{ app.user.lastname|first|upper }}
                                    </div>
                                     <!-- Section Profil 
                                    <button class="absolute -bottom-2 -right-2 h-10 w-10 bg-white shadow-xl rounded-xl flex items-center justify-center text-green-600 border border-gray-50 hover:scale-110 transition-transform">
                                        <i class="fas fa-camera"></i>
                                    </button>-->
                                </div>
                                <div>
                                    <h2 class="text-2xl md:text-3xl font-black text-gray-900 tracking-tight">{{ app.user.firstname }} {{ app.user.lastname }}</h2>
                                    <div class="flex items-center gap-2 mt-4 text-xs font-bold text-gray-900">
                                        <i class="far fa-calendar-alt"></i>
                                        Membre depuis {{ app.user.createdAt|date('F Y') }}
                                    </div>
                                </div>
                            </div>
                        </div>

                        <form id="profile-form" class="space-y-8">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-8">
                                <div class="space-y-2">
                                    <label class="text-[10px] font-black text-gray-900 uppercase tracking-widest ml-1">Prénom</label>
                                    <input type="text" id="firstname" name="firstname" value="{{ app.user.firstname }}"
                                           class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl text-sm font-bold focus:ring-2 focus:ring-green-500 transition-all placeholder:text-gray-300">
                                </div>
                                <div class="space-y-2">
                                    <label class="text-[10px] font-black text-gray-900 uppercase tracking-widest ml-1">Nom</label>
                                    <input type="text" id="lastname" name="lastname" value="{{ app.user.lastname }}"
                                           class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl text-sm font-bold focus:ring-2 focus:ring-green-500 transition-all placeholder:text-gray-300">
                                </div>
                                <div class="space-y-2">
                                    <label class="text-[10px] font-black text-gray-900 uppercase tracking-widest ml-1">Email</label>
                                    <input type="email" id="email" name="email" value="{{ app.user.email }}"
                                           class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl text-sm font-bold focus:ring-2 focus:ring-green-500 transition-all placeholder:text-gray-300">
                                </div>
                                <div class="space-y-2">
                                    <label class="text-[10px] font-black text-gray-900 uppercase tracking-widest ml-1">Téléphone</label>
                                    <input type="tel" id="phone" name="phone" value="{{ app.user.phoneNumber ?? '' }}" placeholder="+229 01 46 10 10 50"
                                           class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl text-sm font-bold focus:ring-2 focus:ring-green-500 transition-all placeholder:text-gray-300">
                                </div>
                            </div>

                            <div class="pt-8 border-t border-gray-50">
                                <button type="submit" class="w-full md:w-auto px-10 py-4 bg-green-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-green-700 transition-all shadow-xl shadow-green-100 active:scale-[0.98]">
                                    Enregistrer les modifications
                                </button>
                            </div>
                        </form>

                        <!-- Zone de danger -->
                        <div class="mt-16 pt-10 border-t border-gray-100">
                            <h3 class="text-sm font-black text-red-600 uppercase tracking-widest mb-4 flex items-center gap-2">
                                <i class="fa-solid fa-triangle-exclamation"></i>
                                Zone de danger
                            </h3>
                            <div class="p-6 bg-red-50 rounded-3xl border border-red-100 flex flex-col md:flex-row md:items-center justify-between gap-6">
                                <div>
                                    <h4 class="text-sm font-black text-red-900 uppercase tracking-wider">Supprimer mon compte</h4>
                                    <p class="text-xs text-red-700 font-medium mt-1 leading-relaxed">
                                        Cette action marquera votre compte pour suppression. Vous aurez 30 jours pour annuler cette action.
                                        Après ce délai, vos données personnelles seront définitivement anonymisées.
                                    </p>
                                </div>
                                <button type="button" onclick="showDeleteModal()" 
                                        class="px-6 py-3 bg-red-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-red-700 transition-all shadow-lg shadow-red-200 flex-shrink-0">
                                    Supprimer le compte
                                </button>
                            </div>
                        </div>
                    </div>
                </section>

                <!-- Section Sécurité -->
                <section id="securite-section" class="section-content hidden">
                    <div class="bg-white rounded-[2.5rem] shadow-sm border border-gray-100 p-6 md:p-10">
                        <div class="mb-10">
                            <h2 class="text-2xl font-black text-gray-900 tracking-tight">Sécurité</h2>
                            <p class="text-sm font-medium text-gray-900 mt-1">Protegez l'accès à votre compte</p>
                        </div>

                        <div class="space-y-6">
                            <!--
                            <div class="p-6 md:p-8 bg-amber-50 rounded-3xl border border-amber-100 flex items-start gap-4">
                                <div class="h-10 w-10 rounded-xl bg-amber-100 flex items-center justify-center text-amber-600 flex-shrink-0">
                                    <i class="fas fa-shield-halved"></i>
                                </div>
                                <div>
                                    <h4 class="text-sm font-black text-amber-900 uppercase tracking-wider">Double Authentification</h4>
                                    <p class="text-xs text-amber-700 font-medium mt-1 leading-relaxed">Renforcez la sécurité de votre compte en activant la vérification en deux étapes.</p>
                                    <button class="mt-4 px-5 py-2.5 bg-amber-600 text-white text-[10px] font-black uppercase tracking-widest rounded-xl hover:bg-amber-700 transition-all">S'informer</button>
                                </div>
                            </div>-->

                            <form class="space-y-6">
                                <div class="space-y-4">
                                    <div class="space-y-2">
                                        <label class="text-[10px] font-black text-gray-900 uppercase tracking-widest ml-1">Ancien mot de passe</label>
                                        <input type="password" class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl text-sm font-bold focus:ring-2 focus:ring-green-500 transition-all">
                                    </div>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div class="space-y-2">
                                            <label class="text-[10px] font-black text-gray-900 uppercase tracking-widest ml-1">Nouveau mot de passe</label>
                                            <input type="password" class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl text-sm font-bold focus:ring-2 focus:ring-green-500 transition-all">
                                        </div>
                                        <div class="space-y-2">
                                            <label class="text-[10px] font-black text-gray-900 uppercase tracking-widest ml-1">Confirmer mot de passe</label>
                                            <input type="password" class="w-full px-6 py-4 bg-gray-50 border-none rounded-2xl text-sm font-bold focus:ring-2 focus:ring-green-500 transition-all">
                                        </div>
                                    </div>
                                </div>

                                <div class="pt-6">
                                    <button type="submit" class="w-full md:w-auto px-10 py-4 bg-green-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-black transition-all shadow-xl shadow-gray-200 active:scale-[0.98]">
                                        Mettre à jour le mot de passe
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>

                <!-- Section Notifications -->
                <section id="notifications-section" class="section-content hidden">
                    <div class="bg-white rounded-[2.5rem] shadow-sm border border-gray-100 p-6 md:p-10">
                        <div class="mb-10">
                            <h2 class="text-2xl font-black text-gray-900 tracking-tight">Notifications</h2>
                            <p class="text-sm font-medium text-gray-900 mt-1">Personnalisez vos alertes</p>
                        </div>

                        <div class="space-y-4">
                            {% set notifs = [
                                {t: 'Transactions', d: 'Être notifié lors de chaque mouvement de compte', s: true},
                                {t: 'Sécurité', d: 'Alertes lors de connexions inhabituelles', s: true},
                                {t: 'Marketing', d: 'Recevoir les nouvelles offres et actualités', s: false},
                                {t: ' Rappels Tontines', d: 'Rappels automatiques avant les échéances', s: true}
                            ] %}

                            {% for n in notifs %}
                            <div class="flex items-center justify-between p-5 md:p-6 bg-gray-50 rounded-3xl border border-gray-100 group hover:bg-white hover:border-green-100 transition-all duration-300">
                                <div class="flex-1">
                                    <h4 class="text-sm font-black text-gray-900 uppercase tracking-wider">{{ n.t }}</h4>
                                    <p class="text-xs text-gray-500 font-medium mt-1">{{ n.d }}</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" class="sr-only peer" {{ n.s ? 'checked' : '' }}>
                                    <div class="w-14 h-7 bg-gray-200 rounded-full peer peer-checked:bg-green-600 transition-colors after:content-[''] after:absolute after:top-[4px] after:left-[4px] after:bg-white after:rounded-full after:h-6 after:w-6 after:transition-all peer-checked:after:translate-x-7 after:shadow-sm"></div>
                                </label>
                            </div>
                            {% endfor %}
                        </div>

                        <div class="pt-10 flex justify-end">
                            <button type="button" class="px-8 py-3.5 bg-green-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-green-700 transition-all shadow-xl shadow-green-100 active:scale-[0.98]">
                                Sauvegarder
                            </button>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

    <!-- Modal Suppression Compte -->
    <div id="delete-modal" class="fixed inset-0 z-[60] hidden">
        <div class="absolute inset-0 bg-black/60 backdrop-blur-sm transition-opacity"></div>
        <div class="absolute inset-0 flex items-center justify-center p-4">
            <div class="bg-white rounded-[2.5rem] w-full max-w-md shadow-2xl relative overflow-hidden animate-slideUp">
                <div class="p-8">
                    <div class="w-16 h-16 bg-red-100 rounded-2xl flex items-center justify-center text-red-600 text-2xl mb-6">
                        <i class="fa-solid fa-triangle-exclamation"></i>
                    </div>
                    <h3 class="text-2xl font-black text-gray-900 leading-tight mb-4">Supprimer votre compte ?</h3>
                    <p class="text-sm font-medium text-gray-600 mb-8 leading-relaxed">
                        Cette action mettra fin à votre session immédiatement. Vous aurez <span class="text-red-600 font-bold">30 jours</span> pour annuler cette suppression en vous reconnectant. Passé ce délai, vos données personnelles seront définitivement anonymisées.
                    </p>
                    
                    <form action="{{ path('app_settings_delete') }}" method="POST" id="delete-account-form" class="space-y-6">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete-account' ~ app.user.id) }}">
                        
                        <!-- PIN Input -->
                        <div class="space-y-4">
                            <label class="block text-center text-[10px] font-black uppercase tracking-widest text-gray-400">Entrez votre code PIN pour confirmer</label>
                            <div class="flex justify-center gap-3">
                                {% for i in 1..5 %}
                                <input type="password" maxlength="1" data-index="{{ i }}"
                                       class="pin-digit-input w-12 h-14 bg-gray-50 border-2 border-gray-100 rounded-2xl text-center text-xl font-black text-gray-900 focus:border-red-500 focus:bg-white focus:ring-4 focus:ring-red-500/10 outline-none transition-all"
                                       required>
                                {% endfor %}
                            </div>
                            <input type="hidden" name="pin" id="final-pin">
                        </div>

                        <div class="space-y-3 pt-2">
                            <button type="submit" class="w-full py-4 bg-red-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-red-700 transition-all shadow-xl shadow-red-100 disabled:opacity-50 disabled:cursor-not-allowed" id="confirm-delete-btn">
                                Confirmer la suppression
                            </button>
                            <button type="button" onclick="hideDeleteModal()" class="w-full py-4 bg-gray-50 text-gray-900 text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-gray-100 transition-all">
                                Annuler
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function showDeleteModal() {
    document.getElementById('delete-modal').classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    // Focus first input
    setTimeout(() => {
        document.querySelector('.pin-digit-input[data-index="1"]').focus();
    }, 100);
}

function hideDeleteModal() {
    document.getElementById('delete-modal').classList.add('hidden');
    document.body.style.overflow = 'auto';
    // Clear inputs
    document.querySelectorAll('.pin-digit-input').forEach(input => input.value = '');
    document.getElementById('final-pin').value = '';
}

// PIN digits handling
const pinInputs = document.querySelectorAll('.pin-digit-input');
const finalPinInput = document.getElementById('final-pin');

pinInputs.forEach(input => {
    input.addEventListener('keyup', (e) => {
        if (e.key >= 0 && e.key <= 9) {
            const next = input.nextElementSibling;
            if (next && next.classList.contains('pin-digit-input')) next.focus();
        } else if (e.key === 'Backspace') {
            const prev = input.previousElementSibling;
            if (prev && prev.classList.contains('pin-digit-input')) prev.focus();
        }
        updateFinalPin();
    });

    input.addEventListener('input', (e) => {
        if (input.value.length > 1) {
            input.value = input.value.slice(-1);
        }
        updateFinalPin();
    });
});

function updateFinalPin() {
    let pin = '';
    pinInputs.forEach(input => pin += input.value);
    finalPinInput.value = pin;
}
</script>

<style>
.section-content {
    animation: slideUp 0.4s cubic-bezier(0.16, 1, 0.3, 1);
}

@keyframes slideUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}

.scrollbar-hide::-webkit-scrollbar { display: none; }
.scrollbar-hide { -ms-overflow-style: none; scrollbar-width: none; }
</style>
{% endblock %}