{% extends 'dashboard/base.html.twig' %}

{% set hide_nav = true %}

{% block title %}Restauration de compte - Efa Smart Finance{% endblock %}

{% block contentdashboard %}
<div class="min-h-screen bg-green-50/20 flex items-center justify-center p-4">
    <div class="max-w-xl w-full">
        <!-- Card principale -->
        <div class="bg-white rounded-[3rem] shadow-2xl overflow-hidden border border-white">
            <!-- Header avec dégradé -->
            <div class="bg-gradient-to-br from-green-600 to-green-700 p-10 text-white relative">
                <div class="absolute top-0 right-0 p-8 opacity-10">
                    <i class="fa-solid fa-clock-rotate-left text-9xl -rotate-12"></i>
                </div>
                
                <div class="relative z-10">
                    <div class="w-16 h-16 bg-white/20 backdrop-blur-md rounded-2xl flex items-center justify-center text-white text-2xl mb-6 border border-white/30">
                        <i class="fa-solid fa-user-clock"></i>
                    </div>
                    <h1 class="text-2xl font-black leading-tight mb-2">Compte en attente de suppression</h1>
                    <p class="text-green-100 font-medium opacity-90">Nous sommes ravis de vous revoir !</p>
                </div>
            </div>

            <!-- Corps du message -->
            <div class="p-10">
                <div class="space-y-6">
                    <div class="p-6 bg-amber-50 rounded-3xl border border-amber-100 flex items-start gap-4">
                        <div class="h-10 w-10 rounded-xl bg-amber-100 flex items-center justify-center text-amber-600 flex-shrink-0">
                            <i class="fa-solid fa-calendar-day"></i>
                        </div>
                        <div>
                            <h3 class="text-sm font-black text-amber-900 uppercase tracking-wider">Délai restant</h3>
                            <p class="text-lg font-black text-amber-600">{{ days_remaining }} jours</p>
                            <p class="text-xs text-amber-700 font-medium mt-1 leading-relaxed">
                                Passé ce délai, vos données personnelles seront définitivement anonymisées pour respecter votre vie privée.
                            </p>
                        </div>
                    </div>

                    <p class="text-gray-600 text-sm font-medium leading-relaxed">
                        Votre demande de suppression est actuellement en cours de traitement. 
                        Vous pouvez annuler cette demande immédiatement et retrouver l'accès à toutes vos données, tontines et transactions.
                    </p>

                    <!-- Actions -->
                    <div class="pt-6">
                        <form action="{{ path('app_settings_restore') }}" method="POST" id="restore-account-form" class="space-y-8">
                            <input type="hidden" name="_token" value="{{ csrf_token('restore-account' ~ app.user.id) }}">
                            
                            <!-- PIN Input -->
                            <div class="space-y-4">
                                <label class="block text-center text-[10px] font-black uppercase tracking-widest text-gray-400">Entrez votre code PIN pour confirmer la restauration</label>
                                <div class="flex justify-center gap-3">
                                    {% for i in 1..5 %}
                                    <input type="password" maxlength="1" data-index="{{ i }}"
                                           class="pin-digit-input w-12 h-14 bg-gray-50 border-2 border-gray-100 rounded-2xl text-center text-xl font-black text-gray-900 focus:border-green-500 focus:bg-white focus:ring-4 focus:ring-green-500/10 outline-none transition-all"
                                           required>
                                    {% endfor %}
                                </div>
                                <input type="hidden" name="pin" id="final-pin">
                            </div>

                            <div class="space-y-3">
                                <button type="submit" class="w-full py-4 bg-green-600 text-white text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-green-700 transition-all shadow-xl shadow-green-100 active:scale-[0.98] flex items-center justify-center gap-3">
                                    <i class="fa-solid fa-rotate-left"></i>
                                    Restaurer mon compte maintenant
                                </button>
                                
                                <a href="{{ path('app_logout') }}" class="w-full py-4 bg-gray-50 text-gray-900 text-xs font-black uppercase tracking-widest rounded-2xl hover:bg-gray-100 transition-all flex items-center justify-center gap-3">
                                    <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                    Me déconnecter
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Footer -->
                <div class="mt-8 pt-6 border-t border-gray-50 text-center">
                    <p class="text-[10px] text-gray-400 font-bold uppercase tracking-widest">
                        Efa Smart Finance &bull; Sécurité & Confidentialité
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // PIN digits handling
    const pinInputs = document.querySelectorAll('.pin-digit-input');
    const finalPinInput = document.getElementById('final-pin');

    // Focus first input automatically
    setTimeout(() => {
        pinInputs[0].focus();
    }, 100);

    pinInputs.forEach(input => {
        input.addEventListener('keyup', (e) => {
            if (e.key >= 0 && e.key <= 9) {
                const index = parseInt(input.dataset.index);
                const next = document.querySelector(`.pin-digit-input[data-index="${index + 1}"]`);
                if (next) next.focus();
            } else if (e.key === 'Backspace') {
                const index = parseInt(input.dataset.index);
                const prev = document.querySelector(`.pin-digit-input[data-index="${index - 1}"]`);
                if (prev) prev.focus();
            }
            updateFinalPin();
        });

        input.addEventListener('input', (e) => {
            if (input.value.length > 1) {
                input.value = input.value.slice(-1);
            }
            updateFinalPin();
        });
    });

    function updateFinalPin() {
        let pin = '';
        pinInputs.forEach(input => pin += input.value);
        finalPinInput.value = pin;
    }
});
</script>
{% endblock %}
