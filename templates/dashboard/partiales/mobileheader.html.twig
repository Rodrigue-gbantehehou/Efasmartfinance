 
    <header class="md:hidden bg-white border-b border-gray-100 sticky top-0 z-40 safe-top flex-shrink-0">
      <div class="px-4 py-3 flex items-center justify-between">
        <div class="flex items-center gap-3">
          <button id="openMobileMenu" class="h-10 w-10 bg-green-700 rounded-lg hover:bg-green-700 flex items-center justify-center touch-target">
            <i class="fa-solid fa-bars text-white"></i>
          </button>
         
        </div>
    
        <div class="flex items-center gap-2"> 
       
          <a href="{{path('app_tontine')}}" class="px-2 py-1 rounded-lg bg-green-700 text-white hover:bg-green-700 flex items-center justify-center touch-target" title="Nouvelle tontine">
            <i class="fa-solid fa-plus w-6"></i> Nouvelle Tontine
          <a href="{{ path('app_notifications_index') }}" class="relative h-10 w-10 rounded-lg bg-green-700 hover:bg-green-800 flex items-center justify-center touch-target transition-colors">
            <i class="fa-solid fa-bell text-white"></i>
            {% set unreadCount = app.user.notifications|filter(n => not n.isRead)|length %}
            {% if unreadCount > 0 %}
            <span id="mobileNotificationCount" class="absolute -top-1 -right-1 h-5 w-5 rounded-full bg-warning text-white text-[10px] flex items-center justify-center font-bold">
                {{ unreadCount }}
            </span>
            {% endif %}
          </a>
        </div>
        
      </div>
    </header>