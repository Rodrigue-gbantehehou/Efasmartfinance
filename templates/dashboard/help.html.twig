{% extends "dashboard/base.html.twig" %}

{% block title %}Aide & Support - efaSmartFinance{% endblock %}

{% block contentdashboard %}
<div class="max-w-4xl mx-auto px-4 py-4 md:py-8">
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-4 sm:p-6 md:p-8">
        <div class="text-center mb-8 md:mb-10">
            <div
                class="w-12 h-12 md:w-16 md:h-16 bg-green-50 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fa-solid fa-headset text-2xl md:text-3xl"></i>
            </div>
            <h1 class="text-xl md:text-3xl font-bold text-gray-800 mb-2">Centre d'Aide & Support</h1>
            <p class="text-sm md:text-base text-gray-600">Comment pouvons-nous vous aider aujourd'hui ?</p>
        </div>

        <div class="grid md:grid-cols-2 gap-6 mb-10">
            <!-- Contact Direct -->
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100">
                <h3 class="font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="fa-solid fa-envelope text-green-600"></i> Nous contacter
                </h3>
                <p class="text-sm text-gray-600 mb-4">Notre équipe de support est disponible 24/7 pour répondre à vos
                    questions.</p>
                <a href="#contact-support"
                    class="inline-flex items-center justify-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors w-full font-medium">
                    Ouvrir un ticket
                </a>
            </div>

            <!-- FAQ Rapide -->
            <div class="bg-gray-50 rounded-xl p-6 border border-gray-100">
                <h3 class="font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <i class="fa-solid fa-circle-question text-green-600"></i> Questions fréquentes
                </h3>
                <ul class="space-y-3 text-sm text-gray-600">
                    <li class="flex items-start gap-2">
                        <i class="fa-solid fa-chevron-right text-green-500 mt-1 text-xs"></i>
                        <span>Comment créer une nouvelle tontine ?</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="fa-solid fa-chevron-right text-green-500 mt-1 text-xs"></i>
                        <span>Comment retirer mes gains ?</span>
                    </li>
                    <li class="flex items-start gap-2">
                        <i class="fa-solid fa-chevron-right text-green-500 mt-1 text-xs"></i>
                        <span>Mon paiement n'est pas validé</span>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Formulaire de Contact -->
        <div id="contact-support" class="border-t border-gray-100 pt-8">
            <h2 class="text-xl font-bold text-gray-800 mb-6">Envoyer une demande</h2>

            <form id="supportForm" class="space-y-4">
                <div class="grid md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Sujet</label>
                        <select name="subject"
                            class="w-full rounded-lg border-gray-300 focus:border-green-500 focus:ring-green-500">
                            <option value="payment">Problème de paiement</option>
                            <option value="tontine">Question sur ma tontine</option>
                            <option value="account">Gestion de compte</option>
                            <option value="technical">Problème technique</option>
                            <option value="other">Autre demande</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Priorité</label>
                        <select name="priority"
                            class="w-full rounded-lg border-gray-300 focus:border-green-500 focus:ring-green-500">
                            <option value="normal">Normale</option>
                            <option value="high">Haute</option>
                            <option value="urgent">Urgente</option>
                        </select>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                    <textarea name="message" rows="5"
                        class="w-full rounded-lg border-gray-300 focus:border-green-500 focus:ring-green-500"
                        placeholder="Décrivez votre problème en détail..."></textarea>
                </div>

                <div class="flex justify-end">
                    <button type="submit"
                        class="px-6 py-2.5 bg-green-700 text-white rounded-lg hover:bg-green-800 transition-colors font-medium shadow-sm flex items-center gap-2">
                        <i class="fa-regular fa-paper-plane"></i> Envoyer le message
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('supportForm').addEventListener('submit', function (e) {
        e.preventDefault();
        // Simulation d'envoi pour l'instant
        const btn = this.querySelector('button[type="submit"]');
        const originalContent = btn.innerHTML;

        btn.disabled = true;
        btn.innerHTML = '<i class="fa-solid fa-circle-notch fa-spin"></i> Envoi en cours...';

        setTimeout(() => {
            btn.innerHTML = '<i class="fa-solid fa-check"></i> Envoyé avec succès';
            btn.classList.remove('bg-green-700', 'hover:bg-green-800');
            btn.classList.add('bg-green-500');

            setTimeout(() => {
                this.reset();
                btn.disabled = false;
                btn.innerHTML = originalContent;
                btn.classList.add('bg-green-700', 'hover:bg-green-800');
                btn.classList.remove('bg-green-500');
                alert('Votre demande a bien été reçue. Notre équipe vous répondra sous peu.');
            }, 1500);
        }, 1500);
    });
</script>
{% endblock %}