{% if pageCount > 1 %}
    <nav class="flex items-center justify-between py-4" aria-label="Pagination">
        <div class="hidden sm:block">
            <p class="text-sm text-gray-700">
                Affichage de <span class="font-bold text-green-700">{{ firstItemNumber }}</span> à <span class="font-bold text-green-700">{{ lastItemNumber }}</span> sur <span class="font-bold text-green-700">{{ totalCount }}</span>
            </p>
        </div>
        <div class="flex-1 flex justify-between sm:justify-end gap-2">
            {% if previous is defined %}
                <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" 
                   class="relative inline-flex items-center px-4 py-2 text-xs font-bold text-green-700 bg-green-50 border border-green-100 rounded-xl hover:bg-green-600 hover:text-white transition-all shadow-sm">
                    <i class="fas fa-chevron-left mr-2"></i> Précédent
                </a>
            {% else %}
                <span class="relative inline-flex items-center px-4 py-2 text-xs font-bold text-gray-300 bg-gray-50 border border-gray-100 rounded-xl cursor-not-allowed">
                    <i class="fas fa-chevron-left mr-2"></i> Précédent
                </span>
            {% endif %}

            <div class="hidden md:flex items-center gap-1">
                {% for page in pagesInRange %}
                    {% if page == current %}
                        <span class="relative inline-flex items-center px-3.5 py-2 text-xs font-black bg-green-600 text-white rounded-xl shadow-lg shadow-green-100">
                            {{ page }}
                        </span>
                    {% else %}
                        <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" 
                           class="relative inline-flex items-center px-3.5 py-2 text-xs font-bold text-green-700 bg-green-50 border border-green-100 rounded-xl hover:bg-green-600 hover:text-white transition-all">
                            {{ page }}
                        </a>
                    {% endif %}
                {% endfor %}
            </div>

            {% if next is defined %}
                <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" 
                   class="relative inline-flex items-center px-4 py-2 text-xs font-bold text-green-700 bg-green-50 border border-green-100 rounded-xl hover:bg-green-600 hover:text-white transition-all shadow-sm">
                    Suivant <i class="fas fa-chevron-right ml-2"></i>
                </a>
            {% else %}
                <span class="relative inline-flex items-center px-4 py-2 text-xs font-bold text-gray-300 bg-gray-50 border border-gray-100 rounded-xl cursor-not-allowed">
                    Suivant <i class="fas fa-chevron-right ml-2"></i>
                </span>
            {% endif %}
        </div>
    </nav>
{% endif %}
