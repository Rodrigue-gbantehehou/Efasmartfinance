<!-- Modal Frais de Retrait (Premium Edition) -->
<div id="feeChoiceModal"
    class="fixed inset-0 bg-slate-900/60 backdrop-blur-md z-[100] hidden items-center justify-center p-3 sm:p-4 transition-all duration-500">
    <div
        class="bg-white rounded-[1.5rem] sm:rounded-[2.5rem] max-w-lg w-full shadow-[0_20px_50px_rgba(0,0,0,0.2)] transform transition-all overflow-hidden border border-white/20 flex flex-col max-h-[95vh]">
        <!-- Header Design -->
        <div
            class="bg-gradient-to-br from-emerald-600 via-green-600 to-emerald-800 text-white p-4 sm:p-6 relative overflow-hidden flex-shrink-0">
            <div class="absolute top-0 right-0 -mr-8 -mt-8 w-32 h-32 bg-white/10 rounded-full blur-3xl"></div>
            <div class="absolute bottom-0 left-0 -ml-8 -mb-8 w-24 h-24 bg-white/5 rounded-full blur-2xl"></div>

            <div class="relative z-10 flex flex-col items-center text-center">
                <div
                    class="h-12 w-12 sm:h-16 sm:w-16 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center mb-3 sm:mb-4 shadow-inner">
                    <i class="fas fa-wallet text-2xl sm:text-3xl"></i>
                </div>
                <h3 class="text-xl sm:text-2xl font-black tracking-tight">Option de Retrait</h3>
                <p class="text-emerald-50/80 text-[10px] sm:text-sm font-medium mt-1 uppercase tracking-widest text-center">Gestion des frais de
                    service</p>
            </div>
        </div>

        <!-- Scrollable Content -->
        <div class="overflow-y-auto p-4 sm:p-6 space-y-6 sm:space-y-8 flex-1">
            <!-- Financial Breakdown Card -->
            <div
                class="bg-slate-50 rounded-2xl sm:rounded-3xl p-4 sm:p-6 border border-slate-100 shadow-sm transition-hover hover:border-emerald-200 duration-300">
                <h4
                    class="text-[9px] sm:text-[10px] font-black text-slate-400 uppercase tracking-widest mb-4 flex items-center gap-2">
                    <i class="fas fa-chart-pie text-emerald-500"></i>
                    Récapitulatif Financier
                </h4>

                <div class="space-y-3 sm:space-y-4">

                    <!--  <div id="modalGrossSavingsContainer" class="flex justify-between items-center text-xs sm:text-sm hidden">
                        <span class="text-slate-600 font-medium">Épargne brute cumulée</span>
                        <span class="font-bold text-slate-900" id="modalGrossSavings">- 0 FCFA</span>
                    </div> -->
                    <div class="flex justify-between items-center text-xs sm:text-sm">
                        <div class="flex flex-col">
                            <span class="text-slate-600 font-medium">Frais de service dus</span>
                        </div>
                        <span class="font-bold text-rose-500" id="modalFeeAmount">- 0 FCFA</span>
                    </div>
                    <div id="modalNetAmountContainer"
                        class="pt-3 sm:pt-4 border-t border-slate-200 flex justify-between items-center hidden">
                        <span class="text-slate-900 font-black text-sm sm:text-base">Estimation Net à recevoir</span>
                        <span class="text-lg sm:text-xl font-black text-emerald-600 tracking-tight" id="modalNetAmount">0
                            FCFA</span>
                    </div>
                </div>
            </div>

            <p class="text-slate-500 text-center text-xs sm:text-sm leading-relaxed">
                Souhaitez-vous régler vos frais maintenant ou préférez-vous qu'ils soient déduits de votre retrait ?
            </p>

            <!-- Interactive Options -->
            <div class="space-y-3 sm:space-y-4">
                <!-- Option 1 : Déduire -->
                <button onclick="chooseDeductFees()"
                    class="w-full group relative bg-white hover:bg-slate-50 text-slate-900 rounded-xl sm:rounded-2xl p-3 sm:p-4 transition-all border-2 border-slate-200 hover:border-emerald-500 active:scale-[0.97] duration-300 overflow-hidden shadow-sm">
                    <div class="flex items-center gap-3 sm:gap-4 relative z-10">
                        <div
                            class="h-10 w-10 sm:h-12 sm:w-12 rounded-xl bg-slate-100 flex items-center justify-center text-slate-400 group-hover:bg-emerald-100 group-hover:text-emerald-600 transition-colors">
                            <i class="fas fa-scissors text-base sm:text-lg"></i>
                        </div>
                        <div class="text-left flex-1 min-w-0">
                            <span class="block font-black text-slate-800 tracking-tight text-sm sm:text-base truncate">Déduire du montant</span>
                            <span
                                class="block text-[9px] sm:text-[10px] text-slate-500 mt-0.5 uppercase font-bold tracking-wider group-hover:text-emerald-600 truncate">Retrait
                                direct facilité</span>
                        </div>
                        <i
                            class="fas fa-chevron-right text-slate-300 group-hover:text-emerald-500 group-hover:translate-x-1 transition-all text-xs sm:text-sm"></i>
                    </div>
                </button>

                <!-- Option 2 : Payer -->
                <button onclick="choosePayFeesNow()"
                    class="w-full group relative bg-emerald-600 hover:bg-emerald-700 text-white rounded-xl sm:rounded-2xl p-3 sm:p-4 transition-all shadow-[0_10px_20px_-5px_rgba(16,185,129,0.4)] hover:shadow-[0_15px_30px_-5px_rgba(16,185,129,0.5)] active:scale-[0.97] duration-300 overflow-hidden">
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:animate-[shimmer_2s_infinite]">
                    </div>
                    <div class="flex items-center gap-3 sm:gap-4 relative z-10">
                        <div class="h-10 w-10 sm:h-12 sm:w-12 rounded-xl bg-white/20 flex items-center justify-center shadow-inner">
                            <i class="fas fa-credit-card text-base sm:text-lg text-white"></i>
                        </div>
                        <div class="text-left flex-1 min-w-0">
                            <span class="block font-black text-white tracking-tight text-sm sm:text-base truncate">Payer maintenant</span>
                            <span
                                class="block text-[9px] sm:text-[10px] text-emerald-100/80 mt-0.5 uppercase font-bold tracking-wider truncate">Conservez
                                votre épargne brute</span>
                        </div>
                        <i class="fas fa-arrow-right group-hover:translate-x-1 transition-transform text-xs sm:text-sm"></i>
                    </div>
                </button>
            </div>

            <!-- Footer Action -->
            <div class="pt-2 sm:pt-4">
                <button onclick="closeFeeModal()"
                    class="w-full text-slate-400 hover:text-slate-600 py-2 text-[10px] sm:text-xs font-bold uppercase tracking-widest transition-colors">
                    Annuler l'opération
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    @keyframes shimmer {
        100% {
            transform: translateX(100%);
        }
    }
</style>